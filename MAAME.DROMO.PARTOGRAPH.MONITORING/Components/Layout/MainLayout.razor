@inherits LayoutComponentBase
@inject AuthenticationStateProvider AuthStateProvider
@inject NavigationManager Navigation
@implements IDisposable

<div class="page d-flex">
    <div class="sidebar bg-dark text-white" style="width: 280px; min-height: 100vh;">
        <NavMenu />
    </div>

    <div class="main flex-grow-1">
        <div class="top-row px-4 bg-white border-bottom shadow-sm">
            <div class="d-flex justify-content-between align-items-center w-100">
                <div class="d-flex align-items-center">
                    <button class="btn btn-link d-md-none" type="button" data-bs-toggle="collapse" data-bs-target="#sidebar">
                        <i class="bi bi-list fs-4"></i>
                    </button>
                    <span class="fw-semibold text-muted">
                        <i class="bi bi-heart-pulse me-2 text-primary"></i>
                        MAAME.DROMO Insight Dashboard
                    </span>
                </div>
                <div class="d-flex align-items-center gap-3">
                    <!-- Top Right Actions -->
                    <div class="d-flex align-items-center gap-4">
                        <!-- Live Time Display -->
                        <div class="d-none d-md-block text-end">
                            <div class="fw-bold text-dark lh-1" style="font-size: 1.1rem; letter-spacing: -0.5px;">
                                @currentTime.ToString("HH:mm")
                            </div>
                            <div class="text-secondary small text-uppercase fw-semibold" style="font-size: 0.65rem; letter-spacing: 0.5px;">
                                @currentTime.ToString("ddd, MMM dd")
                            </div>
                        </div>

                        <div class="d-flex align-items-center gap-2 border-start ps-3">
                            <button class="btn btn-icon btn-link text-secondary hover-primary position-relative" title="Notifications">
                                <i class="bi bi-bell fs-5"></i>
                                <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger border border-white p-1" style="font-size: 0.5rem; transform: translate(-50%, 2px) !important;">
                                    3
                                    <span class="visually-hidden">unread messages</span>
                                </span>
                            </button>
                            
                            <button class="btn btn-icon btn-link text-secondary hover-primary" title="Help & Support">
                                <i class="bi bi-question-circle fs-5"></i>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <main class="content px-4 py-3 bg-light" style="min-height: calc(100vh - 60px);">
            @Body
        </main>
    </div>
</div>

<MAAME.DROMO.PARTOGRAPH.MONITORING.Components.Shared.ToastContainer />

@code {
    private DateTime currentTime = DateTime.Now;
    private System.Threading.Timer? timer;

    protected override void OnInitialized()
    {
        timer = new System.Threading.Timer(_ =>
        {
            currentTime = DateTime.Now;
            InvokeAsync(StateHasChanged);
        }, null, 0, 1000); // Update every second for accuracy
    }

    public void Dispose()
    {
        timer?.Dispose();
    }
}
