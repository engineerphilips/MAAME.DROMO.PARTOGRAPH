@inject AuthenticationStateProvider AuthStateProvider
@inject IAuthService AuthService

<div class="d-flex flex-column h-100 sidebar-content">
    <!-- Brand -->
    <div class="px-4 py-4 mb-2">
        <a href="/" class="d-flex align-items-center text-decoration-none">
            <div class="brand-icon me-3">
                <i class="bi bi-heart-pulse-fill"></i>
            </div>
            <div>
                <span class="d-block text-white fw-bold fs-5 tracking-tight">MAAME.DROMO</span>
                <small class="d-block text-white-50 small tracking-wide text-uppercase">Insight</small>
            </div>
        </a>
    </div>

    <!-- User Profile Section -->
    <AuthorizeView>
        <Authorized>
            <div class="mx-3 mb-4 p-3 rounded-3 user-card">
                <div class="d-flex align-items-center mb-3">
                    <div class="user-avatar shadow-sm @GetAvatarClass(context.User.Claims.FirstOrDefault(c => c.Type == "Role")?.Value ?? "Viewer")">
                        @GetInitials(context.User.Identity?.Name ?? "User")
                    </div>
                    <div class="ms-3 overflow-hidden">
                        <span class="d-block text-white fw-semibold text-truncate small">@context.User.Identity?.Name</span>
                        <div class="d-flex align-items-center gap-1 mt-1">
                            <span class="badge bg-white bg-opacity-10 text-white border border-white border-opacity-10" style="font-size: 0.6rem;">
                                @(context.User.Claims.FirstOrDefault(c => c.Type == "Role")?.Value ?? "Viewer")
                            </span>
                        </div>
                    </div>
                </div>
                
                @{
                    var accessLevel = context.User.Claims.FirstOrDefault(c => c.Type == "AccessLevel")?.Value ?? "District";
                    var regionName = context.User.Claims.FirstOrDefault(c => c.Type == "RegionName")?.Value;
                    var districtName = context.User.Claims.FirstOrDefault(c => c.Type == "DistrictName")?.Value;
                }
                
                @if (accessLevel != "National")
                {
                    <div class="location-badge">
                        @if (accessLevel == "Regional" && !string.IsNullOrEmpty(regionName))
                        {
                            <small class="d-flex align-items-center text-white-50">
                                <i class="bi bi-geo-alt-fill me-2 text-primary"></i>
                                <span class="text-truncate">@regionName</span>
                            </small>
                        }
                        else if (accessLevel == "District")
                        {
                            @if (!string.IsNullOrEmpty(districtName))
                            {
                                <small class="d-flex align-items-center text-white-50 mb-1">
                                    <i class="bi bi-buildings-fill me-2 text-info"></i>
                                    <span class="text-truncate">@districtName</span>
                                </small>
                            }
                            @if (!string.IsNullOrEmpty(regionName))
                            {
                                <small class="d-flex align-items-center text-white-50" style="font-size: 0.7rem;">
                                    <i class="bi bi-geo-alt me-2"></i>
                                    <span class="text-truncate">@regionName</span>
                                </small>
                            }
                        }
                    </div>
                }
                
                <div class="mt-3 pt-3 border-top border-white border-opacity-10 d-flex justify-content-between align-items-center">
                    <small class="text-white-50">Session Active</small>
                    <a href="logout" class="btn btn-icon btn-sm text-white-50 hover-text-white" title="Logout">
                        <i class="bi bi-box-arrow-right"></i>
                    </a>
                </div>
            </div>
        </Authorized>
    </AuthorizeView>

    <!-- Navigation -->
    <nav class="flex-grow-1 px-3 overflow-auto custom-scrollbar">
        <ul class="nav flex-column gap-1">
            <li class="nav-item">
                <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                    <span class="nav-icon"><i class="bi bi-speedometer2"></i></span>
                    <span class="nav-text">Dashboard</span>
                </NavLink>
            </li>

            <!-- Live Monitoring Section -->
            <li class="nav-header mt-4 mb-2 ps-3 text-uppercase text-white-50 small fw-bold tracking-wider" style="font-size: 0.7rem;">
                Live Monitoring
            </li>
            <li class="nav-item">
                <NavLink class="nav-link" href="live-labor">
                    <span class="nav-icon text-danger"><i class="bi bi-activity"></i></span>
                    <span class="nav-text">Live Labour Board</span>
                    <span class="badge bg-danger ms-auto animate-pulse">LIVE</span>
                </NavLink>
            </li>
            <li class="nav-item">
                <NavLink class="nav-link" href="alerts">
                    <span class="nav-icon text-warning"><i class="bi bi-bell"></i></span>
                    <span class="nav-text">Alert Management</span>
                </NavLink>
            </li>

            <AuthorizeView Policy="NationalAccess">
                <Authorized>
                    <li class="nav-header mt-4 mb-2 ps-3 text-uppercase text-white-50 small fw-bold tracking-wider" style="font-size: 0.7rem;">
                        National
                    </li>
                    <li class="nav-item">
                        <NavLink class="nav-link" href="national">
                            <span class="nav-icon"><i class="bi bi-globe"></i></span>
                            <span class="nav-text">National Overview</span>
                        </NavLink>
                    </li>
                    <li class="nav-item">
                        <NavLink class="nav-link" href="regions">
                            <span class="nav-icon"><i class="bi bi-map"></i></span>
                            <span class="nav-text">All Regions</span>
                        </NavLink>
                    </li>
                </Authorized>
            </AuthorizeView>

            <AuthorizeView Policy="RegionalAccess">
                <Authorized>
                    <li class="nav-header mt-4 mb-2 ps-3 text-uppercase text-white-50 small fw-bold tracking-wider" style="font-size: 0.7rem;">
                        Regional
                    </li>
                    <li class="nav-item">
                        <NavLink class="nav-link" href="regional">
                            <span class="nav-icon"><i class="bi bi-geo-alt"></i></span>
                            <span class="nav-text">Regional Overview</span>
                        </NavLink>
                    </li>
                </Authorized>
            </AuthorizeView>

            <AuthorizeView>
                <Authorized>
                    @{
                        var districtAccessLevel = context.User.Claims.FirstOrDefault(c => c.Type == "AccessLevel")?.Value;
                    }
                    @if (districtAccessLevel == "District")
                    {
                        <li class="nav-header mt-4 mb-2 ps-3 text-uppercase text-white-50 small fw-bold tracking-wider" style="font-size: 0.7rem;">
                            District
                        </li>
                        <li class="nav-item">
                            <NavLink class="nav-link" href="district">
                                <span class="nav-icon"><i class="bi bi-buildings"></i></span>
                                <span class="nav-text">District Overview</span>
                            </NavLink>
                        </li>
                    }
                </Authorized>
            </AuthorizeView>

            <li class="nav-header mt-4 mb-2 ps-3 text-uppercase text-white-50 small fw-bold tracking-wider" style="font-size: 0.7rem;">
                Analytics
            </li>
            <li class="nav-item">
                <NavLink class="nav-link" href="deliveries">
                    <span class="nav-icon"><i class="bi bi-clipboard2-pulse"></i></span>
                    <span class="nav-text">Deliveries</span>
                </NavLink>
            </li>
            <li class="nav-item">
                <NavLink class="nav-link" href="complications">
                    <span class="nav-icon"><i class="bi bi-exclamation-triangle"></i></span>
                    <span class="nav-text">Complications</span>
                </NavLink>
            </li>
            <li class="nav-item">
                <NavLink class="nav-link" href="referrals">
                    <span class="nav-icon"><i class="bi bi-arrow-left-right"></i></span>
                    <span class="nav-text">Referrals</span>
                </NavLink>
            </li>
            <li class="nav-item">
                <NavLink class="nav-link" href="outcomes">
                    <span class="nav-icon"><i class="bi bi-graph-up"></i></span>
                    <span class="nav-text">Outcomes</span>
                </NavLink>
            </li>

            <!-- Advanced Analytics Section -->
            <li class="nav-header mt-4 mb-2 ps-3 text-uppercase text-white-50 small fw-bold tracking-wider" style="font-size: 0.7rem;">
                Advanced Analytics
            </li>
            <li class="nav-item">
                <NavLink class="nav-link" href="poc-dashboard">
                    <span class="nav-icon text-success"><i class="bi bi-bullseye"></i></span>
                    <span class="nav-text">POC Progress</span>
                </NavLink>
            </li>
            <li class="nav-item">
                <NavLink class="nav-link" href="robson">
                    <span class="nav-icon text-warning"><i class="bi bi-diagram-3"></i></span>
                    <span class="nav-text">Robson Classification</span>
                </NavLink>
            </li>
            <li class="nav-item">
                <NavLink class="nav-link" href="predictive-analytics">
                    <span class="nav-icon text-info"><i class="bi bi-graph-up-arrow"></i></span>
                    <span class="nav-text">Risk Prediction</span>
                </NavLink>
            </li>
            <li class="nav-item">
                <NavLink class="nav-link" href="data-quality">
                    <span class="nav-icon text-white-50"><i class="bi bi-clipboard-check"></i></span>
                    <span class="nav-text">Data Quality</span>
                </NavLink>
            </li>
            <li class="nav-item">
                <NavLink class="nav-link" href="benchmarks">
                    <span class="nav-icon text-primary"><i class="bi bi-bar-chart-line"></i></span>
                    <span class="nav-text">Benchmarks</span>
                </NavLink>
            </li>

            <li class="nav-header mt-4 mb-2 ps-3 text-uppercase text-white-50 small fw-bold tracking-wider" style="font-size: 0.7rem;">
                Reports
            </li>
            <li class="nav-item">
                <NavLink class="nav-link" href="reports">
                    <span class="nav-icon"><i class="bi bi-file-earmark-bar-graph"></i></span>
                    <span class="nav-text">Generate Reports</span>
                </NavLink>
            </li>

            <!-- Settings Section -->
            <li class="nav-header mt-4 mb-2 ps-3 text-uppercase text-white-50 small fw-bold tracking-wider" style="font-size: 0.7rem;">
                Settings
            </li>
            <li class="nav-item">
                <NavLink class="nav-link" href="alert-settings">
                    <span class="nav-icon"><i class="bi bi-gear"></i></span>
                    <span class="nav-text">Alert Settings</span>
                </NavLink>
            </li>
            <AuthorizeView Roles="Admin">
                <Authorized>
                    <li class="nav-item">
                        <NavLink class="nav-link" href="facilities">
                            <span class="nav-icon"><i class="bi bi-hospital"></i></span>
                            <span class="nav-text">Facilities</span>
                        </NavLink>
                    </li>
                </Authorized>
            </AuthorizeView>

            <AuthorizeView Roles="Admin">
                <Authorized>
                    @{
                        var adminUserAccessLevel = context.User.Claims.FirstOrDefault(c => c.Type == "AccessLevel")?.Value ?? "District";
                    }
                    <li class="nav-header mt-4 mb-2 ps-3 text-uppercase text-white-50 small fw-bold tracking-wider" style="font-size: 0.7rem;">
                        Administration
                    </li>
                    <li class="nav-item">
                        <NavLink class="nav-link" href="users">
                            <span class="nav-icon"><i class="bi bi-people"></i></span>
                            <span class="nav-text">Users</span>
                        </NavLink>
                    </li>
                    <li class="nav-item">
                        <NavLink class="nav-link" href="admin/user-activity">
                            <span class="nav-icon"><i class="bi bi-activity"></i></span>
                            <span class="nav-text">User Activity</span>
                        </NavLink>
                    </li>
                    <li class="nav-item">
                        <NavLink class="nav-link" href="admin/audit-trails">
                            <span class="nav-icon"><i class="bi bi-fingerprint"></i></span>
                            <span class="nav-text">Audit Trails</span>
                        </NavLink>
                    </li>
                    <li class="nav-item">
                        <NavLink class="nav-link" href="admin/notifications">
                            <span class="nav-icon"><i class="bi bi-bell"></i></span>
                            <span class="nav-text">Notifications</span>
                        </NavLink>
                    </li>
                    <li class="nav-item">
                        <NavLink class="nav-link" href="admin/regions">
                            <span class="nav-icon"><i class="bi bi-map"></i></span>
                            <span class="nav-text">Manage Regions</span>
                        </NavLink>
                    </li>
                    @if (adminUserAccessLevel == "National" || adminUserAccessLevel == "Regional")
                    {
                        <li class="nav-item">
                            <NavLink class="nav-link" href="admin/feature-flags">
                                <span class="nav-icon"><i class="bi bi-toggles"></i></span>
                                <span class="nav-text">Feature Flags</span>
                            </NavLink>
                        </li>
                    }
                </Authorized>
            </AuthorizeView>

            <AuthorizeView Policy="NationalAccess">
                <Authorized>
                    @{
                        var userRole = context.User.Claims.FirstOrDefault(c => c.Type == System.Security.Claims.ClaimTypes.Role)?.Value;
                    }
                    @if (userRole == "Admin")
                    {
                        <li class="nav-item">
                            <NavLink class="nav-link" href="admin/rate-limits">
                                <span class="nav-icon"><i class="bi bi-speedometer2"></i></span>
                                <span class="nav-text">Rate Limits</span>
                            </NavLink>
                        </li>
                    }
                </Authorized>
            </AuthorizeView>
        </ul>
        <div class="mb-5"></div>
    </nav>

    <!-- Footer -->
    <div class="px-4 py-3 border-top border-white border-opacity-10 bg-black bg-opacity-20">
        <div class="d-flex align-items-center justify-content-between mb-1">
            <small class="text-white-50" style="font-size: 0.7rem;">
                v2.1.0-RC1
            </small>
            <div class="d-flex align-items-center">
                <span class="status-dot online me-1" style="width: 6px; height: 6px;"></span>
                <small class="text-white-50" style="font-size: 0.7rem;">System Online</small>
            </div>
        </div>
        <small class="text-white-50 d-block" style="font-size: 0.65rem;">
            &copy; @DateTime.Now.Year MAAME DROMO
        </small>
    </div>
</div>

<style>
    .sidebar-content {
        background: radial-gradient(circle at top right, #2d3748, #1a202c);
    }
    
    .brand-icon {
        width: 40px;
        height: 40px;
        background: linear-gradient(135deg, #ef4444 0%, #b91c1c 100%);
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-size: 1.25rem;
        box-shadow: 0 4px 6px -1px rgba(220, 38, 38, 0.4);
    }
    
    .tracking-tight { letter-spacing: -0.025em; }
    .tracking-wide { letter-spacing: 0.05em; }
    .tracking-wider { letter-spacing: 0.1em; }
    
    .user-card {
        background: rgba(255, 255, 255, 0.03);
        border: 1px solid rgba(255, 255, 255, 0.05);
        backdrop-filter: blur(8px);
    }

    .user-avatar {
        width: 44px;
        height: 44px;
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: 700;
        font-size: 0.9rem;
        color: white;
        flex-shrink: 0;
        border: 2px solid rgba(255,255,255,0.1);
    }

    .avatar-admin { background: linear-gradient(135deg, #ec4899, #be185d); }
    .avatar-manager { background: linear-gradient(135deg, #3b82f6, #2563eb); }
    .avatar-analyst { background: linear-gradient(135deg, #10b981, #059669); }
    .avatar-viewer { background: linear-gradient(135deg, #64748b, #475569); }
    
    .nav-icon {
        width: 20px;
        display: flex;
        justify-content: center;
        margin-right: 12px;
        font-size: 1.1rem;
        opacity: 0.8;
        transition: opacity 0.2s;
    }
    
    .nav-link:hover .nav-icon, .nav-link.active .nav-icon {
        opacity: 1;
    }
    
    .custom-scrollbar::-webkit-scrollbar {
        width: 4px;
    }
    
    .custom-scrollbar::-webkit-scrollbar-track {
        background: transparent;
    }
    
    .custom-scrollbar::-webkit-scrollbar-thumb {
        background: rgba(255, 255, 255, 0.1);
        border-radius: 4px;
    }
    
    .custom-scrollbar::-webkit-scrollbar-thumb:hover {
        background: rgba(255, 255, 255, 0.2);
    }
    
    .hover-text-white:hover {
        color: white !important;
    }
</style>

@code {
    private string GetAvatarClass(string role)
    {
        return role switch
        {
            "Admin" => "avatar-admin",
            "Manager" => "avatar-manager",
            "Analyst" => "avatar-analyst",
            _ => "avatar-viewer"
        };
    }

    private string GetInitials(string name)
    {
        if (string.IsNullOrWhiteSpace(name)) return "??";
        var parts = name.Split(' ', StringSplitOptions.RemoveEmptyEntries);
        if (parts.Length >= 2)
            return $"{parts[0][0]}{parts[1][0]}".ToUpper();
        return parts.Length > 0 ? parts[0][..Math.Min(2, parts[0].Length)].ToUpper() : "??";
    }
}
