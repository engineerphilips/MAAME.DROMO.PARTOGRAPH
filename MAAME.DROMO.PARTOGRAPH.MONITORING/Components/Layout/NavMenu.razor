@inject AuthenticationStateProvider AuthStateProvider
@inject IAuthService AuthService

<div class="d-flex flex-column h-100">
    <!-- Brand -->
    <div class="px-3 py-4 border-bottom border-secondary">
        <a href="/" class="d-flex align-items-center text-white text-decoration-none">
            @* <i class="bi bi-heart-pulse-fill fs-3 me-2 text-danger"></i> *@
            <div>
                <span class="fs-5 fw-bold">MAAME.DROMO</span>
                <small class="d-block text-muted">Insight</small>
            </div>
        </a>
    </div>

    <!-- User Profile Section -->
    <AuthorizeView>
        <Authorized>
            <div class="px-3 py-3 border-bottom border-secondary user-profile-section">
                <div class="d-flex align-items-center">
                    <div class="user-avatar @GetAvatarClass(context.User.Claims.FirstOrDefault(c => c.Type == "Role")?.Value ?? "Viewer")">
                        @GetInitials(context.User.Identity?.Name ?? "User")
                    </div>
                    <div class="ms-3 flex-grow-1 overflow-hidden">
                        <span class="d-block text-white text-truncate fw-semibold">@context.User.Identity?.Name</span>
                        <div class="d-flex align-items-center gap-2">
                            <span class="badge @GetAccessLevelBadgeClass(context.User.Claims.FirstOrDefault(c => c.Type == "AccessLevel")?.Value ?? "District") badge-sm">
                                @(context.User.Claims.FirstOrDefault(c => c.Type == "AccessLevel")?.Value ?? "District")
                            </span>
                            <span class="badge bg-secondary badge-sm">
                                @(context.User.Claims.FirstOrDefault(c => c.Type == "Role")?.Value ?? "Viewer")
                            </span>
                        </div>
                        @{
                            var accessLevel = context.User.Claims.FirstOrDefault(c => c.Type == "AccessLevel")?.Value ?? "District";
                            var regionName = context.User.Claims.FirstOrDefault(c => c.Type == "RegionName")?.Value;
                            var districtName = context.User.Claims.FirstOrDefault(c => c.Type == "DistrictName")?.Value;
                        }
                        @if (accessLevel != "National")
                        {
                            <div class="mt-1">
                                @if (accessLevel == "Regional" && !string.IsNullOrEmpty(regionName))
                                {
                                    <small class="text-white d-block text-truncate">
                                        <i class="bi bi-geo-alt me-1"></i>@regionName
                                    </small>
                                }
                                else if (accessLevel == "District")
                                {
                                    @if (!string.IsNullOrEmpty(districtName))
                                    {
                                        <small class="text-white d-block text-truncate">
                                            <i class="bi bi-buildings me-1"></i>@districtName
                                        </small>
                                    }
                                    @if (!string.IsNullOrEmpty(regionName))
                                    {
                                        <small class="text-white d-block text-truncate" style="font-size: 0.65rem;">
                                            <i class="bi bi-geo-alt me-1"></i>@regionName
                                        </small>
                                    }
                                }
                            </div>
                        }
                    </div>
                    <a href="logout" class="btn btn-sm btn-outline-light ms-2" title="Logout">
                        <i class="bi bi-box-arrow-right"></i>
                    </a>
                </div>
            </div>
        </Authorized>
    </AuthorizeView>

    <!-- Navigation -->
    <nav class="flex-grow-1 py-3 overflow-auto">
        <ul class="nav nav-pills flex-column px-2">
            <li class="nav-item mb-1">
                <NavLink class="nav-link text-white" href="" Match="NavLinkMatch.All">
                    <i class="bi bi-speedometer2 me-2"></i> Dashboard
                </NavLink>
            </li>

            <!-- Live Monitoring Section -->
            <li class="nav-item mt-3 mb-1">
                <span class="text-grey small px-3 text-uppercase">Live Monitoring</span>
            </li>
            <li class="nav-item mb-1">
                <NavLink class="nav-link text-white" href="live-labor">
                    <i class="bi bi-activity me-2 text-danger"></i> Live Labour Board
                </NavLink>
            </li>
            <li class="nav-item mb-1">
                <NavLink class="nav-link text-white" href="alerts">
                    <i class="bi bi-bell me-2 text-warning"></i> Alert Management
                </NavLink>
            </li>

            <AuthorizeView Policy="NationalAccess">
                <Authorized>
                    <li class="nav-item mt-3 mb-1">
                        <span class="text-grey small px-3 text-uppercase">National</span>
                    </li>
                    <li class="nav-item mb-1">
                        <NavLink class="nav-link text-white" href="national">
                            <i class="bi bi-globe me-2"></i> National Overview
                        </NavLink>
                    </li>
                    <li class="nav-item mb-1">
                        <NavLink class="nav-link text-white" href="regions">
                            <i class="bi bi-map me-2"></i> All Regions
                        </NavLink>
                    </li>
                </Authorized>
            </AuthorizeView>

            <AuthorizeView Policy="RegionalAccess">
                <Authorized>
                    <li class="nav-item mt-3 mb-1">
                        <span class="text-grey small px-3 text-uppercase">Regional</span>
                    </li>
                    <li class="nav-item mb-1">
                        <NavLink class="nav-link text-white" href="regional">
                            <i class="bi bi-geo-alt me-2"></i> Regional Overview
                        </NavLink>
                    </li>
                </Authorized>
            </AuthorizeView>

            <AuthorizeView>
                <Authorized>
                    @{
                        var districtAccessLevel = context.User.Claims.FirstOrDefault(c => c.Type == "AccessLevel")?.Value;
                    }
                    @if (districtAccessLevel == "District")
                    {
                        <li class="nav-item mt-3 mb-1">
                            <span class="text-grey small px-3 text-uppercase">District</span>
                        </li>
                        <li class="nav-item mb-1">
                            <NavLink class="nav-link text-white" href="district">
                                <i class="bi bi-buildings me-2"></i> District Overview
                            </NavLink>
                        </li>
                    }
                </Authorized>
            </AuthorizeView>

            <li class="nav-item mt-3 mb-1">
                <span class="text-grey small px-3 text-uppercase">Analytics</span>
            </li>
            <li class="nav-item mb-1">
                <NavLink class="nav-link text-white" href="deliveries">
                    <i class="bi bi-clipboard2-pulse me-2"></i> Deliveries
                </NavLink>
            </li>
            <li class="nav-item mb-1">
                <NavLink class="nav-link text-white" href="complications">
                    <i class="bi bi-exclamation-triangle me-2"></i> Complications
                </NavLink>
            </li>
            <li class="nav-item mb-1">
                <NavLink class="nav-link text-white" href="referrals">
                    <i class="bi bi-arrow-left-right me-2"></i> Referrals
                </NavLink>
            </li>
            <li class="nav-item mb-1">
                <NavLink class="nav-link text-white" href="outcomes">
                    <i class="bi bi-graph-up me-2"></i> Outcomes
                </NavLink>
            </li>

            <!-- Advanced Analytics Section -->
            <li class="nav-item mt-3 mb-1">
                <span class="text-grey small px-3 text-uppercase">Advanced Analytics</span>
            </li>
            <li class="nav-item mb-1">
                <NavLink class="nav-link text-white" href="predictive-analytics">
                    <i class="bi bi-graph-up-arrow me-2 text-info"></i> Risk Prediction
                </NavLink>
            </li>
            <li class="nav-item mb-1">
                <NavLink class="nav-link text-white" href="data-quality">
                    <i class="bi bi-clipboard-check me-2 text-success"></i> Data Quality
                </NavLink>
            </li>
            <li class="nav-item mb-1">
                <NavLink class="nav-link text-white" href="benchmarks">
                    <i class="bi bi-bar-chart-line me-2 text-primary"></i> Benchmarks
                </NavLink>
            </li>

            <li class="nav-item mt-3 mb-1">
                <span class="text-grey small px-3 text-uppercase">Reports</span>
            </li>
            <li class="nav-item mb-1">
                <NavLink class="nav-link text-white" href="reports">
                    <i class="bi bi-file-earmark-bar-graph me-2"></i> Generate Reports
                </NavLink>
            </li>

            <!-- Settings Section -->
            <li class="nav-item mt-3 mb-1">
                <span class="text-grey small px-3 text-uppercase">Settings</span>
            </li>
            <li class="nav-item mb-1">
                <NavLink class="nav-link text-white" href="alert-settings">
                    <i class="bi bi-gear me-2"></i> Alert Settings
                </NavLink>
            </li>
            <AuthorizeView Roles="Admin">
                <Authorized>
                    <li class="nav-item mb-1">
                        <NavLink class="nav-link text-white" href="facilities">
                            <i class="bi bi-hospital me-2"></i> Facilities
                        </NavLink>
                    </li>
                </Authorized>
            </AuthorizeView>

            <AuthorizeView Roles="Admin">
                <Authorized>
                    @{
                        var adminUserAccessLevel = context.User.Claims.FirstOrDefault(c => c.Type == "AccessLevel")?.Value ?? "District";
                    }
                    <li class="nav-item mt-3 mb-1">
                        <span class="text-grey small px-3 text-uppercase">Administration</span>
                    </li>
                    <li class="nav-item mb-1">
                        <NavLink class="nav-link text-white" href="users">
                            <i class="bi bi-people me-2"></i> Users
                        </NavLink>
                    </li>
                    <li class="nav-item mb-1">
                        <NavLink class="nav-link text-white" href="admin/user-activity">
                            <i class="bi bi-activity me-2"></i> User Activity
                        </NavLink>
                    </li>
                    <li class="nav-item mb-1">
                        <NavLink class="nav-link text-white" href="admin/notifications">
                            <i class="bi bi-bell me-2"></i> Notifications
                        </NavLink>
                    </li>
                    <li class="nav-item mb-1">
                        <NavLink class="nav-link text-white" href="admin/regions">
                            <i class="bi bi-map me-2"></i> Manage Regions
                        </NavLink>
                    </li>
                    @if (adminUserAccessLevel == "National" || adminUserAccessLevel == "Regional")
                    {
                        <li class="nav-item mb-1">
                            <NavLink class="nav-link text-white" href="admin/feature-flags">
                                <i class="bi bi-toggles me-2"></i> Feature Flags
                            </NavLink>
                        </li>
                    }
                </Authorized>
            </AuthorizeView>

            <AuthorizeView Policy="NationalAccess">
                <Authorized>
                    @{
                        var userRole = context.User.Claims.FirstOrDefault(c => c.Type == System.Security.Claims.ClaimTypes.Role)?.Value;
                    }
                    @if (userRole == "Admin")
                    {
                        <li class="nav-item mb-1">
                            <NavLink class="nav-link text-white" href="admin/rate-limits">
                                <i class="bi bi-speedometer2 me-2"></i> Rate Limits
                            </NavLink>
                        </li>
                    }
                </Authorized>
            </AuthorizeView>
        </ul>
    </nav>

    <!-- Footer -->
    <div class="px-3 py-3 border-top border-secondary">
        <div class="d-flex align-items-center justify-content-between mb-2">
            <small class="text-white">
                <i class="bi bi-info-circle me-1"></i> Version 2.1.0
            </small>
            <span class="badge bg-success badge-sm">
                <i class="bi bi-check-circle me-1"></i> Online
            </span>
        </div>
        <small class="text-white d-block">
            <i class="bi bi-calendar me-1"></i> @DateTime.Now.ToString("MMM dd, yyyy")
        </small>
        @* <div class="mt-2 pt-2 border-top border-secondary">
            <a href="https://github.com/engineerphilips/MAAME.DROMO.PARTOGRAPH" target="_blank" class="text-muted text-decoration-none small">
                <i class="bi bi-github me-1"></i> Documentation
            </a>
        </div> *@
    </div>
</div>

<style>
    .user-profile-section {
        background: rgba(255, 255, 255, 0.05);
    }

    .user-avatar {
        width: 40px;
        height: 40px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: 600;
        font-size: 0.85rem;
        color: white;
        flex-shrink: 0;
    }

    .avatar-admin { background: linear-gradient(135deg, #dc3545, #c82333); }
    .avatar-manager { background: linear-gradient(135deg, #0d6efd, #0a58ca); }
    .avatar-analyst { background: linear-gradient(135deg, #198754, #157347); }
    .avatar-viewer { background: linear-gradient(135deg, #6c757d, #5a6268); }

    .badge-sm {
        font-size: 0.65rem;
        padding: 0.2em 0.5em;
    }
</style>

@code {
    private string GetAccessLevelBadge(string accessLevel)
    {
        return accessLevel switch
        {
            "National" => "National Admin",
            "Regional" => "Regional Manager",
            "District" => "District Officer",
            _ => "User"
        };
    }

    private string GetAccessLevelBadgeClass(string accessLevel)
    {
        return accessLevel switch
        {
            "National" => "bg-info",
            "Regional" => "bg-primary",
            "District" => "bg-warning text-dark",
            _ => "bg-secondary"
        };
    }

    private string GetAvatarClass(string role)
    {
        return role switch
        {
            "Admin" => "avatar-admin",
            "Manager" => "avatar-manager",
            "Analyst" => "avatar-analyst",
            _ => "avatar-viewer"
        };
    }

    private string GetInitials(string name)
    {
        if (string.IsNullOrWhiteSpace(name)) return "??";
        var parts = name.Split(' ', StringSplitOptions.RemoveEmptyEntries);
        if (parts.Length >= 2)
            return $"{parts[0][0]}{parts[1][0]}".ToUpper();
        return parts.Length > 0 ? parts[0][..Math.Min(2, parts[0].Length)].ToUpper() : "??";
    }
}
