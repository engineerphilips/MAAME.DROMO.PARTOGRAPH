@page "/robson"
@page "/robson-classification"
@attribute [Authorize]
@inject IRobsonClassificationService RobsonService
@inject IDashboardService DashboardService
@inject AuthenticationStateProvider AuthStateProvider

<PageTitle>Robson Classification - MAAME DROMO Monitoring</PageTitle>

<div class="dashboard-header mb-4">
    <div class="d-flex justify-content-between align-items-center">
        <div>
            <h2 class="mb-1 text-gradient-primary fw-bold">
                <i class="bi bi-diagram-3 me-2"></i>
                Robson Classification Analysis
            </h2>
            <p class="text-secondary mb-0">
                @accessLevelText | @DateTime.Now.ToString("dddd, MMMM dd, yyyy")
            </p>
        </div>
        <div class="d-flex gap-2">
            <div class="input-group" style="max-width: 250px;">
                <span class="input-group-text bg-white border-end-0"><i class="bi bi-calendar text-primary"></i></span>
                <input type="month" class="form-control border-start-0 ps-0" @bind="selectedMonth" @bind:after="OnMonthChanged" />
            </div>
            <button class="btn btn-outline-secondary hover-lift" @onclick="RefreshData">
                <i class="bi bi-arrow-clockwise me-1"></i> Refresh
            </button>
            <button class="btn btn-primary hover-lift" @onclick="ExportReport">
                <i class="bi bi-download me-1"></i> Export
            </button>
        </div>
    </div>
</div>

@if (isLoading)
{
    <div class="text-center py-5">
        <div class="spinner-border text-primary" role="status">
            <span class="visually-hidden">Loading...</span>
        </div>
        <p class="mt-3 text-muted">Loading Robson Classification data...</p>
    </div>
}
else
{
    <!-- Key Metrics Cards -->
    <div class="row g-4 mb-4">
        <div class="col-md-6 col-lg-3">
            <div class="stat-card p-4 h-100 position-relative hover-lift glass-panel @(dashboard?.IsOverallCSRateAboveWHO == true ? "border-warning" : "border-success")">
                <div class="d-flex justify-content-between align-items-start">
                    <div>
                        <p class="text-secondary text-uppercase fw-semibold mb-1" style="font-size: 0.75rem;">Overall CS Rate</p>
                        <h3 class="display-6 fw-bold @(dashboard?.IsOverallCSRateAboveWHO == true ? "text-warning" : "text-success") mb-0">
                            @(dashboard?.OverallCSRate.ToString("F1") ?? "0")%
                        </h3>
                        <small class="@(dashboard?.OverallCSRateTrend > 0 ? "text-danger" : "text-success") fw-medium mt-2 d-inline-block">
                            @(dashboard?.OverallCSRateTrend > 0 ? "+" : "")@(dashboard?.OverallCSRateTrend.ToString("F1") ?? "0")% vs last month
                        </small>
                    </div>
                    <div class="icon-box-sm rounded-circle p-3 @(dashboard?.IsOverallCSRateAboveWHO == true ? "bg-warning-subtle text-warning" : "bg-success-subtle text-success")">
                        <i class="bi bi-percent fs-4"></i>
                    </div>
                </div>
                <div class="mt-3 pt-3 border-top border-light">
                    <small class="text-secondary small"><i class="bi bi-info-circle me-1"></i>WHO Recommended: 10-15%</small>
                </div>
            </div>
        </div>

        <div class="col-md-6 col-lg-3">
            <div class="stat-card p-4 h-100 position-relative hover-lift glass-panel">
                <div class="d-flex justify-content-between align-items-start">
                    <div>
                        <p class="text-secondary text-uppercase fw-semibold mb-1" style="font-size: 0.75rem;">Total Deliveries</p>
                        <h3 class="display-6 fw-bold text-dark mb-0">@(dashboard?.TotalDeliveries ?? 0)</h3>
                        <small class="text-secondary fw-medium mt-2 d-inline-block">@(dashboard?.TotalCesareans ?? 0) cesareans</small>
                    </div>
                    <div class="icon-box-sm bg-primary-subtle text-primary rounded-circle p-3">
                        <i class="bi bi-clipboard2-pulse fs-4"></i>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-6 col-lg-3">
            <div class="stat-card p-4 h-100 position-relative hover-lift glass-panel @(dashboard?.IsGroup5ProportionHigh == true ? "border-danger" : "")">
                <div class="d-flex justify-content-between align-items-start">
                    <div>
                        <p class="text-secondary text-uppercase fw-semibold mb-1" style="font-size: 0.75rem;">Group 5 Proportion</p>
                        <h3 class="display-6 fw-bold @(dashboard?.IsGroup5ProportionHigh == true ? "text-danger" : "text-dark") mb-0">
                            @(dashboard?.Group5Proportion.ToString("F1") ?? "0")%
                        </h3>
                        <small class="text-secondary fw-medium mt-2 d-inline-block">Target: &lt;10%</small>
                    </div>
                    <div class="icon-box-sm rounded-circle p-3 @(dashboard?.IsGroup5ProportionHigh == true ? "bg-danger-subtle text-danger" : "bg-info-subtle text-info")">
                        <i class="bi bi-5-circle fs-4"></i>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-6 col-lg-3">
            <div class="stat-card p-4 h-100 position-relative hover-lift glass-panel">
                <div class="d-flex justify-content-between align-items-start">
                    <div>
                        <p class="text-secondary text-uppercase fw-semibold mb-1" style="font-size: 0.75rem;">VBAC Rate</p>
                        <h3 class="display-6 fw-bold text-info mb-0">@(dashboard?.VBACRate.ToString("F1") ?? "0")%</h3>
                        <small class="text-secondary fw-medium mt-2 d-inline-block">Group 5 vaginal deliveries</small>
                    </div>
                    <div class="icon-box-sm bg-info-subtle text-info rounded-circle p-3">
                        <i class="bi bi-arrow-repeat fs-4"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row g-4 mb-4">
        <!-- Interactive Chart Section -->
        <div class="col-lg-12">
            <div class="glass-panel p-4">
                <div class="d-flex align-items-center justify-content-between mb-4 border-bottom pb-3">
                    <h5 class="mb-0 fw-bold text-dark">
                        <i class="bi bi-bar-chart-fill me-2 text-primary"></i>
                        Group Distribution & Contribution
                    </h5>
                    <div class="text-muted small">Click a bar to filter details below</div>
                </div>
                
                <div class="chart-container d-flex align-items-end justify-content-between px-2 pb-2" style="height: 300px;">
                    @if (dashboard?.GroupDistribution != null)
                    {
                        var maxCount = dashboard.GroupDistribution.Any() ? dashboard.GroupDistribution.Max(g => g.Count) : 1;
                        foreach (var group in dashboard.GroupDistribution.OrderBy(g => (int)g.Group))
                        {
                            var heightPercent = (group.Count / (double)maxCount) * 100;
                            var isSelected = selectedGroupFilter == (int)group.Group;
                            
                            <div class="d-flex flex-column align-items-center chart-bar-wrapper" 
                                 @onclick="() => ToggleGroupFilter((int)group.Group)"
                                 style="width: 8%; height: 100%; cursor: pointer;">
                                
                                <div class="position-relative w-100 d-flex flex-column justify-content-end align-items-center flex-grow-1 rounded-3 @(isSelected ? "bg-primary-subtle" : "hover-bg-light") transition-all p-1">
                                    <div class="chart-bar rounded-top-2 w-100 shadow-sm transition-all" 
                                         style="height: @(Math.Max(heightPercent, 2))%; background-color: @(isSelected ? "#4f46e5" : group.Color); opacity: @(selectedGroupFilter.HasValue && !isSelected ? 0.4 : 1);">
                                    </div>
                                    <span class="small fw-bold mt-2 mb-1 @(isSelected ? "text-primary" : "text-secondary")">@group.Count</span>
                                </div>
                                <span class="fw-bold mt-2 small text-uppercase @(isSelected ? "text-primary" : "text-muted")">G@((int)group.Group)</span>
                            </div>
                        }
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Alert Indicators (Only show if not filtered or if relevant to filter) -->
    @if (!selectedGroupFilter.HasValue && (dashboard?.IsGroup1CSRateHigh == true || dashboard?.IsGroup3CSRateHigh == true || dashboard?.IsOverallCSRateAboveWHO == true))
    {
        <div class="alert alert-warning mb-4 shadow-sm border-warning border-opacity-25 rounded-3 glass-panel">
            <h5 class="alert-heading fw-bold"><i class="bi bi-exclamation-triangle-fill me-2"></i>Quality Indicators Requiring Attention</h5>
            <ul class="mb-0 mt-2">
                @if (dashboard?.IsOverallCSRateAboveWHO == true)
                {
                    <li class="mb-1">Overall CS rate (<strong>@(dashboard?.OverallCSRate.ToString("F1"))%</strong>) exceeds WHO recommended range of 10-15%</li>
                }
                @if (dashboard?.IsGroup1CSRateHigh == true)
                {
                    <li class="mb-1">Group 1 CS rate (<strong>@(dashboard?.Group1CSRate.ToString("F1"))%</strong>) exceeds benchmark of 10% - review first-time cesareans</li>
                }
                @if (dashboard?.IsGroup3CSRateHigh == true)
                {
                    <li class="mb-1">Group 3 CS rate (<strong>@(dashboard?.Group3CSRate.ToString("F1"))%</strong>) exceeds benchmark of 3% - review multiparous CS indications</li>
                }
                @if (dashboard?.IsGroup5ProportionHigh == true)
                {
                    <li>Group 5 proportion (<strong>@(dashboard?.Group5Proportion.ToString("F1"))%</strong>) exceeds 10% - high burden of previous cesareans</li>
                }
            </ul>
        </div>
    }

    <div class="row g-4 mb-4">
        <!-- WHO Standard Robson Table -->
        <div class="col-lg-12">
            <div class="glass-panel h-100 p-0 overflow-hidden">
                <div class="d-flex justify-content-between align-items-center p-4 bg-white bg-opacity-50 border-bottom">
                    <h5 class="mb-0 fw-bold text-dark">
                        <i class="bi bi-table me-2 text-primary"></i>
                        WHO Robson Classification Details @(selectedGroupFilter.HasValue ? $"- Group {selectedGroupFilter}" : "")
                    </h5>
                    @if (selectedGroupFilter.HasValue)
                    {
                         <button class="btn btn-sm btn-outline-secondary rounded-pill" @onclick="ClearFilter">
                             Clear Filter <i class="bi bi-x"></i>
                         </button>
                    }
                    else
                    {
                        <span class="badge bg-primary rounded-pill px-3 shadow-sm">@selectedMonth.ToString("MMMM yyyy")</span>
                    }
                </div>
                <div class="p-0">
                    <div class="table-responsive">
                        <table class="table table-hover mb-0 align-middle">
                            <thead class="bg-light bg-opacity-50">
                                <tr>
                                    <th class="ps-4 py-3 fw-semibold text-secondary text-uppercase small tracking-wide border-bottom-0">Group</th>
                                    <th class="text-center py-3 fw-semibold text-secondary text-uppercase small tracking-wide border-bottom-0">Total</th>
                                    <th class="text-center py-3 fw-semibold text-secondary text-uppercase small tracking-wide border-bottom-0">CS Count</th>
                                    <th class="text-center py-3 fw-semibold text-secondary text-uppercase small tracking-wide border-bottom-0">Group Size %</th>
                                    <th class="text-center py-3 fw-semibold text-secondary text-uppercase small tracking-wide border-bottom-0">CS Rate %</th>
                                    <th class="text-center py-3 fw-semibold text-secondary text-uppercase small tracking-wide border-bottom-0">Contribution %</th>
                                    <th class="text-center py-3 fw-semibold text-secondary text-uppercase small tracking-wide border-bottom-0">Status</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (groupStatistics != null && groupStatistics.Any())
                                {
                                    @foreach (var group in groupStatistics
                                        .Where(g => !selectedGroupFilter.HasValue || (int)g.Group == selectedGroupFilter.Value)
                                        .OrderBy(g => (int)g.Group))
                                    {
                                        <tr class="@GetRowClass(group) transition-all hover-bg-light border-bottom border-light">
                                            <td class="ps-4">
                                                <div class="d-flex align-items-center">
                                                    <span class="badge bg-light text-secondary me-2 border">@((int)group.Group)</span>
                                                    <div>
                                                        <strong class="text-dark d-block">@group.GroupName</strong>
                                                        <small class="text-muted d-block text-truncate" style="max-width: 300px;">@group.GroupDescription</small>
                                                    </div>
                                                    <button class="btn btn-sm btn-link p-0 ms-2 text-decoration-none"
                                                            @onclick="() => ShowGroupDescription(group.Group)"
                                                            title="View Definition">
                                                        <i class="bi bi-info-circle text-muted hover-text-primary"></i>
                                                    </button>
                                                </div>
                                            </td>
                                            <td class="text-center"><span class="badge bg-white text-dark border shadow-sm">@group.TotalInGroup</span></td>
                                            <td class="text-center"><span class="badge bg-white text-dark border shadow-sm">@group.CesareansInGroup</span></td>
                                            <td class="text-center">@group.RelativeGroupSize.ToString("F1")%</td>
                                            <td class="text-center">
                                                <span class="badge @GetCSRateBadgeClass(group) rounded-pill shadow-sm">
                                                    @group.CSRateWithinGroup.ToString("F1")%
                                                </span>
                                            </td>
                                            <td class="text-center">
                                                <div class="d-flex align-items-center justify-content-center">
                                                    <div class="progress" style="width: 60px; height: 6px;">
                                                        <div class="progress-bar bg-primary" style="width: @(group.AbsoluteContribution)%"></div>
                                                    </div>
                                                    <span class="ms-2 small">@group.AbsoluteContribution.ToString("F1")%</span>
                                                </div>
                                            </td>
                                            <td class="text-center">
                                                @if (group.PerformanceVsBenchmark == "Above Benchmark")
                                                {
                                                    <span class="badge bg-danger-subtle text-danger border border-danger-subtle rounded-pill">High</span>
                                                }
                                                else if (group.PerformanceVsBenchmark == "Below Benchmark")
                                                {
                                                    <span class="badge bg-info-subtle text-info border border-info-subtle rounded-pill">Low</span>
                                                }
                                                else if (group.PerformanceVsBenchmark == "Within Range")
                                                {
                                                    <span class="badge bg-success-subtle text-success border border-success-subtle rounded-pill">Optimal</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-light text-secondary border rounded-pill">-</span>
                                                }
                                            </td>
                                        </tr>
                                    }
                                    @if (!selectedGroupFilter.HasValue)
                                    {
                                        <tr class="table-primary fw-bold border-top border-2 border-primary bg-primary bg-opacity-10">
                                            <td class="ps-4">Total</td>
                                            <td class="text-center">@(dashboard?.TotalDeliveries ?? 0)</td>
                                            <td class="text-center">@(dashboard?.TotalCesareans ?? 0)</td>
                                            <td class="text-center">100%</td>
                                            <td class="text-center">@(dashboard?.OverallCSRate.ToString("F1") ?? "0")%</td>
                                            <td class="text-center">100%</td>
                                            <td></td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="7" class="text-center text-secondary py-5">
                                            <i class="bi bi-inbox fs-1 opacity-50"></i>
                                            <p class="mt-2 text-muted">No classification data available for this period</p>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Detailed Analysis Section -->
    <div class="row g-4 mb-4">
        <!-- Key Groups Analysis -->
        <div class="col-lg-6">
            <div class="glass-panel h-100 p-4">
                <div class="d-flex align-items-center mb-4 border-bottom pb-3">
                    <h5 class="mb-0 fw-bold text-dark">
                        <i class="bi bi-graph-up me-2 text-success"></i>
                        Key Group Analysis
                    </h5>
                </div>
                <div>
                    <!-- Group 1 -->
                    <div class="p-4 rounded-3 bg-light bg-opacity-50 mb-3 border border-light shadow-sm hover-lift transition-all">
                        <div class="d-flex justify-content-between align-items-center mb-2">
                            <h6 class="mb-0 fw-bold text-dark">Group 1: Nulliparous, Term, Spontaneous</h6>
                            <span class="badge @(dashboard?.IsGroup1CSRateHigh == true ? "bg-warning" : "bg-success") rounded-pill shadow-sm px-3">
                                @(dashboard?.Group1CSRate.ToString("F1") ?? "0")%
                            </span>
                        </div>
                        <p class="small text-secondary mb-0">
                            Target: 5-10% | First-time mothers with normal presentations who go into spontaneous labour
                        </p>
                    </div>

                    <!-- Group 3 -->
                    <div class="p-4 rounded-3 bg-light bg-opacity-50 mb-3 border border-light shadow-sm hover-lift transition-all">
                        <div class="d-flex justify-content-between align-items-center mb-2">
                            <h6 class="mb-0 fw-bold text-dark">Group 3: Multiparous, Term, Spontaneous</h6>
                            <span class="badge @(dashboard?.IsGroup3CSRateHigh == true ? "bg-warning" : "bg-success") rounded-pill shadow-sm px-3">
                                @(dashboard?.Group3CSRate.ToString("F1") ?? "0")%
                            </span>
                        </div>
                        <p class="small text-secondary mb-0">
                            Target: &le;3% | Mothers who have delivered before and go into spontaneous labour
                        </p>
                    </div>

                    <!-- Group 5 -->
                    <div class="p-4 rounded-3 bg-light bg-opacity-50 mb-3 border border-light shadow-sm hover-lift transition-all">
                        <div class="d-flex justify-content-between align-items-center mb-2">
                            <h6 class="mb-0 fw-bold text-dark">Group 5: Previous CS, Term</h6>
                            <span class="badge bg-info rounded-pill shadow-sm px-3">@(dashboard?.Group5CSRate.ToString("F1") ?? "0")%</span>
                        </div>
                        <p class="small text-secondary mb-0">
                            VBAC Rate: <strong>@(dashboard?.VBACRate.ToString("F1") ?? "0")%</strong> | Women with previous cesarean section
                        </p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Quality Indicators -->
        <div class="col-lg-6">
            <div class="glass-panel h-100 p-4">
                <div class="d-flex align-items-center mb-4 border-bottom pb-3">
                    <h5 class="mb-0 fw-bold text-dark">
                        <i class="bi bi-clipboard-check-fill me-2 text-info"></i>
                        Quality Indicators (WHO Standards)
                    </h5>
                </div>
                <div>
                    @if (qualityIndicators != null)
                    {
                        <div class="list-group list-group-flush">
                            <div class="list-group-item bg-transparent px-0 py-3 border-bottom d-flex justify-content-between align-items-center">
                                <span class="fw-medium text-dark">Overall CS Rate Assessment</span>
                                <span class="badge @GetAssessmentBadgeClass(qualityIndicators.OverallCSRateAssessment) rounded-pill shadow-sm px-3">
                                    @qualityIndicators.OverallCSRateAssessment
                                </span>
                            </div>

                            <div class="list-group-item bg-transparent px-0 py-3 border-bottom d-flex justify-content-between align-items-center">
                                <span class="fw-medium text-dark">Group 1 Within Benchmark</span>
                                @if (qualityIndicators.Group1WithinBenchmark)
                                {
                                    <i class="bi bi-check-circle-fill text-success fs-5"></i>
                                }
                                else
                                {
                                    <i class="bi bi-x-circle-fill text-danger fs-5"></i>
                                }
                            </div>

                            <div class="list-group-item bg-transparent px-0 py-3 border-bottom d-flex justify-content-between align-items-center">
                                <span class="fw-medium text-dark">Group 3 Within Benchmark</span>
                                @if (qualityIndicators.Group3WithinBenchmark)
                                {
                                    <i class="bi bi-check-circle-fill text-success fs-5"></i>
                                }
                                else
                                {
                                    <i class="bi bi-x-circle-fill text-danger fs-5"></i>
                                }
                            </div>

                            <div class="list-group-item bg-transparent px-0 py-3 border-bottom d-flex justify-content-between align-items-center">
                                <span class="fw-medium text-dark">Group 5 Proportion Acceptable</span>
                                @if (qualityIndicators.Group5ProportionAcceptable)
                                {
                                    <i class="bi bi-check-circle-fill text-success fs-5"></i>
                                }
                                else
                                {
                                    <i class="bi bi-x-circle-fill text-danger fs-5"></i>
                                }
                            </div>

                            <div class="list-group-item bg-transparent px-0 py-3 border-bottom d-flex justify-content-between align-items-center">
                                <span class="fw-medium text-dark">Data Completeness</span>
                                <span class="badge bg-info-subtle text-info border border-info-subtle rounded-pill px-3">@qualityIndicators.DataCompletenessRate.ToString("F1")%</span>
                            </div>
                        </div>

                        <div class="mt-4 p-3 bg-light bg-opacity-50 rounded-3">
                            <h6 class="fw-bold text-dark mb-2">Robson Index</h6>
                            <div class="d-flex justify-content-between mb-2">
                                <small class="text-muted">Groups 1, 2 & 5 contribution (Target: 60-70%)</small>
                                <span class="fw-bold text-primary">@qualityIndicators.RobsonIndex.ToString("F1")%</span>
                            </div>
                            <div class="progress rounded-pill bg-white" style="height: 12px;">
                                <div class="progress-bar bg-gradient-primary rounded-pill" style="width: @qualityIndicators.RobsonIndex%">
                                </div>
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="text-center text-muted py-4">
                            <i class="bi bi-clipboard-x fs-1 opacity-50"></i>
                            <p class="mt-2 text-secondary">Quality indicators not available</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Action Items -->
    @if (actionItems != null && actionItems.Any())
    {
        <div class="glass-panel mb-4 p-4">
            <div class="d-flex align-items-center mb-4 border-bottom pb-3">
                <h5 class="mb-0 fw-bold text-dark">
                    <i class="bi bi-list-check me-2 text-warning"></i>
                    Recommended Actions
                </h5>
            </div>
            <div class="card-body p-0">
                <div class="row g-3">
                    @foreach (var action in actionItems.Take(6))
                    {
                        <div class="col-md-6">
                            <div class="p-3 rounded-3 border bg-white shadow-sm h-100 hover-lift transition-all @GetActionBorderClass(action.Priority)" style="border-left-width: 4px !important;">
                                <div class="d-flex align-items-start">
                                    <span class="badge @GetActionBadgeClass(action.Priority) me-2 rounded-pill shadow-sm">@action.Priority</span>
                                    <div>
                                        <strong class="text-dark d-block mb-1">@action.Description</strong>
                                        <p class="small text-secondary mb-2">@action.Recommendation</p>
                                        @if (action.RelatedGroup.HasValue)
                                        {
                                            <span class="badge bg-secondary-subtle text-secondary border border-secondary-subtle rounded-pill small">Group @((int)action.RelatedGroup.Value)</span>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    }

    <!-- Monthly Trends -->
    @if (monthlyTrends != null && monthlyTrends.Any())
    {
        <div class="glass-panel mb-4 p-0 overflow-hidden">
            <div class="d-flex align-items-center p-4 bg-white bg-opacity-50 border-bottom">
                <h5 class="mb-0 fw-bold text-dark">
                    <i class="bi bi-graph-up-arrow me-2 text-primary"></i>
                    Monthly Trends (@DateTime.Now.Year)
                </h5>
            </div>
            <div class="p-0">
                <div class="table-responsive">
                    <table class="table table-hover mb-0 align-middle">
                        <thead class="bg-light bg-opacity-50">
                            <tr>
                                <th class="ps-4 py-3 fw-semibold text-secondary text-uppercase small tracking-wide border-bottom-0">Month</th>
                                <th class="text-center py-3 fw-semibold text-secondary text-uppercase small tracking-wide border-bottom-0">Deliveries</th>
                                <th class="text-center py-3 fw-semibold text-secondary text-uppercase small tracking-wide border-bottom-0">CS Count</th>
                                <th class="text-center py-3 fw-semibold text-secondary text-uppercase small tracking-wide border-bottom-0">Overall CS %</th>
                                <th class="text-center py-3 fw-semibold text-secondary text-uppercase small tracking-wide border-bottom-0">Group 1 CS %</th>
