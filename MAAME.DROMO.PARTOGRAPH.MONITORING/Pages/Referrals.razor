@page "/referrals"
@attribute [Authorize]
@inject IAnalyticsService AnalyticsService
@inject IDashboardService DashboardService
@inject AuthenticationStateProvider AuthStateProvider

<PageTitle>Referrals - MAAME DROMO Monitoring</PageTitle>

<div class="dashboard-header mb-4">
    <div class="d-flex justify-content-between align-items-center">
        <div>
            <h2 class="mb-1">
                <i class="bi bi-arrow-left-right me-2 text-info"></i>
                Referrals Analytics
            </h2>
            <p class="text-muted mb-0">
                @accessLevelText | @DateTime.Now.ToString("dddd, MMMM dd, yyyy")
            </p>
        </div>
        <div class="d-flex gap-2">
            <button class="btn btn-outline-secondary" @onclick="RefreshData">
                <i class="bi bi-arrow-clockwise me-1"></i> Refresh
            </button>
        </div>
    </div>
</div>

@if (isLoading)
{
    <div class="text-center py-5">
        <div class="spinner-border text-primary" role="status">
            <span class="visually-hidden">Loading...</span>
        </div>
        <p class="mt-3 text-muted">Loading referrals data...</p>
    </div>
}
else
{
    <!-- Summary Cards -->
    <div class="row g-4 mb-4">
        <div class="col-md-6 col-lg-3">
            <div class="stat-card p-4 h-100 position-relative hover-lift">
                <div class="d-flex justify-content-between align-items-start">
                    <div>
                        <p class="text-secondary text-uppercase fw-semibold mb-1" style="font-size: 0.75rem;">Today's Referrals</p>
                        <h3 class="display-6 fw-bold text-dark mb-0">@summary?.ReferralsToday</h3>
                    </div>
                    <div class="icon-box-sm bg-info-subtle text-info rounded-circle p-3">
                        <i class="bi bi-arrow-left-right fs-4"></i>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-6 col-lg-3">
            <div class="stat-card p-4 h-100 position-relative hover-lift">
                <div class="d-flex justify-content-between align-items-start">
                    <div>
                        <p class="text-secondary text-uppercase fw-semibold mb-1" style="font-size: 0.75rem;">Total This Month</p>
                        <h3 class="display-6 fw-bold text-dark mb-0">@totalReferrals</h3>
                    </div>
                    <div class="icon-box-sm bg-primary-subtle text-primary rounded-circle p-3">
                        <i class="bi bi-calendar-month fs-4"></i>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-6 col-lg-3">
            <div class="stat-card p-4 h-100 position-relative hover-lift">
                <div class="d-flex justify-content-between align-items-start">
                    <div>
                        <p class="text-secondary text-uppercase fw-semibold mb-1" style="font-size: 0.75rem;">Complications Today</p>
                        <h3 class="display-6 fw-bold text-dark mb-0">@summary?.ComplicationsToday</h3>
                    </div>
                    <div class="icon-box-sm bg-danger-subtle text-danger rounded-circle p-3">
                        <i class="bi bi-exclamation-diamond fs-4"></i>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-6 col-lg-3">
            <div class="stat-card p-4 h-100 position-relative hover-lift">
                <div class="d-flex justify-content-between align-items-start">
                    <div>
                        <p class="text-secondary text-uppercase fw-semibold mb-1" style="font-size: 0.75rem;">Active Facilities</p>
                        <h3 class="display-6 fw-bold text-dark mb-0">@summary?.ActiveFacilities</h3>
                    </div>
                    <div class="icon-box-sm bg-success-subtle text-success rounded-circle p-3">
                        <i class="bi bi-hospital fs-4"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Referrals by Reason -->
    <div class="row g-4 mb-4">
        <div class="col-lg-8">
            <div class="glass-panel h-100 p-0 overflow-hidden">
                <div class="d-flex justify-content-between align-items-center p-4 bg-white bg-opacity-50 border-bottom">
                    <h5 class="mb-0 fw-bold text-dark">
                        <i class="bi bi-list-ul me-2 text-info"></i>
                        Referrals by Primary Reason
                    </h5>
                </div>
                <div class="p-0">
                    @if (referralStats?.Any() == true)
                    {
                        <div class="table-responsive">
                            <table class="table table-hover mb-0 align-middle">
                                <thead class="bg-light bg-opacity-50">
                                    <tr>
                                        <th class="ps-4 py-3 fw-semibold text-secondary text-uppercase small tracking-wide border-bottom-0">Reason</th>
                                        <th class="py-3 fw-semibold text-secondary text-uppercase small tracking-wide border-bottom-0">Count</th>
                                        <th class="py-3 fw-semibold text-secondary text-uppercase small tracking-wide border-bottom-0">Distribution</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var referral in referralStats.OrderByDescending(r => r.Count))
                                    {
                                        var percentage = totalReferrals > 0 ? (double)referral.Count / totalReferrals * 100 : 0;
                                        <tr class="transition-all hover-bg-light">
                                            <td class="ps-4">
                                                <div class="d-flex align-items-center">
                                                    <i class="bi bi-arrow-right-circle-fill me-2 text-info fs-5"></i>
                                                    <span class="fw-medium text-dark">@referral.Reason</span>
                                                </div>
                                            </td>
                                            <td><span class="badge bg-info-subtle text-info-emphasis rounded-pill px-3">@referral.Count</span></td>
                                            <td style="width: 40%;" class="pe-4">
                                                <div class="d-flex align-items-center">
                                                    <div class="progress flex-grow-1 me-2 rounded-pill bg-light" style="height: 8px;">
                                                        <div class="progress-bar bg-info rounded-pill"
                                                             style="width: @percentage%">
                                                        </div>
                                                    </div>
                                                    <small class="text-muted" style="width: 40px; text-align: right;">@percentage.ToString("F0")%</small>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="bi bi-check-circle fs-1 text-success opacity-50"></i>
                            <p class="text-muted mt-2">No referrals recorded this period</p>
                        </div>
                    }
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="glass-panel h-100 p-4">
                <div class="d-flex align-items-center mb-4 border-bottom pb-3">
                    <h5 class="mb-0 fw-bold text-dark">
                        <i class="bi bi-pie-chart-fill me-2 text-primary"></i>
                        Referral Summary
                    </h5>
                </div>
                <div class="card-body p-0">
                    <div class="text-center mb-4">
                        <div class="display-3 fw-bold text-gradient-primary">@totalReferrals</div>
                        <p class="text-secondary text-uppercase tracking-wide small mb-0">Total Referrals This Month</p>
                    </div>

                    <hr class="opacity-25" />

                    @if (referralStats?.Any() == true)
                    {
                        <div class="referral-breakdown">
                            <h6 class="text-secondary text-uppercase small fw-bold mb-3">Top Reasons</h6>
                            @foreach (var referral in referralStats.OrderByDescending(r => r.Count).Take(5))
                            {
                                <div class="d-flex justify-content-between align-items-center mb-2 p-2 rounded hover-bg-light transition-all">
                                    <span class="text-dark fw-medium text-truncate" style="max-width: 70%;">@referral.Reason</span>
                                    <span class="badge bg-info rounded-pill shadow-sm">@referral.Count</span>
                                </div>
                            }
                        </div>
                    }

                    <hr class="opacity-25" />

                    <div class="row text-center g-2">
                        <div class="col-6">
                            <div class="p-3 rounded-3 bg-danger-subtle border border-danger-subtle">
                                <h4 class="mb-0 text-danger fw-bold">@summary?.ComplicationsToday</h4>
                                <small class="text-danger-emphasis small text-uppercase">Complications</small>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="p-3 rounded-3 bg-warning-subtle border border-warning-subtle">
                                <h4 class="mb-0 text-warning-emphasis fw-bold">@summary?.HighRiskLabors</h4>
                                <small class="text-warning-emphasis small text-uppercase">High Risk</small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Referral Categories Visual -->
    <div class="row g-4 mb-4">
        <div class="col-12">
            <div class="glass-panel p-4">
                <div class="d-flex align-items-center mb-4 border-bottom pb-3">
                    <h5 class="mb-0 fw-bold text-dark">
                        <i class="bi bi-bar-chart-fill me-2 text-primary"></i>
                        Referral Categories Overview
                    </h5>
                </div>
                <div class="card-body p-0">
                    @if (referralStats?.Any() == true)
                    {
                        <div class="row">
                            @foreach (var referral in referralStats.OrderByDescending(r => r.Count).Take(8))
                            {
                                var percentage = totalReferrals > 0 ? (double)referral.Count / totalReferrals * 100 : 0;
                                <div class="col-md-6 col-lg-3 mb-3">
                                    <div class="p-3 rounded-3 shadow-sm hover-lift transition-all @GetCategoryBackground(referral.Reason)">
                                        <div class="d-flex justify-content-between align-items-center mb-2">
                                            <span class="fw-bold text-white text-truncate" style="max-width: 75%;">
                                                @referral.Reason
                                            </span>
                                            <span class="badge bg-white text-dark rounded-pill">@referral.Count</span>
                                        </div>
                                        <div class="progress bg-white bg-opacity-25 rounded-pill" style="height: 6px;">
                                            <div class="progress-bar bg-white" style="width: @percentage%"></div>
                                        </div>
                                        <small class="text-white-50 mt-2 d-block small">@percentage.ToString("F1")% of total</small>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-4">
                            <i class="bi bi-inbox fs-1 text-muted opacity-50"></i>
                            <p class="text-muted mt-2">No referral categories to display</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Related Alerts -->
    <div class="row g-4">
        <div class="col-12">
            <div class="glass-panel p-0 overflow-hidden">
                <div class="d-flex justify-content-between align-items-center p-4 bg-white bg-opacity-50 border-bottom">
                    <h5 class="mb-0 fw-bold text-dark">
                        <i class="bi bi-bell-fill me-2 text-warning"></i>
                        Recent Referral-Related Alerts
                    </h5>
                    <a href="alerts" class="btn btn-sm btn-outline-primary rounded-pill px-3 shadow-sm hover-lift">View All</a>
                </div>
                <div class="p-0">
                    @if (alerts?.Any() == true)
                    {
                        <div class="list-group list-group-flush">
                            @foreach (var alert in alerts.Take(5))
                            {
                                <div class="list-group-item border-bottom-0 border-top bg-transparent hover-bg-light transition-all">
                                    <div class="d-flex align-items-start p-2">
                                        <div class="me-3 mt-1">
                                            <i class="bi @GetAlertIcon(alert.Severity) fs-4"></i>
                                        </div>
                                        <div class="flex-grow-1">
                                            <div class="d-flex justify-content-between">
                                                <h6 class="mb-1 fw-bold text-dark">@alert.Title</h6>
                                                <small class="text-secondary">@alert.CreatedAt.ToString("MMM dd, HH:mm")</small>
                                            </div>
                                            <p class="mb-1 small text-dark">@alert.Message</p>
                                            <small class="text-secondary">
                                                <i class="bi bi-hospital me-1"></i>@alert.FacilityName
                                            </small>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="p-5 text-center">
                            <i class="bi bi-check-circle fs-1 text-success opacity-50"></i>
                            <p class="text-muted mt-2 mb-0">No active alerts</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
}

@code {
    private DashboardSummary? summary;
    private List<ReferralStats>? referralStats;
    private List<DashboardAlert>? alerts;
    private bool isLoading = true;
    private string accessLevel = "District";
    private string accessLevelText = "District View";
    private int totalReferrals => referralStats?.Sum(r => r.Count) ?? 0;

    protected override async Task OnInitializedAsync()
    {
        await DetermineAccessLevel();
        await LoadData();
    }

    private async Task DetermineAccessLevel()
    {
        var authState = await AuthStateProvider.GetAuthenticationStateAsync();
        var user = authState.User;

        accessLevel = user.Claims.FirstOrDefault(c => c.Type == "AccessLevel")?.Value ?? "District";
        accessLevelText = accessLevel switch
        {
            "National" => "National Overview",
            "Regional" => "Regional View",
            "District" => "District View",
            _ => "Dashboard"
        };
    }

    private async Task LoadData()
    {
        isLoading = true;
        try
        {
            var filter = await GetDashboardFilter();

            summary = await DashboardService.GetDashboardSummaryAsync(filter);
            referralStats = await AnalyticsService.GetReferralStatsAsync(filter);
            alerts = await DashboardService.GetActiveAlertsAsync(filter);
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading referrals data: {ex.Message}");
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task<DashboardFilter> GetDashboardFilter()
    {
        var filter = new DashboardFilter();
        var authState = await AuthStateProvider.GetAuthenticationStateAsync();
        var user = authState.User;

        if (accessLevel == "Regional")
        {
            var regionIdClaim = user.Claims.FirstOrDefault(c => c.Type == "RegionID")?.Value;
            if (Guid.TryParse(regionIdClaim, out var regionId))
                filter.RegionID = regionId;
        }
        else if (accessLevel == "District")
        {
            var districtIdClaim = user.Claims.FirstOrDefault(c => c.Type == "DistrictID")?.Value;
            if (Guid.TryParse(districtIdClaim, out var districtId))
                filter.DistrictID = districtId;
        }

        return filter;
    }

    private async Task RefreshData()
    {
        await LoadData();
    }

    private string GetCategoryBackground(string reason)
    {
        var hash = reason?.GetHashCode() ?? 0;
        var colors = new[]
        {
            "bg-primary",
            "bg-info",
            "bg-success",
            "bg-warning",
            "bg-danger",
            "bg-secondary",
            "bg-dark"
        };
        return colors[Math.Abs(hash) % colors.Length];
    }

    private string GetAlertIcon(string severity)
    {
        return severity switch
        {
            "Critical" => "bi-exclamation-octagon text-danger",
            "Warning" => "bi-exclamation-triangle text-warning",
            _ => "bi-info-circle text-info"
        };
    }
}
