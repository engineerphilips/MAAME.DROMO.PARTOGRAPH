@page "/referrals"
@attribute [Authorize]
@inject IAnalyticsService AnalyticsService
@inject IDashboardService DashboardService
@inject AuthenticationStateProvider AuthStateProvider

<PageTitle>Referrals - MAAME DROMO Monitoring</PageTitle>

<div class="dashboard-header mb-4">
    <div class="d-flex justify-content-between align-items-center">
        <div>
            <h2 class="mb-1">
                <i class="bi bi-arrow-left-right me-2 text-info"></i>
                Referrals Analytics
            </h2>
            <p class="text-muted mb-0">
                @accessLevelText | @DateTime.Now.ToString("dddd, MMMM dd, yyyy")
            </p>
        </div>
        <div class="d-flex gap-2">
            <button class="btn btn-outline-secondary" @onclick="RefreshData">
                <i class="bi bi-arrow-clockwise me-1"></i> Refresh
            </button>
        </div>
    </div>
</div>

@if (isLoading)
{
    <div class="text-center py-5">
        <div class="spinner-border text-primary" role="status">
            <span class="visually-hidden">Loading...</span>
        </div>
        <p class="mt-3 text-muted">Loading referrals data...</p>
    </div>
}
else
{
    <!-- Summary Cards -->
    <div class="row g-4 mb-4">
        <div class="col-md-6 col-lg-3">
            <div class="card stat-card border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-start">
                        <div>
                            <p class="text-muted mb-1">Today's Referrals</p>
                            <h3 class="mb-0">@summary?.ReferralsToday</h3>
                        </div>
                        <div class="stat-icon bg-info-subtle text-info">
                            <i class="bi bi-arrow-left-right"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-6 col-lg-3">
            <div class="card stat-card border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-start">
                        <div>
                            <p class="text-muted mb-1">Total This Month</p>
                            <h3 class="mb-0">@totalReferrals</h3>
                        </div>
                        <div class="stat-icon bg-primary-subtle text-primary">
                            <i class="bi bi-calendar-month"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-6 col-lg-3">
            <div class="card stat-card border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-start">
                        <div>
                            <p class="text-muted mb-1">Complications Today</p>
                            <h3 class="mb-0">@summary?.ComplicationsToday</h3>
                        </div>
                        <div class="stat-icon bg-danger-subtle text-danger">
                            <i class="bi bi-exclamation-diamond"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-6 col-lg-3">
            <div class="card stat-card border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-start">
                        <div>
                            <p class="text-muted mb-1">Active Facilities</p>
                            <h3 class="mb-0">@summary?.ActiveFacilities</h3>
                        </div>
                        <div class="stat-icon bg-success-subtle text-success">
                            <i class="bi bi-hospital"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Referrals by Reason -->
    <div class="row g-4 mb-4">
        <div class="col-lg-8">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-header bg-white border-0">
                    <h5 class="card-title mb-0">
                        <i class="bi bi-list-ul me-2 text-info"></i>
                        Referrals by Primary Reason
                    </h5>
                </div>
                <div class="card-body">
                    @if (referralStats?.Any() == true)
                    {
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead class="table-light">
                                    <tr>
                                        <th>Reason</th>
                                        <th>Count</th>
                                        <th>Distribution</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var referral in referralStats.OrderByDescending(r => r.Count))
                                    {
                                        var percentage = totalReferrals > 0 ? (double)referral.Count / totalReferrals * 100 : 0;
                                        <tr>
                                            <td>
                                                <i class="bi bi-arrow-right-circle me-2 text-info"></i>
                                                @referral.Reason
                                            </td>
                                            <td><span class="badge bg-info">@referral.Count</span></td>
                                            <td style="width: 40%;">
                                                <div class="d-flex align-items-center">
                                                    <div class="progress flex-grow-1 me-2" style="height: 20px;">
                                                        <div class="progress-bar bg-info"
                                                             style="width: @percentage%">
                                                        </div>
                                                    </div>
                                                    <small class="text-muted">@percentage.ToString("F1")%</small>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-4">
                            <i class="bi bi-check-circle fs-1 text-success"></i>
                            <p class="text-muted mt-2">No referrals recorded this period</p>
                        </div>
                    }
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-header bg-white border-0">
                    <h5 class="card-title mb-0">
                        <i class="bi bi-pie-chart me-2 text-primary"></i>
                        Referral Summary
                    </h5>
                </div>
                <div class="card-body">
                    <div class="text-center mb-4">
                        <div class="display-4 fw-bold text-info">@totalReferrals</div>
                        <p class="text-muted mb-0">Total Referrals This Month</p>
                    </div>

                    <hr />

                    @if (referralStats?.Any() == true)
                    {
                        <div class="referral-breakdown">
                            <h6 class="text-muted mb-3">Top Reasons</h6>
                            @foreach (var referral in referralStats.OrderByDescending(r => r.Count).Take(5))
                            {
                                <div class="d-flex justify-content-between align-items-center mb-2">
                                    <span class="text-truncate" style="max-width: 70%;">@referral.Reason</span>
                                    <span class="badge bg-info">@referral.Count</span>
                                </div>
                            }
                        </div>
                    }

                    <hr />

                    <div class="row text-center">
                        <div class="col-6">
                            <h4 class="mb-1 text-danger">@summary?.ComplicationsToday</h4>
                            <small class="text-muted">Complications</small>
                        </div>
                        <div class="col-6">
                            <h4 class="mb-1 text-warning">@summary?.HighRiskLabors</h4>
                            <small class="text-muted">High Risk</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Referral Categories Visual -->
    <div class="row g-4 mb-4">
        <div class="col-12">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white border-0">
                    <h5 class="card-title mb-0">
                        <i class="bi bi-bar-chart me-2 text-primary"></i>
                        Referral Categories Overview
                    </h5>
                </div>
                <div class="card-body">
                    @if (referralStats?.Any() == true)
                    {
                        <div class="row">
                            @foreach (var referral in referralStats.OrderByDescending(r => r.Count).Take(8))
                            {
                                var percentage = totalReferrals > 0 ? (double)referral.Count / totalReferrals * 100 : 0;
                                <div class="col-md-6 col-lg-3 mb-3">
                                    <div class="p-3 rounded @GetCategoryBackground(referral.Reason)">
                                        <div class="d-flex justify-content-between align-items-center mb-2">
                                            <span class="fw-semibold text-truncate" style="max-width: 75%;">
                                                @referral.Reason
                                            </span>
                                            <span class="badge bg-white text-dark">@referral.Count</span>
                                        </div>
                                        <div class="progress" style="height: 8px;">
                                            <div class="progress-bar bg-white bg-opacity-75" style="width: @percentage%"></div>
                                        </div>
                                        <small class="text-white-50">@percentage.ToString("F1")% of total</small>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-4">
                            <i class="bi bi-inbox fs-1 text-muted"></i>
                            <p class="text-muted mt-2">No referral categories to display</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Related Alerts -->
    <div class="row g-4">
        <div class="col-12">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white border-0 d-flex justify-content-between align-items-center">
                    <h5 class="card-title mb-0">
                        <i class="bi bi-bell me-2 text-warning"></i>
                        Recent Referral-Related Alerts
                    </h5>
                    <a href="alerts" class="btn btn-sm btn-outline-primary">View All</a>
                </div>
                <div class="card-body p-0">
                    @if (alerts?.Any() == true)
                    {
                        <div class="list-group list-group-flush">
                            @foreach (var alert in alerts.Take(5))
                            {
                                <div class="list-group-item">
                                    <div class="d-flex align-items-start">
                                        <div class="me-3">
                                            <i class="bi @GetAlertIcon(alert.Severity) fs-4"></i>
                                        </div>
                                        <div class="flex-grow-1">
                                            <div class="d-flex justify-content-between">
                                                <h6 class="mb-1">@alert.Title</h6>
                                                <small class="text-muted">@alert.CreatedAt.ToString("MMM dd, HH:mm")</small>
                                            </div>
                                            <p class="mb-1 small text-muted">@alert.Message</p>
                                            <small class="text-muted">
                                                <i class="bi bi-hospital me-1"></i>@alert.FacilityName
                                            </small>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="p-4 text-center">
                            <i class="bi bi-check-circle fs-1 text-success"></i>
                            <p class="text-muted mt-2 mb-0">No active alerts</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
}

@code {
    private DashboardSummary? summary;
    private List<ReferralStats>? referralStats;
    private List<DashboardAlert>? alerts;
    private bool isLoading = true;
    private string accessLevel = "District";
    private string accessLevelText = "District View";
    private int totalReferrals => referralStats?.Sum(r => r.Count) ?? 0;

    protected override async Task OnInitializedAsync()
    {
        await DetermineAccessLevel();
        await LoadData();
    }

    private async Task DetermineAccessLevel()
    {
        var authState = await AuthStateProvider.GetAuthenticationStateAsync();
        var user = authState.User;

        accessLevel = user.Claims.FirstOrDefault(c => c.Type == "AccessLevel")?.Value ?? "District";
        accessLevelText = accessLevel switch
        {
            "National" => "National Overview",
            "Regional" => "Regional View",
            "District" => "District View",
            _ => "Dashboard"
        };
    }

    private async Task LoadData()
    {
        isLoading = true;
        try
        {
            var filter = await GetDashboardFilter();

            summary = await DashboardService.GetDashboardSummaryAsync(filter);
            referralStats = await AnalyticsService.GetReferralStatsAsync(filter);
            alerts = await DashboardService.GetActiveAlertsAsync(filter);
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading referrals data: {ex.Message}");
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task<DashboardFilter> GetDashboardFilter()
    {
        var filter = new DashboardFilter();
        var authState = await AuthStateProvider.GetAuthenticationStateAsync();
        var user = authState.User;

        if (accessLevel == "Regional")
        {
            var regionIdClaim = user.Claims.FirstOrDefault(c => c.Type == "RegionID")?.Value;
            if (Guid.TryParse(regionIdClaim, out var regionId))
                filter.RegionID = regionId;
        }
        else if (accessLevel == "District")
        {
            var districtIdClaim = user.Claims.FirstOrDefault(c => c.Type == "DistrictID")?.Value;
            if (Guid.TryParse(districtIdClaim, out var districtId))
                filter.DistrictID = districtId;
        }

        return filter;
    }

    private async Task RefreshData()
    {
        await LoadData();
    }

    private string GetCategoryBackground(string reason)
    {
        var hash = reason?.GetHashCode() ?? 0;
        var colors = new[]
        {
            "bg-primary",
            "bg-info",
            "bg-success",
            "bg-warning",
            "bg-danger",
            "bg-secondary",
            "bg-dark"
        };
        return colors[Math.Abs(hash) % colors.Length];
    }

    private string GetAlertIcon(string severity)
    {
        return severity switch
        {
            "Critical" => "bi-exclamation-octagon text-danger",
            "Warning" => "bi-exclamation-triangle text-warning",
            _ => "bi-info-circle text-info"
        };
    }
}
