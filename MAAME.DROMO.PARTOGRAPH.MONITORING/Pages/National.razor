@page "/national"
@page "/regions"
@attribute [Authorize(Policy = "NationalAccess")]
@inject IRegionService RegionService
@inject IDashboardService DashboardService

<PageTitle>National Overview - MAAME DROMO Monitoring</PageTitle>

<div class="dashboard-header mb-4">
    <div class="d-flex justify-content-between align-items-center">
        <div>
            <h2 class="mb-1">
                <i class="bi bi-globe me-2 text-primary"></i>
                National Overview
            </h2>
            <p class="text-muted mb-0">
                All Regions Performance | @DateTime.Now.ToString("dddd, MMMM dd, yyyy")
            </p>
        </div>
        <div class="d-flex gap-2">
            <button class="btn btn-outline-secondary" @onclick="RefreshData">
                <i class="bi bi-arrow-clockwise me-1"></i> Refresh
            </button>
            <a href="reports?level=national" class="btn btn-primary">
                <i class="bi bi-file-earmark-bar-graph me-1"></i> National Report
            </a>
        </div>
    </div>
</div>

@if (isLoading)
{
    <div class="text-center py-5">
        <div class="spinner-border text-primary" role="status">
            <span class="visually-hidden">Loading...</span>
        </div>
        <p class="mt-3 text-muted">Loading national data...</p>
    </div>
}
else
{
    <!-- Summary Cards -->
    <div class="row g-4 mb-4">
        <div class="col-md-6 col-lg-3">
            <div class="card stat-card border-0 shadow-sm h-100 bg-primary text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-start">
                        <div>
                            <p class="mb-1 opacity-75">Total Regions</p>
                            <h2 class="mb-0">@regions?.Count</h2>
                        </div>
                        <div class="stat-icon bg-white bg-opacity-25">
                            <i class="bi bi-map"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-6 col-lg-3">
            <div class="card stat-card border-0 shadow-sm h-100 bg-info text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-start">
                        <div>
                            <p class="mb-1 opacity-75">Total Districts</p>
                            <h2 class="mb-0">@regions?.Sum(r => r.DistrictCount)</h2>
                        </div>
                        <div class="stat-icon bg-white bg-opacity-25">
                            <i class="bi bi-building"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-6 col-lg-3">
            <div class="card stat-card border-0 shadow-sm h-100 bg-success text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-start">
                        <div>
                            <p class="mb-1 opacity-75">Total Facilities</p>
                            <h2 class="mb-0">@regions?.Sum(r => r.FacilityCount)</h2>
                        </div>
                        <div class="stat-icon bg-white bg-opacity-25">
                            <i class="bi bi-hospital"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-6 col-lg-3">
            <div class="card stat-card border-0 shadow-sm h-100 bg-warning text-dark">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-start">
                        <div>
                            <p class="mb-1 opacity-75">Today's Deliveries</p>
                            <h2 class="mb-0">@regions?.Sum(r => r.DeliveriesToday)</h2>
                        </div>
                        <div class="stat-icon bg-white bg-opacity-25">
                            <i class="bi bi-clipboard2-pulse"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Regions Table -->
    <div class="card border-0 shadow-sm">
        <div class="card-header bg-white border-0">
            <div class="d-flex justify-content-between align-items-center">
                <h5 class="card-title mb-0">
                    <i class="bi bi-table me-2 text-primary"></i>
                    Regions Performance Summary
                </h5>
                <div class="input-group" style="width: 250px;">
                    <span class="input-group-text bg-white"><i class="bi bi-search"></i></span>
                    <input type="text" class="form-control" placeholder="Search regions..." @bind="searchTerm" @bind:event="oninput" />
                </div>
            </div>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Region</th>
                            <th class="text-center">Districts</th>
                            <th class="text-center">Facilities</th>
                            <th class="text-center">Today</th>
                            <th class="text-center">This Month</th>
                            <th class="text-center">Active Labours</th>
                            <th class="text-center">C-Section Rate</th>
                            <th class="text-center">Status</th>
                            <th class="text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var region in FilteredRegions)
                        {
                            <tr>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <div class="region-icon me-3">
                                            <i class="bi bi-geo-alt-fill text-primary"></i>
                                        </div>
                                        <div>
                                            <span class="fw-semibold">@region.Name</span>
                                            <small class="d-block text-muted">@region.Code</small>
                                        </div>
                                    </div>
                                </td>
                                <td class="text-center">@region.DistrictCount</td>
                                <td class="text-center">@region.FacilityCount</td>
                                <td class="text-center">
                                    <span class="badge bg-primary-subtle text-primary">@region.DeliveriesToday</span>
                                </td>
                                <td class="text-center">@region.DeliveriesThisMonth</td>
                                <td class="text-center">
                                    <span class="badge @(region.ActiveLabors > 0 ? "bg-warning" : "bg-secondary")">
                                        @region.ActiveLabors
                                    </span>
                                </td>
                                <td class="text-center">
                                    <span class="@(region.CaesareanRate > 15 ? "text-warning" : "text-success")">
                                        @region.CaesareanRate.ToString("F1")%
                                    </span>
                                </td>
                                <td class="text-center">
                                    <span class="badge @GetStatusBadgeClass(region.PerformanceStatus)">
                                        @region.PerformanceStatus
                                    </span>
                                </td>
                                <td class="text-end">
                                    <a href="regional/@region.ID" class="btn btn-sm btn-outline-primary">
                                        <i class="bi bi-eye me-1"></i> View
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <div class="card-footer bg-white border-0">
            <small class="text-muted">
                Showing @FilteredRegions.Count() of @regions?.Count regions
            </small>
        </div>
    </div>
}

@code {
    private List<RegionSummary>? regions;
    private bool isLoading = true;
    private string searchTerm = "";

    private IEnumerable<RegionSummary> FilteredRegions =>
        regions?.Where(r =>
            string.IsNullOrEmpty(searchTerm) ||
            r.Name.Contains(searchTerm, StringComparison.OrdinalIgnoreCase) ||
            r.Code.Contains(searchTerm, StringComparison.OrdinalIgnoreCase)) ?? Enumerable.Empty<RegionSummary>();

    protected override async Task OnInitializedAsync()
    {
        await LoadData();
    }

    private async Task LoadData()
    {
        isLoading = true;
        try
        {
            regions = await RegionService.GetAllRegionSummariesAsync();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading regions: {ex.Message}");
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task RefreshData()
    {
        await LoadData();
    }

    private string GetStatusBadgeClass(string status)
    {
        return status switch
        {
            "Critical" => "bg-danger",
            "Warning" => "bg-warning text-dark",
            "Normal" => "bg-success",
            _ => "bg-secondary"
        };
    }
}
