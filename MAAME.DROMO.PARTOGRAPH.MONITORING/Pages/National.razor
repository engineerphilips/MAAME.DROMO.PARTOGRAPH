@page "/national"
@page "/regions"
@attribute [Authorize(Policy = "NationalAccess")]
@inject IRegionService RegionService
@inject IDashboardService DashboardService

<PageTitle>National Overview - MAAME DROMO Monitoring</PageTitle>

<div class="dashboard-header mb-4">
    <div class="d-flex justify-content-between align-items-center">
        <div>
            <h2 class="mb-1 text-gradient-primary">
                <i class="bi bi-globe me-2 text-primary"></i>
                National Overview
            </h2>
            <p class="text-secondary mb-0">
                All Regions Performance | @DateTime.Now.ToString("dddd, MMMM dd, yyyy")
            </p>
        </div>
        <div class="d-flex gap-2">
            <button class="btn btn-outline-secondary shadow-sm" @onclick="RefreshData">
                <i class="bi bi-arrow-clockwise me-1"></i> Refresh
            </button>
            <a href="reports?level=national" class="btn btn-primary shadow-sm hover-lift">
                <i class="bi bi-file-earmark-bar-graph me-1"></i> National Report
            </a>
        </div>
    </div>
</div>

@if (isLoading)
{
    <div class="text-center py-5">
        <div class="spinner-border text-primary" role="status">
            <span class="visually-hidden">Loading...</span>
        </div>
        <p class="mt-3 text-secondary">Loading national data...</p>
    </div>
}
else
{
    <!-- Summary Cards -->
    <div class="row g-4 mb-4">
        <div class="col-md-6 col-lg-3">
            <div class="card stat-card border-0 h-100 hover-lift">
                <div class="card-body p-4">
                    <div class="d-flex justify-content-between align-items-start">
                        <div>
                            <p class="text-secondary text-uppercase tracking-wide mb-1" style="font-size: 0.75rem;">Total Regions</p>
                            <h2 class="mb-0 fw-bold text-dark">@regions?.Count</h2>
                        </div>
                        <div class="stat-icon bg-primary-subtle text-primary rounded-circle p-3">
                            <i class="bi bi-map fs-4"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-6 col-lg-3">
            <div class="card stat-card border-0 h-100 hover-lift">
                <div class="card-body p-4">
                    <div class="d-flex justify-content-between align-items-start">
                        <div>
                            <p class="text-secondary text-uppercase tracking-wide mb-1" style="font-size: 0.75rem;">Total Districts</p>
                            <h2 class="mb-0 fw-bold text-dark">@regions?.Sum(r => r.DistrictCount)</h2>
                        </div>
                        <div class="stat-icon bg-info-subtle text-info rounded-circle p-3">
                            <i class="bi bi-building fs-4"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-6 col-lg-3">
            <div class="card stat-card border-0 h-100 hover-lift">
                <div class="card-body p-4">
                    <div class="d-flex justify-content-between align-items-start">
                        <div>
                            <p class="text-secondary text-uppercase tracking-wide mb-1" style="font-size: 0.75rem;">Total Facilities</p>
                            <h2 class="mb-0 fw-bold text-dark">@regions?.Sum(r => r.FacilityCount)</h2>
                        </div>
                        <div class="stat-icon bg-success-subtle text-success rounded-circle p-3">
                            <i class="bi bi-hospital fs-4"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-6 col-lg-3">
            <div class="card stat-card border-0 h-100 hover-lift">
                <div class="card-body p-4">
                    <div class="d-flex justify-content-between align-items-start">
                        <div>
                            <p class="text-secondary text-uppercase tracking-wide mb-1" style="font-size: 0.75rem;">Today's Deliveries</p>
                            <h2 class="mb-0 fw-bold text-dark">@regions?.Sum(r => r.DeliveriesToday)</h2>
                        </div>
                        <div class="stat-icon bg-warning-subtle text-warning rounded-circle p-3">
                            <i class="bi bi-clipboard2-pulse fs-4"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Regions Table -->
    <div class="glass-panel p-0 overflow-hidden">
        <div class="d-flex justify-content-between align-items-center p-4 bg-light bg-opacity-25 border-bottom">
            <h5 class="mb-0 fw-bold text-dark">
                <i class="bi bi-table me-2 text-primary"></i>
                Regions Performance Summary
            </h5>
            <div class="input-group" style="width: 250px;">
                <span class="input-group-text bg-white rounded-start-pill border-end-0"><i class="bi bi-search"></i></span>
                <input type="text" class="form-control rounded-end-pill border-start-0" placeholder="Search regions..." @bind="searchTerm" @bind:event="oninput" />
            </div>
        </div>
        <div class="table-responsive">
            <table class="table table-hover mb-0 align-middle">
                <thead class="bg-light">
                    <tr>
                        <th class="ps-4">Region</th>
                        <th class="text-center">Districts</th>
                        <th class="text-center">Facilities</th>
                        <th class="text-center">Today</th>
                        <th class="text-center">This Month</th>
                        <th class="text-center">Active Labours</th>
                        <th class="text-center">C-Section Rate</th>
                        <th class="text-center">Status</th>
                        <th class="text-end pe-4">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var region in FilteredRegions)
                    {
                        <tr>
                            <td class="ps-4">
                                <div class="d-flex align-items-center">
                                    <div class="region-icon me-3 bg-primary-subtle text-primary rounded-circle p-2 d-flex align-items-center justify-content-center" style="width: 40px; height: 40px;">
                                        <i class="bi bi-geo-alt-fill fs-5"></i>
                                    </div>
                                    <div>
                                        <span class="fw-bold text-dark d-block">@region.Name</span>
                                        <small class="text-secondary text-uppercase" style="font-size: 0.7rem;">@region.Code</small>
                                    </div>
                                </div>
                            </td>
                            <td class="text-center fw-medium">@region.DistrictCount</td>
                            <td class="text-center fw-medium">@region.FacilityCount</td>
                            <td class="text-center">
                                <span class="badge bg-primary-subtle text-primary rounded-pill">@region.DeliveriesToday</span>
                            </td>
                            <td class="text-center fw-medium">@region.DeliveriesThisMonth</td>
                            <td class="text-center">
                                <span class="badge @(region.ActiveLabors > 0 ? "bg-warning" : "bg-secondary") rounded-pill">
                                    @region.ActiveLabors
                                </span>
                            </td>
                            <td class="text-center">
                                <span class="fw-bold @(region.CaesareanRate > 15 ? "text-warning" : "text-success")">
                                    @region.CaesareanRate.ToString("F1")%
                                </span>
                            </td>
                            <td class="text-center">
                                <span class="badge @GetStatusBadgeClass(region.PerformanceStatus) rounded-pill">
                                    @region.PerformanceStatus
                                </span>
                            </td>
                            <td class="text-end pe-4">
                                <a href="regional/@region.ID" class="btn btn-sm btn-outline-primary rounded-pill">
                                    <i class="bi bi-eye me-1"></i> View
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <div class="p-3 border-top bg-light bg-opacity-10">
            <small class="text-secondary">
                Showing @FilteredRegions.Count() of @regions?.Count regions
            </small>
        </div>
    </div>
}

@code {
    private List<RegionSummary>? regions;
    private bool isLoading = true;
    private string searchTerm = "";

    private IEnumerable<RegionSummary> FilteredRegions =>
        regions?.Where(r =>
            string.IsNullOrEmpty(searchTerm) ||
            r.Name.Contains(searchTerm, StringComparison.OrdinalIgnoreCase) ||
            r.Code.Contains(searchTerm, StringComparison.OrdinalIgnoreCase)) ?? Enumerable.Empty<RegionSummary>();

    protected override async Task OnInitializedAsync()
    {
        await LoadData();
    }

    private async Task LoadData()
    {
        isLoading = true;
        try
        {
            regions = await RegionService.GetAllRegionSummariesAsync();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading regions: {ex.Message}");
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task RefreshData()
    {
        await LoadData();
    }

    private string GetStatusBadgeClass(string status)
    {
        return status switch
        {
            "Critical" => "bg-danger",
            "Warning" => "bg-warning text-dark",
            "Normal" => "bg-success",
            _ => "bg-secondary"
        };
    }
}
