@page "/complications"
@attribute [Authorize]
@inject IAnalyticsService AnalyticsService
@inject IDashboardService DashboardService
@inject AuthenticationStateProvider AuthStateProvider

<PageTitle>Complications - MAAME DROMO Monitoring</PageTitle>

<div class="dashboard-header mb-4">
    <div class="d-flex justify-content-between align-items-center">
        <div>
            <h2 class="mb-1">
                <i class="bi bi-exclamation-triangle me-2 text-warning"></i>
                Complications Tracking
            </h2>
            <p class="text-muted mb-0">
                @accessLevelText | @DateTime.Now.ToString("dddd, MMMM dd, yyyy")
            </p>
        </div>
        <div class="d-flex gap-2">
            <button class="btn btn-outline-secondary" @onclick="RefreshData">
                <i class="bi bi-arrow-clockwise me-1"></i> Refresh
            </button>
        </div>
    </div>
</div>

@if (isLoading)
{
    <div class="text-center py-5">
        <div class="spinner-border text-primary" role="status">
            <span class="visually-hidden">Loading...</span>
        </div>
        <p class="mt-3 text-muted">Loading complications data...</p>
    </div>
}
else
{
    <!-- Summary Cards -->
    <div class="row g-4 mb-4">
        <div class="col-md-6 col-lg-3">
            <div class="card stat-card border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-start">
                        <div>
                            <p class="text-muted mb-1">Today's Complications</p>
                            <h3 class="mb-0">@summary?.ComplicationsToday</h3>
                        </div>
                        <div class="stat-icon bg-danger-subtle text-danger">
                            <i class="bi bi-exclamation-diamond"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-6 col-lg-3">
            <div class="card stat-card border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-start">
                        <div>
                            <p class="text-muted mb-1">Today's Referrals</p>
                            <h3 class="mb-0">@summary?.ReferralsToday</h3>
                        </div>
                        <div class="stat-icon bg-warning-subtle text-warning">
                            <i class="bi bi-arrow-left-right"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-6 col-lg-3">
            <div class="card stat-card border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-start">
                        <div>
                            <p class="text-muted mb-1">High Risk Labors</p>
                            <h3 class="mb-0">@summary?.HighRiskLabors</h3>
                        </div>
                        <div class="stat-icon bg-danger-subtle text-danger">
                            <i class="bi bi-exclamation-octagon"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-6 col-lg-3">
            <div class="card stat-card border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-start">
                        <div>
                            <p class="text-muted mb-1">Active Labors</p>
                            <h3 class="mb-0">@summary?.ActiveLabors</h3>
                        </div>
                        <div class="stat-icon bg-info-subtle text-info">
                            <i class="bi bi-hourglass-split"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Complications by Category -->
    <div class="row g-4 mb-4">
        <div class="col-lg-8">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-header bg-white border-0">
                    <h5 class="card-title mb-0">
                        <i class="bi bi-list-check me-2 text-danger"></i>
                        Complications by Category
                    </h5>
                </div>
                <div class="card-body">
                    @if (complicationStats?.Any() == true)
                    {
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead class="table-light">
                                    <tr>
                                        <th>Complication Type</th>
                                        <th>Count</th>
                                        <th>Severity</th>
                                        <th>Distribution</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @{
                                        var totalComplications = complicationStats.Sum(c => c.Count);
                                    }
                                    @foreach (var complication in complicationStats.OrderByDescending(c => c.Count))
                                    {
                                        var percentage = totalComplications > 0 ? (double)complication.Count / totalComplications * 100 : 0;
                                        <tr>
                                            <td>
                                                <i class="bi bi-exclamation-circle me-2 @GetSeverityIconClass(complication.Severity)"></i>
                                                @complication.ComplicationType
                                            </td>
                                            <td><span class="badge bg-secondary">@complication.Count</span></td>
                                            <td>
                                                <span class="badge @GetSeverityBadgeClass(complication.Severity)">
                                                    @complication.Severity
                                                </span>
                                            </td>
                                            <td style="width: 30%;">
                                                <div class="progress" style="height: 15px;">
                                                    <div class="progress-bar @GetSeverityProgressClass(complication.Severity)"
                                                         style="width: @percentage%">
                                                    </div>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-4">
                            <i class="bi bi-check-circle fs-1 text-success"></i>
                            <p class="text-muted mt-2">No complications recorded this period</p>
                        </div>
                    }
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-header bg-white border-0">
                    <h5 class="card-title mb-0">
                        <i class="bi bi-pie-chart me-2 text-primary"></i>
                        Severity Distribution
                    </h5>
                </div>
                <div class="card-body">
                    @if (complicationStats?.Any() == true)
                    {
                        var totalCount = complicationStats.Sum(c => c.Count);
                        var severityGroups = complicationStats.GroupBy(c => c.Severity)
                            .Select(g => new { Severity = g.Key, Count = g.Sum(x => x.Count) })
                            .OrderByDescending(s => s.Count);

                        <div class="severity-breakdown">
                            @foreach (var group in severityGroups)
                            {
                                var percentage = totalCount > 0 ? (double)group.Count / totalCount * 100 : 0;
                                <div class="mb-3">
                                    <div class="d-flex justify-content-between mb-1">
                                        <span class="@GetSeverityTextClass(group.Severity) fw-semibold">@group.Severity</span>
                                        <span class="badge @GetSeverityBadgeClass(group.Severity)">@group.Count</span>
                                    </div>
                                    <div class="progress" style="height: 25px;">
                                        <div class="progress-bar @GetSeverityProgressClass(group.Severity)"
                                             style="width: @percentage%">
                                            @percentage.ToString("F1")%
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>

                        <hr />
                        <div class="text-center">
                            <h4 class="mb-1 text-danger">@totalCount</h4>
                            <small class="text-muted">Total Complications</small>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-4">
                            <i class="bi bi-shield-check fs-1 text-success"></i>
                            <p class="text-muted mt-2">No complications to display</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Complication Trend -->
    <div class="row g-4 mb-4">
        <div class="col-12">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white border-0">
                    <h5 class="card-title mb-0">
                        <i class="bi bi-graph-up-arrow me-2 text-primary"></i>
                        Complication Trend (Last 30 Days)
                    </h5>
                </div>
                <div class="card-body">
                    @if (complicationTrend?.Any() == true)
                    {
                        <div class="table-responsive">
                            <table class="table table-sm">
                                <thead class="table-light">
                                    <tr>
                                        <th>Date</th>
                                        <th>Complications</th>
                                        <th>Trend</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @{
                                        var maxValue = complicationTrend.Max(t => t.Value);
                                    }
                                    @foreach (var trend in complicationTrend.OrderByDescending(t => t.Date).Take(10))
                                    {
                                        <tr>
                                            <td>@trend.Date.ToString("MMM dd, yyyy")</td>
                                            <td><span class="badge bg-warning">@trend.Value</span></td>
                                            <td style="width: 50%;">
                                                <div class="progress" style="height: 15px;">
                                                    <div class="progress-bar bg-danger"
                                                         style="width: @(maxValue > 0 ? (double)trend.Value / maxValue * 100 : 0)%">
                                                    </div>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-4">
                            <i class="bi bi-graph-up fs-1 text-muted"></i>
                            <p class="text-muted mt-2">No trend data available</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Alerts Section -->
    <div class="row g-4">
        <div class="col-12">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white border-0 d-flex justify-content-between align-items-center">
                    <h5 class="card-title mb-0">
                        <i class="bi bi-bell me-2 text-warning"></i>
                        Active Complication Alerts
                    </h5>
                    <a href="alerts" class="btn btn-sm btn-outline-primary">View All Alerts</a>
                </div>
                <div class="card-body p-0">
                    @if (alerts?.Any() == true)
                    {
                        <div class="list-group list-group-flush">
                            @foreach (var alert in alerts.Take(5))
                            {
                                <div class="list-group-item @GetAlertBackgroundClass(alert.Severity)">
                                    <div class="d-flex align-items-start">
                                        <div class="me-3">
                                            <i class="bi @GetAlertIcon(alert.Severity) fs-4"></i>
                                        </div>
                                        <div class="flex-grow-1">
                                            <div class="d-flex justify-content-between">
                                                <h6 class="mb-1">@alert.Title</h6>
                                                <small class="text-muted">@alert.CreatedAt.ToString("MMM dd, HH:mm")</small>
                                            </div>
                                            <p class="mb-1 small">@alert.Message</p>
                                            <small class="text-muted">
                                                <i class="bi bi-hospital me-1"></i>@alert.FacilityName
                                                @if (!string.IsNullOrEmpty(alert.DistrictName))
                                                {
                                                    <span class="ms-2"><i class="bi bi-building me-1"></i>@alert.DistrictName</span>
                                                }
                                            </small>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="p-4 text-center">
                            <i class="bi bi-check-circle fs-1 text-success"></i>
                            <p class="text-muted mt-2 mb-0">No active alerts</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
}

@code {
    private DashboardSummary? summary;
    private List<ComplicationStats>? complicationStats;
    private List<TrendData>? complicationTrend;
    private List<DashboardAlert>? alerts;
    private bool isLoading = true;
    private string accessLevel = "District";
    private string accessLevelText = "District View";

    protected override async Task OnInitializedAsync()
    {
        await DetermineAccessLevel();
        await LoadData();
    }

    private async Task DetermineAccessLevel()
    {
        var authState = await AuthStateProvider.GetAuthenticationStateAsync();
        var user = authState.User;

        accessLevel = user.Claims.FirstOrDefault(c => c.Type == "AccessLevel")?.Value ?? "District";
        accessLevelText = accessLevel switch
        {
            "National" => "National Overview",
            "Regional" => "Regional View",
            "District" => "District View",
            _ => "Dashboard"
        };
    }

    private async Task LoadData()
    {
        isLoading = true;
        try
        {
            var filter = await GetDashboardFilter();

            summary = await DashboardService.GetDashboardSummaryAsync(filter);
            complicationStats = await AnalyticsService.GetComplicationStatsAsync(filter);
            complicationTrend = await DashboardService.GetComplicationTrendAsync(filter);
            alerts = await DashboardService.GetActiveAlertsAsync(filter);
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading complications data: {ex.Message}");
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task<DashboardFilter> GetDashboardFilter()
    {
        var filter = new DashboardFilter();
        var authState = await AuthStateProvider.GetAuthenticationStateAsync();
        var user = authState.User;

        if (accessLevel == "Regional")
        {
            var regionIdClaim = user.Claims.FirstOrDefault(c => c.Type == "RegionID")?.Value;
            if (Guid.TryParse(regionIdClaim, out var regionId))
                filter.RegionID = regionId;
        }
        else if (accessLevel == "District")
        {
            var districtIdClaim = user.Claims.FirstOrDefault(c => c.Type == "DistrictID")?.Value;
            if (Guid.TryParse(districtIdClaim, out var districtId))
                filter.DistrictID = districtId;
        }

        return filter;
    }

    private async Task RefreshData()
    {
        await LoadData();
    }

    private string GetSeverityBadgeClass(string severity)
    {
        return severity?.ToLower() switch
        {
            "critical" => "bg-danger",
            "high" => "bg-warning",
            "medium" => "bg-info",
            "low" => "bg-success",
            _ => "bg-secondary"
        };
    }

    private string GetSeverityProgressClass(string severity)
    {
        return severity?.ToLower() switch
        {
            "critical" => "bg-danger",
            "high" => "bg-warning",
            "medium" => "bg-info",
            "low" => "bg-success",
            _ => "bg-secondary"
        };
    }

    private string GetSeverityIconClass(string severity)
    {
        return severity?.ToLower() switch
        {
            "critical" => "text-danger",
            "high" => "text-warning",
            "medium" => "text-info",
            "low" => "text-success",
            _ => "text-secondary"
        };
    }

    private string GetSeverityTextClass(string severity)
    {
        return severity?.ToLower() switch
        {
            "critical" => "text-danger",
            "high" => "text-warning",
            "medium" => "text-info",
            "low" => "text-success",
            _ => "text-secondary"
        };
    }

    private string GetAlertBackgroundClass(string severity)
    {
        return severity switch
        {
            "Critical" => "bg-danger bg-opacity-10",
            "Warning" => "bg-warning bg-opacity-10",
            _ => "bg-info bg-opacity-10"
        };
    }

    private string GetAlertIcon(string severity)
    {
        return severity switch
        {
            "Critical" => "bi-exclamation-octagon text-danger",
            "Warning" => "bi-exclamation-triangle text-warning",
            _ => "bi-info-circle text-info"
        };
    }
}
