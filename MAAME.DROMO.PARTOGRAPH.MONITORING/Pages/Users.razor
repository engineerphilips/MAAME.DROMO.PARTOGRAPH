    private async Task SaveUser()
    {
        formError = "";
        passwordError = "";

        if (string.IsNullOrWhiteSpace(userForm.FullName))
        {
            formError = "Full name is required";
            return;
        }

        if (string.IsNullOrWhiteSpace(userForm.Email))
        {
            formError = "Email is required";
            return;
        }

        if (!isEditing)
        {
            if (string.IsNullOrWhiteSpace(userForm.Password))
            {
                formError = "Password is required";
                return;
            }

            if (userForm.Password != confirmPassword)
            {
                passwordError = "Passwords do not match";
                return;
            }

            if (userForm.Password.Length < 6)
            {
                passwordError = "Password must be at least 6 characters";
                return;
            }
        }

        if (userForm.AccessLevel == "Regional" && !selectedRegionId.HasValue)
        {
            formError = "Please select a region";
            return;
        }

        if (userForm.AccessLevel == "District" && (!selectedRegionId.HasValue || !selectedDistrictId.HasValue))
        {
            formError = "Please select both region and district";
            return;
        }

        isSaving = true;
        try
        {
            if (isEditing)
            {
                var result = await UserService.UpdateUserAsync(new UpdateUserRequest
                {
                    ID = userForm.ID,
                    FullName = userForm.FullName,
                    Email = userForm.Email,
                    AccessLevel = userForm.AccessLevel,
                    Role = userForm.Role,
                    RegionID = selectedRegionId,
                    DistrictID = selectedDistrictId,
                    IsActive = userForm.IsActive
                });

                if (result.Success)
                {
                    ShowSuccess("User updated successfully");
                    CloseUserModal();
                    await LoadData();
                }
                else
                {
                    formError = result.Message;
                }
            }
            else
            {
                var result = await UserService.CreateUserAsync(new CreateUserRequest
                {
                    FullName = userForm.FullName,
                    Email = userForm.Email,
                    Password = userForm.Password,
                    AccessLevel = userForm.AccessLevel,
                    Role = userForm.Role,
                    RegionID = selectedRegionId,
                    DistrictID = selectedDistrictId
                });

                if (result.Success)
                {
                    ShowSuccess("User enrolled successfully");
                    CloseUserModal();
                    await LoadData();
                }
                else
                {
                    formError = result.Message;
                }
            }
        }
        finally
        {
            isSaving = false;
        }
    }

