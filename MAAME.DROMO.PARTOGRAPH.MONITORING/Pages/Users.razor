@page "/users"
@attribute [Authorize(Roles = "Admin")]
@inject IUserService UserService
@inject AuthenticationStateProvider AuthStateProvider
@inject IJSRuntime JSRuntime

<PageTitle>User Management - MAAME DROMO Monitoring</PageTitle>

<div class="dashboard-header mb-4">
    <div class="d-flex justify-content-between align-items-center">
        <div>
            <h2 class="mb-1 text-gradient-primary fw-bold">
                <i class="bi bi-people me-2"></i>
                User Management
            </h2>
            <p class="text-secondary mb-0">
                Manage system users and access permissions
            </p>
        </div>
        <div class="d-flex gap-2">
            <button class="btn btn-white border shadow-sm hover-lift" @onclick="LoadData">
                <i class="bi bi-arrow-clockwise me-1"></i> Refresh
            </button>
            <button class="btn btn-primary shadow-sm hover-lift" @onclick="ShowCreateModal">
                <i class="bi bi-person-plus me-1"></i> Enroll User
            </button>
        </div>
    </div>
</div>

<!-- Statistics Cards -->
<div class="row g-3 mb-4">
    <div class="col-md-2">
        <div class="stat-card p-3 h-100 text-center hover-lift position-relative">
            <div class="icon-box-sm bg-primary-subtle text-primary mx-auto mb-2 rounded-circle shadow-sm">
                <i class="bi bi-people fs-5"></i>
            </div>
            <h3 class="mb-0 fw-bold text-dark">@statistics.TotalUsers</h3>
            <small class="text-secondary fw-semibold text-uppercase" style="font-size: 0.7rem;">Total Users</small>
        </div>
    </div>
    <div class="col-md-2">
        <div class="stat-card p-3 h-100 text-center hover-lift position-relative">
            <div class="icon-box-sm bg-success-subtle text-success mx-auto mb-2 rounded-circle shadow-sm">
                <i class="bi bi-person-check fs-5"></i>
            </div>
            <h3 class="mb-0 fw-bold text-dark">@statistics.ActiveUsers</h3>
            <small class="text-secondary fw-semibold text-uppercase" style="font-size: 0.7rem;">Active</small>
        </div>
    </div>
    <div class="col-md-2">
        <div class="stat-card p-3 h-100 text-center hover-lift position-relative">
            <div class="icon-box-sm bg-danger-subtle text-danger mx-auto mb-2 rounded-circle shadow-sm">
                <i class="bi bi-person-lock fs-5"></i>
            </div>
            <h3 class="mb-0 fw-bold text-dark">@statistics.LockedUsers</h3>
            <small class="text-secondary fw-semibold text-uppercase" style="font-size: 0.7rem;">Locked</small>
        </div>
    </div>
    <div class="col-md-2">
        <div class="stat-card p-3 h-100 text-center hover-lift position-relative">
            <div class="icon-box-sm bg-warning-subtle text-warning mx-auto mb-2 rounded-circle shadow-sm">
                <i class="bi bi-shield-check fs-5"></i>
            </div>
            <h3 class="mb-0 fw-bold text-dark">@statistics.AdminUsers</h3>
            <small class="text-secondary fw-semibold text-uppercase" style="font-size: 0.7rem;">Admins</small>
        </div>
    </div>
    <div class="col-md-2">
        <div class="stat-card p-3 h-100 text-center hover-lift position-relative">
            <div class="icon-box-sm bg-info-subtle text-info mx-auto mb-2 rounded-circle shadow-sm">
                <i class="bi bi-globe fs-5"></i>
            </div>
            <h3 class="mb-0 fw-bold text-dark">@statistics.NationalUsers</h3>
            <small class="text-secondary fw-semibold text-uppercase" style="font-size: 0.7rem;">National</small>
        </div>
    </div>
    <div class="col-md-2">
        <div class="stat-card p-3 h-100 text-center hover-lift position-relative">
            <div class="icon-box-sm bg-secondary-subtle text-secondary mx-auto mb-2 rounded-circle shadow-sm">
                <i class="bi bi-clock-history fs-5"></i>
            </div>
            <h3 class="mb-0 fw-bold text-dark">@statistics.LoggedInToday</h3>
            <small class="text-secondary fw-semibold text-uppercase" style="font-size: 0.7rem;">Active Today</small>
        </div>
    </div>
</div>

<!-- Filter Tabs -->
<div class="glass-panel p-2 d-inline-block mb-4">
    <ul class="nav nav-pills">
        <li class="nav-item">
            <button class="nav-link rounded-pill px-3 @(activeTab == "all" ? "active shadow-sm" : "text-secondary")" @onclick="() => SetTab(TabState.All.ToString().ToLower())">
                <i class="bi bi-list me-1"></i> All Users
                <span class="badge bg-white text-primary ms-1 rounded-pill">@users.Count</span>
            </button>
        </li>
        <li class="nav-item">
            <button class="nav-link rounded-pill px-3 @(activeTab == "active" ? "active shadow-sm" : "text-secondary")" @onclick="() => SetTab(TabState.Active.ToString().ToLower())">
                <i class="bi bi-check-circle me-1 @(activeTab == "active" ? "" : "text-success")"></i> Active
            </button>
        </li>
        <li class="nav-item">
            <button class="nav-link rounded-pill px-3 @(activeTab == "inactive" ? "active shadow-sm" : "text-secondary")" @onclick="() => SetTab(TabState.Inactive.ToString().ToLower())">
                <i class="bi bi-x-circle me-1 @(activeTab == "inactive" ? "" : "text-secondary")"></i> Inactive
            </button>
        </li>
        <li class="nav-item">
            <button class="nav-link rounded-pill px-3 @(activeTab == "locked" ? "active shadow-sm" : "text-secondary")" @onclick="() => SetTab(TabState.Locked.ToString().ToLower())">
                <i class="bi bi-lock me-1 @(activeTab == "locked" ? "" : "text-danger")"></i> Locked
            </button>
        </li>
        <li class="nav-item">
            <button class="nav-link rounded-pill px-3 @(activeTab == "national" ? "active shadow-sm" : "text-secondary")" @onclick="() => SetTab(TabState.National.ToString().ToLower())">
                <i class="bi bi-globe me-1 @(activeTab == "national" ? "" : "text-info")"></i> National
            </button>
        </li>
        <li class="nav-item">
            <button class="nav-link rounded-pill px-3 @(activeTab == "regional" ? "active shadow-sm" : "text-secondary")" @onclick="() => SetTab(TabState.Regional.ToString().ToLower())">
                <i class="bi bi-map me-1 @(activeTab == "regional" ? "" : "text-primary")"></i> Regional
            </button>
        </li>
        <li class="nav-item">
            <button class="nav-link rounded-pill px-3 @(activeTab == "district" ? "active shadow-sm" : "text-secondary")" @onclick="() => SetTab(TabState.District.ToString().ToLower())">
                <i class="bi bi-building me-1 @(activeTab == "district" ? "" : "text-warning")"></i> District
            </button>
        </li>
    </ul>
</div>

<!-- Search Bar -->
<div class="glass-panel p-4 mb-4">
    <div class="row align-items-center g-3">
        <div class="col-md-4">
            <div class="input-group">
                <span class="input-group-text bg-white border-end-0 text-secondary">
                    <i class="bi bi-search"></i>
                </span>
                <input type="text" class="form-control border-start-0 ps-0" placeholder="Search users by name or email..."
                       @bind="searchTerm" @bind:event="oninput" @onkeyup="OnSearchChanged" />
            </div>
        </div>
        <div class="col-md-3">
            <select class="form-select" @bind="roleFilter" @bind:event="onchange">
                <option value="">All Roles</option>
                <option value="Admin">Admin</option>
                <option value="Manager">Manager</option>
                <option value="Analyst">Analyst</option>
                <option value="Viewer">Viewer</option>
            </select>
        </div>
        <div class="col-md-3">
            <select class="form-select" @bind="accessFilter" @bind:event="onchange">
                <option value="">All Access Levels</option>
                <option value="National">National</option>
                <option value="Regional">Regional</option>
                <option value="District">District</option>
            </select>
        </div>
        <div class="col-md-2 text-end">
            <span class="badge bg-light text-secondary border rounded-pill">@filteredUsers.Count of @users.Count users</span>
        </div>
    </div>
</div>

@if (isLoading)
{
    <div class="text-center py-5">
        <div class="spinner-border text-primary" role="status">
            <span class="visually-hidden">Loading...</span>
        </div>
        <p class="mt-3 text-secondary">Loading users...</p>
    </div>
}
else
{
    <!-- Users Table -->
    <div class="glass-panel p-0 mb-4 overflow-hidden">
        <div class="table-responsive">
            <table class="table table-hover mb-0 align-middle">
                <thead class="bg-light bg-opacity-50">
                    <tr>
                        <th class="ps-4 py-3 fw-semibold text-secondary text-uppercase small tracking-wide border-bottom-0">User</th>
                        <th class="py-3 fw-semibold text-secondary text-uppercase small tracking-wide border-bottom-0">Access Level</th>
                        <th class="py-3 fw-semibold text-secondary text-uppercase small tracking-wide border-bottom-0">Role</th>
                        <th class="py-3 fw-semibold text-secondary text-uppercase small tracking-wide border-bottom-0">Region/District</th>
                        <th class="py-3 fw-semibold text-secondary text-uppercase small tracking-wide border-bottom-0">Status</th>
                        <th class="py-3 fw-semibold text-secondary text-uppercase small tracking-wide border-bottom-0">Last Login</th>
                        <th class="text-end pe-4 py-3 fw-semibold text-secondary text-uppercase small tracking-wide border-bottom-0">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in filteredUsers)
                    {
                        <tr class="transition-all hover-bg-light @(user.IsLocked ? "bg-warning-subtle bg-opacity-10" : "")">
                            <td class="ps-4">
                                <div class="d-flex align-items-center">
                                    <div class="user-avatar @GetAvatarClass(user.Role) me-3 shadow-sm">
                                        @GetInitials(user.FullName)
                                    </div>
                                    <div>
                                        <div class="fw-bold text-dark">@user.FullName</div>
                                        <small class="text-secondary">@user.Email</small>
                                    </div>
                                </div>
                            </td>
                            <td>
                                <span class="badge @GetAccessLevelBadgeClass(user.AccessLevel) rounded-pill shadow-sm px-3 py-2">
                                    <i class="bi @GetAccessLevelIcon(user.AccessLevel) me-1"></i>
                                    @user.AccessLevel
                                </span>
                            </td>
                            <td>
                                <span class="badge @GetRoleBadgeClass(user.Role) rounded-pill shadow-sm px-3">
                                    @user.Role
                                </span>
                            </td>
                            <td>
                                @if (!string.IsNullOrEmpty(user.RegionName))
                                {
                                    <div class="fw-medium text-dark">@user.RegionName</div>
                                    @if (!string.IsNullOrEmpty(user.DistrictName))
                                    {
                                        <small class="text-secondary">@user.DistrictName</small>
                                    }
                                }
                                else
                                {
                                    <span class="text-muted opacity-50">-</span>
                                }
                            </td>
                            <td>
                                @if (user.IsLocked)
                                {
                                    <span class="badge bg-danger-subtle text-danger border border-danger-subtle rounded-pill">
                                        <i class="bi bi-lock-fill me-1"></i> Locked
                                    </span>
                                }
                                else if (user.IsActive)
                                {
                                    <span class="badge bg-success-subtle text-success border border-success-subtle rounded-pill">
                                        <i class="bi bi-check-circle-fill me-1"></i> Active
                                    </span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary-subtle text-secondary border border-secondary-subtle rounded-pill">
                                        <i class="bi bi-x-circle-fill me-1"></i> Inactive
                                    </span>
                                }
                            </td>
                            <td>
                                @if (user.LastLogin.HasValue)
                                {
                                    <div class="fw-medium text-dark">@user.LastLogin.Value.ToString("MMM dd, HH:mm")</div>
                                    <small class="text-muted">@GetTimeAgo(user.LastLogin.Value)</small>
                                }
                                else
                                {
                                    <span class="text-muted opacity-50">Never</span>
                                }
                            </td>
                            <td class="text-end pe-4">
                                <div class="btn-group btn-group-sm shadow-sm rounded-pill overflow-hidden bg-white">
                                    <button class="btn btn-white border-0 text-primary hover-bg-light" @onclick="() => ShowEditModal(user)" title="Edit">
                                        <i class="bi bi-pencil"></i>
                                    </button>
                                    @if (user.IsLocked)
                                    {
                                        <button class="btn btn-white border-0 text-success hover-bg-light" @onclick="() => UnlockUser(user)" title="Unlock">
                                            <i class="bi bi-unlock"></i>
                                        </button>
                                    }
                                    @if (user.IsActive)
                                    {
                                        <button class="btn btn-white border-0 text-warning hover-bg-light" @onclick="() => DeactivateUser(user)" title="Deactivate">
                                            <i class="bi bi-person-dash"></i>
                                        </button>
                                    }
                                    else
                                    {
                                        <button class="btn btn-white border-0 text-success hover-bg-light" @onclick="() => ActivateUser(user)" title="Activate">
                                            <i class="bi bi-person-check"></i>
                                        </button>
                                    }
                                    <button class="btn btn-white border-0 text-secondary hover-bg-light" @onclick="() => ShowResetPasswordModal(user)" title="Reset Password">
                                        <i class="bi bi-key"></i>
                                    </button>
                                    <button class="btn btn-white border-0 text-danger hover-bg-light" @onclick="() => ConfirmDelete(user)" title="Delete">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        @if (!filteredUsers.Any())
        {
            <div class="text-center py-5">
                <i class="bi bi-people text-muted opacity-25" style="font-size: 3rem;"></i>
                <p class="mt-3 text-secondary">No users found matching your criteria</p>
            </div>
        }
    </div>
}

<!-- Create/Edit User Modal -->
@if (showUserModal)
{
    <div class="modal fade show d-block" tabindex="-1" style="background: rgba(0,0,0,0.5);">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header bg-primary text-white">
                    <h5 class="modal-title">
                        <i class="bi @(isEditing ? "bi-pencil" : "bi-person-plus") me-2"></i>
                        @(isEditing ? "Edit User" : "Enroll New User")
                    </h5>
                    <button type="button" class="btn-close btn-close-white" @onclick="CloseUserModal"></button>
                </div>
                <div class="modal-body">
                    <EditForm Model="userForm" OnValidSubmit="SaveUser">
                        <DataAnnotationsValidator />

                        <div class="row g-3">
                            <div class="col-md-6">
                                <label class="form-label">Full Name <span class="text-danger">*</span></label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="bi bi-person"></i></span>
                                    <InputText class="form-control" @bind-Value="userForm.FullName" placeholder="Enter full name" />
                                </div>
                                <ValidationMessage For="() => userForm.FullName" class="text-danger small" />
                            </div>

                            <div class="col-md-6">
                                <label class="form-label">Email Address <span class="text-danger">*</span></label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="bi bi-envelope"></i></span>
                                    <InputText class="form-control" @bind-Value="userForm.Email" placeholder="email@example.com" type="email" />
                                </div>
                                <ValidationMessage For="() => userForm.Email" class="text-danger small" />
                            </div>

                            @if (!isEditing)
                            {
                                <div class="col-md-6">
                                    <label class="form-label">Password <span class="text-danger">*</span></label>
                                    <div class="input-group">
                                        <span class="input-group-text"><i class="bi bi-lock"></i></span>
                                        <InputText class="form-control" @bind-Value="userForm.Password" placeholder="Enter password" type="password" />
                                    </div>
                                    <ValidationMessage For="() => userForm.Password" class="text-danger small" />
                                </div>

                                <div class="col-md-6">
                                    <label class="form-label">Confirm Password <span class="text-danger">*</span></label>
                                    <div class="input-group">
                                        <span class="input-group-text"><i class="bi bi-lock-fill"></i></span>
                                        <input class="form-control" @bind="confirmPassword" placeholder="Confirm password" type="password" />
                                    </div>
                                    @if (!string.IsNullOrEmpty(passwordError))
                                    {
                                        <small class="text-danger">@passwordError</small>
                                    }
                                </div>
                            }

                            <div class="col-md-6">
                                <label class="form-label">Access Level <span class="text-danger">*</span></label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="bi bi-shield"></i></span>
                                    <InputSelect class="form-select" @bind-Value="userForm.AccessLevel" @onchange="OnAccessLevelChanged" disabled="@(adminAccessLevel == "District")">
                                        <option value="District">District</option>
                                        @if (adminAccessLevel != "District")
                                        {
                                            <option value="Regional">Regional</option>
                                        }
                                        @if (adminAccessLevel == "National")
                                        {
                                            <option value="National">National</option>
                                        }
                                    </InputSelect>
                                </div>
                                @if (adminAccessLevel == "District")
                                {
                                    <small class="text-muted">Limited to District level based on your access</small>
                                }
                                else if (adminAccessLevel == "Regional")
                                {
                                    <small class="text-muted">Can create Regional or District level users</small>
                                }
                                else
                                {
                                    <small class="text-muted">Determines data visibility scope</small>
                                }
                            </div>

                            <div class="col-md-6">
                                <label class="form-label">Role <span class="text-danger">*</span></label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="bi bi-person-badge"></i></span>
                                    <InputSelect class="form-select" @bind-Value="userForm.Role">
                                        <option value="Viewer">Viewer (Read-only)</option>
                                        <option value="Analyst">Analyst (Reports)</option>
                                        <option value="Manager">Manager (Acknowledge)</option>
                                        <option value="Admin">Admin (Full Access)</option>
                                    </InputSelect>
                                </div>
                                <small class="text-muted">Determines system permissions</small>
                            </div>

                            @if (userForm.AccessLevel == "Regional" || userForm.AccessLevel == "District")
                            {
                                <div class="col-md-6">
                                    <label class="form-label">Region @(userForm.AccessLevel != "National" ? "*" : "")</label>
                                    <div class="input-group">
                                        <span class="input-group-text"><i class="bi bi-map"></i></span>
                                        <InputSelect class="form-select" @bind-Value="selectedRegionId" TValue="Guid?" disabled="@isRegionLocked">
                                            <option value="">Select Region...</option>
                                            @foreach (var region in regions)
                                            {
                                                <option value="@region.ID">@region.Name</option>
                                            }
                                        </InputSelect>
                                    </div>
                                    @if (isRegionLocked)
                                    {
                                        <small class="text-muted">Region is set based on your admin access level</small>
                                    }
                                </div>
                            }

                            @if (userForm.AccessLevel == "District")
                            {
                                <div class="col-md-6">
                                    <label class="form-label">District <span class="text-danger">*</span></label>
                                    <div class="input-group">
                                        <span class="input-group-text"><i class="bi bi-building"></i></span>
                                        <InputSelect class="form-select" @bind-Value="selectedDistrictId" TValue="Guid?" disabled="@isDistrictLocked">
                                            <option value="">Select District...</option>
                                            @foreach (var district in filteredDistricts)
                                            {
                                                <option value="@district.ID">@district.Name</option>
                                            }
                                        </InputSelect>
                                    </div>
                                    @if (isDistrictLocked)
                                    {
                                        <small class="text-muted">District is set based on your admin access level</small>
                                    }
                                </div>
                            }
                        </div>

                        @if (!string.IsNullOrEmpty(formError))
                        {
                            <div class="alert alert-danger mt-3 mb-0">
                                <i class="bi bi-exclamation-triangle me-1"></i> @formError
                            </div>
                        }
                    </EditForm>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick="CloseUserModal">
                        <i class="bi bi-x me-1"></i> Cancel
                    </button>
                    <button type="button" class="btn btn-primary" @onclick="SaveUser" disabled="@isSaving">
                        @if (isSaving)
                        {
                            <span class="spinner-border spinner-border-sm me-1" role="status"></span>
                        }
                        else
                        {
                            <i class="bi bi-check me-1"></i>
                        }
                        @(isEditing ? "Update User" : "Enroll User")
                    </button>
                </div>
            </div>
        </div>
    </div>
}

<!-- Reset Password Modal -->
@if (showResetPasswordModal && selectedUser != null)
{
    <div class="modal fade show d-block" tabindex="-1" style="background: rgba(0,0,0,0.5);">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header bg-warning">
                    <h5 class="modal-title">
                        <i class="bi bi-key me-2"></i>
                        Reset Password
                    </h5>
                    <button type="button" class="btn-close" @onclick="CloseResetPasswordModal"></button>
                </div>
                <div class="modal-body">
                    <div class="alert alert-info mb-3">
                        <i class="bi bi-info-circle me-1"></i>
                        Resetting password for: <strong>@selectedUser.FullName</strong>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">New Password</label>
                        <input type="password" class="form-control" @bind="newPassword" placeholder="Enter new password" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Confirm Password</label>
                        <input type="password" class="form-control" @bind="confirmNewPassword" placeholder="Confirm new password" />
                    </div>
                    @if (!string.IsNullOrEmpty(resetPasswordError))
                    {
                        <div class="alert alert-danger py-2">@resetPasswordError</div>
                    }
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick="CloseResetPasswordModal">Cancel</button>
                    <button type="button" class="btn btn-warning" @onclick="ResetPassword" disabled="@isResettingPassword">
                        @if (isResettingPassword)
                        {
                            <span class="spinner-border spinner-border-sm me-1"></span>
                        }
                        Reset Password
                    </button>
                </div>
            </div>
        </div>
    </div>
}

<!-- Delete Confirmation Modal -->
@if (showDeleteModal && selectedUser != null)
{
    <div class="modal fade show d-block" tabindex="-1" style="background: rgba(0,0,0,0.5);">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header bg-danger text-white">
                    <h5 class="modal-title">
                        <i class="bi bi-exclamation-triangle me-2"></i>
                        Confirm Delete
                    </h5>
                    <button type="button" class="btn-close btn-close-white" @onclick="CloseDeleteModal"></button>
                </div>
                <div class="modal-body">
                    <p>Are you sure you want to delete this user?</p>
                    <div class="alert alert-warning">
                        <strong>@selectedUser.FullName</strong><br />
                        <small class="text-muted">@selectedUser.Email</small>
                    </div>
                    <p class="text-danger mb-0">
                        <i class="bi bi-exclamation-circle me-1"></i>
                        This action cannot be undone.
                    </p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick="CloseDeleteModal">Cancel</button>
                    <button type="button" class="btn btn-danger" @onclick="DeleteUser" disabled="@isDeleting">
                        @if (isDeleting)
                        {
                            <span class="spinner-border spinner-border-sm me-1"></span>
                        }
                        Delete User
                    </button>
                </div>
            </div>
        </div>
    </div>
}

