@code {
    private List<MonitoringUserSummary> users = new();
    private List<MonitoringUserSummary> allUsers = new();
    private UserStatistics statistics = new();
    private List<RegionDropdownItem> regions = new();
    private List<RegionDropdownItem> allRegions = new();
    private List<DistrictDropdownItem> districts = new();
    private List<DistrictDropdownItem> allDistricts = new();

    private bool isLoading = true;
    private string activeTab = "all";
    private string searchTerm = "";
    private string roleFilter = "";
    private string accessFilter = "";

    enum TabState { All, Active, Inactive, Locked, National, Regional, District}

    // Modal states
    private bool showUserModal = false;
    private bool showResetPasswordModal = false;
    private bool showDeleteModal = false;
    private bool isEditing = false;
    private bool isSaving = false;
    private bool isDeleting = false;
    private bool isResettingPassword = false;

    // Toast
    private bool showSuccessToast = false;
    private string successMessage = "";

    // Form data
    private UserFormModel userForm = new();
    private MonitoringUserSummary? selectedUser;
    private Guid? selectedRegionId;
    private Guid? selectedDistrictId;
    private string confirmPassword = "";
    private string formError = "";
    private string passwordError = "";

    // Reset password
    private string newPassword = "";
    private string confirmNewPassword = "";
    private string resetPasswordError = "";

    // Admin access level filtering
    private string adminAccessLevel = "National";
    private Guid? adminRegionId;
    private Guid? adminDistrictId;
    private string? adminRegionName;
    private string? adminDistrictName;
    private bool isRegionLocked = false;
    private bool isDistrictLocked = false;

    private List<MonitoringUserSummary> filteredUsers => users
        .Where(u => activeTab == "all" ||
                   (activeTab == "active" && u.IsActive && !u.IsLocked) ||
                   (activeTab == "inactive" && !u.IsActive) ||
                   (activeTab == "locked" && u.IsLocked) ||
                   (activeTab == "national" && u.AccessLevel == "National") ||
                   (activeTab == "regional" && u.AccessLevel == "Regional") ||
                   (activeTab == "district" && u.AccessLevel == "District"))
        .Where(u => string.IsNullOrEmpty(searchTerm) ||
                   u.FullName.Contains(searchTerm, StringComparison.OrdinalIgnoreCase) ||
                   u.Email.Contains(searchTerm, StringComparison.OrdinalIgnoreCase))
        .Where(u => string.IsNullOrEmpty(roleFilter) || u.Role == roleFilter)
        .Where(u => string.IsNullOrEmpty(accessFilter) || u.AccessLevel == accessFilter)
        .OrderBy(u => u.FullName)
        .ToList();

    private List<DistrictDropdownItem> filteredDistricts => selectedRegionId.HasValue
        ? districts.Where(d => d.RegionID == selectedRegionId.Value).ToList()
        : districts;

    protected override async Task OnInitializedAsync()
    {
        await DetermineAccessLevel();
        await LoadData();
    }

    private async Task DetermineAccessLevel()
    {
        var authState = await AuthStateProvider.GetAuthenticationStateAsync();
        var user = authState.User;

        adminAccessLevel = user.Claims.FirstOrDefault(c => c.Type == "AccessLevel")?.Value ?? "National";
        adminRegionName = user.Claims.FirstOrDefault(c => c.Type == "RegionName")?.Value;
        adminDistrictName = user.Claims.FirstOrDefault(c => c.Type == "DistrictName")?.Value;

        var regionIdClaim = user.Claims.FirstOrDefault(c => c.Type == "RegionID")?.Value;
        if (Guid.TryParse(regionIdClaim, out var regionId))
        {
            adminRegionId = regionId;
        }

        var districtIdClaim = user.Claims.FirstOrDefault(c => c.Type == "DistrictID")?.Value;
        if (Guid.TryParse(districtIdClaim, out var districtId))
        {
            adminDistrictId = districtId;
        }
    }

    private async Task LoadData()
    {
        isLoading = true;
        try
        {
            var usersTask = UserService.GetAllUsersAsync();
            var statsTask = UserService.GetUserStatisticsAsync();
            var regionsTask = UserService.GetRegionsDropdownAsync();
            var districtsTask = UserService.GetDistrictsDropdownAsync();

            await Task.WhenAll(usersTask, statsTask, regionsTask, districtsTask);

            allUsers = await usersTask;
            statistics = await statsTask;
            allRegions = await regionsTask;
            allDistricts = await districtsTask;

            // Filter users based on admin's access level
            if (adminAccessLevel == "District" && adminDistrictId.HasValue)
            {
                // District admin can only see users in their district
                users = allUsers.Where(u => u.DistrictID == adminDistrictId.Value ||
                    (u.AccessLevel == "District" && u.DistrictName == adminDistrictName)).ToList();

                // Lock regions and districts for dropdown
                regions = allRegions.Where(r => r.ID == adminRegionId).ToList();
                districts = allDistricts.Where(d => d.ID == adminDistrictId).ToList();
                isRegionLocked = true;
                isDistrictLocked = true;
            }
            else if (adminAccessLevel == "Regional" && adminRegionId.HasValue)
            {
                // Regional admin can see users in their region
                users = allUsers.Where(u => u.RegionID == adminRegionId.Value ||
                    u.RegionName == adminRegionName).ToList();

                // Lock region but allow district selection within region
                regions = allRegions.Where(r => r.ID == adminRegionId).ToList();
                districts = allDistricts.Where(d => d.RegionID == adminRegionId).ToList();
                isRegionLocked = true;
                isDistrictLocked = false;
            }
            else
            {
                // National admin can see all users
                users = allUsers;
                regions = allRegions;
                districts = allDistricts;
                isRegionLocked = false;
                isDistrictLocked = false;
            }
        }
        finally
        {
            isLoading = false;
        }
    }

    private void SetTab(string tab)
    {
        activeTab = tab;
    }

    private void OnSearchChanged()
    {
        StateHasChanged();
    }

    private void OnAccessLevelChanged(ChangeEventArgs e)
    {
        userForm.AccessLevel = e.Value?.ToString() ?? "District";
        if (userForm.AccessLevel == "National")
        {
            selectedRegionId = null;
            selectedDistrictId = null;
        }
        else if (userForm.AccessLevel == "Regional")
        {
            selectedDistrictId = null;
        }
    }

    private void ShowCreateModal()
    {
        isEditing = false;
        userForm = new UserFormModel { AccessLevel = "District", Role = "Viewer" };
        confirmPassword = "";
        formError = "";
        passwordError = "";

        // Pre-select region and district based on admin's access level
        if (adminAccessLevel == "District" && adminRegionId.HasValue && adminDistrictId.HasValue)
        {
            // District admin: lock to their district only
            selectedRegionId = adminRegionId;
            selectedDistrictId = adminDistrictId;
            userForm.AccessLevel = "District"; // Can only create district-level users
        }
        else if (adminAccessLevel == "Regional" && adminRegionId.HasValue)
        {
            // Regional admin: lock to their region
            selectedRegionId = adminRegionId;
            selectedDistrictId = null;
            // Can create Regional or District level users
        }
        else
        {
            // National admin: no restrictions
            selectedRegionId = null;
            selectedDistrictId = null;
        }

        showUserModal = true;
    }

    private void ShowEditModal(MonitoringUserSummary user)
    {
        isEditing = true;
        selectedUser = user;
        userForm = new UserFormModel
        {
            ID = user.ID,
            FullName = user.FullName,
            Email = user.Email,
            AccessLevel = user.AccessLevel,
            Role = user.Role,
            IsActive = user.IsActive
        };
        selectedRegionId = user.RegionID;
        selectedDistrictId = user.DistrictID;
        formError = "";
        showUserModal = true;
    }

    private void CloseUserModal()
    {
        showUserModal = false;
        selectedUser = null;
    }

    private async Task SaveUser()
    {
        formError = "";
        passwordError = "";

        if (string.IsNullOrWhiteSpace(userForm.FullName))
        {
            formError = "Full name is required";
            return;
        }

        if (string.IsNullOrWhiteSpace(userForm.Email))
        {
            formError = "Email is required";
            return;
        }

        if (!isEditing)
        {
            if (string.IsNullOrWhiteSpace(userForm.Password))
            {
                formError = "Password is required";
                return;
            }

            if (userForm.Password != confirmPassword)
            {
                passwordError = "Passwords do not match";
                return;
            }

            if (userForm.Password.Length < 6)
            {
                passwordError = "Password must be at least 6 characters";
                return;
            }
        }

        if (userForm.AccessLevel == "Regional" && !selectedRegionId.HasValue)
        {
            formError = "Please select a region";
            return;
        }

        if (userForm.AccessLevel == "District" && (!selectedRegionId.HasValue || !selectedDistrictId.HasValue))
        {
            formError = "Please select both region and district";
            return;
        }

        isSaving = true;
        try
        {
            if (isEditing)
            {
                var result = await UserService.UpdateUserAsync(new UpdateUserRequest
                {
                    ID = userForm.ID,
                    FullName = userForm.FullName,
                    Email = userForm.Email,
                    AccessLevel = userForm.AccessLevel,
                    Role = userForm.Role,
                    RegionID = selectedRegionId,
                    DistrictID = selectedDistrictId,
                    IsActive = userForm.IsActive
                });

                if (result.Success)
                {
                    ShowSuccess("User updated successfully");
                    CloseUserModal();
                    await LoadData();
                }
                else
                {
                    formError = result.Message;
                }
            }
            else
            {
                var result = await UserService.CreateUserAsync(new CreateUserRequest
                {
                    FullName = userForm.FullName,
                    Email = userForm.Email,
                    Password = userForm.Password,
                    AccessLevel = userForm.AccessLevel,
                    Role = userForm.Role,
                    RegionID = selectedRegionId,
                    DistrictID = selectedDistrictId
                });

                if (result.Success)
                {
                    ShowSuccess("User enrolled successfully");
                    CloseUserModal();
                    await LoadData();
                }
                else
                {
                    formError = result.Message;
                }
            }
        }
        finally
        {
            isSaving = false;
        }
    }

    private void ShowResetPasswordModal(MonitoringUserSummary user)
    {
        selectedUser = user;
        newPassword = "";
        confirmNewPassword = "";
        resetPasswordError = "";
        showResetPasswordModal = true;
    }

    private void CloseResetPasswordModal()
    {
        showResetPasswordModal = false;
        selectedUser = null;
    }

    private async Task ResetPassword()
    {
        resetPasswordError = "";

        if (string.IsNullOrWhiteSpace(newPassword))
        {
            resetPasswordError = "Password is required";
            return;
        }

        if (newPassword != confirmNewPassword)
        {
            resetPasswordError = "Passwords do not match";
            return;
        }

        if (newPassword.Length < 6)
        {
            resetPasswordError = "Password must be at least 6 characters";
            return;
        }

        isResettingPassword = true;
        try
        {
            var result = await UserService.ResetPasswordAsync(new ResetPasswordRequest
            {
                UserID = selectedUser!.ID,
                NewPassword = newPassword
            });

            if (result.Success)
            {
                ShowSuccess("Password reset successfully");
                CloseResetPasswordModal();
            }
            else
            {
                resetPasswordError = result.Message;
            }
        }
        finally
        {
            isResettingPassword = false;
        }
    }

    private void ConfirmDelete(MonitoringUserSummary user)
    {
        selectedUser = user;
        showDeleteModal = true;
    }

    private void CloseDeleteModal()
    {
        showDeleteModal = false;
        selectedUser = null;
    }

    private async Task DeleteUser()
    {
        if (selectedUser == null) return;

        isDeleting = true;
        try
        {
            var result = await UserService.DeleteUserAsync(selectedUser.ID);

            if (result.Success)
            {
                users.Remove(selectedUser);
                ShowSuccess("User deleted successfully");
                CloseDeleteModal();
            }
        }
        finally
        {
            isDeleting = false;
        }
    }

    private async Task ActivateUser(MonitoringUserSummary user)
    {
        var result = await UserService.ActivateUserAsync(user.ID);
        if (result.Success)
        {
            user.IsActive = true;
            ShowSuccess("User activated successfully");
            StateHasChanged();
        }
    }

    private async Task DeactivateUser(MonitoringUserSummary user)
    {
        var result = await UserService.DeactivateUserAsync(user.ID);
        if (result.Success)
        {
            user.IsActive = false;
            ShowSuccess("User deactivated successfully");
            StateHasChanged();
        }
    }

    private async Task UnlockUser(MonitoringUserSummary user)
    {
        var result = await UserService.UnlockUserAsync(user.ID);
        if (result.Success)
        {
            user.IsLocked = false;
            ShowSuccess("User unlocked successfully");
            StateHasChanged();
        }
    }

    private void ShowSuccess(string message)
    {
        successMessage = message;
        showSuccessToast = true;
        _ = Task.Delay(3000).ContinueWith(_ =>
        {
            showSuccessToast = false;
            InvokeAsync(StateHasChanged);
        });
    }

    private string GetInitials(string name)
    {
        var parts = name.Split(' ', StringSplitOptions.RemoveEmptyEntries);
        if (parts.Length >= 2)
            return $"{parts[0][0]}{parts[1][0]}".ToUpper();
        return parts.Length > 0 ? parts[0][..Math.Min(2, parts[0].Length)].ToUpper() : "??";
    }

