@page "/benchmarks"
@page "/performance-benchmarks"
@attribute [Authorize]
@inject IBenchmarkService BenchmarkService

<PageTitle>Performance Benchmarks - MAAME DROMO Monitoring</PageTitle>

<div class="dashboard-header mb-4">
    <div class="d-flex justify-content-between align-items-center">
        <div>
            <h2 class="mb-1 text-gradient-primary">
                <i class="bi bi-bar-chart-line me-2 text-primary"></i>
                Performance Benchmarks
            </h2>
            <p class="text-secondary mb-0">
                Compare performance against national standards and WHO targets
            </p>
        </div>
        <div class="btn-group shadow-sm">
            <button class="btn @(viewMode == "facilities" ? "btn-primary" : "btn-outline-primary")"
                    @onclick='() => SetViewMode("facilities")'>
                Facilities
            </button>
            <button class="btn @(viewMode == "districts" ? "btn-primary" : "btn-outline-primary")"
                    @onclick='() => SetViewMode("districts")'>
                Districts
            </button>
            <button class="btn @(viewMode == "regions" ? "btn-primary" : "btn-outline-primary")"
                    @onclick='() => SetViewMode("regions")'>
                Regions
            </button>
        </div>
    </div>
</div>

@if (isLoading)
{
    <div class="text-center py-5">
        <div class="spinner-border text-primary" role="status">
            <span class="visually-hidden">Loading...</span>
        </div>
    </div>
}
else
{
    <!-- National Benchmarks Overview -->
    <div class="glass-panel mb-4 p-4">
        <div class="d-flex align-items-center mb-4 border-bottom pb-2">
            <h5 class="mb-0 fw-bold text-dark"><i class="bi bi-globe me-2 text-primary"></i>National Benchmarks vs WHO Targets</h5>
        </div>
        <div class="row g-3">
            @{
                var benchmarkMetrics = new (string Name, string Key, double WHO, string Unit, bool LowerBetter)[]
                {
                    ("C-Section Rate", "CaesareanRate", 15.0, "%", false),
                    ("Stillbirth Rate", "StillbirthRate", 12.0, "/1000", true),
                    ("Neonatal Mortality", "NeonatalMortalityRate", 12.0, "/1000", true),
                    ("Alert Response", "AlertResponseTime", 5.0, "min", true)
                };
            }
            @foreach (var (name, key, who, unit, lowerBetter) in benchmarkMetrics)
            {
                var current = nationalBenchmarks.GetValueOrDefault(key, 0);
                var variance = current - who;
                var isGood = lowerBetter ? current <= who : current >= who * 0.8;

                <div class="col-md-3">
                    <div class="glass-panel p-3 h-100 hover-lift bg-white bg-opacity-50">
                        <div class="d-flex justify-content-between align-items-start mb-2">
                            <span class="text-secondary small fw-semibold text-uppercase">@name</span>
                            @if (isGood)
                            {
                                <i class="bi bi-check-circle-fill text-success"></i>
                            }
                            else
                            {
                                <i class="bi bi-exclamation-circle-fill text-warning"></i>
                            }
                        </div>
                        <div class="d-flex align-items-end justify-content-between">
                            <div>
                                <h3 class="mb-0 fw-bold text-dark">@current.ToString("F1")@unit</h3>
                                <small class="text-secondary">WHO: @who@unit</small>
                            </div>
                            <div class="text-end">
                                <span class="badge @(isGood ? "bg-success" : "bg-warning text-dark") rounded-pill">
                                    @(variance > 0 ? "+" : "")@variance.ToString("F1")
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>

    <!-- Performance Rankings Table -->
    <div class="glass-panel mb-4 p-0 overflow-hidden">
        <div class="d-flex justify-content-between align-items-center p-4 bg-light bg-opacity-25 border-bottom">
            <h5 class="mb-0 fw-bold text-dark">
                <i class="bi bi-trophy me-2 text-warning"></i>
                @(viewMode == "facilities" ? "Facility" : viewMode == "districts" ? "District" : "Region") Performance Rankings
            </h5>
            <span class="badge bg-primary rounded-pill shadow-sm">@rankings.Count entities</span>
        </div>
        <div class="table-responsive">
            <table class="table table-hover mb-0 align-middle">
                <thead class="bg-light">
                    <tr>
                        <th style="width: 60px;" class="ps-4">Rank</th>
                        <th>Name</th>
                        <th class="text-center">Score</th>
                        <th class="text-center">Grade</th>
                        <th class="text-center">C-Section</th>
                        <th class="text-center">Complications</th>
                        <th class="text-center">Data Quality</th>
                        <th class="text-center">Alert Response</th>
                        <th class="text-center">Deliveries</th>
                        <th class="text-center pe-4">Trend</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in rankings)
                    {
                        <tr class="@(item.OverallRank <= 3 ? "bg-success-subtle" : item.OverallRank > rankings.Count - 3 ? "bg-warning-subtle" : "")">
                            <td class="ps-4">
                                @if (item.OverallRank == 1)
                                {
                                    <span class="badge bg-warning text-dark rounded-pill shadow-sm">
                                        <i class="bi bi-trophy-fill me-1"></i>1
                                    </span>
                                }
                                else if (item.OverallRank == 2)
                                {
                                    <span class="badge bg-secondary rounded-pill shadow-sm">
                                        <i class="bi bi-award me-1"></i>2
                                    </span>
                                }
                                else if (item.OverallRank == 3)
                                {
                                    <span class="badge rounded-pill shadow-sm" style="background: #cd7f32; color: white;">
                                        <i class="bi bi-award me-1"></i>3
                                    </span>
                                }
                                else
                                {
                                    <span class="text-secondary fw-bold">@item.OverallRank</span>
                                }
                            </td>
                            <td>
                                <div class="fw-bold text-dark">@item.FacilityName</div>
                                @if (!string.IsNullOrEmpty(item.DistrictName))
                                {
                                    <small class="text-secondary">@item.DistrictName</small>
                                }
                            </td>
                            <td class="text-center">
                                <div class="d-flex align-items-center justify-content-center">
                                    <div class="progress me-2" style="width: 50px; height: 6px;">
                                        <div class="progress-bar @GetScoreBarClass(item.OverallScore) rounded-pill"
                                             style="width: @item.OverallScore%"></div>
                                    </div>
                                    <span class="fw-bold text-dark">@item.OverallScore.ToString("F0")</span>
                                </div>
                            </td>
                            <td class="text-center">
                                <span class="badge fs-6 @GetGradeBadgeClass(item.PerformanceGrade) rounded-pill shadow-sm">
                                    @item.PerformanceGrade
                                </span>
                            </td>
                            <td class="text-center">
                                <span class="@(item.CaesareanRate > 20 ? "text-danger" : item.CaesareanRate > 15 ? "text-warning" : "text-success") fw-medium">
                                    @item.CaesareanRate.ToString("F1")%
                                </span>
                            </td>
                            <td class="text-center">
                                <span class="@(item.ComplicationRate > 10 ? "text-danger" : item.ComplicationRate > 5 ? "text-warning" : "text-success") fw-medium">
                                    @item.ComplicationRate.ToString("F1")%
                                </span>
                            </td>
                            <td class="text-center">
                                <span class="@(item.DataQualityScore >= 80 ? "text-success" : item.DataQualityScore >= 60 ? "text-warning" : "text-danger") fw-medium">
                                    @item.DataQualityScore.ToString("F0")%
                                </span>
                            </td>
                            <td class="text-center">
                                <span class="@(item.AlertResponseScore >= 80 ? "text-success" : item.AlertResponseScore >= 60 ? "text-warning" : "text-danger") fw-medium">
                                    @item.AlertResponseScore.ToString("F0")%
                                </span>
                            </td>
                            <td class="text-center">
                                <span class="badge bg-primary-subtle text-primary rounded-pill">@item.TotalDeliveries</span>
                            </td>
                            <td class="text-center pe-4">
                                @if (item.RankChange > 0)
                                {
                                    <span class="text-success fw-bold">
                                        <i class="bi bi-arrow-up"></i>@item.RankChange
                                    </span>
                                }
                                else if (item.RankChange < 0)
                                {
                                    <span class="text-danger fw-bold">
                                        <i class="bi bi-arrow-down"></i>@Math.Abs(item.RankChange)
                                    </span>
                                }
                                else
                                {
                                    <span class="text-secondary">
                                        <i class="bi bi-dash"></i>
                                    </span>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <!-- Performance Indicators Legend -->
    <div class="glass-panel p-4 mt-4">
        <h6 class="mb-3 fw-bold text-dark"><i class="bi bi-info-circle me-2 text-primary"></i>Performance Indicators Legend</h6>
        <div class="row">
            <div class="col-md-3">
                <div class="d-flex align-items-center mb-2">
                    <span class="badge bg-success me-2 rounded-pill">A</span>
                    <span class="small text-secondary">Excellent (90-100)</span>
                </div>
                <div class="d-flex align-items-center">
                    <span class="badge bg-info me-2 rounded-pill">B</span>
                    <span class="small text-secondary">Good (80-89)</span>
                </div>
            </div>
            <div class="col-md-3">
                <div class="d-flex align-items-center mb-2">
                    <span class="badge bg-warning text-dark me-2 rounded-pill">C</span>
                    <span class="small text-secondary">Average (70-79)</span>
                </div>
                <div class="d-flex align-items-center">
                    <span class="badge bg-orange me-2 rounded-pill">D</span>
                    <span class="small text-secondary">Below Average (60-69)</span>
                </div>
            </div>
            <div class="col-md-3">
                <div class="d-flex align-items-center mb-2">
                    <span class="badge bg-danger me-2 rounded-pill">F</span>
                    <span class="small text-secondary">Poor (&lt;60)</span>
                </div>
            </div>
            <div class="col-md-3">
                <div class="small text-secondary">
                    <strong>WHO Targets:</strong><br />
                    C-Section: 10-15%<br />
                    Stillbirth: &lt;12/1000
                </div>
            </div>
        </div>
    </div>
}

<style>
    .bg-orange {
        background-color: #fd7e14 !important;
        color: white;
    }
</style>

@code {
    private bool isLoading = true;
    private string viewMode = "facilities";

    private Dictionary<string, double> nationalBenchmarks = new();
    private List<FacilityRanking> rankings = new();

    protected override async Task OnInitializedAsync()
    {
        await LoadData();
    }

    private async Task LoadData()
    {
        isLoading = true;
        try
        {
            nationalBenchmarks = await BenchmarkService.GetNationalBenchmarksAsync();
            await LoadRankings();
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task LoadRankings()
    {
        rankings = viewMode switch
        {
            "facilities" => await BenchmarkService.GetFacilityRankingsAsync(),
            "districts" => await BenchmarkService.GetDistrictRankingsAsync(),
            "regions" => await BenchmarkService.GetRegionRankingsAsync(),
            _ => new List<FacilityRanking>()
        };
    }

    private async Task SetViewMode(string mode)
    {
        viewMode = mode;
        await LoadRankings();
    }

    private string GetScoreBarClass(double score) => score switch
    {
        >= 90 => "bg-success",
        >= 80 => "bg-info",
        >= 70 => "bg-warning",
        >= 60 => "bg-orange",
        _ => "bg-danger"
    };

    private string GetGradeBadgeClass(string grade) => grade switch
    {
        "A" => "bg-success",
        "B" => "bg-info",
        "C" => "bg-warning text-dark",
        "D" => "bg-orange",
        _ => "bg-danger"
    };
}
