@page "/district"
@page "/district/{DistrictId:guid}"
@* @page "/facilities" *@
@attribute [Authorize(Policy = "DistrictAccess")]
@inject IFacilityService FacilityService
@inject IDistrictService DistrictService
@inject AuthenticationStateProvider AuthStateProvider

<PageTitle>District Overview - MAAME.DROMO Insight</PageTitle>

<div class="dashboard-header mb-4">
    <div class="d-flex justify-content-between align-items-center">
        <div>
            <h2 class="mb-1">
                <i class="bi bi-buildings me-2 text-primary"></i>
                @(districtSummary?.Name ?? "District") Overview
            </h2>
            <p class="text-muted mb-0">
                Facilities Performance | @DateTime.Now.ToString("dddd, MMMM dd, yyyy")
            </p>
        </div>
        <div class="d-flex gap-2">
            <button class="btn btn-outline-secondary" @onclick="RefreshData">
                <i class="bi bi-arrow-clockwise me-1"></i> Refresh
            </button>
            <a href="reports?level=district&districtId=@DistrictId" class="btn btn-primary">
                <i class="bi bi-file-earmark-bar-graph me-1"></i> District Report
            </a>
        </div>
    </div>
</div>

@if (isLoading)
{
    <div class="text-center py-5">
        <div class="spinner-border text-primary" role="status">
            <span class="visually-hidden">Loading...</span>
        </div>
        <p class="mt-3 text-muted">Loading district data...</p>
    </div>
}
else
{
    <!-- District Summary Cards -->
    @if (districtSummary != null)
    {
        <div class="row g-4 mb-4">
            <div class="col-md-6 col-lg-3">
                <div class="card stat-card border-0 shadow-sm h-100">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-start">
                            <div>
                                <p class="text-muted mb-1">Active Facilities</p>
                                <h3 class="mb-0">@districtSummary.ActiveFacilities / @districtSummary.FacilityCount</h3>
                            </div>
                            <div class="stat-icon bg-success-subtle text-success">
                                <i class="bi bi-hospital"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-6 col-lg-3">
                <div class="card stat-card border-0 shadow-sm h-100">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-start">
                            <div>
                                <p class="text-muted mb-1">Today's Deliveries</p>
                                <h3 class="mb-0">@districtSummary.DeliveriesToday</h3>
                            </div>
                            <div class="stat-icon bg-primary-subtle text-primary">
                                <i class="bi bi-clipboard2-pulse"></i>
                            </div>
                        </div>
                        <div class="mt-3">
                            <small class="text-muted">
                                This Month: @districtSummary.DeliveriesThisMonth
                            </small>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-6 col-lg-3">
                <div class="card stat-card border-0 shadow-sm h-100">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-start">
                            <div>
                                <p class="text-muted mb-1">Active Labors</p>
                                <h3 class="mb-0">@districtSummary.ActiveLabors</h3>
                            </div>
                            <div class="stat-icon bg-warning-subtle text-warning">
                                <i class="bi bi-hourglass-split"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-6 col-lg-3">
                <div class="card stat-card border-0 shadow-sm h-100">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-start">
                            <div>
                                <p class="text-muted mb-1">C-Section Rate</p>
                                <h3 class="mb-0 @(districtSummary.CaesareanRate > 15 ? "text-warning" : "text-success")">
                                    @districtSummary.CaesareanRate.ToString("F1")%
                                </h3>
                            </div>
                            <div class="stat-icon bg-info-subtle text-info">
                                <i class="bi bi-percent"></i>
                            </div>
                        </div>
                        <div class="mt-3">
                            <small class="text-muted">WHO Target: 10-15%</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }

    <!-- Facilities Grid -->
    <div class="card border-0 shadow-sm">
        <div class="card-header bg-white border-0">
            <div class="d-flex justify-content-between align-items-center">
                <h5 class="card-title mb-0">
                    <i class="bi bi-hospital me-2 text-primary"></i>
                    Facilities
                </h5>
                <div class="d-flex gap-2">
                    <select class="form-select" style="width: 150px;" @bind="filterType">
                        <option value="">All Types</option>
                        <option value="Hospital">Hospital</option>
                        <option value="Health Center">Health Center</option>
                        <option value="Clinic">Clinic</option>
                        <option value="CHPS">CHPS</option>
                    </select>
                    <select class="form-select" style="width: 150px;" @bind="filterStatus">
                        <option value="">All Status</option>
                        <option value="Active">Active</option>
                        <option value="Inactive">Inactive</option>
                    </select>
                    <div class="input-group" style="width: 250px;">
                        <span class="input-group-text bg-white"><i class="bi bi-search"></i></span>
                        <input type="text" class="form-control" placeholder="Search facilities..." @bind="searchTerm" @bind:event="oninput" />
                    </div>
                </div>
            </div>
        </div>
        <div class="card-body">
            <div class="row g-4">
                @foreach (var facility in FilteredFacilities)
                {
                    <div class="col-md-6 col-lg-4">
                        <div class="facility-card card h-100 @(facility.IsActive ? "" : "opacity-50")">
                            <div class="card-body">
                                <div class="d-flex justify-content-between align-items-start mb-3">
                                    <div class="facility-icon @GetFacilityIconClass(facility.Type)">
                                        <i class="bi @GetFacilityIcon(facility.Type)"></i>
                                    </div>
                                    <span class="badge @GetStatusBadgeClass(facility.PerformanceStatus)">
                                        @facility.PerformanceStatus
                                    </span>
                                </div>

                                <h6 class="card-title mb-1">@facility.Name</h6>
                                <small class="text-muted d-block mb-3">
                                    @facility.Type | @facility.Level | @facility.Code
                                </small>

                                <div class="facility-stats">
                                    <div class="row g-2">
                                        <div class="col-6">
                                            <div class="stat-mini">
                                                <span class="stat-value text-primary">@facility.DeliveriesToday</span>
                                                <span class="stat-label">Today</span>
                                            </div>
                                        </div>
                                        <div class="col-6">
                                            <div class="stat-mini">
                                                <span class="stat-value">@facility.DeliveriesThisMonth</span>
                                                <span class="stat-label">This Month</span>
                                            </div>
                                        </div>
                                        <div class="col-6">
                                            <div class="stat-mini">
                                                <span class="stat-value text-warning">@facility.ActiveLabors</span>
                                                <span class="stat-label">Active Labors</span>
                                            </div>
                                        </div>
                                        <div class="col-6">
                                            <div class="stat-mini">
                                                <span class="stat-value text-info">@facility.StaffCount</span>
                                                <span class="stat-label">Staff</span>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                @if (facility.LastActivityTime.HasValue)
                                {
                                    <div class="mt-3">
                                        <small class="text-muted">
                                            <i class="bi bi-clock me-1"></i>
                                            Last activity: @facility.LastActivityTime.Value.ToString("MMM dd, HH:mm")
                                        </small>
                                    </div>
                                }
                            </div>
                            <div class="card-footer bg-transparent border-0">
                                <a href="facility/@facility.ID" class="btn btn-sm btn-outline-primary w-100">
                                    <i class="bi bi-eye me-1"></i> View Details
                                </a>
                            </div>
                        </div>
                    </div>
                }
            </div>

            @if (!FilteredFacilities.Any())
            {
                <div class="text-center py-5 text-muted">
                    <i class="bi bi-inbox fs-1"></i>
                    <p class="mb-0 mt-2">No facilities found matching your criteria</p>
                </div>
            }
        </div>
        <div class="card-footer bg-white border-0">
            <small class="text-muted">
                Showing @FilteredFacilities.Count() of @facilities?.Count facilities
            </small>
        </div>
    </div>
}

@code {
    [Parameter]
    public Guid? DistrictId { get; set; }

    private List<FacilitySummary>? facilities;
    private DistrictSummary? districtSummary;
    private bool isLoading = true;
    private string searchTerm = "";
    private string filterType = "";
    private string filterStatus = "";

    private IEnumerable<FacilitySummary> FilteredFacilities =>
        facilities?.Where(f =>
            (string.IsNullOrEmpty(searchTerm) ||
             f.Name.Contains(searchTerm, StringComparison.OrdinalIgnoreCase) ||
             f.Code.Contains(searchTerm, StringComparison.OrdinalIgnoreCase)) &&
            (string.IsNullOrEmpty(filterType) || f.Type == filterType) &&
            (string.IsNullOrEmpty(filterStatus) ||
             (filterStatus == "Active" && f.IsActive) ||
             (filterStatus == "Inactive" && !f.IsActive))) ?? Enumerable.Empty<FacilitySummary>();

    protected override async Task OnInitializedAsync()
    {
        await DetermineDistrict();
        await LoadData();
    }

    private async Task DetermineDistrict()
    {
        if (!DistrictId.HasValue)
        {
            // Get district from user claims for district users
            var authState = await AuthStateProvider.GetAuthenticationStateAsync();
            var districtIdClaim = authState.User.Claims.FirstOrDefault(c => c.Type == "DistrictID")?.Value;
            if (Guid.TryParse(districtIdClaim, out var districtId))
            {
                DistrictId = districtId;
            }
        }
    }

    private async Task LoadData()
    {
        isLoading = true;
        try
        {
            if (DistrictId.HasValue)
            {
                districtSummary = await DistrictService.GetDistrictSummaryAsync(DistrictId.Value);
                facilities = await FacilityService.GetFacilitiesByDistrictAsync(DistrictId.Value);
            }
            else
            {
                facilities = await FacilityService.GetAllFacilitySummariesAsync();
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading facilities: {ex.Message}");
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task RefreshData()
    {
        await LoadData();
    }

    private string GetStatusBadgeClass(string status)
    {
        return status switch
        {
            "Critical" => "bg-danger",
            "Warning" => "bg-warning text-dark",
            "Inactive" => "bg-secondary",
            "Normal" => "bg-success",
            _ => "bg-secondary"
        };
    }

    private string GetFacilityIcon(string type)
    {
        return type switch
        {
            "Hospital" => "bi-hospital-fill",
            "Health Center" => "bi-plus-circle-fill",
            "Clinic" => "bi-house-heart-fill",
            "CHPS" => "bi-heart-pulse-fill",
            _ => "bi-building"
        };
    }

    private string GetFacilityIconClass(string type)
    {
        return type switch
        {
            "Hospital" => "bg-primary-subtle text-primary",
            "Health Center" => "bg-success-subtle text-success",
            "Clinic" => "bg-info-subtle text-info",
            "CHPS" => "bg-warning-subtle text-warning",
            _ => "bg-secondary-subtle text-secondary"
        };
    }
}
