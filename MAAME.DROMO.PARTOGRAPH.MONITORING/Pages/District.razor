@page "/district"
@page "/district/{DistrictId:guid}"
@* @page "/facilities" *@
@attribute [Authorize(Policy = "DistrictAccess")]
@inject IFacilityService FacilityService
@inject IDistrictService DistrictService
@inject AuthenticationStateProvider AuthStateProvider

<PageTitle>District Overview - MAAME.DROMO Insight</PageTitle>

<div class="dashboard-header mb-4">
    <div class="d-flex justify-content-between align-items-center">
        <div>
            <h2 class="mb-1 text-gradient-primary">
                <i class="bi bi-buildings me-2 text-secondary"></i>
                @(districtSummary?.Name ?? "District") Overview
            </h2>
            <p class="text-secondary mb-0">
                Facilities Performance | @DateTime.Now.ToString("dddd, MMMM dd, yyyy")
            </p>
        </div>
        <div class="d-flex gap-2">
            <button class="btn btn-outline-secondary shadow-sm" @onclick="RefreshData">
                <i class="bi bi-arrow-clockwise me-1"></i> Refresh
            </button>
            <a href="reports?level=district&districtId=@DistrictId" class="btn btn-primary shadow-sm hover-lift">
                <i class="bi bi-file-earmark-bar-graph me-1"></i> District Report
            </a>
        </div>
    </div>
</div>

@if (isLoading)
{
    <div class="text-center py-5">
        <div class="spinner-border text-primary" role="status">
            <span class="visually-hidden">Loading...</span>
        </div>
        <p class="mt-3 text-secondary">Loading district data...</p>
    </div>
}
else
{
    <!-- District Summary Cards -->
    @if (districtSummary != null)
    {
        <div class="row g-4 mb-4">
            <div class="col-md-6 col-lg-3">
                <div class="card stat-card border-0 h-100 hover-lift">
                    <div class="card-body p-4">
                        <div class="d-flex justify-content-between align-items-start">
                            <div>
                                <p class="text-secondary text-uppercase tracking-wide mb-1" style="font-size: 0.75rem;">Active Facilities</p>
                                <h3 class="mb-0 fw-bold text-dark">@districtSummary.ActiveFacilities <span class="text-secondary fs-6">/ @districtSummary.FacilityCount</span></h3>
                            </div>
                            <div class="stat-icon bg-success-subtle text-success rounded-circle p-3">
                                <i class="bi bi-hospital fs-4"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-6 col-lg-3">
                <div class="card stat-card border-0 h-100 hover-lift">
                    <div class="card-body p-4">
                        <div class="d-flex justify-content-between align-items-start">
                            <div>
                                <p class="text-secondary text-uppercase tracking-wide mb-1" style="font-size: 0.75rem;">Today's Deliveries</p>
                                <h3 class="mb-0 fw-bold text-dark">@districtSummary.DeliveriesToday</h3>
                            </div>
                            <div class="stat-icon bg-primary-subtle text-primary rounded-circle p-3">
                                <i class="bi bi-clipboard2-pulse fs-4"></i>
                            </div>
                        </div>
                        <div class="mt-3">
                            <small class="text-secondary">
                                This Month: @districtSummary.DeliveriesThisMonth
                            </small>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-6 col-lg-3">
                <div class="card stat-card border-0 h-100 hover-lift">
                    <div class="card-body p-4">
                        <div class="d-flex justify-content-between align-items-start">
                            <div>
                                <p class="text-secondary text-uppercase tracking-wide mb-1" style="font-size: 0.75rem;">Active Labors</p>
                                <h3 class="mb-0 fw-bold text-dark">@districtSummary.ActiveLabors</h3>
                            </div>
                            <div class="stat-icon bg-warning-subtle text-warning rounded-circle p-3">
                                <i class="bi bi-hourglass-split fs-4"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-6 col-lg-3">
                <div class="card stat-card border-0 h-100 hover-lift">
                    <div class="card-body p-4">
                        <div class="d-flex justify-content-between align-items-start">
                            <div>
                                <p class="text-secondary text-uppercase tracking-wide mb-1" style="font-size: 0.75rem;">C-Section Rate</p>
                                <h3 class="mb-0 fw-bold @(districtSummary.CaesareanRate > 15 ? "text-warning" : "text-success")">
                                    @districtSummary.CaesareanRate.ToString("F1")%
                                </h3>
                            </div>
                            <div class="stat-icon bg-info-subtle text-info rounded-circle p-3">
                                <i class="bi bi-percent fs-4"></i>
                            </div>
                        </div>
                        <div class="mt-3">
                            <small class="text-secondary">WHO Target: 10-15%</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }

    <!-- Facilities Grid -->
    <div class="glass-panel p-4">
        <div class="d-flex flex-column flex-md-row justify-content-between align-items-md-center mb-4 border-bottom pb-3 gap-3">
            <h5 class="mb-0 fw-bold text-dark">
                <i class="bi bi-hospital me-2 text-primary"></i>
                Facilities
            </h5>
            <div class="d-flex gap-2 flex-wrap">
                <select class="form-select rounded-pill" style="min-width: 140px;" @bind="filterType">
                    <option value="">All Types</option>
                    <option value="Hospital">Hospital</option>
                    <option value="Health Center">Health Center</option>
                    <option value="Clinic">Clinic</option>
                    <option value="CHPS">CHPS</option>
                </select>
                <select class="form-select rounded-pill" style="min-width: 140px;" @bind="filterStatus">
                    <option value="">All Status</option>
                    <option value="Active">Active</option>
                    <option value="Inactive">Inactive</option>
                </select>
                <div class="input-group" style="min-width: 200px;">
                    <span class="input-group-text bg-white rounded-start-pill border-end-0"><i class="bi bi-search"></i></span>
                    <input type="text" class="form-control rounded-end-pill border-start-0" placeholder="Search facilities..." @bind="searchTerm" @bind:event="oninput" />
                </div>
            </div>
        </div>
        
        <div class="row g-4">
            @foreach (var facility in FilteredFacilities)
            {
                <div class="col-md-6 col-lg-4">
                    <div class="facility-card card h-100 border-0 shadow-sm glass-panel @(facility.IsActive ? "" : "opacity-50") hover-lift transition-all">
                        <div class="card-body p-4">
                            <div class="d-flex justify-content-between align-items-start mb-3">
                                <div class="facility-icon rounded-circle p-2 @GetFacilityIconClass(facility.Type)">
                                    <i class="bi @GetFacilityIcon(facility.Type) fs-5"></i>
                                </div>
                                <span class="badge @GetStatusBadgeClass(facility.PerformanceStatus) rounded-pill">
                                    @facility.PerformanceStatus
                                </span>
                            </div>

                            <h6 class="card-title mb-1 fw-bold text-dark">@facility.Name</h6>
                            <small class="text-secondary d-block mb-3">
                                @facility.Type | @facility.Level | @facility.Code
                            </small>

                            <div class="facility-stats bg-light bg-opacity-50 rounded p-2">
                                <div class="row g-2">
                                    <div class="col-6">
                                        <div class="stat-mini">
                                            <span class="stat-value text-primary fw-bold d-block">@facility.DeliveriesToday</span>
                                            <span class="stat-label small text-secondary">Today</span>
                                        </div>
                                    </div>
                                    <div class="col-6">
                                        <div class="stat-mini">
                                            <span class="stat-value fw-bold d-block">@facility.DeliveriesThisMonth</span>
                                            <span class="stat-label small text-secondary">This Month</span>
                                        </div>
                                    </div>
                                    <div class="col-6">
                                        <div class="stat-mini">
                                            <span class="stat-value text-warning fw-bold d-block">@facility.ActiveLabors</span>
                                            <span class="stat-label small text-secondary">Active Labours</span>
                                        </div>
                                    </div>
                                    <div class="col-6">
                                        <div class="stat-mini">
                                            <span class="stat-value text-info fw-bold d-block">@facility.StaffCount</span>
                                            <span class="stat-label small text-secondary">Staff</span>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            @if (facility.LastActivityTime.HasValue)
                            {
                                <div class="mt-3 text-end">
                                    <small class="text-secondary" style="font-size: 0.75rem;">
                                        <i class="bi bi-clock me-1"></i>
                                        Last activity: @facility.LastActivityTime.Value.ToString("MMM dd, HH:mm")
                                    </small>
                                </div>
                            }
                        </div>
                        <div class="card-footer bg-transparent border-0 p-3 pt-0">
                            <a href="facility/@facility.ID" class="btn btn-sm btn-outline-primary w-100 rounded-pill">
                                <i class="bi bi-eye me-1"></i> View Details
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>

        @if (!FilteredFacilities.Any())
        {
            <div class="text-center py-5 text-secondary">
                <i class="bi bi-inbox fs-1 opacity-50"></i>
                <p class="mb-0 mt-2">No facilities found matching your criteria</p>
            </div>
        }
        
        <div class="mt-4 pt-3 border-top">
            <small class="text-secondary">
                Showing @FilteredFacilities.Count() of @facilities?.Count facilities
            </small>
        </div>
    </div>
}

@code {
    [Parameter]
    public Guid? DistrictId { get; set; }

    private List<FacilitySummary>? facilities;
    private DistrictSummary? districtSummary;
    private bool isLoading = true;
    private string searchTerm = "";
    private string filterType = "";
    private string filterStatus = "";

    private IEnumerable<FacilitySummary> FilteredFacilities =>
        facilities?.Where(f =>
            (string.IsNullOrEmpty(searchTerm) ||
             f.Name.Contains(searchTerm, StringComparison.OrdinalIgnoreCase) ||
             f.Code.Contains(searchTerm, StringComparison.OrdinalIgnoreCase)) &&
            (string.IsNullOrEmpty(filterType) || f.Type == filterType) &&
            (string.IsNullOrEmpty(filterStatus) ||
             (filterStatus == "Active" && f.IsActive) ||
             (filterStatus == "Inactive" && !f.IsActive))) ?? Enumerable.Empty<FacilitySummary>();

    protected override async Task OnInitializedAsync()
    {
        await DetermineDistrict();
        await LoadData();
    }

    private async Task DetermineDistrict()
    {
        if (!DistrictId.HasValue)
        {
            // Get district from user claims for district users
            var authState = await AuthStateProvider.GetAuthenticationStateAsync();
            var districtIdClaim = authState.User.Claims.FirstOrDefault(c => c.Type == "DistrictID")?.Value;
            if (Guid.TryParse(districtIdClaim, out var districtId))
            {
                DistrictId = districtId;
            }
        }
    }

    private async Task LoadData()
    {
        isLoading = true;
        try
        {
            if (DistrictId.HasValue)
            {
                districtSummary = await DistrictService.GetDistrictSummaryAsync(DistrictId.Value);
                facilities = await FacilityService.GetFacilitiesByDistrictAsync(DistrictId.Value);
            }
            else
            {
                facilities = await FacilityService.GetAllFacilitySummariesAsync();
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading facilities: {ex.Message}");
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task RefreshData()
    {
        await LoadData();
    }

    private string GetStatusBadgeClass(string status)
    {
        return status switch
        {
            "Critical" => "bg-danger",
            "Warning" => "bg-warning text-dark",
            "Inactive" => "bg-secondary",
            "Normal" => "bg-success",
            _ => "bg-secondary"
        };
    }

    private string GetFacilityIcon(string type)
    {
        return type switch
        {
            "Hospital" => "bi-hospital-fill",
            "Health Center" => "bi-plus-circle-fill",
            "Clinic" => "bi-house-heart-fill",
            "CHPS" => "bi-heart-pulse-fill",
            _ => "bi-building"
        };
    }

    private string GetFacilityIconClass(string type)
    {
        return type switch
        {
            "Hospital" => "bg-primary-subtle text-primary",
            "Health Center" => "bg-success-subtle text-success",
            "Clinic" => "bg-info-subtle text-info",
            "CHPS" => "bg-warning-subtle text-warning",
            _ => "bg-secondary-subtle text-secondary"
        };
    }
}
