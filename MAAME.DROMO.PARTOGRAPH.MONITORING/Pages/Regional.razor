@page "/regional"
@page "/regional/{RegionId:guid}"
@page "/districts"
@attribute [Authorize(Policy = "RegionalAccess")]
@inject IDistrictService DistrictService
@inject IRegionService RegionService
@inject AuthenticationStateProvider AuthStateProvider

<PageTitle>Regional Overview - MAAME.DROMO Insight</PageTitle>

<div class="dashboard-header mb-4">
    <div class="d-flex justify-content-between align-items-center">
        <div>
            <h2 class="mb-1">
                <i class="bi bi-geo-alt me-2 text-primary"></i>
                @(regionSummary?.Name ?? "Regional") Overview
            </h2>
            <p class="text-muted mb-0">
                Districts Performance | @DateTime.Now.ToString("dddd, MMMM dd, yyyy")
            </p>
        </div>
        <div class="d-flex gap-2">
            <button class="btn btn-outline-secondary" @onclick="RefreshData">
                <i class="bi bi-arrow-clockwise me-1"></i> Refresh
            </button>
            <a href="reports?level=regional&regionId=@RegionId" class="btn btn-primary">
                <i class="bi bi-file-earmark-bar-graph me-1"></i> Regional Report
            </a>
        </div>
    </div>
</div>

@if (isLoading)
{
    <div class="text-center py-5">
        <div class="spinner-border text-primary" role="status">
            <span class="visually-hidden">Loading...</span>
        </div>
        <p class="mt-3 text-muted">Loading regional data...</p>
    </div>
}
else
{
    <!-- Region Summary Cards -->
    @if (regionSummary != null)
    {
        <div class="row g-4 mb-4">
            <div class="col-md-6 col-lg-3">
                <div class="card stat-card border-0 shadow-sm h-100">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-start">
                            <div>
                                <p class="text-muted mb-1">Total Districts</p>
                                <h3 class="mb-0">@regionSummary.DistrictCount</h3>
                            </div>
                            <div class="stat-icon bg-info-subtle text-info">
                                <i class="bi bi-building"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-6 col-lg-3">
                <div class="card stat-card border-0 shadow-sm h-100">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-start">
                            <div>
                                <p class="text-muted mb-1">Total Facilities</p>
                                <h3 class="mb-0">@regionSummary.FacilityCount</h3>
                            </div>
                            <div class="stat-icon bg-success-subtle text-success">
                                <i class="bi bi-hospital"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-6 col-lg-3">
                <div class="card stat-card border-0 shadow-sm h-100">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-start">
                            <div>
                                <p class="text-muted mb-1">Today's Deliveries</p>
                                <h3 class="mb-0">@regionSummary.DeliveriesToday</h3>
                            </div>
                            <div class="stat-icon bg-primary-subtle text-primary">
                                <i class="bi bi-clipboard2-pulse"></i>
                            </div>
                        </div>
                        <div class="mt-3">
                            <small class="text-muted">
                                This Month: @regionSummary.DeliveriesThisMonth
                            </small>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-6 col-lg-3">
                <div class="card stat-card border-0 shadow-sm h-100">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-start">
                            <div>
                                <p class="text-muted mb-1">Active Labors</p>
                                <h3 class="mb-0">@regionSummary.ActiveLabors</h3>
                            </div>
                            <div class="stat-icon bg-warning-subtle text-warning">
                                <i class="bi bi-hourglass-split"></i>
                            </div>
                        </div>
                        <div class="mt-3">
                            <small class="text-danger">
                                <i class="bi bi-exclamation-triangle"></i> Complications: @regionSummary.Complications
                            </small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }

    <!-- Districts Table -->
    <div class="card border-0 shadow-sm">
        <div class="card-header bg-white border-0">
            <div class="d-flex justify-content-between align-items-center">
                <h5 class="card-title mb-0">
                    <i class="bi bi-table me-2 text-primary"></i>
                    Districts Performance Summary
                </h5>
                <div class="d-flex gap-2">
                    <select class="form-select" style="width: 200px;" @bind="filterType">
                        <option value="">All Types</option>
                        <option value="Metropolitan">Metropolitan</option>
                        <option value="Municipal">Municipal</option>
                        <option value="District">District</option>
                    </select>
                    <div class="input-group" style="width: 250px;">
                        <span class="input-group-text bg-white"><i class="bi bi-search"></i></span>
                        <input type="text" class="form-control" placeholder="Search districts..." @bind="searchTerm" @bind:event="oninput" />
                    </div>
                </div>
            </div>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>District</th>
                            <th class="text-center">Type</th>
                            <th class="text-center">Facilities</th>
                            <th class="text-center">Today</th>
                            <th class="text-center">This Month</th>
                            <th class="text-center">Active Labors</th>
                            <th class="text-center">C-Section Rate</th>
                            <th class="text-center">Status</th>
                            <th class="text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var district in FilteredDistricts)
                        {
                            <tr>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <div class="district-icon me-3">
                                            <i class="bi bi-buildings text-info"></i>
                                        </div>
                                        <div>
                                            <span class="fw-semibold">@district.Name</span>
                                            <small class="d-block text-muted">@district.Code</small>
                                        </div>
                                    </div>
                                </td>
                                <td class="text-center">
                                    <span class="badge @GetTypeBadgeClass(district.Type)">
                                        @district.Type
                                    </span>
                                </td>
                                <td class="text-center">
                                    @district.ActiveFacilities / @district.FacilityCount
                                </td>
                                <td class="text-center">
                                    <span class="badge bg-primary-subtle text-primary">@district.DeliveriesToday</span>
                                </td>
                                <td class="text-center">@district.DeliveriesThisMonth</td>
                                <td class="text-center">
                                    <span class="badge @(district.ActiveLabors > 0 ? "bg-warning" : "bg-secondary")">
                                        @district.ActiveLabors
                                    </span>
                                </td>
                                <td class="text-center">
                                    <span class="@(district.CaesareanRate > 15 ? "text-warning" : "text-success")">
                                        @district.CaesareanRate.ToString("F1")%
                                    </span>
                                </td>
                                <td class="text-center">
                                    <span class="badge @GetStatusBadgeClass(district.PerformanceStatus)">
                                        @district.PerformanceStatus
                                    </span>
                                </td>
                                <td class="text-end">
                                    <a href="district/@district.ID" class="btn btn-sm btn-outline-primary">
                                        <i class="bi bi-eye me-1"></i> View
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <div class="card-footer bg-white border-0">
            <small class="text-muted">
                Showing @FilteredDistricts.Count() of @districts?.Count districts
            </small>
        </div>
    </div>
}

@code {
    [Parameter]
    public Guid? RegionId { get; set; }

    private List<DistrictSummary>? districts;
    private RegionSummary? regionSummary;
    private bool isLoading = true;
    private string searchTerm = "";
    private string filterType = "";

    private IEnumerable<DistrictSummary> FilteredDistricts =>
        districts?.Where(d =>
            (string.IsNullOrEmpty(searchTerm) ||
             d.Name.Contains(searchTerm, StringComparison.OrdinalIgnoreCase) ||
             d.Code.Contains(searchTerm, StringComparison.OrdinalIgnoreCase)) &&
            (string.IsNullOrEmpty(filterType) || d.Type == filterType)) ?? Enumerable.Empty<DistrictSummary>();

    protected override async Task OnInitializedAsync()
    {
        await DetermineRegion();
        await LoadData();
    }

    private async Task DetermineRegion()
    {
        if (!RegionId.HasValue)
        {
            // Get region from user claims for regional users
            var authState = await AuthStateProvider.GetAuthenticationStateAsync();
            var regionIdClaim = authState.User.Claims.FirstOrDefault(c => c.Type == "RegionID")?.Value;
            if (Guid.TryParse(regionIdClaim, out var regionId))
            {
                RegionId = regionId;
            }
        }
    }

    private async Task LoadData()
    {
        isLoading = true;
        try
        {
            if (RegionId.HasValue)
            {
                regionSummary = await RegionService.GetRegionSummaryAsync(RegionId.Value);
                districts = await DistrictService.GetDistrictsByRegionAsync(RegionId.Value);
            }
            else
            {
                districts = await DistrictService.GetAllDistrictSummariesAsync();
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading districts: {ex.Message}");
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task RefreshData()
    {
        await LoadData();
    }

    private string GetStatusBadgeClass(string status)
    {
        return status switch
        {
            "Critical" => "bg-danger",
            "Warning" => "bg-warning text-dark",
            "Normal" => "bg-success",
            _ => "bg-secondary"
        };
    }

    private string GetTypeBadgeClass(string type)
    {
        return type switch
        {
            "Metropolitan" => "bg-primary",
            "Municipal" => "bg-info",
            "District" => "bg-secondary",
            _ => "bg-light text-dark"
        };
    }
}
