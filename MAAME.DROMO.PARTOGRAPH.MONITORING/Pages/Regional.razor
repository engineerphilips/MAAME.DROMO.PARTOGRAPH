@page "/regional"
@page "/regional/{RegionId:guid}"
@page "/districts"
@attribute [Authorize(Policy = "RegionalAccess")]
@inject IDistrictService DistrictService
@inject IRegionService RegionService
@inject AuthenticationStateProvider AuthStateProvider

<PageTitle>Regional Overview - MAAME.DROMO Insight</PageTitle>

<div class="dashboard-header mb-4">
    <div class="d-flex justify-content-between align-items-center">
        <div>
            <h2 class="mb-1 text-gradient-primary">
                <i class="bi bi-geo-alt me-2 text-primary"></i>
                @(regionSummary?.Name ?? "Regional") Overview
            </h2>
            <p class="text-secondary mb-0">
                Districts Performance | @DateTime.Now.ToString("dddd, MMMM dd, yyyy")
            </p>
        </div>
        <div class="d-flex gap-2">
            <button class="btn btn-outline-secondary shadow-sm" @onclick="RefreshData">
                <i class="bi bi-arrow-clockwise me-1"></i> Refresh
            </button>
            <a href="reports?level=regional&regionId=@RegionId" class="btn btn-primary shadow-sm hover-lift">
                <i class="bi bi-file-earmark-bar-graph me-1"></i> Regional Report
            </a>
        </div>
    </div>
</div>

@if (isLoading)
{
    <div class="text-center py-5">
        <div class="spinner-border text-primary" role="status">
            <span class="visually-hidden">Loading...</span>
        </div>
        <p class="mt-3 text-muted">Loading regional data...</p>
    </div>
}
else
{
    <!-- Region Summary Cards -->
    @if (regionSummary != null)
    {
        <div class="row g-4 mb-4">
            <div class="col-md-6 col-lg-3">
                <div class="stat-card p-3 h-100 glass-panel hover-lift">
                    <div class="d-flex justify-content-between align-items-start">
                        <div>
                            <small class="text-secondary text-uppercase fw-semibold" style="font-size: 0.7rem;">Total Districts</small>
                            <h3 class="mb-0 fw-bold text-dark">@regionSummary.DistrictCount</h3>
                        </div>
                        <div class="stat-icon bg-info-subtle text-info rounded-circle d-flex align-items-center justify-content-center" style="width: 48px; height: 48px;">
                            <i class="bi bi-building fs-4"></i>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-6 col-lg-3">
                <div class="stat-card p-3 h-100 glass-panel hover-lift">
                    <div class="d-flex justify-content-between align-items-start">
                        <div>
                            <small class="text-secondary text-uppercase fw-semibold" style="font-size: 0.7rem;">Total Facilities</small>
                            <h3 class="mb-0 fw-bold text-dark">@regionSummary.FacilityCount</h3>
                        </div>
                        <div class="stat-icon bg-success-subtle text-success rounded-circle d-flex align-items-center justify-content-center" style="width: 48px; height: 48px;">
                            <i class="bi bi-hospital fs-4"></i>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-6 col-lg-3">
                <div class="stat-card p-3 h-100 glass-panel hover-lift">
                    <div class="d-flex justify-content-between align-items-start">
                        <div>
                            <small class="text-secondary text-uppercase fw-semibold" style="font-size: 0.7rem;">Today's Deliveries</small>
                            <h3 class="mb-0 fw-bold text-dark">@regionSummary.DeliveriesToday</h3>
                        </div>
                        <div class="stat-icon bg-primary-subtle text-primary rounded-circle d-flex align-items-center justify-content-center" style="width: 48px; height: 48px;">
                            <i class="bi bi-clipboard2-pulse fs-4"></i>
                        </div>
                    </div>
                    <div class="mt-2 text-end">
                        <small class="text-secondary" style="font-size: 0.75rem;">
                            <i class="bi bi-calendar-event me-1"></i>This Month: <span class="fw-bold">@regionSummary.DeliveriesThisMonth</span>
                        </small>
                    </div>
                </div>
            </div>

            <div class="col-md-6 col-lg-3">
                <div class="stat-card p-3 h-100 glass-panel hover-lift">
                    <div class="d-flex justify-content-between align-items-start">
                        <div>
                            <small class="text-secondary text-uppercase fw-semibold" style="font-size: 0.7rem;">Active Labors</small>
                            <h3 class="mb-0 fw-bold text-dark">@regionSummary.ActiveLabors</h3>
                        </div>
                        <div class="stat-icon bg-warning-subtle text-warning rounded-circle d-flex align-items-center justify-content-center" style="width: 48px; height: 48px;">
                            <i class="bi bi-hourglass-split fs-4"></i>
                        </div>
                    </div>
                    <div class="mt-2 text-end">
                        <small class="text-danger fw-medium" style="font-size: 0.75rem;">
                            <i class="bi bi-exclamation-triangle me-1"></i> Complications: @regionSummary.Complications
                        </small>
                    </div>
                </div>
            </div>
        </div>
    }

    <!-- Districts Table -->
    <div class="glass-panel p-0">
        <div class="d-flex justify-content-between align-items-center p-4 border-bottom border-light">
            <h5 class="mb-0 fw-bold text-dark">
                <i class="bi bi-table me-2 text-primary"></i>
                Districts Performance Summary
            </h5>
            <div class="d-flex gap-2">
                <select class="form-select form-select-sm shadow-sm border-light" style="width: 150px;" @bind="filterType">
                    <option value="">All Types</option>
                    <option value="Metropolitan">Metropolitan</option>
                    <option value="Municipal">Municipal</option>
                    <option value="District">District</option>
                </select>
                <div class="input-group input-group-sm shadow-sm">
                    <span class="input-group-text bg-white border-end-0 border-light"><i class="bi bi-search text-muted"></i></span>
                    <input type="text" class="form-control border-start-0 border-light ps-0" placeholder="Search districts..." @bind="searchTerm" @bind:event="oninput" style="width: 200px;" />
                </div>
            </div>
        </div>
        
        <div class="table-responsive">
            <table class="table table-hover mb-0 align-middle">
                <thead class="bg-light text-secondary small text-uppercase">
                    <tr>
                        <th class="ps-4 py-3 border-0">District</th>
                        <th class="text-center py-3 border-0">Type</th>
                        <th class="text-center py-3 border-0">Facilities</th>
                        <th class="text-center py-3 border-0">Today</th>
                        <th class="text-center py-3 border-0">This Month</th>
                        <th class="text-center py-3 border-0">Active Labors</th>
                        <th class="text-center py-3 border-0">C-Section Rate</th>
                        <th class="text-center py-3 border-0">Status</th>
                        <th class="text-end pe-4 py-3 border-0">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var district in FilteredDistricts)
                    {
                        <tr class="border-bottom border-light">
                            <td class="ps-4">
                                <div class="d-flex align-items-center">
                                    <div class="district-icon me-3 bg-primary-subtle text-primary rounded-circle d-flex align-items-center justify-content-center" style="width: 36px; height: 36px;">
                                        <i class="bi bi-buildings"></i>
                                    </div>
                                    <div>
                                        <div class="fw-bold text-dark">@district.Name</div>
                                        <small class="d-block text-secondary">@district.Code</small>
                                    </div>
                                </div>
                            </td>
                            <td class="text-center">
                                <span class="badge rounded-pill @GetTypeBadgeClass(district.Type) shadow-sm">
                                    @district.Type
                                </span>
                            </td>
                            <td class="text-center">
                                <span class="fw-medium text-dark">@district.ActiveFacilities</span> <span class="text-muted">/ @district.FacilityCount</span>
                            </td>
                            <td class="text-center">
                                <span class="badge bg-primary-subtle text-primary rounded-pill px-3">@district.DeliveriesToday</span>
                            </td>
                            <td class="text-center fw-medium text-dark">@district.DeliveriesThisMonth</td>
                            <td class="text-center">
                                <span class="badge rounded-pill @(district.ActiveLabors > 0 ? "bg-warning text-dark" : "bg-secondary-subtle text-secondary")">
                                    @district.ActiveLabors
                                </span>
                            </td>
                            <td class="text-center">
                                <span class="@(district.CaesareanRate > 15 ? "text-warning fw-bold" : "text-success fw-bold")">
                                    @district.CaesareanRate.ToString("F1")%
                                </span>
                            </td>
                            <td class="text-center">
                                <span class="badge rounded-pill @GetStatusBadgeClass(district.PerformanceStatus)">
                                    @district.PerformanceStatus
                                </span>
                            </td>
                            <td class="text-end pe-4">
                                <a href="district/@district.ID" class="btn btn-sm btn-outline-primary rounded-pill shadow-sm">
                                    <i class="bi bi-eye me-1"></i> View
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <div class="p-3 border-top border-light text-end">
            <small class="text-muted">
                Showing @FilteredDistricts.Count() of @districts?.Count districts
            </small>
        </div>
    </div>
}

@code {
    [Parameter]
    public Guid? RegionId { get; set; }

    private List<DistrictSummary>? districts;
    private RegionSummary? regionSummary;
    private bool isLoading = true;
    private string searchTerm = "";
    private string filterType = "";

    private IEnumerable<DistrictSummary> FilteredDistricts =>
        districts?.Where(d =>
            (string.IsNullOrEmpty(searchTerm) ||
             d.Name.Contains(searchTerm, StringComparison.OrdinalIgnoreCase) ||
             d.Code.Contains(searchTerm, StringComparison.OrdinalIgnoreCase)) &&
            (string.IsNullOrEmpty(filterType) || d.Type == filterType)) ?? Enumerable.Empty<DistrictSummary>();

    protected override async Task OnInitializedAsync()
    {
        await DetermineRegion();
        await LoadData();
    }

    private async Task DetermineRegion()
    {
        if (!RegionId.HasValue)
        {
            // Get region from user claims for regional users
            var authState = await AuthStateProvider.GetAuthenticationStateAsync();
            var regionIdClaim = authState.User.Claims.FirstOrDefault(c => c.Type == "RegionID")?.Value;
            if (Guid.TryParse(regionIdClaim, out var regionId))
            {
                RegionId = regionId;
            }
        }
    }

    private async Task LoadData()
    {
        isLoading = true;
        try
        {
            if (RegionId.HasValue)
            {
                regionSummary = await RegionService.GetRegionSummaryAsync(RegionId.Value);
                districts = await DistrictService.GetDistrictsByRegionAsync(RegionId.Value);
            }
            else
            {
                districts = await DistrictService.GetAllDistrictSummariesAsync();
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading districts: {ex.Message}");
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task RefreshData()
    {
        await LoadData();
    }

    private string GetStatusBadgeClass(string status)
    {
        return status switch
        {
            "Critical" => "bg-danger",
            "Warning" => "bg-warning text-dark",
            "Normal" => "bg-success",
            _ => "bg-secondary"
        };
    }

    private string GetTypeBadgeClass(string type)
    {
        return type switch
        {
            "Metropolitan" => "bg-primary",
            "Municipal" => "bg-info",
            "District" => "bg-secondary",
            _ => "bg-light text-dark"
        };
    }
}
