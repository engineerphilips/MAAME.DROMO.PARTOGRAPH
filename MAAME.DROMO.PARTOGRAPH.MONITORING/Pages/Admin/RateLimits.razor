@page "/admin/rate-limits"
@attribute [Authorize(Roles = "Admin")]
@attribute [Authorize(Policy = "NationalAccess")]
@inject IRateLimitService RateLimitService

<PageTitle>Rate Limiting - MAAME DROMO Monitoring</PageTitle>

<div class="dashboard-header mb-4">
    <div class="d-flex justify-content-between align-items-center">
        <div>
            <h2 class="mb-1">
                <i class="bi bi-speedometer2 me-2 text-primary"></i>
                API Rate Limiting
            </h2>
            <p class="text-muted mb-0">
                Configure request limits by access level to prevent abuse
            </p>
        </div>
        <button class="btn btn-outline-secondary" @onclick="RefreshData">
            <i class="bi bi-arrow-clockwise me-1"></i> Refresh
        </button>
    </div>
</div>

@if (isLoading)
{
    <div class="text-center py-5">
        <div class="spinner-border text-primary" role="status">
            <span class="visually-hidden">Loading...</span>
        </div>
    </div>
}
else
{
    <!-- Tabs -->
    <ul class="nav nav-tabs mb-4">
        <li class="nav-item">
            <button class="nav-link @(activeTab == "config" ? "active" : "")" @onclick="() => activeTab = TabState.Config.ToString().ToLower()">
                <i class="bi bi-sliders me-1"></i> Configuration
            </button>
        </li>
        <li class="nav-item">
            <button class="nav-link @(activeTab == "usage" ? "active" : "")" @onclick="() => activeTab = TabState.Usage.ToString().ToLower()">
                <i class="bi bi-graph-up me-1"></i> Current Usage
            </button>
        </li>
        <li class="nav-item">
            <button class="nav-link @(activeTab == "violations" ? "active" : "")" @onclick="() => activeTab = TabState.Violations.ToString().ToLower()">
                <i class="bi bi-exclamation-triangle me-1 text-warning"></i> Violations
                @if (violations.Any())
                {
                    <span class="badge bg-warning text-dark ms-1">@violations.Count</span>
                }
            </button>
        </li>
    </ul>

    @if (activeTab == "config")
    {
        <!-- Rate Limit Configuration -->
        <div class="row g-4">
            @foreach (var config in rateLimitConfigs)
            {
                <div class="col-lg-4">
                    <div class="card border-0 shadow-sm h-100">
                        <div class="card-header bg-white d-flex justify-content-between align-items-center">
                            <h5 class="mb-0">
                                <i class="bi @GetAccessLevelIcon(config.AccessLevel) me-2 @GetAccessLevelColor(config.AccessLevel)"></i>
                                @config.AccessLevel
                            </h5>
                            <div class="form-check form-switch">
                                <input class="form-check-input" type="checkbox" id="enabled-@config.ID"
                                       checked="@config.IsEnabled"
                                       @onchange="e => ToggleConfig(config, (bool)(e.Value ?? false))" />
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="mb-3">
                                <label class="form-label small text-muted">Requests per Minute</label>
                                <div class="input-group">
                                    <input type="number" class="form-control" @bind="config.RequestsPerMinute" min="1" />
                                    <span class="input-group-text">/min</span>
                                </div>
                            </div>
                            <div class="mb-3">
                                <label class="form-label small text-muted">Requests per Hour</label>
                                <div class="input-group">
                                    <input type="number" class="form-control" @bind="config.RequestsPerHour" min="1" />
                                    <span class="input-group-text">/hr</span>
                                </div>
                            </div>
                            <div class="mb-3">
                                <label class="form-label small text-muted">Requests per Day</label>
                                <div class="input-group">
                                    <input type="number" class="form-control" @bind="config.RequestsPerDay" min="1" />
                                    <span class="input-group-text">/day</span>
                                </div>
                            </div>
                            <div class="mb-3">
                                <label class="form-label small text-muted">Burst Limit</label>
                                <div class="input-group">
                                    <input type="number" class="form-control" @bind="config.BurstLimit" min="1" />
                                    <span class="input-group-text">req</span>
                                </div>
                                <small class="text-muted">Max requests in short burst</small>
                            </div>
                            <button class="btn btn-primary w-100" @onclick="() => SaveConfig(config)" disabled="@isSaving">
                                @if (isSaving && savingConfigId == config.ID)
                                {
                                    <span class="spinner-border spinner-border-sm me-1"></span>
                                }
                                <i class="bi bi-check me-1"></i> Save Changes
                            </button>
                        </div>
                    </div>
                </div>
            }
        </div>

        <div class="alert alert-info mt-4">
            <h6><i class="bi bi-info-circle me-2"></i>About Rate Limiting</h6>
            <ul class="mb-0 small">
                <li><strong>National</strong> users have higher limits for bulk operations and data exports</li>
                <li><strong>Regional</strong> users have moderate limits suitable for regional management</li>
                <li><strong>District</strong> users have standard limits for day-to-day operations</li>
                <li><strong>Burst Limit</strong> allows short spikes in traffic without throttling</li>
            </ul>
        </div>
    }
    else if (activeTab == "usage")
    {
        <!-- Current Usage -->
        <div class="card border-0 shadow-sm">
            <div class="card-header bg-white">
                <h5 class="mb-0"><i class="bi bi-graph-up me-2"></i>Current API Usage</h5>
            </div>
            <div class="card-body p-0">
                @if (currentUsage.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th>User</th>
                                    <th>Access Level</th>
                                    <th>This Minute</th>
                                    <th>This Hour</th>
                                    <th>Today</th>
                                    <th>Usage</th>
                                    <th>Status</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var usage in currentUsage)
                                {
                                    <tr class="@(usage.IsThrottled ? "table-danger" : "")">
                                        <td>
                                            <div class="fw-semibold">@usage.UserName</div>
                                        </td>
                                        <td>
                                            <span class="badge @GetAccessLevelBadgeClass(usage.AccessLevel)">
                                                @usage.AccessLevel
                                            </span>
                                        </td>
                                        <td>
                                            @usage.RequestsThisMinute / @usage.LimitPerMinute
                                        </td>
                                        <td>
                                            @usage.RequestsThisHour / @usage.LimitPerHour
                                        </td>
                                        <td>
                                            @usage.RequestsToday.ToString("N0") / @usage.LimitPerDay.ToString("N0")
                                        </td>
                                        <td style="width: 150px;">
                                            <div class="progress" style="height: 6px;">
                                                <div class="progress-bar @GetUsageProgressClass(usage.UsagePercentage)"
                                                     style="width: @(Math.Min(100, usage.UsagePercentage))%"></div>
                                            </div>
                                            <small class="text-muted">@usage.UsagePercentage.ToString("F1")%</small>
                                        </td>
                                        <td>
                                            @if (usage.IsThrottled)
                                            {
                                                <span class="badge bg-danger">
                                                    <i class="bi bi-x-circle me-1"></i> Throttled
                                                </span>
                                                @if (usage.ThrottledUntil.HasValue)
                                                {
                                                    <div class="small text-muted">Until @usage.ThrottledUntil.Value.ToString("HH:mm")</div>
                                                }
                                            }
                                            else
                                            {
                                                <span class="badge bg-success">
                                                    <i class="bi bi-check-circle me-1"></i> OK
                                                </span>
                                            }
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="text-center py-5">
                        <i class="bi bi-graph-up text-muted" style="font-size: 3rem;"></i>
                        <p class="mt-3 text-muted">No active API usage data</p>
                    </div>
                }
            </div>
        </div>
    }
    else if (activeTab == "violations")
    {
        <!-- Violations -->
        <div class="card border-0 shadow-sm">
            <div class="card-header bg-white d-flex justify-content-between align-items-center">
                <h5 class="mb-0">
                    <i class="bi bi-exclamation-triangle me-2 text-warning"></i>
                    Rate Limit Violations (Last 24 Hours)
                </h5>
                <span class="badge bg-warning text-dark">@violations.Count violations</span>
            </div>
            <div class="card-body p-0">
                @if (violations.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th>Time</th>
                                    <th>User</th>
                                    <th>Endpoint</th>
                                    <th>Violation Type</th>
                                    <th>Requests</th>
                                    <th>Limit</th>
                                    <th>IP Address</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var violation in violations)
                                {
                                    <tr>
                                        <td>
                                            <div>@violation.ViolationTime.ToString("MMM dd, HH:mm")</div>
                                            <small class="text-muted">@GetTimeAgo(violation.ViolationTime)</small>
                                        </td>
                                        <td>
                                            <div class="fw-semibold">@violation.UserName</div>
                                        </td>
                                        <td><code class="small">@violation.Endpoint</code></td>
                                        <td>
                                            <span class="badge @GetViolationTypeBadgeClass(violation.ViolationType)">
                                                @violation.ViolationType
                                            </span>
                                        </td>
                                        <td class="text-danger fw-semibold">@violation.RequestCount</td>
                                        <td>@violation.Limit</td>
                                        <td><code class="small">@violation.IPAddress</code></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="text-center py-5">
                        <i class="bi bi-shield-check text-success" style="font-size: 3rem;"></i>
                        <p class="mt-3 text-muted">No rate limit violations in the last 24 hours</p>
                    </div>
                }
            </div>
        </div>
    }
}

@if (showSuccessToast)
{
    <div class="toast-container position-fixed bottom-0 end-0 p-3">
        <div class="toast show" role="alert">
            <div class="toast-header bg-success text-white">
                <i class="bi bi-check-circle me-2"></i>
                <strong class="me-auto">Success</strong>
                <button type="button" class="btn-close btn-close-white" @onclick="() => showSuccessToast = false"></button>
            </div>
            <div class="toast-body">@successMessage</div>
        </div>
    </div>
}

@code {
    private List<RateLimitConfig> rateLimitConfigs = new();
    private List<RateLimitStatus> currentUsage = new();
    private List<RateLimitViolation> violations = new();

    private bool isLoading = true;
    private bool isSaving = false;
    private Guid? savingConfigId;
    private string activeTab = "config";
    private bool showSuccessToast = false;
    private string successMessage = "";

    private enum TabState { Config, Usage, Violations }

    protected override async Task OnInitializedAsync()
    {
        await LoadData();
    }

    private async Task LoadData()
    {
        isLoading = true;
        try
        {
            var configsTask = RateLimitService.GetRateLimitConfigsAsync();
            var usageTask = RateLimitService.GetCurrentUsageAsync();
            var violationsTask = RateLimitService.GetRecentViolationsAsync(24);

            await Task.WhenAll(configsTask, usageTask, violationsTask);

            rateLimitConfigs = await configsTask;
            currentUsage = await usageTask;
            violations = await violationsTask;
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task RefreshData()
    {
        await LoadData();
    }

    private async Task ToggleConfig(RateLimitConfig config, bool isEnabled)
    {
        config.IsEnabled = isEnabled;
        await SaveConfig(config);
    }

    private async Task SaveConfig(RateLimitConfig config)
    {
        isSaving = true;
        savingConfigId = config.ID;
        try
        {
            var result = await RateLimitService.UpdateRateLimitConfigAsync(config);
            if (result)
            {
                ShowSuccess($"Rate limits updated for {config.AccessLevel} access level");
            }
        }
        finally
        {
            isSaving = false;
            savingConfigId = null;
        }
    }

    private void ShowSuccess(string message)
    {
        successMessage = message;
        showSuccessToast = true;
        _ = Task.Delay(3000).ContinueWith(_ =>
        {
            showSuccessToast = false;
            InvokeAsync(StateHasChanged);
        });
    }

    private string GetAccessLevelIcon(string level) => level switch
    {
        "National" => "bi-globe",
        "Regional" => "bi-map",
        "District" => "bi-building",
        _ => "bi-person"
    };

    private string GetAccessLevelColor(string level) => level switch
    {
        "National" => "text-info",
        "Regional" => "text-primary",
        "District" => "text-warning",
        _ => "text-secondary"
    };

    private string GetAccessLevelBadgeClass(string level) => level switch
    {
        "National" => "bg-info",
        "Regional" => "bg-primary",
        "District" => "bg-warning text-dark",
        _ => "bg-secondary"
    };

    private string GetUsageProgressClass(double percentage) => percentage switch
    {
        > 90 => "bg-danger",
        > 70 => "bg-warning",
        > 50 => "bg-info",
        _ => "bg-success"
    };

    private string GetViolationTypeBadgeClass(string type) => type switch
    {
        "MinuteLimit" => "bg-danger",
        "HourLimit" => "bg-warning text-dark",
        "DayLimit" => "bg-info",
        "Burst" => "bg-dark",
        _ => "bg-secondary"
    };

    private string GetTimeAgo(DateTime time)
    {
        var diff = DateTime.UtcNow - time;
        if (diff.TotalMinutes < 1) return "just now";
        if (diff.TotalMinutes < 60) return $"{(int)diff.TotalMinutes}m ago";
        if (diff.TotalHours < 24) return $"{(int)diff.TotalHours}h ago";
        return time.ToString("MMM dd");
    }
}
