@page "/admin/notifications"
@attribute [Authorize(Roles = "Admin")]
@inject INotificationAdminService NotificationService

<PageTitle>Notifications - MAAME DROMO Monitoring</PageTitle>

<div class="dashboard-header mb-4">
    <div class="d-flex justify-content-between align-items-center">
        <div>
            <h2 class="mb-1 text-gradient-primary fw-bold">
                <i class="bi bi-bell me-2"></i>
                Notification Center
            </h2>
            <p class="text-secondary mb-0">
                Manage notifications and configure alert preferences
            </p>
        </div>
        <div class="d-flex gap-2">
            @if (summary.TotalUnread > 0)
            {
                <button class="btn btn-outline-primary shadow-sm hover-lift" @onclick="MarkAllAsRead">
                    <i class="bi bi-check-all me-1"></i> Mark All as Read
                </button>
            }
            <button class="btn btn-white border shadow-sm hover-lift" @onclick="RefreshData">
                <i class="bi bi-arrow-clockwise me-1"></i> Refresh
            </button>
        </div>
    </div>
</div>

<!-- Summary Cards -->
<div class="row g-3 mb-4">
    <div class="col-md-3">
        <div class="stat-card p-3 h-100 text-center hover-lift position-relative">
            <div class="icon-box-sm bg-primary-subtle text-primary mx-auto mb-2 rounded-circle shadow-sm">
                <i class="bi bi-bell fs-5"></i>
            </div>
            <h3 class="mb-0 fw-bold text-dark">@summary.TotalUnread</h3>
            <small class="text-secondary fw-semibold text-uppercase" style="font-size: 0.7rem;">Unread</small>
        </div>
    </div>
    <div class="col-md-3">
        <div class="stat-card p-3 h-100 text-center hover-lift position-relative">
            <div class="icon-box-sm bg-danger-subtle text-danger mx-auto mb-2 rounded-circle shadow-sm">
                <i class="bi bi-exclamation-triangle fs-5"></i>
            </div>
            <h3 class="mb-0 fw-bold text-dark">@summary.CriticalCount</h3>
            <small class="text-secondary fw-semibold text-uppercase" style="font-size: 0.7rem;">Critical</small>
        </div>
    </div>
    <div class="col-md-3">
        <div class="stat-card p-3 h-100 text-center hover-lift position-relative">
            <div class="icon-box-sm bg-warning-subtle text-warning mx-auto mb-2 rounded-circle shadow-sm">
                <i class="bi bi-exclamation-circle fs-5"></i>
            </div>
            <h3 class="mb-0 fw-bold text-dark">@summary.WarningCount</h3>
            <small class="text-secondary fw-semibold text-uppercase" style="font-size: 0.7rem;">Warnings</small>
        </div>
    </div>
    <div class="col-md-3">
        <div class="stat-card p-3 h-100 text-center hover-lift position-relative">
            <div class="icon-box-sm bg-info-subtle text-info mx-auto mb-2 rounded-circle shadow-sm">
                <i class="bi bi-info-circle fs-5"></i>
            </div>
            <h3 class="mb-0 fw-bold text-dark">@summary.InfoCount</h3>
            <small class="text-secondary fw-semibold text-uppercase" style="font-size: 0.7rem;">Info</small>
        </div>
    </div>
</div>

<!-- Tabs -->
<div class="glass-panel p-2 d-inline-block mb-4">
    <ul class="nav nav-pills">
        <li class="nav-item">
            <button class="nav-link rounded-pill px-3 @(activeTab == "all" ? "active shadow-sm" : "text-secondary")" @onclick="() => SetTab(TabState.All)">
                <i class="bi bi-list me-1"></i> All Notifications
            </button>
        </li>
        <li class="nav-item">
            <button class="nav-link rounded-pill px-3 @(activeTab == "unread" ? "active shadow-sm" : "text-secondary")" @onclick="() => SetTab(TabState.Unread)">
                <i class="bi bi-envelope me-1"></i> Unread
                @if (summary.TotalUnread > 0)
                {
                    <span class="badge bg-white text-primary ms-1 rounded-pill">@summary.TotalUnread</span>
                }
            </button>
        </li>
        <li class="nav-item">
            <button class="nav-link rounded-pill px-3 @(activeTab == "preferences" ? "active shadow-sm" : "text-secondary")" @onclick="() => SetTab(TabState.Preferences)">
                <i class="bi bi-gear me-1"></i> Preferences
            </button>
        </li>
    </ul>
</div>

@if (activeTab == "all" || activeTab == "unread")
{
    <!-- Notifications List -->
    <div class="glass-panel p-0 mb-4 overflow-hidden">
        <div class="card-body p-0">
            @if (filteredNotifications.Any())
            {
                <div class="list-group list-group-flush">
                    @foreach (var notification in filteredNotifications)
                    {
                        <div class="list-group-item list-group-item-action @(!notification.IsRead ? "bg-light bg-opacity-50" : "bg-transparent") border-bottom px-4 py-3 transition-all hover-bg-light">
                            <div class="d-flex">
                                <div class="me-3">
                                    <div class="notification-icon @GetNotificationIconClass(notification.Severity) shadow-sm">
                                        <i class="bi @GetNotificationIcon(notification.Type)"></i>
                                    </div>
                                </div>
                                <div class="flex-grow-1">
                                    <div class="d-flex justify-content-between align-items-start">
                                        <div>
                                            <h6 class="mb-1 @(!notification.IsRead ? "fw-bold text-dark" : "text-secondary")">
                                                @notification.Title
                                            </h6>
                                            <p class="mb-1 text-secondary small">@notification.Message</p>
                                            <small class="text-muted">
                                                <i class="bi bi-clock me-1"></i>
                                                @GetTimeAgo(notification.CreatedAt)
                                            </small>
                                        </div>
                                        <div class="d-flex align-items-center gap-2">
                                            <span class="badge @GetSeverityBadgeClass(notification.Severity) rounded-pill shadow-sm">
                                                @notification.Severity
                                            </span>
                                            @if (!notification.IsRead)
                                            {
                                                <button class="btn btn-sm btn-white border shadow-sm rounded-circle hover-lift" @onclick="() => MarkAsRead(notification.ID)" title="Mark as read" style="width: 32px; height: 32px;">
                                                    <i class="bi bi-check text-success"></i>
                                                </button>
                                            }
                                            @if (!string.IsNullOrEmpty(notification.ActionUrl))
                                            {
                                                <a href="@notification.ActionUrl" class="btn btn-sm btn-outline-primary rounded-circle hover-lift" style="width: 32px; height: 32px; display: flex; align-items: center; justify-content: center;">
                                                    <i class="bi bi-arrow-right"></i>
                                                </a>
                                            }
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="bi bi-bell-slash text-muted opacity-25" style="font-size: 3rem;"></i>
                    <p class="mt-3 text-secondary">No notifications to display</p>
                </div>
            }
        </div>
    </div>
}
else if (activeTab == "preferences")
{
    <!-- Notification Preferences -->
    <div class="row">
        <div class="col-lg-8">
            <div class="glass-panel p-4 mb-4">
                <div class="d-flex align-items-center mb-4 border-bottom pb-3">
                    <h5 class="mb-0 fw-bold text-dark"><i class="bi bi-sliders me-2 text-primary"></i>Notification Preferences</h5>
                </div>
                <div>
                    <h6 class="fw-bold text-secondary text-uppercase small tracking-wide mb-3">Email Notifications</h6>

                    <div class="mb-3 p-3 bg-light bg-opacity-50 rounded border">
                        <div class="form-check form-switch d-flex justify-content-between ps-0 align-items-center">
                            <label class="form-check-label" for="emailNewFacility">
                                <strong class="text-dark">New Facility Added</strong>
                                <div class="small text-secondary">Receive email when a new facility is registered in your jurisdiction</div>
                            </label>
                            <input class="form-check-input ms-3" type="checkbox" id="emailNewFacility"
                                   checked="@preferences.EmailOnNewFacility"
                                   style="width: 3em; height: 1.5em; cursor: pointer;"
                                   @onchange="e => UpdatePreference(nameof(preferences.EmailOnNewFacility), e)" />
                        </div>
                    </div>

                    <div class="mb-3 p-3 bg-light bg-opacity-50 rounded border">
                        <div class="form-check form-switch d-flex justify-content-between ps-0 align-items-center">
                            <label class="form-check-label" for="emailUserIssue">
                                <strong class="text-dark">User Account Issues</strong>
                                <div class="small text-secondary">Get notified about locked accounts, failed logins, and suspicious activity</div>
                            </label>
                            <input class="form-check-input ms-3" type="checkbox" id="emailUserIssue"
                                   checked="@preferences.EmailOnUserIssue"
                                   style="width: 3em; height: 1.5em; cursor: pointer;"
                                   @onchange="e => UpdatePreference(nameof(preferences.EmailOnUserIssue), e)" />
                        </div>
                    </div>

                    <div class="mb-3 p-3 bg-light bg-opacity-50 rounded border">
                        <div class="form-check form-switch d-flex justify-content-between ps-0 align-items-center">
                            <label class="form-check-label" for="emailPasswordReset">
                                <strong class="text-dark">Password Resets</strong>
                                <div class="small text-secondary">Receive confirmation when passwords are reset for users in your jurisdiction</div>
                            </label>
                            <input class="form-check-input ms-3" type="checkbox" id="emailPasswordReset"
                                   checked="@preferences.EmailOnPasswordReset"
                                   style="width: 3em; height: 1.5em; cursor: pointer;"
                                   @onchange="e => UpdatePreference(nameof(preferences.EmailOnPasswordReset), e)" />
                        </div>
                    </div>

                    <div class="mb-4 p-3 bg-danger-subtle bg-opacity-10 rounded border border-danger-subtle">
                        <div class="form-check form-switch d-flex justify-content-between ps-0 align-items-center">
                            <label class="form-check-label" for="emailCriticalAlert">
                                <strong class="text-danger">Critical System Alerts</strong>
                                <div class="small text-secondary">Important alerts that require immediate attention</div>
                            </label>
                            <input class="form-check-input ms-3" type="checkbox" id="emailCriticalAlert"
                                   checked="@preferences.EmailOnCriticalAlert"
                                   style="width: 3em; height: 1.5em; cursor: pointer;"
                                   @onchange="e => UpdatePreference(nameof(preferences.EmailOnCriticalAlert), e)" />
                        </div>
                    </div>

                    <hr class="my-4" />

                    <h6 class="fw-bold text-secondary text-uppercase small tracking-wide mb-3">In-App Notifications</h6>

                    <div class="mb-3 p-3 bg-light bg-opacity-50 rounded border">
                        <div class="form-check form-switch d-flex justify-content-between ps-0 align-items-center">
                            <label class="form-check-label" for="inAppNotifications">
                                <strong class="text-dark">Enable In-App Notifications</strong>
                                <div class="small text-secondary">Show notification bell and alerts within the application</div>
                            </label>
                            <input class="form-check-input ms-3" type="checkbox" id="inAppNotifications"
                                   checked="@preferences.InAppNotifications"
                                   style="width: 3em; height: 1.5em; cursor: pointer;"
                                   @onchange="e => UpdatePreference(nameof(preferences.InAppNotifications), e)" />
                        </div>
                    </div>

                    <hr class="my-4" />

                    <h6 class="fw-bold text-secondary text-uppercase small tracking-wide mb-3">Daily Digest</h6>

                    <div class="mb-3 p-3 bg-light bg-opacity-50 rounded border">
                        <div class="form-check form-switch d-flex justify-content-between ps-0 align-items-center">
                            <label class="form-check-label" for="dailyDigest">
                                <strong class="text-dark">Receive Daily Summary</strong>
                                <div class="small text-secondary">Get a daily email with a summary of all activity</div>
                            </label>
                            <input class="form-check-input ms-3" type="checkbox" id="dailyDigest"
                                   checked="@preferences.DailyDigest"
                                   style="width: 3em; height: 1.5em; cursor: pointer;"
                                   @onchange="e => UpdatePreference(nameof(preferences.DailyDigest), e)" />
                        </div>
                    </div>

                    @if (preferences.DailyDigest)
                    {
                        <div class="mb-3 ms-4">
                            <label class="form-label fw-semibold text-secondary">Preferred Time</label>
                            <input type="time" class="form-control" style="max-width: 200px;"
                                   value="@preferences.DigestTime"
                                   @onchange="e => UpdateDigestTime(e.Value?.ToString())" />
                        </div>
                    }

                    <div class="mt-4 pt-2">
                        <button class="btn btn-primary px-4 shadow-sm hover-lift" @onclick="SavePreferences" disabled="@isSaving">
                            @if (isSaving)
                            {
                                <span class="spinner-border spinner-border-sm me-2"></span>
                            }
                            else
                            {
                                <i class="bi bi-check-lg me-1"></i>
                            }
                            Save Preferences
                        </button>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="glass-panel p-4">
                <div class="d-flex align-items-center mb-3 border-bottom pb-3">
                    <h6 class="mb-0 fw-bold text-dark"><i class="bi bi-info-circle me-2 text-info"></i>About Notifications</h6>
                </div>
                <div>
                    <p class="small text-secondary">
                        Configure how and when you receive notifications about important events in the system.
                    </p>
                    <h6 class="small fw-bold text-dark mt-3">Notification Types:</h6>
                    <ul class="small text-secondary ps-3 mb-0">
                        <li class="mb-2"><strong>Facility Added</strong> - New health facilities registered</li>
                        <li class="mb-2"><strong>User Issues</strong> - Account locks, failed logins</li>
                        <li class="mb-2"><strong>Password Reset</strong> - Password changes for users</li>
                        <li><strong>Critical Alerts</strong> - System-wide important alerts</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
}

@if (showSuccessToast)
{
    <div class="toast-container position-fixed bottom-0 end-0 p-3">
        <div class="toast show" role="alert">
            <div class="toast-header bg-success text-white">
                <i class="bi bi-check-circle me-2"></i>
                <strong class="me-auto">Success</strong>
                <button type="button" class="btn-close btn-close-white" @onclick="() => showSuccessToast = false"></button>
            </div>
            <div class="toast-body">@successMessage</div>
        </div>
    </div>
}

<style>
    .stat-icon {
        width: 48px;
        height: 48px;
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.5rem;
    }

    .notification-icon {
        width: 40px;
        height: 40px;
        border-radius: 10px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.1rem;
    }

    .notification-icon.icon-info {
        background-color: rgba(13, 202, 240, 0.1);
        color: #0dcaf0;
    }

    .notification-icon.icon-warning {
        background-color: rgba(255, 193, 7, 0.1);
        color: #ffc107;
    }

    .notification-icon.icon-critical {
        background-color: rgba(220, 53, 69, 0.1);
        color: #dc3545;
    }
</style>

@code {
    private NotificationSummary summary = new();
    private List<AdminNotification> notifications = new();
    private NotificationPreferences preferences = new();

    private string activeTab = "all";
    private bool isSaving = false;
    private bool showSuccessToast = false;
    private string successMessage = "";

    private enum TabState { All, Unread, Preferences }

    private List<AdminNotification> filteredNotifications => activeTab == "unread"
        ? notifications.Where(n => !n.IsRead).ToList()
        : notifications;

    protected override async Task OnInitializedAsync()
    {
        await LoadData();
    }

    private async Task LoadData()
    {
        var summaryTask = NotificationService.GetNotificationSummaryAsync();
        var notificationsTask = NotificationService.GetNotificationsAsync();
        var preferencesTask = NotificationService.GetPreferencesAsync();

        await Task.WhenAll(summaryTask, notificationsTask, preferencesTask);

        summary = await summaryTask;
        notifications = await notificationsTask;
        preferences = await preferencesTask;
    }

    private async Task RefreshData()
    {
        await LoadData();
    }

    private void SetTab(TabState tab)
    {
        activeTab = tab.ToString().ToLower();
    }

    private async Task MarkAsRead(Guid notificationId)
    {
        var result = await NotificationService.MarkAsReadAsync(notificationId);
        if (result)
        {
            var notification = notifications.FirstOrDefault(n => n.ID == notificationId);
            if (notification != null)
            {
                notification.IsRead = true;
                notification.ReadAt = DateTime.UtcNow;
                summary.TotalUnread = Math.Max(0, summary.TotalUnread - 1);
            }
        }
    }

    private async Task MarkAllAsRead()
    {
        var result = await NotificationService.MarkAllAsReadAsync();
        if (result)
        {
            foreach (var notification in notifications)
            {
                notification.IsRead = true;
                notification.ReadAt = DateTime.UtcNow;
            }
            summary.TotalUnread = 0;
            ShowSuccess("All notifications marked as read");
        }
    }

    private void UpdatePreference(string property, ChangeEventArgs e)
    {
        var value = (bool)(e.Value ?? false);
        var prop = typeof(NotificationPreferences).GetProperty(property);
        prop?.SetValue(preferences, value);
    }

    private void UpdateDigestTime(string? time)
    {
        preferences.DigestTime = time ?? "08:00";
    }

    private async Task SavePreferences()
    {
        isSaving = true;
        try
        {
            var result = await NotificationService.UpdatePreferencesAsync(preferences);
            if (result)
            {
                ShowSuccess("Preferences saved successfully");
            }
        }
        finally
        {
            isSaving = false;
        }
    }

    private void ShowSuccess(string message)
    {
        successMessage = message;
        showSuccessToast = true;
        _ = Task.Delay(3000).ContinueWith(_ =>
        {
            showSuccessToast = false;
            InvokeAsync(StateHasChanged);
        });
    }

    private string GetNotificationIcon(string type) => type switch
    {
        "FacilityAdded" => "bi-hospital",
        "UserIssue" => "bi-person-exclamation",
        "PasswordReset" => "bi-key",
        "Alert" => "bi-exclamation-triangle",
        "System" => "bi-gear",
        _ => "bi-bell"
    };

    private string GetNotificationIconClass(string severity) => severity switch
    {
        "Critical" => "icon-critical",
        "Warning" => "icon-warning",
        _ => "icon-info"
    };

    private string GetSeverityBadgeClass(string severity) => severity switch
    {
        "Critical" => "bg-danger",
        "Warning" => "bg-warning text-dark",
        _ => "bg-info"
    };

    private string GetTimeAgo(DateTime time)
    {
        var diff = DateTime.UtcNow - time;
        if (diff.TotalMinutes < 1) return "just now";
        if (diff.TotalMinutes < 60) return $"{(int)diff.TotalMinutes}m ago";
        if (diff.TotalHours < 24) return $"{(int)diff.TotalHours}h ago";
        if (diff.TotalDays < 30) return $"{(int)diff.TotalDays}d ago";
        return time.ToString("MMM dd");
    }
}
