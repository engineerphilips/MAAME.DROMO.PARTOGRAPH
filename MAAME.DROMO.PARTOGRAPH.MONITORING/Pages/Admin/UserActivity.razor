@page "/admin/user-activity"
@attribute [Authorize(Roles = "Admin")]
@inject IUserActivityService ActivityService
@inject AuthenticationStateProvider AuthStateProvider

<PageTitle>User Activity Dashboard - MAAME DROMO Monitoring</PageTitle>

<div class="dashboard-header mb-4">
    <div class="d-flex justify-content-between align-items-center">
        <div>
            <h2 class="mb-1">
                <i class="bi bi-activity me-2 text-primary"></i>
                User Activity Dashboard
            </h2>
            <p class="text-muted mb-0">
                Monitor user login activity, sessions, and security events
            </p>
        </div>
        <div class="d-flex gap-2">
            <button class="btn btn-outline-secondary" @onclick="RefreshData">
                <i class="bi bi-arrow-clockwise me-1"></i> Refresh
            </button>
        </div>
    </div>
</div>

@if (isLoading)
{
    <div class="text-center py-5">
        <div class="spinner-border text-primary" role="status">
            <span class="visually-hidden">Loading...</span>
        </div>
        <p class="mt-3 text-muted">Loading activity data...</p>
    </div>
}
else
{
    <!-- Statistics Cards -->
    <div class="row g-3 mb-4">
        <div class="col-md-3 col-lg">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body text-center">
                    <div class="stat-icon bg-primary-subtle text-primary mx-auto mb-2">
                        <i class="bi bi-people"></i>
                    </div>
                    <h3 class="mb-0">@statistics.TotalUsers</h3>
                    <small class="text-muted">Total Users</small>
                </div>
            </div>
        </div>
        <div class="col-md-3 col-lg">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body text-center">
                    <div class="stat-icon bg-success-subtle text-success mx-auto mb-2">
                        <i class="bi bi-person-check"></i>
                    </div>
                    <h3 class="mb-0">@statistics.OnlineNow</h3>
                    <small class="text-muted">Online Now</small>
                </div>
            </div>
        </div>
        <div class="col-md-3 col-lg">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body text-center">
                    <div class="stat-icon bg-info-subtle text-info mx-auto mb-2">
                        <i class="bi bi-calendar-check"></i>
                    </div>
                    <h3 class="mb-0">@statistics.ActiveToday</h3>
                    <small class="text-muted">Active Today</small>
                </div>
            </div>
        </div>
        <div class="col-md-3 col-lg">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body text-center">
                    <div class="stat-icon bg-warning-subtle text-warning mx-auto mb-2">
                        <i class="bi bi-person-dash"></i>
                    </div>
                    <h3 class="mb-0">@statistics.InactiveUsers</h3>
                    <small class="text-muted">Inactive (30+ days)</small>
                </div>
            </div>
        </div>
        <div class="col-md-3 col-lg">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body text-center">
                    <div class="stat-icon bg-danger-subtle text-danger mx-auto mb-2">
                        <i class="bi bi-exclamation-triangle"></i>
                    </div>
                    <h3 class="mb-0">@statistics.FailedLoginsToday</h3>
                    <small class="text-muted">Failed Logins Today</small>
                </div>
            </div>
        </div>
    </div>

    <!-- Tabs -->
    <ul class="nav nav-tabs mb-4">
        <li class="nav-item">
            <button class="nav-link @(activeTab == "users" ? "active" : "")" @onclick="() => SetTab(TabState.Users)">
                <i class="bi bi-people me-1"></i> User Activity
            </button>
        </li>
        <li class="nav-item">
            <button class="nav-link @(activeTab == "inactive" ? "active" : "")" @onclick="() => SetTab(TabState.Inactive)">
                <i class="bi bi-person-slash me-1 text-warning"></i> Inactive Users
                @if (inactiveUsers.Any())
                {
                    <span class="badge bg-warning text-dark ms-1">@inactiveUsers.Count</span>
                }
            </button>
        </li>
        <li class="nav-item">
            <button class="nav-link @(activeTab == "logins" ? "active" : "")" @onclick="() => SetTab(TabState.Logins)">
                <i class="bi bi-box-arrow-in-right me-1"></i> Login History
            </button>
        </li>
        <li class="nav-item">
            <button class="nav-link @(activeTab == "failed" ? "active" : "")" @onclick="() => SetTab(TabState.Failed)">
                <i class="bi bi-shield-exclamation me-1 text-danger"></i> Failed Logins
                @if (failedLogins.Any())
                {
                    <span class="badge bg-danger ms-1">@failedLogins.Count</span>
                }
            </button>
        </li>
    </ul>

    @if (activeTab == "users")
    {
        <!-- User Activity List -->
        <div class="card border-0 shadow-sm">
            <div class="card-header bg-white d-flex justify-content-between align-items-center">
                <h5 class="mb-0"><i class="bi bi-clock-history me-2"></i>Recent User Activity</h5>
                <div class="input-group" style="max-width: 300px;">
                    <span class="input-group-text bg-white border-end-0">
                        <i class="bi bi-search text-muted"></i>
                    </span>
                    <input type="text" class="form-control border-start-0" placeholder="Search users..."
                           @bind="searchTerm" @bind:event="oninput" />
                </div>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>User</th>
                                <th>Access Level</th>
                                <th>Last Login</th>
                                <th>Logins Today</th>
                                <th>Status</th>
                                <th>Failed Attempts</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var user in filteredActivities)
                            {
                                <tr>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <div class="user-avatar @(user.IsCurrentlyOnline ? "avatar-online" : "avatar-offline") me-2">
                                                @GetInitials(user.FullName)
                                            </div>
                                            <div>
                                                <div class="fw-semibold">@user.FullName</div>
                                                <small class="text-muted">@user.Email</small>
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        <span class="badge @GetAccessLevelBadgeClass(user.AccessLevel)">
                                            @user.AccessLevel
                                        </span>
                                    </td>
                                    <td>
                                        @if (user.LastLogin.HasValue)
                                        {
                                            <div>@user.LastLogin.Value.ToString("MMM dd, HH:mm")</div>
                                            <small class="text-muted">@GetTimeAgo(user.LastLogin.Value)</small>
                                        }
                                        else
                                        {
                                            <span class="text-muted">Never</span>
                                        }
                                    </td>
                                    <td>
                                        <span class="badge bg-light text-dark">@user.LoginCountToday</span>
                                    </td>
                                    <td>
                                        <span class="badge @GetStatusBadgeClass(user.ActivityStatus)">
                                            @if (user.IsCurrentlyOnline)
                                            {
                                                <i class="bi bi-circle-fill me-1" style="font-size: 0.5rem;"></i>
                                            }
                                            @user.ActivityStatus
                                        </span>
                                    </td>
                                    <td>
                                        @if (user.FailedLoginAttempts > 0)
                                        {
                                            <span class="badge bg-danger">@user.FailedLoginAttempts</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">0</span>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
    else if (activeTab == "inactive")
    {
        <!-- Inactive Users List -->
        <div class="card border-0 shadow-sm">
            <div class="card-header bg-white">
                <h5 class="mb-0"><i class="bi bi-person-slash me-2 text-warning"></i>Inactive Users (No login in 30+ days)</h5>
            </div>
            <div class="card-body p-0">
                @if (inactiveUsers.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th>User</th>
                                    <th>Region/District</th>
                                    <th>Last Login</th>
                                    <th>Days Inactive</th>
                                    <th>Status</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var user in inactiveUsers)
                                {
                                    var daysInactive = user.LastLogin.HasValue
                                        ? (int)(DateTime.UtcNow - user.LastLogin.Value).TotalDays
                                        : 999;
                                    <tr class="@(daysInactive > 90 ? "table-warning" : "")">
                                        <td>
                                            <div>
                                                <div class="fw-semibold">@user.FullName</div>
                                                <small class="text-muted">@user.Email</small>
                                            </div>
                                        </td>
                                        <td>
                                            @if (!string.IsNullOrEmpty(user.RegionName))
                                            {
                                                <div>@user.RegionName</div>
                                                @if (!string.IsNullOrEmpty(user.DistrictName))
                                                {
                                                    <small class="text-muted">@user.DistrictName</small>
                                                }
                                            }
                                            else
                                            {
                                                <span class="text-muted">-</span>
                                            }
                                        </td>
                                        <td>
                                            @if (user.LastLogin.HasValue)
                                            {
                                                @user.LastLogin.Value.ToString("MMM dd, yyyy")
                                            }
                                            else
                                            {
                                                <span class="text-muted">Never logged in</span>
                                            }
                                        </td>
                                        <td>
                                            <span class="badge @(daysInactive > 90 ? "bg-danger" : "bg-warning text-dark")">
                                                @daysInactive days
                                            </span>
                                        </td>
                                        <td>
                                            <span class="badge @GetStatusBadgeClass(user.ActivityStatus)">
                                                @user.ActivityStatus
                                            </span>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="text-center py-5">
                        <i class="bi bi-check-circle text-success" style="font-size: 3rem;"></i>
                        <p class="mt-3 text-muted">All users are active!</p>
                    </div>
                }
            </div>
        </div>
    }
    else if (activeTab == "logins")
    {
        <!-- Login History -->
        <div class="card border-0 shadow-sm">
            <div class="card-header bg-white">
                <h5 class="mb-0"><i class="bi bi-box-arrow-in-right me-2"></i>Recent Login Attempts</h5>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Time</th>
                                <th>User</th>
                                <th>Status</th>
                                <th>IP Address</th>
                                <th>Location</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var login in loginAttempts.Take(50))
                            {
                                <tr class="@(!login.IsSuccessful ? "table-danger" : "")">
                                    <td>
                                        <div>@login.AttemptTime.ToString("MMM dd, HH:mm:ss")</div>
                                        <small class="text-muted">@GetTimeAgo(login.AttemptTime)</small>
                                    </td>
                                    <td>
                                        <div>@(login.UserFullName ?? "Unknown")</div>
                                        <small class="text-muted">@login.Email</small>
                                    </td>
                                    <td>
                                        @if (login.IsSuccessful)
                                        {
                                            <span class="badge bg-success">
                                                <i class="bi bi-check-circle me-1"></i> Success
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-danger">
                                                <i class="bi bi-x-circle me-1"></i> Failed
                                            </span>
                                            @if (!string.IsNullOrEmpty(login.FailureReason))
                                            {
                                                <div class="small text-danger mt-1">@login.FailureReason</div>
                                            }
                                        }
                                    </td>
                                    <td><code>@login.IPAddress</code></td>
                                    <td>@(login.Location ?? "-")</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
    else if (activeTab == "failed")
    {
        <!-- Failed Login Attempts -->
        <div class="card border-0 shadow-sm">
            <div class="card-header bg-white d-flex justify-content-between align-items-center">
                <h5 class="mb-0">
                    <i class="bi bi-shield-exclamation me-2 text-danger"></i>
                    Failed Login Attempts (Last 24 Hours)
                </h5>
                <span class="badge bg-danger">@failedLogins.Count attempts</span>
            </div>
            <div class="card-body p-0">
                @if (failedLogins.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th>Time</th>
                                    <th>Email</th>
                                    <th>Failure Reason</th>
                                    <th>IP Address</th>
                                    <th>Location</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var login in failedLogins)
                                {
                                    <tr>
                                        <td>
                                            <div>@login.AttemptTime.ToString("MMM dd, HH:mm:ss")</div>
                                            <small class="text-muted">@GetTimeAgo(login.AttemptTime)</small>
                                        </td>
                                        <td>
                                            <code>@login.Email</code>
                                        </td>
                                        <td>
                                            <span class="badge bg-danger-subtle text-danger">
                                                @(login.FailureReason ?? "Unknown")
                                            </span>
                                        </td>
                                        <td><code>@login.IPAddress</code></td>
                                        <td>@(login.Location ?? "-")</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="text-center py-5">
                        <i class="bi bi-shield-check text-success" style="font-size: 3rem;"></i>
                        <p class="mt-3 text-muted">No failed login attempts in the last 24 hours</p>
                    </div>
                }
            </div>
        </div>
    }
}

<style>
    .stat-icon {
        width: 48px;
        height: 48px;
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.5rem;
    }

    .user-avatar {
        width: 36px;
        height: 36px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: 600;
        font-size: 0.75rem;
        color: white;
    }

    .avatar-online {
        background: linear-gradient(135deg, #198754, #157347);
        box-shadow: 0 0 0 2px white, 0 0 0 4px #198754;
    }

    .avatar-offline {
        background: linear-gradient(135deg, #6c757d, #5a6268);
    }
</style>

@code {
    private UserActivityStatistics statistics = new();
    private List<UserActivitySummary> userActivities = new();
    private List<UserActivitySummary> inactiveUsers = new();
    private List<LoginAttempt> loginAttempts = new();
    private List<LoginAttempt> failedLogins = new();

    private bool isLoading = true;
    private string activeTab = "users";
    private string searchTerm = "";

    private enum TabState { Users, Inactive, Logins, Failed }

    // Admin access level filtering
    private string adminAccessLevel = "National";
    private Guid? adminRegionId;
    private Guid? adminDistrictId;

    private List<UserActivitySummary> filteredActivities => userActivities
        .Where(u => string.IsNullOrEmpty(searchTerm) ||
                   u.FullName.Contains(searchTerm, StringComparison.OrdinalIgnoreCase) ||
                   u.Email.Contains(searchTerm, StringComparison.OrdinalIgnoreCase))
        .OrderByDescending(u => u.LastLogin)
        .ToList();

    protected override async Task OnInitializedAsync()
    {
        await DetermineAccessLevel();
        await LoadData();
    }

    private async Task DetermineAccessLevel()
    {
        var authState = await AuthStateProvider.GetAuthenticationStateAsync();
        var user = authState.User;

        adminAccessLevel = user.Claims.FirstOrDefault(c => c.Type == "AccessLevel")?.Value ?? "National";

        var regionIdClaim = user.Claims.FirstOrDefault(c => c.Type == "RegionID")?.Value;
        if (Guid.TryParse(regionIdClaim, out var regionId))
        {
            adminRegionId = regionId;
        }

        var districtIdClaim = user.Claims.FirstOrDefault(c => c.Type == "DistrictID")?.Value;
        if (Guid.TryParse(districtIdClaim, out var districtId))
        {
            adminDistrictId = districtId;
        }
    }

    private async Task LoadData()
    {
        isLoading = true;
        try
        {
            var statsTask = ActivityService.GetActivityStatisticsAsync(adminAccessLevel, adminRegionId, adminDistrictId);
            var activitiesTask = ActivityService.GetUserActivitiesAsync(adminAccessLevel, adminRegionId, adminDistrictId);
            var inactiveTask = ActivityService.GetInactiveUsersAsync(30, adminAccessLevel, adminRegionId, adminDistrictId);
            var loginsTask = ActivityService.GetLoginAttemptsAsync();
            var failedTask = ActivityService.GetFailedLoginAttemptsAsync(24);

            await Task.WhenAll(statsTask, activitiesTask, inactiveTask, loginsTask, failedTask);

            statistics = await statsTask;
            userActivities = await activitiesTask;
            inactiveUsers = await inactiveTask;
            loginAttempts = await loginsTask;
            failedLogins = await failedTask;
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task RefreshData()
    {
        await LoadData();
    }

    private void SetTab(TabState tab)
    {
        activeTab = tab.ToString().ToLower();
    }

    private string GetInitials(string name)
    {
        var parts = name.Split(' ', StringSplitOptions.RemoveEmptyEntries);
        if (parts.Length >= 2)
            return $"{parts[0][0]}{parts[1][0]}".ToUpper();
        return parts.Length > 0 ? parts[0][..Math.Min(2, parts[0].Length)].ToUpper() : "??";
    }

    private string GetAccessLevelBadgeClass(string level) => level switch
    {
        "National" => "bg-info",
        "Regional" => "bg-primary",
        "District" => "bg-warning text-dark",
        _ => "bg-secondary"
    };

    private string GetStatusBadgeClass(string status) => status switch
    {
        "Active" => "bg-success",
        "Inactive" => "bg-warning text-dark",
        "Dormant" => "bg-danger",
        _ => "bg-secondary"
    };

    private string GetTimeAgo(DateTime time)
    {
        var diff = DateTime.UtcNow - time;
        if (diff.TotalMinutes < 1) return "just now";
        if (diff.TotalMinutes < 60) return $"{(int)diff.TotalMinutes}m ago";
        if (diff.TotalHours < 24) return $"{(int)diff.TotalHours}h ago";
        if (diff.TotalDays < 30) return $"{(int)diff.TotalDays}d ago";
        return time.ToString("MMM dd");
    }
}
