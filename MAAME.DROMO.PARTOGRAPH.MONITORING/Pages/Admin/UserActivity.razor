@page "/admin/user-activity"
@attribute [Authorize(Roles = "Admin")]
@inject IUserActivityService ActivityService
@inject AuthenticationStateProvider AuthStateProvider

<PageTitle>User Activity Dashboard - MAAME DROMO Monitoring</PageTitle>

<div class="dashboard-header mb-4">
    <div class="d-flex justify-content-between align-items-center">
        <div>
            <h2 class="mb-1 text-gradient-primary fw-bold">
                <i class="bi bi-activity me-2"></i>
                User Activity Dashboard
            </h2>
            <p class="text-secondary mb-0">
                Monitor user login activity, sessions, and security events
            </p>
        </div>
        <div class="d-flex gap-2">
            <a href="admin/audit-trails" class="btn btn-white border shadow-sm hover-lift text-decoration-none">
                <i class="bi bi-fingerprint me-1"></i> Forensic Logs
            </a>
            <button class="btn btn-white border shadow-sm hover-lift" @onclick="RefreshData">
                <i class="bi bi-arrow-clockwise me-1"></i> Refresh
            </button>
        </div>
    </div>
</div>

@if (isLoading)
{
    <div class="text-center py-5">
        <div class="spinner-border text-primary" role="status">
            <span class="visually-hidden">Loading...</span>
        </div>
        <p class="mt-3 text-secondary">Loading activity data...</p>
    </div>
}
else
{
    <!-- Statistics Cards -->
    <div class="row g-3 mb-4">
        <div class="col-md-3 col-lg">
            <div class="stat-card p-4 h-100 hover-lift text-center">
                <div class="icon-box bg-primary-subtle text-primary mx-auto mb-3 rounded-circle shadow-sm" style="width: 50px; height: 50px; display: flex; align-items: center; justify-content: center;">
                    <i class="bi bi-people fs-4"></i>
                </div>
                <h3 class="mb-0 fw-bold text-dark">@statistics.TotalUsers</h3>
                <small class="text-secondary">Total Users</small>
            </div>
        </div>
        <div class="col-md-3 col-lg">
            <div class="stat-card p-4 h-100 hover-lift text-center">
                <div class="icon-box bg-success-subtle text-success mx-auto mb-3 rounded-circle shadow-sm" style="width: 50px; height: 50px; display: flex; align-items: center; justify-content: center;">
                    <i class="bi bi-person-check fs-4"></i>
                </div>
                <h3 class="mb-0 fw-bold text-dark">@statistics.OnlineNow</h3>
                <small class="text-secondary">Online Now</small>
            </div>
        </div>
        <div class="col-md-3 col-lg">
            <div class="stat-card p-4 h-100 hover-lift text-center">
                <div class="icon-box bg-info-subtle text-info mx-auto mb-3 rounded-circle shadow-sm" style="width: 50px; height: 50px; display: flex; align-items: center; justify-content: center;">
                    <i class="bi bi-calendar-check fs-4"></i>
                </div>
                <h3 class="mb-0 fw-bold text-dark">@statistics.ActiveToday</h3>
                <small class="text-secondary">Active Today</small>
            </div>
        </div>
        <div class="col-md-3 col-lg">
            <div class="stat-card p-4 h-100 hover-lift text-center">
                <div class="icon-box bg-warning-subtle text-warning mx-auto mb-3 rounded-circle shadow-sm" style="width: 50px; height: 50px; display: flex; align-items: center; justify-content: center;">
                    <i class="bi bi-person-dash fs-4"></i>
                </div>
                <h3 class="mb-0 fw-bold text-dark">@statistics.InactiveUsers</h3>
                <small class="text-secondary">Inactive (30+ days)</small>
            </div>
        </div>
        <div class="col-md-3 col-lg">
            <div class="stat-card p-4 h-100 hover-lift text-center">
                <div class="icon-box bg-danger-subtle text-danger mx-auto mb-3 rounded-circle shadow-sm" style="width: 50px; height: 50px; display: flex; align-items: center; justify-content: center;">
                    <i class="bi bi-exclamation-triangle fs-4"></i>
                </div>
                <h3 class="mb-0 fw-bold text-dark">@statistics.FailedLoginsToday</h3>
                <small class="text-secondary">Failed Logins Today</small>
            </div>
        </div>
    </div>

    <!-- Tabs -->
    <div class="glass-panel p-2 d-inline-block mb-4">
        <ul class="nav nav-pills">
            <li class="nav-item">
                <button class="nav-link rounded-pill px-3 @(activeTab == "users" ? "active shadow-sm" : "text-secondary")" @onclick="() => SetTab(TabState.Users)">
                    <i class="bi bi-people me-1"></i> User Activity
                </button>
            </li>
            <li class="nav-item">
                <button class="nav-link rounded-pill px-3 @(activeTab == "inactive" ? "active shadow-sm" : "text-secondary")" @onclick="() => SetTab(TabState.Inactive)">
                    <i class="bi bi-person-slash me-1 @(activeTab == "inactive" ? "" : "text-warning")"></i> Inactive Users
                    @if (inactiveUsers.Any())
                    {
                        <span class="badge bg-warning text-dark ms-1 rounded-pill">@inactiveUsers.Count</span>
                    }
                </button>
            </li>
            <li class="nav-item">
                <button class="nav-link rounded-pill px-3 @(activeTab == "logins" ? "active shadow-sm" : "text-secondary")" @onclick="() => SetTab(TabState.Logins)">
                    <i class="bi bi-box-arrow-in-right me-1"></i> Login History
                </button>
            </li>
            <li class="nav-item">
                <button class="nav-link rounded-pill px-3 @(activeTab == "failed" ? "active shadow-sm" : "text-secondary")" @onclick="() => SetTab(TabState.Failed)">
                    <i class="bi bi-shield-exclamation me-1 @(activeTab == "failed" ? "" : "text-danger")"></i> Failed Logins
                    @if (failedLogins.Any())
                    {
                        <span class="badge bg-danger ms-1 rounded-pill">@failedLogins.Count</span>
                    }
                </button>
            </li>
        </ul>
    </div>

    @if (activeTab == "users")
    {
        <!-- User Activity List -->
        <div class="glass-panel p-0 overflow-hidden">
            <div class="p-4 border-bottom bg-light bg-opacity-50 d-flex justify-content-between align-items-center">
                <h5 class="mb-0 fw-bold text-dark"><i class="bi bi-clock-history me-2 text-primary"></i>Recent User Activity</h5>
                <div class="input-group" style="max-width: 300px;">
                    <span class="input-group-text bg-white border-end-0 text-secondary">
                        <i class="bi bi-search"></i>
                    </span>
                    <input type="text" class="form-control border-start-0" placeholder="Search users..."
                           @bind="searchTerm" @bind:event="oninput" />
                </div>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="bg-light">
                            <tr>
                                <th class="ps-4 py-3 text-secondary border-0">User</th>
                                <th class="py-3 text-secondary border-0">Access Level</th>
                                <th class="py-3 text-secondary border-0">Last Login</th>
                                <th class="py-3 text-secondary border-0 text-center">Logins Today</th>
                                <th class="py-3 text-secondary border-0">Status</th>
                                <th class="pe-4 py-3 text-secondary border-0 text-center">Failed Attempts</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var user in filteredActivities)
                            {
                                <tr>
                                    <td class="ps-4">
                                        <div class="d-flex align-items-center">
                                            <div class="user-avatar @(user.IsCurrentlyOnline ? "avatar-online shadow-sm" : "avatar-offline") me-3">
                                                @GetInitials(user.FullName)
                                            </div>
                                            <div>
                                                <div class="fw-semibold text-dark">@user.FullName</div>
                                                <small class="text-secondary">@user.Email</small>
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        <span class="badge @GetAccessLevelBadgeClass(user.AccessLevel) rounded-pill shadow-sm">
                                            @user.AccessLevel
                                        </span>
                                    </td>
                                    <td>
                                        @if (user.LastLogin.HasValue)
                                        {
                                            <div class="text-dark">@user.LastLogin.Value.ToString("MMM dd, HH:mm")</div>
                                            <small class="text-muted">@GetTimeAgo(user.LastLogin.Value)</small>
                                        }
                                        else
                                        {
                                            <span class="text-muted">Never</span>
                                        }
                                    </td>
                                    <td class="text-center">
                                        <span class="badge bg-light text-secondary border rounded-pill">@user.LoginCountToday</span>
                                    </td>
                                    <td>
                                        <span class="badge @GetStatusBadgeClass(user.ActivityStatus) rounded-pill shadow-sm">
                                            @if (user.IsCurrentlyOnline)
                                            {
                                                <i class="bi bi-circle-fill me-1" style="font-size: 0.5rem;"></i>
                                            }
                                            @user.ActivityStatus
                                        </span>
                                    </td>
                                    <td class="pe-4 text-center">
                                        @if (user.FailedLoginAttempts > 0)
                                        {
                                            <span class="badge bg-danger rounded-pill">@user.FailedLoginAttempts</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted opacity-50">0</span>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
    else if (activeTab == "inactive")
    {
        <!-- Inactive Users List -->
        <div class="glass-panel p-0 overflow-hidden">
            <div class="p-4 border-bottom bg-light bg-opacity-50">
                <h5 class="mb-0 fw-bold text-dark"><i class="bi bi-person-slash me-2 text-warning"></i>Inactive Users (No login in 30+ days)</h5>
            </div>
            <div class="card-body p-0">
                @if (inactiveUsers.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead class="bg-light">
                                <tr>
                                    <th class="ps-4 py-3 text-secondary border-0">User</th>
                                    <th class="py-3 text-secondary border-0">Region/District</th>
                                    <th class="py-3 text-secondary border-0">Last Login</th>
                                    <th class="py-3 text-secondary border-0">Days Inactive</th>
                                    <th class="pe-4 py-3 text-secondary border-0">Status</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var user in inactiveUsers)
                                {
                                    var daysInactive = user.LastLogin.HasValue
                                        ? (int)(DateTime.UtcNow - user.LastLogin.Value).TotalDays
                                        : 999;
                                    <tr class="@(daysInactive > 90 ? "table-warning bg-warning-subtle bg-opacity-10" : "")">
                                        <td class="ps-4">
                                            <div>
                                                <div class="fw-semibold text-dark">@user.FullName</div>
                                                <small class="text-secondary">@user.Email</small>
                                            </div>
                                        </td>
                                        <td>
                                            @if (!string.IsNullOrEmpty(user.RegionName))
                                            {
                                                <div class="text-dark">@user.RegionName</div>
                                                @if (!string.IsNullOrEmpty(user.DistrictName))
                                                {
                                                    <small class="text-secondary">@user.DistrictName</small>
                                                }
                                            }
                                            else
                                            {
                                                <span class="text-muted">-</span>
                                            }
                                        </td>
                                        <td>
                                            @if (user.LastLogin.HasValue)
                                            {
                                                <span class="text-dark">@user.LastLogin.Value.ToString("MMM dd, yyyy")</span>
                                            }
                                            else
                                            {
                                                <span class="text-muted">Never logged in</span>
                                            }
                                        </td>
                                        <td>
                                            <span class="badge @(daysInactive > 90 ? "bg-danger" : "bg-warning text-dark") rounded-pill shadow-sm">
                                                @daysInactive days
                                            </span>
                                        </td>
                                        <td class="pe-4">
                                            <span class="badge @GetStatusBadgeClass(user.ActivityStatus) rounded-pill shadow-sm">
                                                @user.ActivityStatus
                                            </span>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="text-center py-5">
                        <i class="bi bi-check-circle text-success opacity-50" style="font-size: 3rem;"></i>
                        <p class="mt-3 text-secondary">All users are active!</p>
                    </div>
                }
            </div>
        </div>
    }
    else if (activeTab == "logins")
    {
        <!-- Login History -->
        <div class="glass-panel p-0 overflow-hidden">
            <div class="p-4 border-bottom bg-light bg-opacity-50">
                <h5 class="mb-0 fw-bold text-dark"><i class="bi bi-box-arrow-in-right me-2 text-primary"></i>Recent Login Attempts</h5>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="bg-light">
                            <tr>
                                <th class="ps-4 py-3 text-secondary border-0">Time</th>
                                <th class="py-3 text-secondary border-0">User</th>
                                <th class="py-3 text-secondary border-0">Status</th>
                                <th class="py-3 text-secondary border-0">IP Address</th>
                                <th class="pe-4 py-3 text-secondary border-0">Location</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var login in loginAttempts.Take(50))
                            {
                                <tr class="@(!login.IsSuccessful ? "table-danger bg-danger-subtle bg-opacity-10" : "")">
                                    <td class="ps-4">
                                        <div class="text-dark">@login.AttemptTime.ToString("MMM dd, HH:mm:ss")</div>
                                        <small class="text-muted">@GetTimeAgo(login.AttemptTime)</small>
                                    </td>
                                    <td>
                                        <div class="text-dark">@(login.UserFullName ?? "Unknown")</div>
                                        <small class="text-secondary">@login.Email</small>
                                    </td>
                                    <td>
                                        @if (login.IsSuccessful)
                                        {
                                            <span class="badge bg-success rounded-pill shadow-sm">
                                                <i class="bi bi-check-circle me-1"></i> Success
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-danger rounded-pill shadow-sm">
                                                <i class="bi bi-x-circle me-1"></i> Failed
                                            </span>
                                            @if (!string.IsNullOrEmpty(login.FailureReason))
                                            {
                                                <div class="small text-danger mt-1">@login.FailureReason</div>
                                            }
                                        }
                                    </td>
                                    <td><code class="text-primary bg-light px-2 py-1 rounded">@login.IPAddress</code></td>
                                    <td class="pe-4 text-secondary">@(login.Location ?? "-")</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
    else if (activeTab == "failed")
    {
        <!-- Failed Login Attempts -->
        <div class="glass-panel p-0 overflow-hidden">
            <div class="p-4 border-bottom bg-light bg-opacity-50 d-flex justify-content-between align-items-center">
                <h5 class="mb-0 fw-bold text-dark">
                    <i class="bi bi-shield-exclamation me-2 text-danger"></i>
                    Failed Login Attempts (Last 24 Hours)
                </h5>
                <span class="badge bg-danger rounded-pill shadow-sm">@failedLogins.Count attempts</span>
            </div>
            <div class="card-body p-0">
                @if (failedLogins.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead class="bg-light">
                                <tr>
                                    <th class="ps-4 py-3 text-secondary border-0">Time</th>
                                    <th class="py-3 text-secondary border-0">Email</th>
                                    <th class="py-3 text-secondary border-0">Failure Reason</th>
                                    <th class="py-3 text-secondary border-0">IP Address</th>
                                    <th class="pe-4 py-3 text-secondary border-0">Location</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var login in failedLogins)
                                {
                                    <tr>
                                        <td class="ps-4">
                                            <div class="text-dark">@login.AttemptTime.ToString("MMM dd, HH:mm:ss")</div>
                                            <small class="text-muted">@GetTimeAgo(login.AttemptTime)</small>
                                        </td>
                                        <td>
                                            <code class="text-dark">@login.Email</code>
                                        </td>
                                        <td>
                                            <span class="badge bg-danger-subtle text-danger border border-danger-subtle">
                                                @(login.FailureReason ?? "Unknown")
                                            </span>
                                        </td>
                                        <td><code class="text-primary bg-light px-2 py-1 rounded">@login.IPAddress</code></td>
                                        <td class="pe-4 text-secondary">@(login.Location ?? "-")</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="text-center py-5">
                        <i class="bi bi-shield-check text-success opacity-50" style="font-size: 3rem;"></i>
                        <p class="mt-3 text-secondary">No failed login attempts in the last 24 hours</p>
                    </div>
                }
            </div>
        </div>
    }
}

<style>
    .user-avatar {
        width: 36px;
        height: 36px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: 600;
        font-size: 0.75rem;
        color: white;
    }

    .avatar-online {
        background: linear-gradient(135deg, #198754, #157347);
        box-shadow: 0 0 0 2px white, 0 0 0 4px #198754;
    }

    .avatar-offline {
        background: linear-gradient(135deg, #6c757d, #5a6268);
    }
</style>

@code {
    private UserActivityStatistics statistics = new();
    private List<UserActivitySummary> userActivities = new();
    private List<UserActivitySummary> inactiveUsers = new();
    private List<LoginAttempt> loginAttempts = new();
    private List<LoginAttempt> failedLogins = new();

    private bool isLoading = true;
    private string activeTab = "users";
    private string searchTerm = "";

    private enum TabState { Users, Inactive, Logins, Failed }

    // Admin access level filtering
    private string adminAccessLevel = "National";
    private Guid? adminRegionId;
    private Guid? adminDistrictId;

    private List<UserActivitySummary> filteredActivities => userActivities
        .Where(u => string.IsNullOrEmpty(searchTerm) ||
                   u.FullName.Contains(searchTerm, StringComparison.OrdinalIgnoreCase) ||
                   u.Email.Contains(searchTerm, StringComparison.OrdinalIgnoreCase))
        .OrderByDescending(u => u.LastLogin)
        .ToList();

    protected override async Task OnInitializedAsync()
    {
        await DetermineAccessLevel();
        await LoadData();
    }

    private async Task DetermineAccessLevel()
    {
        var authState = await AuthStateProvider.GetAuthenticationStateAsync();
        var user = authState.User;

        adminAccessLevel = user.Claims.FirstOrDefault(c => c.Type == "AccessLevel")?.Value ?? "National";

        var regionIdClaim = user.Claims.FirstOrDefault(c => c.Type == "RegionID")?.Value;
        if (Guid.TryParse(regionIdClaim, out var regionId))
        {
            adminRegionId = regionId;
        }

        var districtIdClaim = user.Claims.FirstOrDefault(c => c.Type == "DistrictID")?.Value;
        if (Guid.TryParse(districtIdClaim, out var districtId))
        {
            adminDistrictId = districtId;
        }
    }

    private async Task LoadData()
    {
        isLoading = true;
        try
        {
            var statsTask = ActivityService.GetActivityStatisticsAsync(adminAccessLevel, adminRegionId, adminDistrictId);
            var activitiesTask = ActivityService.GetUserActivitiesAsync(adminAccessLevel, adminRegionId, adminDistrictId);
            var inactiveTask = ActivityService.GetInactiveUsersAsync(30, adminAccessLevel, adminRegionId, adminDistrictId);
            var loginsTask = ActivityService.GetLoginAttemptsAsync();
            var failedTask = ActivityService.GetFailedLoginAttemptsAsync(24);

            await Task.WhenAll(statsTask, activitiesTask, inactiveTask, loginsTask, failedTask);

            statistics = await statsTask;
            userActivities = await activitiesTask;
            inactiveUsers = await inactiveTask;
            loginAttempts = await loginsTask;
            failedLogins = await failedTask;
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task RefreshData()
    {
        await LoadData();
    }

    private void SetTab(TabState tab)
    {
        activeTab = tab.ToString().ToLower();
    }

    private string GetInitials(string name)
    {
        var parts = name.Split(' ', StringSplitOptions.RemoveEmptyEntries);
        if (parts.Length >= 2)
            return $"{parts[0][0]}{parts[1][0]}".ToUpper();
        return parts.Length > 0 ? parts[0][..Math.Min(2, parts[0].Length)].ToUpper() : "??";
    }

    private string GetAccessLevelBadgeClass(string level) => level switch
    {
        "National" => "bg-info",
        "Regional" => "bg-primary",
        "District" => "bg-warning text-dark",
        _ => "bg-secondary"
    };

    private string GetStatusBadgeClass(string status) => status switch
    {
        "Active" => "bg-success",
        "Inactive" => "bg-warning text-dark",
        "Dormant" => "bg-danger",
        _ => "bg-secondary"
    };

    private string GetTimeAgo(DateTime time)
    {
        var diff = DateTime.UtcNow - time;
        if (diff.TotalMinutes < 1) return "just now";
        if (diff.TotalMinutes < 60) return $"{(int)diff.TotalMinutes}m ago";
        if (diff.TotalHours < 24) return $"{(int)diff.TotalHours}h ago";
        if (diff.TotalDays < 30) return $"{(int)diff.TotalDays}d ago";
        return time.ToString("MMM dd");
    }
}
