@page "/deliveries"
@attribute [Authorize]
@inject IAnalyticsService AnalyticsService
@inject IDashboardService DashboardService
@inject AuthenticationStateProvider AuthStateProvider

<PageTitle>Deliveries - MAAME DROMO Monitoring</PageTitle>

<div class="dashboard-header mb-4">
    <div class="d-flex justify-content-between align-items-center">
        <div>
            <h2 class="mb-1 text-gradient-primary">
                <i class="bi bi-clipboard2-pulse me-2"></i>
                Delivery Analytics
            </h2>
            <p class="text-secondary mb-0">
                @accessLevelText | @DateTime.Now.ToString("dddd, MMMM dd, yyyy")
            </p>
        </div>
        <div class="d-flex gap-2">
            <button class="btn btn-outline-secondary shadow-sm" @onclick="RefreshData">
                <i class="bi bi-arrow-clockwise me-1"></i> Refresh
            </button>
        </div>
    </div>
</div>

@if (isLoading)
{
    <div class="text-center py-5">
        <div class="spinner-border text-primary" role="status">
            <span class="visually-hidden">Loading...</span>
        </div>
        <p class="mt-3 text-secondary">Loading delivery analytics...</p>
    </div>
}
else
{
    <!-- Summary Cards -->
    <div class="row g-4 mb-4">
        <div class="col-md-6 col-lg-3">
            <div class="card stat-card border-0 h-100 hover-lift">
                <div class="card-body p-4">
                    <div class="d-flex justify-content-between align-items-start">
                        <div>
                            <p class="text-secondary text-uppercase tracking-wide mb-1" style="font-size: 0.75rem;">Today's Deliveries</p>
                            <h3 class="mb-0 fw-bold text-dark">@summary?.TotalDeliveriesToday</h3>
                        </div>
                        <div class="stat-icon bg-primary-subtle text-primary rounded-circle p-3">
                            <i class="bi bi-calendar-day fs-4"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-6 col-lg-3">
            <div class="card stat-card border-0 h-100 hover-lift">
                <div class="card-body p-4">
                    <div class="d-flex justify-content-between align-items-start">
                        <div>
                            <p class="text-secondary text-uppercase tracking-wide mb-1" style="font-size: 0.75rem;">This Month</p>
                            <h3 class="mb-0 fw-bold text-dark">@summary?.TotalDeliveriesThisMonth</h3>
                        </div>
                        <div class="stat-icon bg-success-subtle text-success rounded-circle p-3">
                            <i class="bi bi-calendar-month fs-4"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-6 col-lg-3">
            <div class="card stat-card border-0 h-100 hover-lift">
                <div class="card-body p-4">
                    <div class="d-flex justify-content-between align-items-start">
                        <div>
                            <p class="text-secondary text-uppercase tracking-wide mb-1" style="font-size: 0.75rem;">This Year</p>
                            <h3 class="mb-0 fw-bold text-dark">@summary?.TotalDeliveriesThisYear</h3>
                        </div>
                        <div class="stat-icon bg-info-subtle text-info rounded-circle p-3">
                            <i class="bi bi-calendar fs-4"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-6 col-lg-3">
            <div class="card stat-card border-0 h-100 hover-lift">
                <div class="card-body p-4">
                    <div class="d-flex justify-content-between align-items-start">
                        <div>
                            <p class="text-secondary text-uppercase tracking-wide mb-1" style="font-size: 0.75rem;">Active Labors</p>
                            <h3 class="mb-0 fw-bold text-dark">@summary?.ActiveLabors</h3>
                        </div>
                        <div class="stat-icon bg-warning-subtle text-warning rounded-circle p-3">
                            <i class="bi bi-hourglass-split fs-4"></i>
                        </div>
                    </div>
                    <div class="mt-3">
                        <small class="text-danger fw-semibold">
                            <i class="bi bi-exclamation-triangle me-1"></i>High Risk: @summary?.HighRiskLabors
                        </small>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Delivery Mode Distribution -->
    <div class="row g-4 mb-4">
        <div class="col-lg-6">
            <div class="glass-panel h-100 p-4">
                <div class="d-flex align-items-center mb-4 border-bottom pb-3">
                    <h5 class="mb-0 fw-bold text-dark">
                        <i class="bi bi-pie-chart me-2 text-primary"></i>
                        Delivery Mode Distribution
                    </h5>
                </div>
                <div>
                    @if (deliveryModes != null)
                    {
                        <div class="delivery-mode-legend">
                            <div class="row g-3">
                                <div class="col-6">
                                    <div class="p-3 rounded bg-success-subtle bg-opacity-50">
                                        <div class="d-flex justify-content-between align-items-center">
                                            <span class="fw-semibold text-success small">Normal Vaginal</span>
                                            <span class="badge bg-success rounded-pill">@deliveryModes.NormalVaginal</span>
                                        </div>
                                        <div class="progress mt-2" style="height: 6px; border-radius: 3px;">
                                            <div class="progress-bar bg-success" style="width: @deliveryModes.NormalVaginalPercent%; border-radius: 3px;"></div>
                                        </div>
                                        <small class="text-secondary mt-1 d-block">@deliveryModes.NormalVaginalPercent.ToString("F1")%</small>
                                    </div>
                                </div>
                                <div class="col-6">
                                    <div class="p-3 rounded bg-info-subtle bg-opacity-50">
                                        <div class="d-flex justify-content-between align-items-center">
                                            <span class="fw-semibold text-info small">Assisted Vaginal</span>
                                            <span class="badge bg-info rounded-pill">@deliveryModes.AssistedVaginal</span>
                                        </div>
                                        <div class="progress mt-2" style="height: 6px; border-radius: 3px;">
                                            <div class="progress-bar bg-info" style="width: @(deliveryModes.Total > 0 ? (double)deliveryModes.AssistedVaginal / deliveryModes.Total * 100 : 0)%; border-radius: 3px;"></div>
                                        </div>
                                        <small class="text-secondary mt-1 d-block">@(deliveryModes.Total > 0 ? ((double)deliveryModes.AssistedVaginal / deliveryModes.Total * 100).ToString("F1") : "0")%</small>
                                    </div>
                                </div>
                                <div class="col-6">
                                    <div class="p-3 rounded bg-warning-subtle bg-opacity-50">
                                        <div class="d-flex justify-content-between align-items-center">
                                            <span class="fw-semibold text-warning small">Elective C-Section</span>
                                            <span class="badge bg-warning rounded-pill">@deliveryModes.ElectiveCaesarean</span>
                                        </div>
                                        <div class="progress mt-2" style="height: 6px; border-radius: 3px;">
                                            <div class="progress-bar bg-warning" style="width: @(deliveryModes.Total > 0 ? (double)deliveryModes.ElectiveCaesarean / deliveryModes.Total * 100 : 0)%; border-radius: 3px;"></div>
                                        </div>
                                        <small class="text-secondary mt-1 d-block">@(deliveryModes.Total > 0 ? ((double)deliveryModes.ElectiveCaesarean / deliveryModes.Total * 100).ToString("F1") : "0")%</small>
                                    </div>
                                </div>
                                <div class="col-6">
                                    <div class="p-3 rounded bg-danger-subtle bg-opacity-50">
                                        <div class="d-flex justify-content-between align-items-center">
                                            <span class="fw-semibold text-danger small">Emergency C-Section</span>
                                            <span class="badge bg-danger rounded-pill">@deliveryModes.EmergencyCaesarean</span>
                                        </div>
                                        <div class="progress mt-2" style="height: 6px; border-radius: 3px;">
                                            <div class="progress-bar bg-danger" style="width: @(deliveryModes.Total > 0 ? (double)deliveryModes.EmergencyCaesarean / deliveryModes.Total * 100 : 0)%; border-radius: 3px;"></div>
                                        </div>
                                        <small class="text-secondary mt-1 d-block">@(deliveryModes.Total > 0 ? ((double)deliveryModes.EmergencyCaesarean / deliveryModes.Total * 100).ToString("F1") : "0")%</small>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                    else
                    {
                        <p class="text-secondary text-center mb-0">No delivery data available</p>
                    }
                </div>
            </div>
        </div>

        <div class="col-lg-6">
            <div class="glass-panel h-100 p-4">
                <div class="d-flex align-items-center mb-4 border-bottom pb-3">
                    <h5 class="mb-0 fw-bold text-dark">
                        <i class="bi bi-clipboard-data me-2 text-primary"></i>
                        Caesarean Section Analysis
                    </h5>
                </div>
                <div>
                    @if (deliveryModes != null)
                    {
                        <div class="text-center mb-4">
                            <div class="display-4 fw-bold @(deliveryModes.CaesareanPercent > 15 ? "text-warning" : "text-success") mb-2">
                                @deliveryModes.CaesareanPercent.ToString("F1")%
                            </div>
                            <p class="text-secondary mb-3">Overall C-Section Rate</p>
                            @if (deliveryModes.CaesareanPercent > 15)
                            {
                                <div class="alert alert-warning py-2 mb-0 d-inline-block px-4 rounded-pill border-0 bg-warning-subtle text-warning-emphasis">
                                    <i class="bi bi-exclamation-triangle me-1"></i>
                                    Above WHO recommended rate of 10-15%
                                </div>
                            }
                            else
                            {
                                <div class="alert alert-success py-2 mb-0 d-inline-block px-4 rounded-pill border-0 bg-success-subtle text-success-emphasis">
                                    <i class="bi bi-check-circle me-1"></i>
                                    Within WHO recommended rate
                                </div>
                            }
                        </div>
                        <hr class="text-secondary opacity-25" />
                        <div class="row text-center">
                            <div class="col-6 border-end">
                                <h4 class="mb-1 fw-bold text-dark">@deliveryModes.ElectiveCaesarean</h4>
                                <small class="text-uppercase tracking-wide text-secondary" style="font-size: 0.7rem;">Elective</small>
                            </div>
                            <div class="col-6">
                                <h4 class="mb-1 fw-bold text-dark">@deliveryModes.EmergencyCaesarean</h4>
                                <small class="text-uppercase tracking-wide text-secondary" style="font-size: 0.7rem;">Emergency</small>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Delivery Outcomes Stats -->
    <div class="row g-4 mb-4">
        <div class="col-12">
            <div class="glass-panel p-0 overflow-hidden">
                <div class="d-flex align-items-center p-4 bg-light bg-opacity-25 border-bottom">
                    <h5 class="mb-0 fw-bold text-dark">
                        <i class="bi bi-bar-chart me-2 text-primary"></i>
                        Delivery Outcomes by Category
                    </h5>
                </div>
                <div class="p-0">
                    @if (deliveryOutcomes?.Any() == true)
                    {
                        <div class="table-responsive">
                            <table class="table table-hover mb-0 align-middle">
                                <thead class="bg-light">
                                    <tr>
                                        <th class="ps-4">Category</th>
                                        <th>Count</th>
                                        <th>Percentage</th>
                                        <th class="pe-4">Distribution</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var outcome in deliveryOutcomes)
                                    {
                                        <tr>
                                            <td class="ps-4 fw-semibold text-dark">@outcome.Category</td>
                                            <td class="fw-bold">@outcome.Count</td>
                                            <td>@outcome.Percentage.ToString("F1")%</td>
                                            <td class="pe-4" style="width: 40%;">
                                                <div class="progress" style="height: 10px; border-radius: 5px;">
                                                    <div class="progress-bar @GetProgressBarClass(outcome.Category)"
                                                         role="progressbar"
                                                         style="width: @outcome.Percentage%; border-radius: 5px;">
                                                    </div>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="bi bi-inbox fs-1 text-secondary opacity-50"></i>
                            <p class="text-secondary mt-2 mb-0">No delivery outcome data available</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Delivery Trend -->
    <div class="row g-4">
        <div class="col-12">
            <div class="glass-panel p-0 overflow-hidden">
                <div class="d-flex align-items-center p-4 bg-light bg-opacity-25 border-bottom">
                    <h5 class="mb-0 fw-bold text-dark">
                        <i class="bi bi-graph-up me-2 text-primary"></i>
                        Delivery Trend (Last 30 Days)
                    </h5>
                </div>
                <div class="p-0">
                    @if (deliveryTrend?.Any() == true)
                    {
                        <div class="table-responsive">
                            <table class="table table-hover mb-0 align-middle">
                                <thead class="bg-light">
                                    <tr>
                                        <th class="ps-4">Date</th>
                                        <th>Deliveries</th>
                                        <th class="pe-4">Trend</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @{
                                        var maxValue = deliveryTrend.Max(t => t.Value);
                                    }
                                    @foreach (var trend in deliveryTrend.OrderByDescending(t => t.Date).Take(10))
                                    {
                                        <tr>
                                            <td class="ps-4 text-secondary">@trend.Date.ToString("MMM dd, yyyy")</td>
                                            <td class="fw-bold text-dark">@trend.Value</td>
                                            <td class="pe-4" style="width: 50%;">
                                                <div class="d-flex align-items-center">
                                                    <div class="progress flex-grow-1" style="height: 8px; border-radius: 4px;">
                                                        <div class="progress-bar bg-primary"
                                                             style="width: @(maxValue > 0 ? (double)trend.Value / maxValue * 100 : 0)%; border-radius: 4px;">
                                                        </div>
                                                    </div>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="bi bi-graph-up fs-1 text-secondary opacity-50"></i>
                            <p class="text-secondary mt-2 mb-0">No trend data available</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
}

@code {
    private DashboardSummary? summary;
    private DeliveryModeDistribution? deliveryModes;
    private List<DeliveryOutcomeStats>? deliveryOutcomes;
    private List<TrendData>? deliveryTrend;
    private bool isLoading = true;
    private string accessLevel = "District";
    private string accessLevelText = "District View";

    protected override async Task OnInitializedAsync()
    {
        await DetermineAccessLevel();
        await LoadData();
    }

    private async Task DetermineAccessLevel()
    {
        var authState = await AuthStateProvider.GetAuthenticationStateAsync();
        var user = authState.User;

        accessLevel = user.Claims.FirstOrDefault(c => c.Type == "AccessLevel")?.Value ?? "District";
        accessLevelText = accessLevel switch
        {
            "National" => "National Overview",
            "Regional" => "Regional View",
            "District" => "District View",
            _ => "Dashboard"
        };
    }

    private async Task LoadData()
    {
        isLoading = true;
        try
        {
            var filter = await GetDashboardFilter();

            summary = await DashboardService.GetDashboardSummaryAsync(filter);
            deliveryModes = await DashboardService.GetDeliveryModeDistributionAsync(filter);
            deliveryOutcomes = await AnalyticsService.GetDeliveryOutcomeStatsAsync(filter);
            deliveryTrend = await DashboardService.GetDeliveryTrendAsync(filter);
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading delivery data: {ex.Message}");
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task<DashboardFilter> GetDashboardFilter()
    {
        var filter = new DashboardFilter();
        var authState = await AuthStateProvider.GetAuthenticationStateAsync();
        var user = authState.User;

        if (accessLevel == "Regional")
        {
            var regionIdClaim = user.Claims.FirstOrDefault(c => c.Type == "RegionID")?.Value;
            if (Guid.TryParse(regionIdClaim, out var regionId))
                filter.RegionID = regionId;
        }
        else if (accessLevel == "District")
        {
            var districtIdClaim = user.Claims.FirstOrDefault(c => c.Type == "DistrictID")?.Value;
            if (Guid.TryParse(districtIdClaim, out var districtId))
                filter.DistrictID = districtId;
        }

        return filter;
    }

    private async Task RefreshData()
    {
        await LoadData();
    }

    private string GetProgressBarClass(string category)
    {
        return category.ToLower() switch
        {
            var c when c.Contains("normal") || c.Contains("vaginal") => "bg-success",
            var c when c.Contains("assisted") => "bg-info",
            var c when c.Contains("elective") => "bg-warning",
            var c when c.Contains("emergency") => "bg-danger",
            _ => "bg-primary"
        };
    }
}
