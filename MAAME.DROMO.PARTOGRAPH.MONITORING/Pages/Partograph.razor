@page "/partograph/{PartographId:guid}"
@attribute [Authorize]
@inject ILiveLaborService LiveLaborService
@inject IEnhancedAlertService AlertService
@inject IPredictiveAnalyticsService PredictiveService
@inject NavigationManager Navigation
@using MAAME.DROMO.PARTOGRAPH.MONITORING.Components.Clinical

<PageTitle>Partograph Details - MAAME DROMO Monitoring</PageTitle>

@if (isLoading)
{
    <div class="text-center py-5">
        <div class="spinner-border text-primary" role="status">
            <span class="visually-hidden">Loading...</span>
        </div>
        <p class="mt-3 text-muted">Loading partograph details...</p>
    </div>
}
else if (laborCase == null)
{
    <div class="alert alert-warning">
        <i class="bi bi-exclamation-triangle me-2"></i>
        Partograph not found or no longer active.
        <a href="/live-labor" class="alert-link ms-2">Return to Live Labour Board</a>
    </div>
}
else
{
<!-- Header -->
    <div class="dashboard-header mb-4">
        <div class="d-flex justify-content-between align-items-center">
            <div class="d-flex align-items-center">
                <button class="btn btn-white border shadow-sm me-3 hover-lift rounded-circle" @onclick="GoBack" style="width: 40px; height: 40px;">
                    <i class="bi bi-arrow-left"></i>
                </button>
                <div>
                    <h2 class="mb-1 text-gradient-primary fw-bold">
                        <span class="risk-indicator @GetRiskClass(laborCase.RiskLevel) me-2 shadow-sm"></span>
                        @laborCase.PatientName
                    </h2>
                    <p class="text-secondary mb-0">
                        @laborCase.HospitalNumber | @laborCase.Gravida @laborCase.Parity | @laborCase.Age yrs
                    </p>
                </div>
            </div>
            <div class="d-flex gap-2 align-items-center">
                <span class="badge @GetRiskBadgeClass(laborCase.RiskLevel) fs-6 py-2 px-3 shadow-sm rounded-pill">
                    @laborCase.RiskLevel
                </span>
                <button class="btn btn-white border shadow-sm hover-lift" @onclick="RefreshData">
                    <i class="bi bi-arrow-clockwise me-1"></i> Refresh
                </button>
            </div>
        </div>
    </div>

    <!-- Summary Cards -->
    <div class="row g-3 mb-4">
        <div class="col-md-3">
            <div class="stat-card p-4 h-100 position-relative hover-lift">
                <div class="d-flex align-items-center mb-3">
                    <div class="icon-box bg-primary-subtle text-primary me-3 rounded-circle p-2 shadow-sm d-flex align-items-center justify-content-center" style="width: 40px; height: 40px;">
                        <i class="bi bi-hospital fs-5"></i>
                    </div>
                    <span class="text-secondary text-uppercase fw-bold small">Facility</span>
                </div>
                <h6 class="mb-1 fw-bold text-dark text-truncate">@laborCase.FacilityName</h6>
                <small class="text-secondary">@laborCase.DistrictName, @laborCase.RegionName</small>
            </div>
        </div>
        <div class="col-md-3">
            <div class="stat-card p-4 h-100 position-relative hover-lift">
                <div class="d-flex align-items-center mb-3">
                    <div class="icon-box bg-info-subtle text-info me-3 rounded-circle p-2 shadow-sm d-flex align-items-center justify-content-center" style="width: 40px; height: 40px;">
                        <i class="bi bi-clock fs-5"></i>
                    </div>
                    <span class="text-secondary text-uppercase fw-bold small">Duration</span>
                </div>
                <h4 class="mb-0 fw-bold text-dark">@FormatDuration(laborCase.LaborDuration)</h4>
                <small class="text-secondary">Started: @(laborCase.LaborStartTime?.ToString("HH:mm") ?? "N/A")</small>
            </div>
        </div>
        <div class="col-md-3">
            <div class="stat-card p-4 h-100 position-relative hover-lift">
                <div class="d-flex align-items-center mb-3">
                    <div class="icon-box bg-success-subtle text-success me-3 rounded-circle p-2 shadow-sm d-flex align-items-center justify-content-center" style="width: 40px; height: 40px;">
                        <i class="bi bi-graph-up fs-5"></i>
                    </div>
                    <span class="text-secondary text-uppercase fw-bold small">Stage</span>
                </div>
                <h5 class="mb-1 fw-bold text-dark">@laborCase.LaborStage</h5>
                <small class="text-secondary">Dilatation: @laborCase.CurrentDilatation cm</small>
            </div>
        </div>
        <div class="col-md-3">
            <div class="stat-card p-4 h-100 position-relative hover-lift">
                <div class="d-flex align-items-center mb-3">
                    <div class="icon-box bg-warning-subtle text-warning me-3 rounded-circle p-2 shadow-sm d-flex align-items-center justify-content-center" style="width: 40px; height: 40px;">
                        <i class="bi bi-person fs-5"></i>
                    </div>
                    <span class="text-secondary text-uppercase fw-bold small">Midwife</span>
                </div>
                <h6 class="mb-1 fw-bold text-dark">@laborCase.AssignedMidwife</h6>
                <small class="text-secondary">Assessment: @GetTimeAgo(laborCase.LastAssessmentTime)</small>
            </div>
        </div>
    </div>

    <div class="row g-4">
        <!-- Left Column - Vitals & Progress -->
        <div class="col-lg-8">
            <!-- WHO Labour Care Guide -->
            <div class="mb-4">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h5 class="mb-0 fw-bold text-dark"><i class="bi bi-journal-medical me-2 text-primary"></i>WHO Labour Care Guide</h5>
                    <div class="d-flex gap-2">
                        <span class="badge bg-white text-secondary border shadow-sm rounded-pill"><i class="bi bi-clock me-1"></i>Active Phase</span>
                        @* <span class="badge bg-primary-subtle text-primary border border-primary-subtle rounded-pill">2020 Edition</span> *@
                    </div>
                </div>
                <WHOLaborCareGuide Data="@partographData" />
            </div>
        </div>

        <!-- Right Column - Alerts & Risk -->
        <div class="col-lg-4">
            <!-- Active Alerts -->
            <div class="glass-panel mb-4 p-4">
                <div class="d-flex justify-content-between align-items-center mb-4 border-bottom pb-3">
                    <h5 class="mb-0 fw-bold text-dark"><i class="bi bi-exclamation-triangle me-2 text-danger"></i>Active Alerts</h5>
                    <span class="badge bg-danger rounded-pill shadow-sm">@laborCase.AlertCount</span>
                </div>
                <div class="card-body p-0">
                    @if (laborCase.ActiveAlerts.Any())
                    {
                        @foreach (var alert in laborCase.ActiveAlerts)
                        {
                            <div class="alert alert-danger d-flex align-items-center mb-2 py-3 border-0 shadow-sm rounded-3 hover-lift" style="background: #fff5f5;">
                                <i class="bi bi-exclamation-circle me-3 fs-5"></i>
                                <span class="fw-medium text-dark">@alert</span>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="text-center py-4">
                            <i class="bi bi-check-circle fs-1 text-success opacity-50"></i>
                            <p class="mt-2 mb-0 text-secondary">No active alerts</p>
                        </div>
                    }
                </div>
            </div>

            <!-- Risk Prediction -->
            @if (riskPrediction != null)
            {
                <div class="glass-panel mb-4 p-4">
                    <div class="mb-4 border-bottom pb-3">
                        <h5 class="mb-0 fw-bold text-dark"><i class="bi bi-shield-exclamation me-2 text-warning"></i>Risk Assessment</h5>
                    </div>
                    <div class="card-body p-0">
                        <div class="text-center mb-4">
                            <div class="risk-score-circle @GetRiskScoreClass(riskPrediction.OverallRiskScore) shadow-sm">
                                <span class="risk-score-value">@riskPrediction.OverallRiskScore.ToString("F0")</span>
                                <span class="risk-score-label">Risk Score</span>
                            </div>
                        </div>
                        <div class="risk-factors">
                            @foreach (var factor in riskPrediction.RiskFactors.Take(5))
                            {
                                <div class="risk-factor-item mb-3">
                                    <div class="d-flex justify-content-between align-items-center mb-1">
                                        <span class="small fw-bold text-dark">@factor.Name</span>
                                        <span class="badge @GetSeverityBadgeClass(factor.Severity) badge-sm rounded-pill shadow-sm">@factor.Severity</span>
                                    </div>
                                    <div class="progress shadow-sm" style="height: 6px; border-radius: 3px;">
                                        <div class="progress-bar @GetSeverityBarClass(factor.Severity)" style="width: @(factor.Contribution * 100)%"></div>
                                    </div>
                                </div>
                            }
                        </div>
                        @if (riskPrediction.Recommendations.Any())
                        {
                            <hr class="opacity-25 my-3" />
                            <h6 class="mb-3 fw-bold text-primary"><i class="bi bi-lightbulb me-2"></i>Recommendations</h6>
                            <ul class="small mb-0 ps-3 text-secondary">
                                @foreach (var rec in riskPrediction.Recommendations.Take(3))
                                {
                                    <li class="mb-2">@rec</li>
                                }
                            </ul>
                        }
                    </div>
                </div>
            }

            <!-- Measurement Schedule -->
            <div class="glass-panel p-4">
                <div class="mb-4 border-bottom pb-3">
                    <h5 class="mb-0 fw-bold text-dark"><i class="bi bi-calendar-check me-2 text-info"></i>Next Measurements</h5>
                </div>
                <div class="card-body p-0">
                    <div class="measurement-schedule">
                        <div class="measurement-item @(laborCase.IsFHRDue ? "due" : "") hover-lift shadow-sm">
                            <i class="bi bi-heart-pulse me-3 fs-5 text-danger"></i>
                            <span class="fw-medium text-dark">FHR</span>
                            <span class="ms-auto badge @(laborCase.IsFHRDue ? "bg-danger" : "bg-secondary") rounded-pill shadow-sm">
                                @(laborCase.IsFHRDue ? "Now" : $"In {laborCase.MinutesUntilNextMeasurement} min")
                            </span>
                        </div>
                        <div class="measurement-item @(laborCase.IsBPDue ? "due" : "") hover-lift shadow-sm">
                            <i class="bi bi-droplet me-3 fs-5 text-primary"></i>
                            <span class="fw-medium text-dark">Blood Pressure</span>
                            <span class="ms-auto badge @(laborCase.IsBPDue ? "bg-danger" : "bg-secondary") rounded-pill shadow-sm">
                                @(laborCase.IsBPDue ? "Now" : "As scheduled")
                            </span>
                        </div>
                        <div class="measurement-item @(laborCase.IsDilatationDue ? "due" : "") hover-lift shadow-sm">
                            <i class="bi bi-graph-up me-3 fs-5 text-success"></i>
                            <span class="fw-medium text-dark">Cervical Assessment</span>
                            <span class="ms-auto badge @(laborCase.IsDilatationDue ? "bg-danger" : "bg-secondary") rounded-pill shadow-sm">
                                @(laborCase.IsDilatationDue ? "Now" : "As scheduled")
                            </span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

<style>
    .risk-indicator {
        display: inline-block;
        width: 16px;
        height: 16px;
        border-radius: 50%;
        animation: pulse 2s infinite;
    }

    .risk-indicator.critical { background: #dc3545; box-shadow: 0 0 10px rgba(220, 53, 69, 0.5); }
    .risk-indicator.high { background: #fd7e14; box-shadow: 0 0 10px rgba(253, 126, 20, 0.5); }
    .risk-indicator.moderate { background: #ffc107; box-shadow: 0 0 10px rgba(255, 193, 7, 0.5); }
    .risk-indicator.normal { background: #28a745; box-shadow: 0 0 10px rgba(40, 167, 69, 0.5); }

    @@keyframes pulse {
        0%, 100% { opacity: 1; transform: scale(1); }
        50% { opacity: 0.7; transform: scale(1.1); }
    }

    .vital-card {
        background: white;
        border-radius: 16px;
        padding: 1.5rem;
        text-align: center;
        position: relative;
        border: 1px solid rgba(0,0,0,0.05);
        transition: all 0.2s ease-in-out;
    }

    .vital-card.vital-critical {
        background: #fff5f5;
        border-color: #dc3545;
    }

    .vital-card.vital-due {
        background: #fff8e1;
        border-color: #fd7e14;
    }

    .vital-icon {
        font-size: 1.75rem;
        color: #6c757d;
    }

    .vital-critical .vital-icon {
        color: #dc3545;
    }

    .vital-value {
        font-size: 1.5rem;
        font-weight: 800;
        color: #212529;
    }

    .vital-critical .vital-value {
        color: #dc3545;
    }

    .vital-label {
        font-size: 0.75rem;
        color: #6c757d;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        font-weight: 600;
    }

    .vital-time {
        font-size: 0.7rem;
        color: #adb5bd;
    }

    .vital-due-badge {
        position: absolute;
        top: -8px;
        right: -8px;
        background: #fd7e14;
        color: white;
        font-size: 0.65rem;
        font-weight: 700;
        padding: 4px 10px;
        border-radius: 12px;
        box-shadow: 0 2px 5px rgba(253, 126, 20, 0.3);
    }

    .station-indicator {
        padding: 1.5rem 0;
    }

    .station-scale {
        display: flex;
        justify-content: space-between;
        position: relative;
        padding: 0 15px;
    }

    .station-scale::before {
        content: '';
        position: absolute;
        top: 50%;
        left: 15px;
        right: 15px;
        height: 4px;
        background: #e9ecef;
        transform: translateY(-50%);
        border-radius: 2px;
    }

    .station-mark {
        position: relative;
        z-index: 1;
        width: 32px;
        height: 32px;
        border-radius: 50%;
        background: white;
        border: 2px solid #e9ecef;
        display: flex;
        align-items: center;
        justify-content: center;
        transition: all 0.2s;
    }

    .station-mark.active {
        background: #0d6efd;
        border-color: #0d6efd;
        color: white;
        transform: scale(1.1);
    }

    .station-value {
        font-size: 0.8rem;
        font-weight: 700;
    }

    .stage-timeline {
        display: flex;
        align-items: center;
        justify-content: space-between;
        padding: 0 10px;
    }

    .stage-item {
        display: flex;
        flex-direction: column;
        align-items: center;
        flex: 0 0 auto;
        position: relative;
        z-index: 2;
    }

    .stage-dot {
        width: 18px;
        height: 18px;
        border-radius: 50%;
        background: white;
        border: 3px solid #dee2e6;
        transition: all 0.3s;
    }

    .stage-item.active .stage-dot {
        background: white;
        border-color: #0d6efd;
        box-shadow: 0 0 0 4px rgba(13, 110, 253, 0.2);
    }

    .stage-item.completed .stage-dot {
        background: #198754;
        border-color: #198754;
    }

    .stage-label {
        font-size: 0.75rem;
        color: #6c757d;
        font-weight: 500;
        white-space: nowrap;
    }

    .stage-item.active .stage-label {
        color: #0d6efd;
        font-weight: 700;
    }

    .stage-line {
        flex: 1;
        height: 3px;
        background: #e9ecef;
        margin: 0 5px;
        margin-bottom: 24px;
        border-radius: 2px;
        position: relative;
        z-index: 1;
    }

    .stage-line.completed {
        background: #198754;
    }

    .risk-score-circle {
        width: 120px;
        height: 120px;
        border-radius: 50%;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        margin: 0 auto;
        border: 8px solid;
        background: white;
    }

    .risk-score-circle.low {
        border-color: #28a745;
        color: #28a745;
    }

    .risk-score-circle.moderate {
        border-color: #ffc107;
        color: #856404;
    }

    .risk-score-circle.high {
        border-color: #fd7e14;
        color: #fd7e14;
    }

    .risk-score-circle.critical {
        border-color: #dc3545;
        color: #dc3545;
    }

    .risk-score-value {
        font-size: 2.5rem;
        font-weight: 800;
        line-height: 1;
    }

    .risk-score-label {
        font-size: 0.7rem;
        text-transform: uppercase;
        letter-spacing: 1px;
        font-weight: 600;
        margin-top: 5px;
    }

    .measurement-item {
        display: flex;
        align-items: center;
        padding: 1rem;
        border-radius: 12px;
        margin-bottom: 0.75rem;
        background: white;
        border: 1px solid rgba(0,0,0,0.05);
        transition: all 0.2s;
    }

    .measurement-item:hover {
        transform: translateY(-2px);
    }

    .measurement-item.due {
        background: #fff3cd;
        border: 1px solid rgba(255, 193, 7, 0.5);
    }

    .badge-sm {
        font-size: 0.65rem;
        padding: 0.35em 0.6em;
    }
</style>

@code {
    [Parameter]
    public Guid PartographId { get; set; }

    private bool isLoading = true;
    private PartographDetailsDto? partographData;
    private LiveLaborCase? laborCase => partographData?.CaseInfo; // Computed property for backward compatibility
    private RiskPrediction? riskPrediction;

    protected override async Task OnInitializedAsync()
    {
        await LoadData();
    }

    private async Task LoadData()
    {
        isLoading = true;
        try
        {
            // Fetch detailed data including historical points for LCG
            var laborTask = LiveLaborService.GetPartographDetailsAsync(PartographId);
            var riskTask = PredictiveService.GetRiskPredictionAsync(PartographId);

            await Task.WhenAll(laborTask, riskTask);

            partographData = await laborTask;
            riskPrediction = await riskTask;
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task RefreshData()
    {
        await LoadData();
    }

    private void GoBack()
    {
        Navigation.NavigateTo("/live-labor");
    }

    private string GetRiskClass(string riskLevel) => riskLevel.ToLower();

    private string GetRiskBadgeClass(string riskLevel) => riskLevel switch
    {
        "Critical" => "bg-danger",
        "High" => "bg-warning text-dark",
        "Moderate" => "bg-info",
        _ => "bg-success"
    };

    private string GetProgressBarClass(string riskLevel) => riskLevel switch
    {
        "Critical" => "bg-danger",
        "High" => "bg-warning",
        _ => "bg-primary"
    };

    private bool IsVitalCritical(int? value, string type)
    {
        if (!value.HasValue) return false;
        return type switch
        {
            "FHR" => value < 110 || value > 160,
            "BP" => value > 140,
            _ => false
        };
    }

    private string FormatDuration(TimeSpan duration)
    {
        if (duration.TotalHours >= 1)
            return $"{(int)duration.TotalHours}h {duration.Minutes}m";
        return $"{duration.Minutes}m";
    }

    private string GetTimeAgo(DateTime? time)
    {
        if (!time.HasValue) return "N/A";
        var diff = DateTime.UtcNow - time.Value;
        if (diff.TotalMinutes < 1) return "just now";
        if (diff.TotalMinutes < 60) return $"{(int)diff.TotalMinutes}m ago";
        if (diff.TotalHours < 24) return $"{(int)diff.TotalHours}h ago";
        return $"{(int)diff.TotalDays}d ago";
    }

    private string GetRiskScoreClass(double score)
    {
        if (score >= 75) return "critical";
        if (score >= 50) return "high";
        if (score >= 25) return "moderate";
        return "low";
    }

    private string GetSeverityBadgeClass(string severity) => severity switch
    {
        "High" => "bg-danger",
        "Medium" => "bg-warning text-dark",
        _ => "bg-info"
    };

    private string GetSeverityBarClass(string severity) => severity switch
    {
        "High" => "bg-danger",
        "Medium" => "bg-warning",
        _ => "bg-info"
    };
}
