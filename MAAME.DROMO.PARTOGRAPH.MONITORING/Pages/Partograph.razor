@page "/partograph/{PartographId:guid}"
@attribute [Authorize]
@inject ILiveLaborService LiveLaborService
@inject IEnhancedAlertService AlertService
@inject IPredictiveAnalyticsService PredictiveService
@inject NavigationManager Navigation

<PageTitle>Partograph Details - MAAME DROMO Monitoring</PageTitle>

@if (isLoading)
{
    <div class="text-center py-5">
        <div class="spinner-border text-primary" role="status">
            <span class="visually-hidden">Loading...</span>
        </div>
        <p class="mt-3 text-muted">Loading partograph details...</p>
    </div>
}
else if (laborCase == null)
{
    <div class="alert alert-warning">
        <i class="bi bi-exclamation-triangle me-2"></i>
        Partograph not found or no longer active.
        <a href="/live-labor" class="alert-link ms-2">Return to Live Labour Board</a>
    </div>
}
else
{
    <!-- Header -->
    <div class="dashboard-header mb-4">
        <div class="d-flex justify-content-between align-items-center">
            <div class="d-flex align-items-center">
                <button class="btn btn-outline-secondary me-3" @onclick="GoBack">
                    <i class="bi bi-arrow-left"></i>
                </button>
                <div>
                    <h2 class="mb-1">
                        <span class="risk-indicator @GetRiskClass(laborCase.RiskLevel) me-2"></span>
                        @laborCase.PatientName
                    </h2>
                    <p class="text-muted mb-0">
                        @laborCase.HospitalNumber | @laborCase.Gravida @laborCase.Parity | @laborCase.Age yrs
                    </p>
                </div>
            </div>
            <div class="d-flex gap-2 align-items-center">
                <span class="badge @GetRiskBadgeClass(laborCase.RiskLevel) fs-6 py-2 px-3">
                    @laborCase.RiskLevel
                </span>
                <button class="btn btn-outline-secondary" @onclick="RefreshData">
                    <i class="bi bi-arrow-clockwise"></i>
                </button>
            </div>
        </div>
    </div>

    <!-- Summary Cards -->
    <div class="row g-3 mb-4">
        <div class="col-md-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex align-items-center mb-2">
                        <i class="bi bi-hospital text-primary me-2 fs-4"></i>
                        <span class="text-muted small">Facility</span>
                    </div>
                    <h6 class="mb-0">@laborCase.FacilityName</h6>
                    <small class="text-muted">@laborCase.DistrictName, @laborCase.RegionName</small>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex align-items-center mb-2">
                        <i class="bi bi-clock text-info me-2 fs-4"></i>
                        <span class="text-muted small">Labour Duration</span>
                    </div>
                    <h4 class="mb-0">@FormatDuration(laborCase.LaborDuration)</h4>
                    <small class="text-muted">Started: @(laborCase.LaborStartTime?.ToString("HH:mm") ?? "N/A")</small>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex align-items-center mb-2">
                        <i class="bi bi-graph-up text-success me-2 fs-4"></i>
                        <span class="text-muted small">Labour Stage</span>
                    </div>
                    <h5 class="mb-0">@laborCase.LaborStage</h5>
                    <small class="text-muted">Dilatation: @laborCase.CurrentDilatation cm</small>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex align-items-center mb-2">
                        <i class="bi bi-person text-warning me-2 fs-4"></i>
                        <span class="text-muted small">Assigned Midwife</span>
                    </div>
                    <h6 class="mb-0">@laborCase.AssignedMidwife</h6>
                    <small class="text-muted">Last assessment: @GetTimeAgo(laborCase.LastAssessmentTime)</small>
                </div>
            </div>
        </div>
    </div>

    <div class="row g-4">
        <!-- Left Column - Vitals & Progress -->
        <div class="col-lg-8">
            <!-- Current Vitals -->
            <div class="card border-0 shadow-sm mb-4">
                <div class="card-header bg-white">
                    <h5 class="mb-0"><i class="bi bi-heart-pulse me-2 text-danger"></i>Current Vitals</h5>
                </div>
                <div class="card-body">
                    <div class="row g-3">
                        <!-- FHR -->
                        <div class="col-md-3">
                            <div class="vital-card @(IsVitalCritical(laborCase.LatestFHR, "FHR") ? "vital-critical" : laborCase.IsFHRDue ? "vital-due" : "")">
                                <div class="vital-icon">
                                    <i class="bi bi-heart-pulse"></i>
                                </div>
                                <div class="vital-value">@(laborCase.LatestFHR?.ToString() ?? "--")</div>
                                <div class="vital-label">FHR (bpm)</div>
                                <div class="vital-time">@GetTimeAgo(laborCase.LatestFHRTime)</div>
                                @if (laborCase.IsFHRDue)
                                {
                                    <span class="vital-due-badge">DUE</span>
                                }
                            </div>
                        </div>
                        <!-- BP -->
                        <div class="col-md-3">
                            <div class="vital-card @(IsVitalCritical(laborCase.LatestSystolicBP, "BP") ? "vital-critical" : laborCase.IsBPDue ? "vital-due" : "")">
                                <div class="vital-icon">
                                    <i class="bi bi-droplet"></i>
                                </div>
                                <div class="vital-value">@(laborCase.LatestSystolicBP?.ToString() ?? "--")/@(laborCase.LatestDiastolicBP?.ToString() ?? "--")</div>
                                <div class="vital-label">Blood Pressure</div>
                                <div class="vital-time">@GetTimeAgo(laborCase.LatestBPTime)</div>
                                @if (laborCase.IsBPDue)
                                {
                                    <span class="vital-due-badge">DUE</span>
                                }
                            </div>
                        </div>
                        <!-- Temperature -->
                        <div class="col-md-3">
                            <div class="vital-card">
                                <div class="vital-icon">
                                    <i class="bi bi-thermometer-half"></i>
                                </div>
                                <div class="vital-value">@(laborCase.LatestTemperature?.ToString("F1") ?? "--")Â°C</div>
                                <div class="vital-label">Temperature</div>
                                <div class="vital-time">-</div>
                            </div>
                        </div>
                        <!-- Contractions -->
                        <div class="col-md-3">
                            <div class="vital-card">
                                <div class="vital-icon">
                                    <i class="bi bi-graph-up"></i>
                                </div>
                                <div class="vital-value">@(laborCase.ContractionsPerTenMinutes?.ToString() ?? "--")</div>
                                <div class="vital-label">Contractions/10min</div>
                                <div class="vital-time">-</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Labor Progress Chart -->
            <div class="card border-0 shadow-sm mb-4">
                <div class="card-header bg-white">
                    <h5 class="mb-0"><i class="bi bi-bar-chart me-2 text-primary"></i>Labour Progress</h5>
                </div>
                <div class="card-body">
                    <div class="partograph-chart">
                        <!-- Dilatation Progress Bar -->
                        <div class="mb-4">
                            <div class="d-flex justify-content-between align-items-center mb-2">
                                <span class="fw-semibold">Cervical Dilatation</span>
                                <span class="badge bg-primary">@laborCase.CurrentDilatation / 10 cm</span>
                            </div>
                            <div class="progress" style="height: 25px;">
                                <div class="progress-bar @GetProgressBarClass(laborCase.RiskLevel)"
                                     role="progressbar"
                                     style="width: @(laborCase.CurrentDilatation * 10)%">
                                    @laborCase.CurrentDilatation cm
                                </div>
                            </div>
                            <div class="d-flex justify-content-between mt-1 small text-muted">
                                <span>0 cm</span>
                                <span>Latent (0-4)</span>
                                <span>Active (5-9)</span>
                                <span>Fully Dilated (10)</span>
                            </div>
                        </div>

                        <!-- Station Progress -->
                        <div class="mb-4">
                            <div class="d-flex justify-content-between align-items-center mb-2">
                                <span class="fw-semibold">Head Descent (Station)</span>
                                <span class="badge bg-info">@laborCase.CurrentStation</span>
                            </div>
                            <div class="station-indicator">
                                <div class="station-scale">
                                    @for (int i = -3; i <= 3; i++)
                                    {
                                        <div class="station-mark @(laborCase.CurrentStation == i ? "active" : "")">
                                            <span class="station-value">@(i > 0 ? "+" : "")@i</span>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>

                        <!-- Labor Stage Timeline -->
                        <div>
                            <span class="fw-semibold d-block mb-2">Labour Stage Timeline</span>
                            <div class="stage-timeline">
                                <div class="stage-item @(laborCase.LaborStage == "First Stage" ? "active" : laborCase.LaborStage != "First Stage" && laborCase.LaborStartTime.HasValue ? "completed" : "")">
                                    <div class="stage-dot"></div>
                                    <div class="stage-label">First Stage</div>
                                </div>
                                <div class="stage-line @(laborCase.LaborStage != "First Stage" ? "completed" : "")"></div>
                                <div class="stage-item @(laborCase.LaborStage == "Second Stage" ? "active" : laborCase.LaborStage == "Third Stage" || laborCase.LaborStage == "Fourth Stage" ? "completed" : "")">
                                    <div class="stage-dot"></div>
                                    <div class="stage-label">Second Stage</div>
                                </div>
                                <div class="stage-line @(laborCase.LaborStage == "Third Stage" || laborCase.LaborStage == "Fourth Stage" ? "completed" : "")"></div>
                                <div class="stage-item @(laborCase.LaborStage == "Third Stage" ? "active" : laborCase.LaborStage == "Fourth Stage" ? "completed" : "")">
                                    <div class="stage-dot"></div>
                                    <div class="stage-label">Third Stage</div>
                                </div>
                                <div class="stage-line @(laborCase.LaborStage == "Fourth Stage" ? "completed" : "")"></div>
                                <div class="stage-item @(laborCase.LaborStage == "Fourth Stage" ? "active" : "")">
                                    <div class="stage-dot"></div>
                                    <div class="stage-label">Fourth Stage</div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Right Column - Alerts & Risk -->
        <div class="col-lg-4">
            <!-- Active Alerts -->
            <div class="card border-0 shadow-sm mb-4">
                <div class="card-header bg-white d-flex justify-content-between align-items-center">
                    <h5 class="mb-0"><i class="bi bi-exclamation-triangle me-2 text-danger"></i>Active Alerts</h5>
                    <span class="badge bg-danger">@laborCase.AlertCount</span>
                </div>
                <div class="card-body">
                    @if (laborCase.ActiveAlerts.Any())
                    {
                        @foreach (var alert in laborCase.ActiveAlerts)
                        {
                            <div class="alert alert-danger d-flex align-items-center mb-2 py-2">
                                <i class="bi bi-exclamation-circle me-2"></i>
                                <span class="small">@alert</span>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="text-center py-3 text-muted">
                            <i class="bi bi-check-circle fs-1 text-success"></i>
                            <p class="mt-2 mb-0">No active alerts</p>
                        </div>
                    }
                </div>
            </div>

            <!-- Risk Prediction -->
            @if (riskPrediction != null)
            {
                <div class="card border-0 shadow-sm mb-4">
                    <div class="card-header bg-white">
                        <h5 class="mb-0"><i class="bi bi-shield-exclamation me-2 text-warning"></i>Risk Assessment</h5>
                    </div>
                    <div class="card-body">
                        <div class="text-center mb-3">
                            <div class="risk-score-circle @GetRiskScoreClass(riskPrediction.OverallRiskScore)">
                                <span class="risk-score-value">@riskPrediction.OverallRiskScore.ToString("F0")</span>
                                <span class="risk-score-label">Risk Score</span>
                            </div>
                        </div>
                        <div class="risk-factors">
                            @foreach (var factor in riskPrediction.RiskFactors.Take(5))
                            {
                                <div class="risk-factor-item mb-2">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <span class="small">@factor.Name</span>
                                        <span class="badge @GetSeverityBadgeClass(factor.Severity) badge-sm">@factor.Severity</span>
                                    </div>
                                    <div class="progress" style="height: 4px;">
                                        <div class="progress-bar @GetSeverityBarClass(factor.Severity)" style="width: @(factor.Contribution * 100)%"></div>
                                    </div>
                                </div>
                            }
                        </div>
                        @if (riskPrediction.Recommendations.Any())
                        {
                            <hr />
                            <h6 class="mb-2"><i class="bi bi-lightbulb me-1"></i>Recommendations</h6>
                            <ul class="small mb-0 ps-3">
                                @foreach (var rec in riskPrediction.Recommendations.Take(3))
                                {
                                    <li>@rec</li>
                                }
                            </ul>
                        }
                    </div>
                </div>
            }

            <!-- Measurement Schedule -->
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white">
                    <h5 class="mb-0"><i class="bi bi-calendar-check me-2 text-info"></i>Next Measurements</h5>
                </div>
                <div class="card-body">
                    <div class="measurement-schedule">
                        <div class="measurement-item @(laborCase.IsFHRDue ? "due" : "")">
                            <i class="bi bi-heart-pulse me-2"></i>
                            <span>FHR</span>
                            <span class="ms-auto badge @(laborCase.IsFHRDue ? "bg-danger" : "bg-secondary")">
                                @(laborCase.IsFHRDue ? "Now" : $"In {laborCase.MinutesUntilNextMeasurement} min")
                            </span>
                        </div>
                        <div class="measurement-item @(laborCase.IsBPDue ? "due" : "")">
                            <i class="bi bi-droplet me-2"></i>
                            <span>Blood Pressure</span>
                            <span class="ms-auto badge @(laborCase.IsBPDue ? "bg-danger" : "bg-secondary")">
                                @(laborCase.IsBPDue ? "Now" : "As scheduled")
                            </span>
                        </div>
                        <div class="measurement-item @(laborCase.IsDilatationDue ? "due" : "")">
                            <i class="bi bi-graph-up me-2"></i>
                            <span>Cervical Assessment</span>
                            <span class="ms-auto badge @(laborCase.IsDilatationDue ? "bg-danger" : "bg-secondary")">
                                @(laborCase.IsDilatationDue ? "Now" : "As scheduled")
                            </span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

