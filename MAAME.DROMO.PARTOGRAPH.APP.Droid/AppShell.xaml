                               FontSize="13" 
                               TextColor="{AppThemeBinding Light=#666, Dark=#AAA}" />

                        <!-- Status Badge -->
                        <Border BackgroundColor="#E8F5E9"
                                Padding="6,2"
                                Margin="0,4,0,0"
                                HorizontalOptions="Start">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="8" />
                            </Border.StrokeShape>
                            <HorizontalStackLayout Spacing="4">
                                <Label Text="●"
                                       FontSize="8"
