<?xml version="1.0" encoding="utf-8"?>
<!-- Network security configuration for development HTTP sync -->
<!-- Will be updated for HTTPS in production -->
<network-security-config>
    <!-- Allow cleartext traffic for development/testing -->
    <base-config cleartextTrafficPermitted="true">
        <trust-anchors>
            <certificates src="system" />
            <certificates src="user" />
        </trust-anchors>
    </base-config>

    <!-- Explicitly allow cleartext to common development hosts -->
    <domain-config cleartextTrafficPermitted="true">
        <domain includeSubdomains="true">192.168.8.4</domain>
        <domain includeSubdomains="true">10.0.2.2</domain>
        <domain includeSubdomains="true">localhost</domain>
        <domain includeSubdomains="true">emperor-dev</domain>
    </domain-config>
</network-security-config>
