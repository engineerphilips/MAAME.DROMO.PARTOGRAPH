<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:fonts="clr-namespace:Fonts"
             xmlns:controls="clr-namespace:MAAME.DROMO.PARTOGRAPH.APP.Droid.Controls"
             x:Class="MAAME.DROMO.PARTOGRAPH.APP.Droid.Controls.AlertDashboardWidget"
             x:DataType="controls:AlertDashboardWidget">

    <Border BackgroundColor="{AppThemeBinding Light=White, Dark=#1E1E1E}"
            Padding="16"
            Margin="16,8">
        <Border.StrokeShape>
            <RoundRectangle CornerRadius="16" />
        </Border.StrokeShape>
        <Border.Shadow>
            <Shadow Brush="#15000000" Offset="0,4" Radius="8" />
        </Border.Shadow>

        <Grid RowDefinitions="Auto,Auto,Auto,Auto" RowSpacing="12">

            <!-- Header -->
            <Grid Grid.Row="0" ColumnDefinitions="Auto,*,Auto">
                <Label Grid.Column="0"
                       Text="ðŸ””"
                       FontSize="24"
                       VerticalOptions="Center" />
                <VerticalStackLayout Grid.Column="1" Margin="12,0,0,0">
                    <Label Text="Active Alerts"
                           FontSize="18"
                           FontAttributes="Bold"
                           TextColor="{AppThemeBinding Light=#1A1A1A, Dark=#F5F5F5}" />
                    <Label Text="Labour monitoring status"
                           FontSize="12"
                           TextColor="{AppThemeBinding Light=#666, Dark=#AAA}" />
                </VerticalStackLayout>
                <Button Grid.Column="2"
                        Text="View All"
                        FontSize="12"
                        BackgroundColor="{AppThemeBinding Light=#E3F2FD, Dark=#1E3A5F}"
                        TextColor="#2196F3"
                        Padding="12,6"
                        CornerRadius="8"
                        Clicked="OnViewAllClicked" />
            </Grid>

            <!-- Alert Stats -->
            <Grid Grid.Row="1" ColumnDefinitions="*,*,*,*" ColumnSpacing="8">

                <!-- Total -->
                <Border Grid.Column="0"
                        BackgroundColor="{AppThemeBinding Light=#F5F7FA, Dark=#2A2A2A}"
                        Padding="8">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="8" />
                    </Border.StrokeShape>
                    <VerticalStackLayout HorizontalOptions="Center">
                        <Label x:Name="TotalAlertsLabel"
                               Text="0"
                               FontSize="24"
                               FontAttributes="Bold"
                               TextColor="{AppThemeBinding Light=#1A1A1A, Dark=#F5F5F5}"
                               HorizontalOptions="Center" />
                        <Label Text="Total"
                               FontSize="10"
                               TextColor="{AppThemeBinding Light=#666, Dark=#AAA}"
                               HorizontalOptions="Center" />
                    </VerticalStackLayout>
                </Border>

                <!-- Critical -->
                <Border Grid.Column="1"
                        BackgroundColor="{AppThemeBinding Light=#FFEBEE, Dark=#3D1F1F}"
                        Padding="8">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="8" />
                    </Border.StrokeShape>
                    <VerticalStackLayout HorizontalOptions="Center">
                        <Label x:Name="CriticalAlertsLabel"
                               Text="0"
                               FontSize="24"
                               FontAttributes="Bold"
                               TextColor="#EF5350"
                               HorizontalOptions="Center" />
                        <Label Text="Critical"
                               FontSize="10"
                               TextColor="#EF5350"
                               HorizontalOptions="Center" />
                    </VerticalStackLayout>
                </Border>

                <!-- Warning -->
                <Border Grid.Column="2"
                        BackgroundColor="{AppThemeBinding Light=#FFF3E0, Dark=#3D2E1B}"
                        Padding="8">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="8" />
                    </Border.StrokeShape>
                    <VerticalStackLayout HorizontalOptions="Center">
                        <Label x:Name="WarningAlertsLabel"
                               Text="0"
                               FontSize="24"
                               FontAttributes="Bold"
                               TextColor="#FF9800"
                               HorizontalOptions="Center" />
                        <Label Text="Warning"
                               FontSize="10"
                               TextColor="#FF9800"
                               HorizontalOptions="Center" />
                    </VerticalStackLayout>
                </Border>

                <!-- Escalated -->
                <Border Grid.Column="3"
                        BackgroundColor="{AppThemeBinding Light=#F3E5F5, Dark=#2D1B3D}"
                        Padding="8">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="8" />
                    </Border.StrokeShape>
                    <VerticalStackLayout HorizontalOptions="Center">
                        <Label x:Name="EscalatedAlertsLabel"
                               Text="0"
                               FontSize="24"
                               FontAttributes="Bold"
                               TextColor="#9C27B0"
                               HorizontalOptions="Center" />
                        <Label Text="Escalated"
                               FontSize="10"
                               TextColor="#9C27B0"
                               HorizontalOptions="Center" />
                    </VerticalStackLayout>
                </Border>
            </Grid>

            <!-- Most Urgent Patient Card -->
            <Border x:Name="UrgentPatientCard"
                    Grid.Row="2"
                    BackgroundColor="{AppThemeBinding Light=#FFF8E1, Dark=#3D351B}"
                    Padding="12"
                    IsVisible="False">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="12" />
                </Border.StrokeShape>
                <Border.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnUrgentPatientTapped" />
                </Border.GestureRecognizers>

                <Grid ColumnDefinitions="Auto,*,Auto" ColumnSpacing="12">
                    <Label Grid.Column="0"
                           Text="âš¡"
                           FontSize="28"
                           VerticalOptions="Center" />
                    <VerticalStackLayout Grid.Column="1" VerticalOptions="Center">
                        <Label Text="MOST URGENT"
                               FontSize="10"
                               FontAttributes="Bold"
                               TextColor="#FF6F00" />
                        <Label x:Name="UrgentPatientNameLabel"
                               Text=""
                               FontSize="16"
                               FontAttributes="Bold"
                               TextColor="{AppThemeBinding Light=#1A1A1A, Dark=#F5F5F5}" />
                        <Label x:Name="UrgentReasonLabel"
                               Text=""
                               FontSize="12"
                               TextColor="{AppThemeBinding Light=#666, Dark=#AAA}" />
                    </VerticalStackLayout>
                    <Label Grid.Column="2"
                           Text="&#xE76C;"
                           FontFamily="{x:Static fonts:FluentUI.FontFamily}"
                           FontSize="20"
                           TextColor="#FF6F00"
                           VerticalOptions="Center" />
                </Grid>
            </Border>

            <!-- Overdue Measurements Summary -->
            <VerticalStackLayout x:Name="OverdueSummaryStack"
                                 Grid.Row="3"
                                 Spacing="6"
                                 IsVisible="False">
                <Label Text="Overdue Measurements"
                       FontSize="12"
                       FontAttributes="Bold"
                       TextColor="{AppThemeBinding Light=#666, Dark=#AAA}" />
                <FlexLayout x:Name="OverdueMeasurementsLayout"
                            Wrap="Wrap"
                            JustifyContent="Start"
                            AlignItems="Start" />
            </VerticalStackLayout>

            <!-- No Alerts Message -->
            <Border x:Name="NoAlertsCard"
                    Grid.Row="2"
                    BackgroundColor="{AppThemeBinding Light=#E8F5E9, Dark=#1B3D26}"
                    Padding="16"
                    IsVisible="True">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="12" />
                </Border.StrokeShape>
                <HorizontalStackLayout HorizontalOptions="Center" Spacing="8">
                    <Label Text="âœ“"
                           FontSize="20"
                           TextColor="#4CAF50"
                           VerticalOptions="Center" />
                    <Label Text="All measurements are up to date"
                           FontSize="14"
                           TextColor="#4CAF50"
                           VerticalOptions="Center" />
                </HorizontalStackLayout>
            </Border>
        </Grid>
    </Border>
</ContentView>
