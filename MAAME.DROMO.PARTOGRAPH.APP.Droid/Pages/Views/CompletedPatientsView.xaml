<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MAAME.DROMO.PARTOGRAPH.APP.Droid.Pages.Views.CompletedPatientsView"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             xmlns:models="clr-namespace:MAAME.DROMO.PARTOGRAPH.MODEL;assembly=MAAME.DROMO.PARTOGRAPH.MODEL"
             xmlns:pagemodels="clr-namespace:MAAME.DROMO.PARTOGRAPH.APP.Droid.PageModels"
             xmlns:popup="clr-namespace:Syncfusion.Maui.Popup;assembly=Syncfusion.Maui.Popup"
             xmlns:fonts="clr-namespace:Fonts">

    <Grid RowDefinitions="Auto,*" Padding="20">

        <!-- Search Bar -->
        <SearchBar Grid.Row="0"
                   Placeholder="Search by name or hospital number..."
                   Text="{Binding SearchText}"
                   Margin="0,0,0,20" />

        <!-- Patients List -->
        <RefreshView Grid.Row="1"
                     IsRefreshing="{Binding IsRefreshing}"
                     Command="{Binding RefreshCommand}">
            <CollectionView ItemsSource="{Binding Partographs}"
                            ItemsLayout="VerticalList"
                            SelectionMode="None">
                <CollectionView.EmptyView>
                    <VerticalStackLayout VerticalOptions="Center" HorizontalOptions="Center" Spacing="20">
                        <Label Text="&#xE8B6;" 
                               FontFamily="{x:Static fonts:FluentUI.FontFamily}"
                               FontSize="64"
                               TextColor="{AppThemeBinding Light=#CCC, Dark=#666}"
                               HorizontalOptions="Center" />
                        <Label Text="No Completed Patients"
                               FontSize="18"
                               TextColor="{AppThemeBinding Light=#666, Dark=#AAA}"
                               HorizontalOptions="Center" />
                    </VerticalStackLayout>
                </CollectionView.EmptyView>

                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="pagemodels:CompletedPatientItem">
                        <Border StrokeThickness="1"
                                Stroke="{AppThemeBinding Light=#E0E0E0, Dark=#424242}"
                                BackgroundColor="{AppThemeBinding Light=White, Dark=#1E1E1E}"
                                Margin="0,5"
                                Padding="15">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="10" />
                            </Border.StrokeShape>

                            <Grid ColumnDefinitions="Auto,*,Auto" ColumnSpacing="15">
                                <!-- Delivery Icon -->
                                <Border Grid.Column="0"
                                        WidthRequest="60"
                                        HeightRequest="60"
                                        BackgroundColor="#10B981">
                                    <Border.StrokeShape>
                                        <RoundRectangle CornerRadius="30" />
                                    </Border.StrokeShape>
                                    <VerticalStackLayout VerticalOptions="Center" HorizontalOptions="Center">
                                        <Label Text="&#xe7fe;"
                                               FontFamily="MaterialAssets"
                                               FontSize="30"
                                               TextColor="White" />
                                    </VerticalStackLayout>
                                </Border>

                                <!-- Patient & Delivery Details -->
                                <VerticalStackLayout Grid.Column="1" Spacing="5" VerticalOptions="Center">
                                    <Label Text="{Binding PatientName}"
                                           FontAttributes="Bold"
                                           FontSize="18" />
                                    <Label Text="{Binding PatientInfo}"
                                           FontSize="14"
                                           TextColor="{AppThemeBinding Light=#666, Dark=#AAA}" />

                                    <!-- Delivery Time -->
                                    <HorizontalStackLayout Spacing="5">
                                        <Label Text="&#xe916;"
                                               FontFamily="MaterialAssets"
                                               FontSize="14"
                                               TextColor="#10B981" />
                                        <Label Text="Delivered:" FontSize="12" FontAttributes="Bold" />
                                        <Label Text="{Binding DeliveryTimeDisplay}"
                                               FontSize="12" />
                                    </HorizontalStackLayout>

                                    <!-- Delivery Mode & Babies -->
                                    <HorizontalStackLayout Spacing="10">
                                        <HorizontalStackLayout Spacing="5">
                                            <Label Text="Mode:" FontSize="12" TextColor="{AppThemeBinding Light=#666, Dark=#AAA}" />
                                            <Label Text="{Binding DeliveryModeDisplay}"
                                                   FontSize="12"
                                                   FontAttributes="Bold"
                                                   TextColor="#3B82F6" />
                                        </HorizontalStackLayout>
                                        <HorizontalStackLayout Spacing="5">
                                            <Label Text="&#xe7fe;"
                                                   FontFamily="MaterialAssets"
                                                   FontSize="12"
                                                   TextColor="#F59E0B" />
                                            <Label Text="{Binding BabiesDisplay}"
                                                   FontSize="12"
                                                   FontAttributes="Bold"
                                                   TextColor="#F59E0B" />
                                        </HorizontalStackLayout>
                                    </HorizontalStackLayout>

                                    <!-- Complications -->
                                    <HorizontalStackLayout Spacing="5">
                                        <Label Text="â—"
                                               FontSize="12"
                                               TextColor="{Binding ComplicationsColor}" />
                                        <Label Text="{Binding ComplicationsDisplay}"
                                               FontSize="12"
                                               TextColor="{Binding ComplicationsColor}" />
                                    </HorizontalStackLayout>
                                </VerticalStackLayout>

                                <!-- Action Button -->
                                <Button Grid.Column="2"
                                        Text="&#xe8a0;"
                                        FontFamily="MaterialAssets"
                                        Command="{Binding Source={RelativeSource AncestorType={x:Type ContentView}}, Path=BindingContext.ViewPartographCommand}"
                                        CommandParameter="{Binding .}"
                                        BackgroundColor="#10B981"
                                        TextColor="White"
                                        WidthRequest="45"
                                        HeightRequest="45"
                                        CornerRadius="22"
                                        ToolTipProperties.Text="View Details" />
                            </Grid>
                        </Border>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </RefreshView>
    </Grid>
</ContentView>
