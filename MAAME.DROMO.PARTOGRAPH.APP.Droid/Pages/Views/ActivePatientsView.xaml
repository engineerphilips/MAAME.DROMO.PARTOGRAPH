<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MAAME.DROMO.PARTOGRAPH.APP.Droid.Pages.Views.ActivePatientsView"
             xmlns:f="clr-namespace:Fonts"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             xmlns:models="clr-namespace:MAAME.DROMO.PARTOGRAPH.MODEL;assembly=MAAME.DROMO.PARTOGRAPH.MODEL"
             xmlns:pagemodels="clr-namespace:MAAME.DROMO.PARTOGRAPH.APP.Droid.PageModels"
             xmlns:popup="clr-namespace:Syncfusion.Maui.Popup;assembly=Syncfusion.Maui.Popup"
             xmlns:fonts="clr-namespace:Fonts"
             x:Name="PatientsView"
             xmlns:converters="clr-namespace:MAAME.DROMO.PARTOGRAPH.APP.Droid.Converters">

    <ContentView.Resources>
        <ResourceDictionary>
            <converters:InitialsConverter x:Key="StringInitialsConverter" />
            <converters:IsNotNullConverter x:Key="IsNotNullConverter" />
            <converters:IsNotNullOrEmptyConverter x:Key="IsNotNullOrEmptyConverter" />
        </ResourceDictionary>
    </ContentView.Resources>

    <Grid RowDefinitions="Auto,*" Padding="16">

        <!-- Search Bar -->
        <Border Grid.Row="0"
                StrokeThickness="1"
                Stroke="{AppThemeBinding Light=#E5E7EB, Dark=#374151}"
                BackgroundColor="{AppThemeBinding Light=#F9FAFB, Dark=#1F2937}"
                Margin="0,0,0,16">
            <Border.StrokeShape>
                <RoundRectangle CornerRadius="12" />
            </Border.StrokeShape>
            <Grid ColumnDefinitions="Auto,*" Padding="12,0">
                <Label Text="&#xF78B;"
                       FontFamily="{x:Static fonts:FluentUI.FontFamily}"
                       FontSize="20"
                       TextColor="{AppThemeBinding Light=#9CA3AF, Dark=#6B7280}"
                       VerticalOptions="Center"
                       Margin="0,0,8,0" />
                <SearchBar Grid.Column="1"
                           Placeholder="Search by name or hospital number..."
                           Text="{Binding SearchText}"
                           BackgroundColor="Transparent"
                           PlaceholderColor="{AppThemeBinding Light=#9CA3AF, Dark=#6B7280}" />
            </Grid>
        </Border>

        <!-- Patients List -->
        <RefreshView Grid.Row="1"
                     IsRefreshing="{Binding IsRefreshing}"
                     Command="{Binding RefreshCommand}">
            <CollectionView ItemsSource="{Binding Partographs}"
                            ItemsLayout="VerticalList"
                            SelectionMode="None"
                            x:Name="PatientCollectionView">
                <CollectionView.EmptyView>
                    <VerticalStackLayout VerticalOptions="Center" HorizontalOptions="Center" Spacing="24" Padding="40">
                        <Border WidthRequest="160" HeightRequest="160"
                                BackgroundColor="{AppThemeBinding Light=#F3F4F6, Dark=#374151}"
                                StrokeThickness="0"
                                HorizontalOptions="Center">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="80" />
                            </Border.StrokeShape>
                            <Label Text="&#xE8B6;"
                                   FontFamily="{x:Static fonts:FluentUI.FontFamily}"
                                   FontSize="72"
                                   TextColor="{AppThemeBinding Light=#D1D5DB, Dark=#6B7280}"
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center"
                                   Opacity="0.8" />
                        </Border>
                        <VerticalStackLayout Spacing="8">
                            <Label Text="No Active Labour Cases"
                                   FontSize="20"
                                   FontAttributes="Bold"
                                   TextColor="{AppThemeBinding Light=#374151, Dark=#F9FAFB}"
                                   HorizontalOptions="Center" />
                            <Label Text="There are currently no patients checked in for active labour monitoring. Use the '+' button to admit a patient."
                                   FontSize="14"
                                   TextColor="{AppThemeBinding Light=#6B7280, Dark=#9CA3AF}"
                                   HorizontalOptions="Center"
                                   HorizontalTextAlignment="Center"
                                   MaximumWidthRequest="280" />
                        </VerticalStackLayout>
                    </VerticalStackLayout>
                </CollectionView.EmptyView>

                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="models:Partograph">
                        <Border StrokeThickness="0"
                                BackgroundColor="{AppThemeBinding Light=White, Dark=#1F2937}"
                                Margin="0,0,0,12"
                                Padding="0">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="16" />
                            </Border.StrokeShape>
                            <Border.Shadow>
                                <Shadow Brush="{AppThemeBinding Light=#20000000, Dark=#40000000}"
                                        Offset="0,4"
                                        Radius="12"
                                        Opacity="1" />
                            </Border.Shadow>

                            <Grid RowDefinitions="Auto,Auto,Auto,Auto" ColumnDefinitions="Auto,*,Auto" Padding="16">

                                <!-- Cervical Dilatation Circle -->
                                <Grid WidthRequest="60" HeightRequest="60" Margin="0,0,8,0">
                                    <!-- Outer ring -->
                                    <Border WidthRequest="60" HeightRequest="60"
                                                BackgroundColor="Transparent"
                                                StrokeThickness="3"
                                                Stroke="#F59E0B">
                                        <Border.StrokeShape>
                                            <RoundRectangle CornerRadius="30" />
                                        </Border.StrokeShape>
                                    </Border>
                                    <!-- Inner circle -->
                                    <Border WidthRequest="52" HeightRequest="52"
                                                BackgroundColor="#F59E0B"
                                                StrokeThickness="0"
                                                HorizontalOptions="Center"
                                                VerticalOptions="Center"
                                                Padding="-10"
                                            Margin="0,0,8,0">
                                        <Border.StrokeShape>
                                            <RoundRectangle CornerRadius="26" />
                                        </Border.StrokeShape>
                                        <VerticalStackLayout VerticalOptions="Center" HorizontalOptions="Center" Spacing="-5">
                                            <Label FontSize="22"
                                                       FontAttributes="Bold"
                                                       TextColor="White"
                                                       HorizontalOptions="Center">
                                                <Label.FormattedText>
                                                    <FormattedString>
                                                        <Span Text="{Binding CurrentDilatation}" FontAttributes="Bold" />
                                                        <Span Text="cm" FontSize="14" />
                                                    </FormattedString>
                                                </Label.FormattedText>
                                            </Label>
                                        </VerticalStackLayout>
                                    </Border>
                                </Grid>

                                <!-- Patient Name & Details -->
                                <VerticalStackLayout Grid.Column="1" Spacing="4" VerticalOptions="Center">
                                    <Label Text="{Binding Name}"
                                               FontAttributes="Bold"
                                               FontSize="20"
                                               TextColor="{AppThemeBinding Light=#111827, Dark=#F9FAFB}"
                                               LineBreakMode="TailTruncation" />
                                    <HorizontalStackLayout Spacing="6">
                                        <!--<Label Text="&#xE8B5;"
                                                   FontFamily="{x:Static fonts:FluentUI.FontFamily}"
                                                   FontSize="12"
                                                   TextColor="{AppThemeBinding Light=#6B7280, Dark=#9CA3AF}"
                                                   VerticalOptions="Center" />-->
                                        <Label Text="{Binding HospitalNumber}"
                                                   TextColor="{AppThemeBinding Light=#6B7280, Dark=#9CA3AF}"
                                                   FontFamily="monospace" />
                                    </HorizontalStackLayout>
                                </VerticalStackLayout>

                                <!-- Status Badge -->
                                <Border Grid.Column="2"
                                            BackgroundColor="{AppThemeBinding Light=#ECFDF5, Dark=#064E3B}"
                                            Padding="10,6"
                                            VerticalOptions="Start">
                                    <Border.StrokeShape>
                                        <RoundRectangle CornerRadius="8" />
                                    </Border.StrokeShape>
                                    <Label Text="{Binding StatusDisplay, Mode=OneWay}" 
                                           FontAttributes="Bold"
                                           TextColor="{Binding StatusColorString, Mode=OneWay}" />
                                </Border>

                                <Grid Grid.Row="1" Grid.RowSpan="2" WidthRequest="60" HeightRequest="60" Margin="0,0,8,0">
                                    <!-- Outer ring -->
                                    <Border WidthRequest="60" HeightRequest="60"
                                                BackgroundColor="Transparent"
                                                StrokeThickness="3"
                                                Stroke="#F59E0B">
                                        <Border.StrokeShape>
                                            <RoundRectangle CornerRadius="30" />
                                        </Border.StrokeShape>
                                    </Border>
                                    <!-- Inner circle -->
                                    <Border WidthRequest="52" HeightRequest="52"
                                                BackgroundColor="#F59E0B"
                                                StrokeThickness="0"
                                                HorizontalOptions="Center"
                                                VerticalOptions="Center"
                                                Padding="-10"
                                            Margin="0,0,8,0">
                                        <Border.StrokeShape>
                                            <RoundRectangle CornerRadius="26" />
                                        </Border.StrokeShape>
                                        <VerticalStackLayout VerticalOptions="Center" HorizontalOptions="Center" Spacing="-5">
                                            <Label FontSize="22"
                                                       FontAttributes="Bold"
                                                       TextColor="White"
                                                       HorizontalOptions="Center">
                                                <Label.FormattedText>
                                                    <FormattedString>
                                                        <Span Text="{Binding CurrentHeadDescent}" FontAttributes="Bold" />
                                                        <Span Text="descent" FontSize="10" />
                                                    </FormattedString>
                                                </Label.FormattedText>
                                            </Label>
                                        </VerticalStackLayout>
                                    </Border>
                                </Grid>
                                
                                <!-- Patient Info Row -->
                                <!--<Border Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2"
                                        BackgroundColor="{AppThemeBinding Light=#F3F4F6, Dark=#374151}"
                                        Padding="0,8,12,8"
                                        Margin="0,5,0,0"
                                        StrokeThickness="0">
                                    <Border.StrokeShape>
                                        <RoundRectangle CornerRadius="8" />
                                    </Border.StrokeShape>
                                    <Grid ColumnDefinitions="*,Auto">
                                        <Label Text="{Binding DisplayInfo}"
                                               FontSize="12"
                                               TextColor="{AppThemeBinding Light=#4B5563, Dark=#D1D5DB}" />
                                        <HorizontalStackLayout Grid.Column="1" Spacing="4"
                                                               IsVisible="{Binding CurrentHeadDescent, Converter={StaticResource IsNotNullConverter}}">
                                            <Label Text="Station:"
                                                   FontSize="11"
                                                   TextColor="{AppThemeBinding Light=#6B7280, Dark=#9CA3AF}"
                                                   VerticalOptions="Center" />
                                            <Label Text="{Binding CurrentHeadDescent}"
                                                   FontSize="12"
                                                   FontAttributes="Bold"
                                                   TextColor="{AppThemeBinding Light=#059669, Dark=#34D399}"
                                                   VerticalOptions="Center" />
                                        </HorizontalStackLayout>
                                    </Grid>
                                </Border>-->

                                <!-- Labor Time Info -->
                                <Grid Grid.Row="2" Grid.Column="1">
                                    <!--<Label Text="&#xE917;"
                                           FontFamily="{x:Static fonts:FluentUI.FontFamily}"
                                           FontSize="14"
                                           TextColor="{AppThemeBinding Light=#3B82F6, Dark=#60A5FA}"
                                           VerticalOptions="Center" />-->
                                    <VerticalStackLayout Grid.Column="1" Spacing="2">
                                        <Label Text="{Binding LaborStartTime, StringFormat='{0:dddd, dd MMM, HH:mm}'}"
                                               TextColor="{AppThemeBinding Light=#6B7280, Dark=#9CA3AF}" />
                                        <Label Text="{Binding LaborStartTimeFormat}"
                                               FontAttributes="Bold"
                                               TextColor="{AppThemeBinding Light=#2563EB, Dark=#93C5FD}" />
                                    </VerticalStackLayout>
                                </Grid>

                                <!-- Action Button -->
                                <Button Grid.Row="3" Grid.ColumnSpan="3"
                                        Text="View Partograph"
                                        Command="{Binding Source={RelativeSource AncestorType={x:Type pagemodels:ActivePatientsPageModel}}, Path=NavigateToPartographCommand, x:DataType=pagemodels:ActivePatientsPageModel}"
                                        CommandParameter="{Binding .}"
                                        BackgroundColor="#3B82F6"
                                        TextColor="White"
                                        FontAttributes="Bold"
                                        HeightRequest="46"
                                        CornerRadius="12"
                                        Margin="0,16,0,0">
                                    <Button.Shadow>
                                        <Shadow Brush="#3B82F6"
                                                Offset="0,4"
                                                Radius="8"
                                                Opacity="0.3" />
                                    </Button.Shadow>
                                </Button>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </RefreshView>

        <popup:SfPopup Grid.Row="1" x:Name="contextMenuPopup" OverlayMode="Transparent"
                       ShowFooter="False"
                       ShowHeader="False"
                       WidthRequest="200"
                       HeaderHeight="800">
            <popup:SfPopup.ContentTemplate>
                <DataTemplate>
                    <StackLayout Padding="5" Spacing="0">
                        <Button Text="Companion"
                                BackgroundColor="Transparent"
                                TextColor="Black"
                                Clicked="OnShareClicked" HorizontalOptions="StartAndExpand"
                                HeightRequest="35" />
                        <Button Text="Pain Relief"
                                BackgroundColor="Transparent"
                                TextColor="Black"
                                Clicked="OnShareClicked" HorizontalOptions="StartAndExpand"
                                HeightRequest="35"  />
                        <Button Text="Oral Fluid"
                                BackgroundColor="Transparent"
                                TextColor="Black"
                                Clicked="OnShareClicked" HorizontalOptions="StartAndExpand"
                                HeightRequest="35"  />
                        <Button Text="Posture"
                                BackgroundColor="Transparent"
                                TextColor="Black"
                                Clicked="OnShareClicked" HorizontalOptions="StartAndExpand"
                                HeightRequest="35"  />
                        <Button Text="FHR"
                                BackgroundColor="Transparent"
                                TextColor="Black"
                                Clicked="OnEditClicked" HorizontalOptions="StartAndExpand"
                                HeightRequest="35"  />
                        <Button Text="Amniotic Fluid"
                                BackgroundColor="Transparent"
                                TextColor="Black"
                                Clicked="OnShareClicked" HorizontalOptions="StartAndExpand"
                                HeightRequest="35"  />
                        <Button Text="Fetal Position"
                                BackgroundColor="Transparent"
                                TextColor="Black"
                                Clicked="OnShareClicked" HorizontalOptions="StartAndExpand"
                                HeightRequest="35"  />
                        <Button Text="Caput"
                                BackgroundColor="Transparent"
                                TextColor="Black"
                                Clicked="OnShareClicked" HorizontalOptions="StartAndExpand"
                                HeightRequest="35"  />
                        <Button Text="Moulding"
                                BackgroundColor="Transparent"
                                TextColor="Black"
                                Clicked="OnShareClicked" HorizontalOptions="StartAndExpand"
                                HeightRequest="35"  />
                        <Button Text="Urine"
                                BackgroundColor="Transparent"
                                TextColor="Black"
                                Clicked="OnShareClicked" HorizontalOptions="StartAndExpand"
                                HeightRequest="35"  />
                        <Button Text="Blood pressure"
                                BackgroundColor="Transparent"
                                TextColor="Black"
                                Clicked="OnShareClicked" HorizontalOptions="StartAndExpand"
                                HeightRequest="35"  />
                        <Button Text="Contraction"
                                BackgroundColor="Transparent"
                                TextColor="Red"
                                Clicked="OnDeleteClicked" HorizontalOptions="StartAndExpand"
                                HeightRequest="35"  />
                        <Button Text="Head Descent"
                                BackgroundColor="Transparent"
                                TextColor="Black"
                                Clicked="OnShareClicked"
                                HorizontalOptions="StartAndExpand"
                                HeightRequest="35"  />
                    </StackLayout>
                </DataTemplate>
            </popup:SfPopup.ContentTemplate>
        </popup:SfPopup>
    </Grid>
</ContentView>
