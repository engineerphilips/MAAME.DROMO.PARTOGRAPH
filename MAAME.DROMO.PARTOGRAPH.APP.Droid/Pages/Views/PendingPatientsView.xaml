<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MAAME.DROMO.PARTOGRAPH.APP.Droid.Pages.Views.PendingPatientsView"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             xmlns:models="clr-namespace:MAAME.DROMO.PARTOGRAPH.MODEL;assembly=MAAME.DROMO.PARTOGRAPH.MODEL"
             xmlns:pagemodels="clr-namespace:MAAME.DROMO.PARTOGRAPH.APP.Droid.PageModels"
             xmlns:converters="clr-namespace:MAAME.DROMO.PARTOGRAPH.APP.Droid.Converters"
             xmlns:fonts="clr-namespace:Fonts">

    <ContentView.Resources>
        <ResourceDictionary>
            <converters:InitialsConverter x:Key="InitialsConverter" />
        </ResourceDictionary>
    </ContentView.Resources>

    <Grid RowDefinitions="Auto,*" Padding="16">

        <!-- Search Bar -->
        <Border Grid.Row="0"
                StrokeThickness="1"
                Stroke="{AppThemeBinding Light=#E5E7EB, Dark=#374151}"
                BackgroundColor="{AppThemeBinding Light=#F9FAFB, Dark=#1F2937}"
                Margin="0,0,0,16">
            <Border.StrokeShape>
                <RoundRectangle CornerRadius="12" />
            </Border.StrokeShape>
            <Grid ColumnDefinitions="Auto,*" Padding="12,0">
                <Label Text="&#xF78B;"
                       FontFamily="{x:Static fonts:FluentUI.FontFamily}"
                       FontSize="20"
                       TextColor="{AppThemeBinding Light=#9CA3AF, Dark=#6B7280}"
                       VerticalOptions="Center"
                       Margin="0,0,8,0" />
                <SearchBar Grid.Column="1"
                           Placeholder="Search by name or hospital number..."
                           Text="{Binding SearchText}"
                           BackgroundColor="Transparent"
                           PlaceholderColor="{AppThemeBinding Light=#9CA3AF, Dark=#6B7280}" />
            </Grid>
        </Border>

        <!-- Patients List -->
        <RefreshView Grid.Row="1"
                     IsRefreshing="{Binding IsRefreshing}"
                     Command="{Binding RefreshCommand}">
            <CollectionView ItemsSource="{Binding Patients}"
                            ItemsLayout="VerticalList"
                            SelectionMode="None">

                <CollectionView.EmptyView>
                    <VerticalStackLayout VerticalOptions="Center" HorizontalOptions="Center" Spacing="16" Padding="40">
                        <Border WidthRequest="100" HeightRequest="100"
                                BackgroundColor="{AppThemeBinding Light=#F3E8FF, Dark=#581C87}"
                                StrokeThickness="0"
                                HorizontalOptions="Center">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="50" />
                            </Border.StrokeShape>
                            <Label Text="&#xE77B;"
                                   FontFamily="{x:Static fonts:FluentUI.FontFamily}"
                                   FontSize="48"
                                   TextColor="{AppThemeBinding Light=#A855F7, Dark=#D8B4FE}"
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center" />
                        </Border>
                        <Label Text="No Pending Admissions"
                               FontSize="20"
                               FontAttributes="Bold"
                               TextColor="{AppThemeBinding Light=#374151, Dark=#F3F4F6}"
                               HorizontalOptions="Center" />
                        <Label Text="Admitted patients awaiting labour will appear here"
                               FontSize="14"
                               TextColor="{AppThemeBinding Light=#6B7280, Dark=#9CA3AF}"
                               HorizontalOptions="Center"
                               HorizontalTextAlignment="Center" />
                        <Button Text="Admit New Patient"
                                Command="{Binding AddNewPatientCommand}"
                                BackgroundColor="#8B5CF6"
                                TextColor="White"
                                Padding="28,14"
                                CornerRadius="12"
                                FontSize="15"
                                FontAttributes="Bold"
                                Margin="0,8,0,0">
                            <Button.Shadow>
                                <Shadow Brush="#8B5CF6"
                                        Offset="0,4"
                                        Radius="10"
                                        Opacity="0.35" />
                            </Button.Shadow>
                        </Button>
                    </VerticalStackLayout>
                </CollectionView.EmptyView>

                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="models:Partograph">
                        <SwipeView>
                            <SwipeView.RightItems>
                                <SwipeItems>
                                    <SwipeItem Text="Start Labour"
                                               BackgroundColor="#10B981"
                                               Command="{Binding Source={RelativeSource AncestorType={x:Type CollectionView}}, x:DataType={x:Null}, Path=BindingContext.StartActiveLaborCommand}"
                                               CommandParameter="{Binding .}" />
                                </SwipeItems>
                            </SwipeView.RightItems>

                            <Border StrokeThickness="0"
                                    BackgroundColor="{AppThemeBinding Light=White, Dark=#1F2937}"
                                    Margin="0,0,0,12"
                                    Padding="0">
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="16" />
                                </Border.StrokeShape>
                                <Border.Shadow>
                                    <Shadow Brush="{AppThemeBinding Light=#20000000, Dark=#40000000}"
                                            Offset="0,4"
                                            Radius="12"
                                            Opacity="1" />
                                </Border.Shadow>

                                <Grid RowDefinitions="Auto,Auto,Auto,Auto" Padding="16">

                                    <!-- Header Row: Patient Info -->
                                    <Grid Grid.Row="0" ColumnDefinitions="Auto,*,Auto" ColumnSpacing="14">

                                        <!-- Patient Avatar with Initials -->
                                        <Grid WidthRequest="60" HeightRequest="60">
                                            <!-- Outer ring -->
                                            <Border WidthRequest="60" HeightRequest="60"
                                                    BackgroundColor="Transparent"
                                                    StrokeThickness="3"
                                                    Stroke="#F59E0B">
                                                <Border.StrokeShape>
                                                    <RoundRectangle CornerRadius="30" />
                                                </Border.StrokeShape>
                                            </Border>
                                            <!-- Inner circle -->
                                            <Border WidthRequest="52" HeightRequest="52"
                                                    BackgroundColor="#F59E0B"
                                                    StrokeThickness="0"
                                                    HorizontalOptions="Center"
                                                    VerticalOptions="Center">
                                                <Border.StrokeShape>
                                                    <RoundRectangle CornerRadius="26" />
                                                </Border.StrokeShape>
                                                <Label Text="{Binding Name, Converter={StaticResource InitialsConverter}}"
                                                       HorizontalOptions="Center"
                                                       VerticalOptions="Center"
                                                       FontSize="18"
                                                       FontAttributes="Bold"
                                                       TextColor="#F59E0B" />
                                            </Border>
                                        </Grid>

                                        <!-- Patient Name & Hospital Number -->
                                        <VerticalStackLayout Grid.Column="1" Spacing="4" VerticalOptions="Center">
                                            <Label Text="{Binding Name}"
                                                   FontAttributes="Bold"
                                                   FontSize="17"
                                                   TextColor="{AppThemeBinding Light=#111827, Dark=#F9FAFB}"
                                                   LineBreakMode="TailTruncation" />
                                            <HorizontalStackLayout Spacing="6">
                                                <!--<Label Text="&#xE8B5;"
                                                       FontFamily="{x:Static fonts:FluentUI.FontFamily}"
                                                       FontSize="12"
                                                       TextColor="{AppThemeBinding Light=#6B7280, Dark=#9CA3AF}"
                                                       VerticalOptions="Center" />-->
                                                <Label Text="{Binding HospitalNumber}"
                                                       FontSize="13"
                                                       TextColor="{AppThemeBinding Light=#6B7280, Dark=#9CA3AF}"
                                                       FontFamily="monospace" />
                                            </HorizontalStackLayout>
                                        </VerticalStackLayout>

                                        <!-- Pending Status Badge -->
                                        <Border Grid.Column="2"
                                                BackgroundColor="{AppThemeBinding Light=#FEF3C7, Dark=#78350F}"
                                                Padding="10,6"
                                                VerticalOptions="Start">
                                            <Border.StrokeShape>
                                                <RoundRectangle CornerRadius="8" />
                                            </Border.StrokeShape>
                                            <Label Text="PENDING"
                                                   FontSize="11"
                                                   FontAttributes="Bold"
                                                   TextColor="{AppThemeBinding Light=#B45309, Dark=#FCD34D}" />
                                        </Border>
                                    </Grid>

                                    <!-- Patient Info Row -->
                                    <Border Grid.Row="1"
                                            BackgroundColor="{AppThemeBinding Light=#F3F4F6, Dark=#374151}"
                                            Padding="12,0,0,8"
                                            Margin="0,12,0,0"
                                            StrokeThickness="0">
                                        <Border.StrokeShape>
                                            <RoundRectangle CornerRadius="8" />
                                        </Border.StrokeShape>
                                        <Label Text="{Binding DisplayInfo}"
                                               FontSize="12"
                                               TextColor="{AppThemeBinding Light=#4B5563, Dark=#D1D5DB}" />
                                    </Border>

                                    <!-- Admission Time Info -->
                                    <Grid Grid.Row="2" ColumnDefinitions="Auto,*" ColumnSpacing="8">
                                        <!--<Label Text="&#xE8B5;"
                                               FontFamily="{x:Static fonts:FluentUI.FontFamily}"
                                               FontSize="14"
                                               TextColor="{AppThemeBinding Light=#A855F7, Dark=#C084FC}"
                                               VerticalOptions="Center" />-->
                                        <VerticalStackLayout Grid.Column="1" Spacing="2">
                                            <!--<Label Text="Admitted"
                                                   FontSize="11"
                                                   TextColor="{AppThemeBinding Light=#6B7280, Dark=#9CA3AF}" />-->
                                            <Label Text="{Binding AdmissionDate, StringFormat='{0:dddd, dd MMM yyyy HH:mm}'}"
                                                   FontSize="12"
                                                   FontAttributes="Bold"
                                                   TextColor="{AppThemeBinding Light=#7C3AED, Dark=#A78BFA}" />
                                        </VerticalStackLayout>
                                    </Grid>

                                    <!-- Action Button -->
                                    <Button Grid.Row="3"
                                            Text="Start Active Labour"
                                            Command="{Binding Source={RelativeSource AncestorType={x:Type CollectionView}}, x:DataType={x:Null}, Path=BindingContext.StartActiveLaborCommand}"
                                            CommandParameter="{Binding .}"
                                            BackgroundColor="#10B981"
                                            TextColor="White"
                                            FontSize="14"
                                            FontAttributes="Bold"
                                            HeightRequest="46"
                                            CornerRadius="12"
                                            Margin="0,16,0,0">
                                        <Button.Shadow>
                                            <Shadow Brush="#10B981"
                                                    Offset="0,4"
                                                    Radius="8"
                                                    Opacity="0.3" />
                                        </Button.Shadow>
                                    </Button>
                                </Grid>
                            </Border>
                        </SwipeView>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </RefreshView>
    </Grid>
</ContentView>
