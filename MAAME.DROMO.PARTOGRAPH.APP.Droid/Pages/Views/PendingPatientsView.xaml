<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MAAME.DROMO.PARTOGRAPH.APP.Droid.Pages.Views.PendingPatientsView"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             xmlns:models="clr-namespace:MAAME.DROMO.PARTOGRAPH.MODEL;assembly=MAAME.DROMO.PARTOGRAPH.MODEL"
             xmlns:pagemodels="clr-namespace:MAAME.DROMO.PARTOGRAPH.APP.Droid.PageModels"
             xmlns:fonts="clr-namespace:Fonts">

    <Grid RowDefinitions="Auto,*" Padding="16">

        <!-- Search Bar -->
        <Border Grid.Row="0"
                StrokeThickness="0"
                BackgroundColor="{AppThemeBinding Light=#F5F5F5, Dark=#2A2A2A}"
                Margin="0,0,0,16">
            <Border.StrokeShape>
                <RoundRectangle CornerRadius="12" />
            </Border.StrokeShape>
            <SearchBar Placeholder="Search by name or hospital number..."
                       Text="{Binding SearchText}"
                       BackgroundColor="Transparent"
                       PlaceholderColor="{AppThemeBinding Light=#999, Dark=#666}" />
        </Border>

        <!-- Patients List -->
        <RefreshView Grid.Row="1"
                     IsRefreshing="{Binding IsRefreshing}"
                     Command="{Binding RefreshCommand}">
            <CollectionView ItemsSource="{Binding Patients}"
                            ItemsLayout="VerticalList"
                            SelectionMode="None">
                <CollectionView.EmptyView>
                    <VerticalStackLayout VerticalOptions="Center" HorizontalOptions="Center" Spacing="20" Padding="40">
                        <Label Text="&#xE77B;"
                               FontFamily="{x:Static fonts:FluentUI.FontFamily}"
                               FontSize="72"
                               TextColor="{AppThemeBinding Light=#DDD, Dark=#555}"
                               HorizontalOptions="Center" />
                        <Label Text="No Pending Admissions"
                               FontSize="20"
                               FontAttributes="Bold"
                               TextColor="{AppThemeBinding Light=#888, Dark=#999}"
                               HorizontalOptions="Center" />
                        <Label Text="Admitted patients awaiting labour will appear here"
                               FontSize="14"
                               TextColor="{AppThemeBinding Light=#AAA, Dark=#777}"
                               HorizontalOptions="Center"
                               HorizontalTextAlignment="Center" />
                        <Button Text="Admit New Patient"
                                Command="{Binding AddNewPatientCommand}"
                                BackgroundColor="#2196F3"
                                TextColor="White"
                                Padding="24,12"
                                CornerRadius="12"
                                FontSize="15"
                                FontAttributes="Bold"
                                Margin="0,12,0,0">
                            <Button.Shadow>
                                <Shadow Brush="#2196F3"
                                        Offset="0,4"
                                        Radius="8"
                                        Opacity="0.3" />
                            </Button.Shadow>
                        </Button>
                    </VerticalStackLayout>
                </CollectionView.EmptyView>

                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="models:Partograph">
                        <SwipeView>
                            <SwipeView.RightItems>
                                <SwipeItems>
                                    <SwipeItem Text="Start Labour"
                                               BackgroundColor="#4CAF50"
                                               Command="{Binding Source={RelativeSource AncestorType={x:Type CollectionView}}, x:DataType={x:Null}, Path=BindingContext.StartActiveLaborCommand}"
                                               CommandParameter="{Binding .}" />
                                </SwipeItems>
                            </SwipeView.RightItems>

                            <Border StrokeThickness="0"
                                    BackgroundColor="{AppThemeBinding Light=White, Dark=#1E1E1E}"
                                    Margin="0,0,0,12"
                                    Padding="0">
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="16" />
                                </Border.StrokeShape>
                                <Border.Shadow>
                                    <Shadow Brush="{AppThemeBinding Light=#40000000, Dark=#80000000}"
                                            Offset="0,2"
                                            Radius="8"
                                            Opacity="0.15" />
                                </Border.Shadow>

                                <Grid RowDefinitions="Auto,Auto,Auto,1,Auto" Padding="16">

                                    <!-- Header Row: Patient Info -->
                                    <Grid Grid.Row="0" ColumnDefinitions="Auto,*,Auto" ColumnSpacing="12">
                                        <!-- Patient Avatar -->
                                        <Border Grid.Column="0"
                                                WidthRequest="56"
                                                HeightRequest="56"
                                                BackgroundColor="#FF9800"
                                                StrokeThickness="3"
                                                Stroke="#FFF3E0">
                                            <Border.StrokeShape>
                                                <RoundRectangle CornerRadius="28" />
                                            </Border.StrokeShape>
                                            <Label Text="{Binding Name, Converter={StaticResource InitialsConverter}}"
                                                   HorizontalOptions="Center"
                                                   VerticalOptions="Center"
                                                   FontSize="20"
                                                   FontAttributes="Bold"
                                                   TextColor="White" />
                                        </Border>

                                        <!-- Patient Name & Hospital Number -->
                                        <VerticalStackLayout Grid.Column="1" Spacing="4" VerticalOptions="Center">
                                            <Label Text="{Binding Name}"
                                                   FontAttributes="Bold"
                                                   FontSize="18"
                                                   LineBreakMode="TailTruncation" />
                                            <Label Text="{Binding HospitalNumber}"
                                                   FontSize="13"
                                                   TextColor="{AppThemeBinding Light=#888, Dark=#AAA}"
                                                   FontFamily="monospace" />
                                        </VerticalStackLayout>

                                        <!-- Status Badge -->
                                        <Border Grid.Column="2"
                                                BackgroundColor="#FF9800"
                                                Padding="10,5"
                                                VerticalOptions="Start">
                                            <Border.StrokeShape>
                                                <RoundRectangle CornerRadius="8" />
                                            </Border.StrokeShape>
                                            <Label Text="PENDING"
                                                   FontSize="11"
                                                   FontAttributes="Bold"
                                                   TextColor="White" />
                                        </Border>
                                    </Grid>

                                    <!-- Patient Demographics -->
                                    <HorizontalStackLayout Grid.Row="1" Spacing="16" Margin="0,12,0,0">
                                        <Border BackgroundColor="{AppThemeBinding Light=#F8F9FA, Dark=#252525}"
                                                Padding="10,6"
                                                HorizontalOptions="Start">
                                            <Border.StrokeShape>
                                                <RoundRectangle CornerRadius="6" />
                                            </Border.StrokeShape>
                                            <Label Text="{Binding DisplayInfo}"
                                                   FontSize="12"
                                                   TextColor="{AppThemeBinding Light=#555, Dark=#BBB}" />
                                        </Border>
                                    </HorizontalStackLayout>

                                    <!-- Clinical Information -->
                                    <Grid Grid.Row="2" ColumnDefinitions="*,*" ColumnSpacing="12" Margin="0,12,0,12">
                                        <!-- Admission Details -->
                                        <Border Grid.Column="0"
                                                BackgroundColor="{AppThemeBinding Light=#F3E5F5, Dark=#4A148C}"
                                                Padding="12,10">
                                            <Border.StrokeShape>
                                                <RoundRectangle CornerRadius="10" />
                                            </Border.StrokeShape>
                                            <VerticalStackLayout Spacing="4">
                                                <HorizontalStackLayout Spacing="6">
                                                    <Label Text="&#xE8B5;"
                                                           FontFamily="{x:Static fonts:FluentUI.FontFamily}"
                                                           FontSize="16"
                                                           TextColor="#9C27B0"
                                                           VerticalOptions="Center" />
                                                    <Label Text="Admitted"
                                                           FontSize="11"
                                                           TextColor="{AppThemeBinding Light=#666, Dark=#AAA}"
                                                           VerticalOptions="Center" />
                                                </HorizontalStackLayout>
                                                <Label Text="{Binding AdmissionDate, StringFormat='{0:dd MMM yyyy}'}"
                                                       FontSize="14"
                                                       FontAttributes="Bold"
                                                       TextColor="{AppThemeBinding Light=#7B1FA2, Dark=#BA68C8}"
                                                       Margin="22,0,0,0" />
                                                <Label Text="{Binding AdmissionDate, StringFormat='{0:HH:mm}'}"
                                                       FontSize="12"
                                                       TextColor="{AppThemeBinding Light=#888, Dark=#999}"
                                                       Margin="22,0,0,0" />
                                            </VerticalStackLayout>
                                        </Border>

                                        <!-- Initial Assessment -->
                                        <Border Grid.Column="1"
                                                BackgroundColor="{AppThemeBinding Light=#E8F5E9, Dark=#1B5E20}"
                                                Padding="12,10">
                                            <Border.StrokeShape>
                                                <RoundRectangle CornerRadius="10" />
                                            </Border.StrokeShape>
                                            <VerticalStackLayout Spacing="4">
                                                <HorizontalStackLayout Spacing="6">
                                                    <Label Text="&#xE9E9;"
                                                           FontFamily="{x:Static fonts:FluentUI.FontFamily}"
                                                           FontSize="16"
                                                           TextColor="#4CAF50"
                                                           VerticalOptions="Center" />
                                                    <Label Text="Cervical Dilation"
                                                           FontSize="11"
                                                           TextColor="{AppThemeBinding Light=#666, Dark=#AAA}"
                                                           VerticalOptions="Center" />
                                                </HorizontalStackLayout>
                                                <HorizontalStackLayout Spacing="4" Margin="22,0,0,0">
                                                    <Label Text="{Binding CervicalDilationOnAdmission, StringFormat='{0}'}"
                                                           FontSize="20"
                                                           FontAttributes="Bold"
                                                           TextColor="{AppThemeBinding Light=#388E3C, Dark=#81C784}"
                                                           VerticalOptions="Center" />
                                                    <Label Text="cm"
                                                           FontSize="12"
                                                           TextColor="{AppThemeBinding Light=#388E3C, Dark=#81C784}"
                                                           VerticalOptions="End"
                                                           Margin="0,0,0,2" />
                                                </HorizontalStackLayout>
                                            </VerticalStackLayout>
                                        </Border>
                                    </Grid>

                                    <!-- Divider -->
                                    <BoxView Grid.Row="3"
                                             HeightRequest="1"
                                             Color="{AppThemeBinding Light=#EEEEEE, Dark=#333333}" />

                                    <!-- Action Button -->
                                    <Button Grid.Row="4"
                                            Text="Start Active Labour"
                                            Command="{Binding Source={RelativeSource AncestorType={x:Type CollectionView}}, x:DataType={x:Null}, Path=BindingContext.StartActiveLaborCommand}"
                                            CommandParameter="{Binding .}"
                                            BackgroundColor="#4CAF50"
                                            TextColor="White"
                                            FontSize="15"
                                            FontAttributes="Bold"
                                            HeightRequest="48"
                                            CornerRadius="12"
                                            Margin="0,12,0,0">
                                        <Button.Shadow>
                                            <Shadow Brush="#4CAF50"
                                                    Offset="0,2"
                                                    Radius="4"
                                                    Opacity="0.3" />
                                        </Button.Shadow>
                                    </Button>
                                </Grid>
                            </Border>
                        </SwipeView>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </RefreshView>
    </Grid>
</ContentView>
