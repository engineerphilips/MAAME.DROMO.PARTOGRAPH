<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MAAME.DROMO.PARTOGRAPH.APP.Droid.Pages.SignupPage"
             xmlns:fonts="clr-namespace:Fonts"
             Title="Create New User"
             BackgroundColor="{AppThemeBinding Light=#F5F7FA, Dark=#1A1A1A}">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">

            <!-- Header -->
            <Border BackgroundColor="{AppThemeBinding Light=#4CAF50, Dark=#388E3C}"
                    Padding="24">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="16" />
                </Border.StrokeShape>

                <VerticalStackLayout Spacing="8">
                    <Label Text="&#xE8FA;"
                           FontFamily="{x:Static fonts:FluentUI.FontFamily}"
                           FontSize="48" 
                           HorizontalOptions="Center" />
                    <Label Text="Create New User"
                           FontSize="24"
                           FontAttributes="Bold" 
                           HorizontalOptions="Center" />
                    <Label Text="Fill in the details below to onboard a new staff member"
                           FontSize="14"
                           Opacity="0.9" 
                           HorizontalOptions="Center" />
                </VerticalStackLayout>
            </Border>

            <!-- Personal Information Section -->
            <Border BackgroundColor="{AppThemeBinding Light=White, Dark=#2A2A2A}"
                    Padding="20"
                    StrokeThickness="0">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="16" />
                </Border.StrokeShape>
                <Border.Shadow>
                    <Shadow Brush="{AppThemeBinding Light=#20000000, Dark=#40000000}"
                            Offset="0,2"
                            Radius="8"
                            Opacity="0.15" />
                </Border.Shadow>

                <VerticalStackLayout Spacing="16">
                    <Label Text="Personal Information"
                           FontSize="18"
                           FontAttributes="Bold"
                           TextColor="{AppThemeBinding Light=#1A1A1A, Dark=#F5F5F5}" />

                    <!-- Name -->
                    <VerticalStackLayout Spacing="6">
                        <Label Text="Full Name *"
                               FontSize="14"
                               FontAttributes="Bold"
                               TextColor="{AppThemeBinding Light=#444, Dark=#CCC}" />
                        <Border StrokeThickness="1"
                                Stroke="{AppThemeBinding Light=#E0E0E0, Dark=#424242}"
                                BackgroundColor="{AppThemeBinding Light=#FAFAFA, Dark=#1E1E1E}">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="8" />
                            </Border.StrokeShape>
                            <Entry Text="{Binding Name}"
                                   Placeholder="e.g., Maame Dromo"
                                   TextColor="{AppThemeBinding Light=#1A1A1A, Dark=#F5F5F5}"
                                   PlaceholderColor="{AppThemeBinding Light=#999, Dark=#666}" />
                        </Border>
                    </VerticalStackLayout>

                    <!-- Staff ID -->
                    <VerticalStackLayout Spacing="6">
                        <Label Text="Staff ID *"
                               FontSize="14"
                               FontAttributes="Bold"
                               TextColor="{AppThemeBinding Light=#444, Dark=#CCC}" />
                        <Border StrokeThickness="1"
                                Stroke="{AppThemeBinding Light=#E0E0E0, Dark=#424242}"
                                BackgroundColor="{AppThemeBinding Light=#FAFAFA, Dark=#1E1E1E}">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="8" />
                            </Border.StrokeShape>
                            <Entry Text="{Binding StaffId}"
                                   Placeholder="e.g., 123456 OR IGF1234"
                                   TextColor="{AppThemeBinding Light=#1A1A1A, Dark=#F5F5F5}"
                                   PlaceholderColor="{AppThemeBinding Light=#999, Dark=#666}" />
                        </Border>
                    </VerticalStackLayout>

                    <!-- Email -->
                    <VerticalStackLayout Spacing="6">
                        <Label Text="Email Address *"
                               FontSize="14"
                               FontAttributes="Bold"
                               TextColor="{AppThemeBinding Light=#444, Dark=#CCC}" />
                        <Border StrokeThickness="1"
                                Stroke="{AppThemeBinding Light=#E0E0E0, Dark=#424242}"
                                BackgroundColor="{AppThemeBinding Light=#FAFAFA, Dark=#1E1E1E}">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="8" />
                            </Border.StrokeShape>
                            <Entry Text="{Binding Email}"
                                   Placeholder="e.g., maame.dromo@emperorsoftware.co"
                                   Keyboard="Email"
                                   TextColor="{AppThemeBinding Light=#1A1A1A, Dark=#F5F5F5}"
                                   PlaceholderColor="{AppThemeBinding Light=#999, Dark=#666}" />
                        </Border>
                    </VerticalStackLayout>
                </VerticalStackLayout>
            </Border>

            <!-- Role & Department Section -->
            <Border BackgroundColor="{AppThemeBinding Light=White, Dark=#2A2A2A}"
                    Padding="20"
                    StrokeThickness="0">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="16" />
                </Border.StrokeShape>
                <Border.Shadow>
                    <Shadow Brush="{AppThemeBinding Light=#20000000, Dark=#40000000}"
                            Offset="0,2"
                            Radius="8"
                            Opacity="0.15" />
                </Border.Shadow>

                <VerticalStackLayout Spacing="16">
                    <Label Text="Role &amp; Department"
                           FontSize="18"
                           FontAttributes="Bold"
                           TextColor="{AppThemeBinding Light=#1A1A1A, Dark=#F5F5F5}" />

                    <!-- Role -->
                    <VerticalStackLayout Spacing="6">
                        <Label Text="Role *"
                               FontSize="14"
                               FontAttributes="Bold"
                               TextColor="{AppThemeBinding Light=#444, Dark=#CCC}" />
                        <Border StrokeThickness="1"
                                Stroke="{AppThemeBinding Light=#E0E0E0, Dark=#424242}"
                                BackgroundColor="{AppThemeBinding Light=#FAFAFA, Dark=#1E1E1E}">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="8" />
                            </Border.StrokeShape>
                            <Picker SelectedItem="{Binding Role}"
                                    ItemsSource="{Binding AvailableRoles}"
                                    Title="Select role"
                                    TextColor="{AppThemeBinding Light=#1A1A1A, Dark=#F5F5F5}" />
                        </Border>
                    </VerticalStackLayout>

                    <!-- Department -->
                    <VerticalStackLayout Spacing="6">
                        <Label Text="Department *"
                               FontSize="14"
                               FontAttributes="Bold"
                               TextColor="{AppThemeBinding Light=#444, Dark=#CCC}" />
                        <Border StrokeThickness="1"
                                Stroke="{AppThemeBinding Light=#E0E0E0, Dark=#424242}"
                                BackgroundColor="{AppThemeBinding Light=#FAFAFA, Dark=#1E1E1E}">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="8" />
                            </Border.StrokeShape>
                            <Picker SelectedItem="{Binding Department}"
                                    Title="Select department"
                                    TextColor="{AppThemeBinding Light=#1A1A1A, Dark=#F5F5F5}">
                                <Picker.Items>
                                    <x:String>Labour Ward</x:String>
                                    <x:String>Maternity</x:String>
                                    <x:String>Obstetrics</x:String>
                                    <x:String>Gynecology</x:String>
                                    <x:String>Emergency</x:String>
                                    <x:String>Administration</x:String>
                                    <x:String>ICU</x:String>
                                    <x:String>Pediatrics</x:String>
                                </Picker.Items>
                            </Picker>
                        </Border>
                    </VerticalStackLayout>

                    <!-- Region Selection (Only for Super/Maame.Dromo.Admin or users without facility) -->
                    <VerticalStackLayout Spacing="6" IsVisible="{Binding ShowFacilitySelection}">
                        <Label Text="Region *"
                               FontSize="14"
                               FontAttributes="Bold"
                               TextColor="{AppThemeBinding Light=#444, Dark=#CCC}" />
                        <Border StrokeThickness="1"
                                Stroke="{AppThemeBinding Light=#E0E0E0, Dark=#424242}"
                                BackgroundColor="{AppThemeBinding Light=#FAFAFA, Dark=#1E1E1E}">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="8" />
                            </Border.StrokeShape>
                            <Picker SelectedItem="{Binding SelectedRegion}"
                                    ItemsSource="{Binding Regions}"
                                    ItemDisplayBinding="{Binding Name}"
                                    Title="Select region"
                                    TextColor="{AppThemeBinding Light=#1A1A1A, Dark=#F5F5F5}" />
                        </Border>
                    </VerticalStackLayout>

                    <!-- District Selection (Only visible when region is selected) -->
                    <VerticalStackLayout Spacing="6" IsVisible="{Binding HasSelectedRegion}">
                        <Label Text="District *"
                               FontSize="14"
                               FontAttributes="Bold"
                               TextColor="{AppThemeBinding Light=#444, Dark=#CCC}" />
                        <Border StrokeThickness="1"
                                Stroke="{AppThemeBinding Light=#E0E0E0, Dark=#424242}"
                                BackgroundColor="{AppThemeBinding Light=#FAFAFA, Dark=#1E1E1E}">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="8" />
                            </Border.StrokeShape>
                            <Picker SelectedItem="{Binding SelectedDistrict}"
                                    ItemsSource="{Binding Districts}"
                                    ItemDisplayBinding="{Binding Name}"
                                    Title="Select district"
                                    TextColor="{AppThemeBinding Light=#1A1A1A, Dark=#F5F5F5}" />
                        </Border>
                    </VerticalStackLayout>

                    <!-- Facility Selection (Only visible when district is selected) -->
                    <VerticalStackLayout Spacing="6" IsVisible="{Binding HasSelectedDistrict}">
                        <Label Text="Facility *"
                               FontSize="14"
                               FontAttributes="Bold"
                               TextColor="{AppThemeBinding Light=#444, Dark=#CCC}" />
                        <Border StrokeThickness="1"
                                Stroke="{AppThemeBinding Light=#E0E0E0, Dark=#424242}"
                                BackgroundColor="{AppThemeBinding Light=#FAFAFA, Dark=#1E1E1E}">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="8" />
                            </Border.StrokeShape>
                            <Picker SelectedItem="{Binding SelectedFacility}"
                                    ItemsSource="{Binding Facilities}"
                                    ItemDisplayBinding="{Binding Name}"
                                    Title="Select facility"
                                    TextColor="{AppThemeBinding Light=#1A1A1A, Dark=#F5F5F5}" />
                        </Border>
                    </VerticalStackLayout>
                </VerticalStackLayout>
            </Border>

            <!-- Security Section -->
            <Border BackgroundColor="{AppThemeBinding Light=White, Dark=#2A2A2A}"
                    Padding="20"
                    StrokeThickness="0">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="16" />
                </Border.StrokeShape>
                <Border.Shadow>
                    <Shadow Brush="{AppThemeBinding Light=#20000000, Dark=#40000000}"
                            Offset="0,2"
                            Radius="8"
                            Opacity="0.15" />
                </Border.Shadow>

                <VerticalStackLayout Spacing="16">
                    <HorizontalStackLayout Spacing="8">
                        <Label Text="&#xE928;"
                               FontFamily="{x:Static fonts:FluentUI.FontFamily}"
                               FontSize="20"
                               TextColor="{AppThemeBinding Light=#2196F3, Dark=#64B5F6}"
                               VerticalOptions="Center" />
                        <Label Text="Security"
                               FontSize="18"
                               FontAttributes="Bold"
                               TextColor="{AppThemeBinding Light=#1A1A1A, Dark=#F5F5F5}"
                               VerticalOptions="Center" />
                    </HorizontalStackLayout>

                    <!-- Password -->
                    <VerticalStackLayout Spacing="6">
                        <Label Text="Password *"
                               FontSize="14"
                               FontAttributes="Bold"
                               TextColor="{AppThemeBinding Light=#444, Dark=#CCC}" />
                        <Border StrokeThickness="1"
                                Stroke="{AppThemeBinding Light=#E0E0E0, Dark=#424242}"
                                BackgroundColor="{AppThemeBinding Light=#FAFAFA, Dark=#1E1E1E}">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="8" />
                            </Border.StrokeShape>
                            <Entry Text="{Binding Password}"
                                   Placeholder="Enter password (min. 6 characters)"
                                   IsPassword="True"
                                   TextColor="{AppThemeBinding Light=#1A1A1A, Dark=#F5F5F5}"
                                   PlaceholderColor="{AppThemeBinding Light=#999, Dark=#666}" />
                        </Border>
                    </VerticalStackLayout>

                    <!-- Confirm Password -->
                    <VerticalStackLayout Spacing="6">
                        <Label Text="Confirm Password *"
                               FontSize="14"
                               FontAttributes="Bold"
                               TextColor="{AppThemeBinding Light=#444, Dark=#CCC}" />
                        <Border StrokeThickness="1"
                                Stroke="{AppThemeBinding Light=#E0E0E0, Dark=#424242}"
                                BackgroundColor="{AppThemeBinding Light=#FAFAFA, Dark=#1E1E1E}">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="8" />
                            </Border.StrokeShape>
                            <Entry Text="{Binding ConfirmPassword}"
                                   Placeholder="Re-enter password"
                                   IsPassword="True"
                                   TextColor="{AppThemeBinding Light=#1A1A1A, Dark=#F5F5F5}"
                                   PlaceholderColor="{AppThemeBinding Light=#999, Dark=#666}" />
                        </Border>
                    </VerticalStackLayout>

                    <!--<Label Text="Password will be securely hashed before storage"
                           FontSize="12"
                           TextColor="{AppThemeBinding Light=#888, Dark=#777}"
                           FontAttributes="Italic" />-->
                </VerticalStackLayout>
            </Border>

            <!-- Action Buttons -->
            <Grid ColumnDefinitions="*,*" ColumnSpacing="12" Margin="0,10,0,30">
                <!-- Cancel Button -->
                <Button Grid.Column="0"
                        Text="Cancel"
                        Command="{Binding CancelCommand}"
                        BackgroundColor="{AppThemeBinding Light=#E0E0E0, Dark=#424242}"
                        TextColor="{AppThemeBinding Light=#1A1A1A, Dark=#F5F5F5}"
                        HeightRequest="56"
                        CornerRadius="12"
                        FontSize="16"
                        FontAttributes="Bold" />

                <!-- Save Button -->
                <Button Grid.Column="1"
                        Text="Create User"
                        Command="{Binding SignUpCommand}"
                        BackgroundColor="{AppThemeBinding Light=#4CAF50, Dark=#388E3C}"
                        TextColor="White"
                        HeightRequest="56"
                        CornerRadius="12"
                        FontSize="16"
                        FontAttributes="Bold">
                    <Button.Shadow>
                        <Shadow Brush="#404CAF50"
                                Offset="0,4"
                                Radius="12"
                                Opacity="0.3" />
                    </Button.Shadow>
                </Button>
            </Grid>

            <!-- Loading Indicator -->
            <ActivityIndicator IsRunning="{Binding IsBusy}"
                             IsVisible="{Binding IsBusy}"
                             Color="{AppThemeBinding Light=#4CAF50, Dark=#81C784}"
                             HeightRequest="50" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
