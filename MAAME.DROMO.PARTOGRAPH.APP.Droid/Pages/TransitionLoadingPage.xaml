<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:fonts="clr-namespace:Fonts"
             x:Class="MAAME.DROMO.PARTOGRAPH.APP.Droid.Pages.TransitionLoadingPage"
             Shell.NavBarIsVisible="False"
             Shell.TabBarIsVisible="False">

    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0,1">
                <GradientStop Color="{AppThemeBinding Light=#E3F2FD, Dark=#0D47A1}" Offset="0.0" />
                <GradientStop Color="{AppThemeBinding Light=#BBDEFB, Dark=#1565C0}" Offset="1.0" />
            </LinearGradientBrush>
        </Grid.Background>

        <VerticalStackLayout VerticalOptions="Center"
                             HorizontalOptions="Center"
                             Spacing="24">

            <!-- App Logo with Animation -->
            <Border x:Name="LogoBorder"
                    WidthRequest="100"
                    HeightRequest="100"
                    BackgroundColor="White"
                    HorizontalOptions="Center">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="50" />
                </Border.StrokeShape>
                <Border.Shadow>
                    <Shadow Brush="#2196F3" Offset="0,8" Radius="20" Opacity="0.4" />
                </Border.Shadow>
                <Label x:Name="LogoIcon"
                       Text="&#xE95E;"
                       FontFamily="{x:Static fonts:FluentUI.FontFamily}"
                       FontSize="50"
                       TextColor="#2196F3"
                       HorizontalOptions="Center"
                       VerticalOptions="Center" />
            </Border>

            <!-- Loading Message -->
            <Label x:Name="LoadingMessageLabel"
                   Text="Loading..."
                   FontSize="18"
                   FontAttributes="Bold"
                   TextColor="{AppThemeBinding Light=#1976D2, Dark=White}"
                   HorizontalOptions="Center" />

            <!-- Progress Bar -->
            <ProgressBar x:Name="LoadingProgressBar"
                         Progress="0"
                         ProgressColor="#2196F3"
                         WidthRequest="200"
                         HeightRequest="8"
                         HorizontalOptions="Center" />

            <!-- Sub Message -->
            <Label x:Name="SubMessageLabel"
                   Text="Please wait..."
                   FontSize="14"
                   TextColor="{AppThemeBinding Light=#666, Dark=#B0BEC5}"
                   HorizontalOptions="Center" />

        </VerticalStackLayout>
    </Grid>

</ContentPage>
