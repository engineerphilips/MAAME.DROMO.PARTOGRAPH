<?xml version="1.0" encoding="utf-8" ?>
<sfPopup:SfPopup AnimationMode='SlideOnTop' xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:sfPopup="clr-namespace:Syncfusion.Maui.Popup;assembly=Syncfusion.Maui.Popup"
             xmlns:core="clr-namespace:Syncfusion.Maui.Core;assembly=Syncfusion.Maui.Core"
             xmlns:buttons="clr-namespace:Syncfusion.Maui.Buttons;assembly=Syncfusion.Maui.Buttons"
             xmlns:editors="clr-namespace:Syncfusion.Maui.Inputs;assembly=Syncfusion.Maui.Inputs"
             x:Class="MAAME.DROMO.PARTOGRAPH.APP.Droid.Pages.Modals.IVFluidPopup">

    <sfPopup:SfPopup.Resources>
        <ResourceDictionary>
            <!-- Input Styles -->
            <Style x:Key="PatientInput" TargetType="core:SfTextInputLayout">
                <Setter Property="ContainerType" Value="Outlined" />
                <Setter Property="OutlineCornerRadius" Value="8" />
            </Style>
        </ResourceDictionary>
    </sfPopup:SfPopup.Resources>
    <sfPopup:SfPopup.HeaderTemplate>
        <DataTemplate>
            <StackLayout>
                <Label Text="IV Fluid" VerticalOptions="Center" Margin="15,15,0,0" />
            </StackLayout>
        </DataTemplate>
    </sfPopup:SfPopup.HeaderTemplate>
    <sfPopup:SfPopup.ContentTemplate>
        <DataTemplate>
            <ScrollView>
                <VerticalStackLayout Padding="15" Spacing="10">
                    <core:SfTextInputLayout Hint="Date"
                                        Style="{StaticResource PatientInput}"
                                        HelperText="Recording time">
                        <DatePicker Date="{Binding RecordingDate}" />
                    </core:SfTextInputLayout>

                    <core:SfTextInputLayout Hint="Time"
                                        Style="{StaticResource PatientInput}"
                                        HelperText="Recording time">
                        <TimePicker Time="{Binding RecordingTime}" />
                    </core:SfTextInputLayout>

                    <core:SfTextInputLayout Hint="Fluid Type"
                                        Style="{StaticResource PatientInput}"
                                        HelperText="IV Fluid Type...">
                        <Entry Text="{Binding FluidType}"
                           Keyboard="Text"
                           ReturnType="Next" />
                    </core:SfTextInputLayout>

                    <core:SfTextInputLayout Hint="Volume Infused"
                                        Style="{StaticResource PatientInput}"
                                        HelperText="Administered volume...">
                        <editors:SfNumericEntry Value="{Binding VolumeInfused, Mode=TwoWay}" Minimum="0"
                       CustomFormat="0"
                       ValueChangeMode="OnKeyFocus" />
                    </core:SfTextInputLayout>

                    <core:SfTextInputLayout Hint="Rate"
                                        Style="{StaticResource PatientInput}"
                                        HelperText="Rate of infusion...">
                        <Entry Text="{Binding Rate}"
                           Keyboard="Text"
                           ReturnType="Next" />
                    </core:SfTextInputLayout>

                    <core:SfTextInputLayout Hint="Additional Notes"
                                        Style="{StaticResource PatientInput}"
                                        HelperText="Any other observations...">
                        <Entry Text="{Binding Notes}"
                           Keyboard="Text"
                           ReturnType="Next" />
                    </core:SfTextInputLayout>

                    <!-- WHO 2020 Enhanced Assessment -->
                    <!--<Label Text="WHO 2020 Detailed Assessment" FontAttributes="Bold" FontSize="16" Margin="0,15,0,5"/>

                    <Label Text="Infusion Details" FontAttributes="Bold" Margin="0,10,0,5"/>

                    <core:SfTextInputLayout Hint="Rate (mL/hour)" Style="{StaticResource PatientInput}">
                        <Entry Text="{Binding RateMlPerHour}" Keyboard="Numeric" />
                    </core:SfTextInputLayout>

                    <Grid ColumnDefinitions="*,*" ColumnSpacing="10">
                        <core:SfTextInputLayout Grid.Column="0" Hint="Start Time" Style="{StaticResource PatientInput}">
                            <DatePicker Date="{Binding StartTime}" />
                        </core:SfTextInputLayout>
                        <core:SfTextInputLayout Grid.Column="1" Hint="End Time" Style="{StaticResource PatientInput}">
                            <DatePicker Date="{Binding EndTime}" />
                        </core:SfTextInputLayout>
                    </Grid>

                    <core:SfTextInputLayout Hint="Duration (Minutes)" Style="{StaticResource PatientInput}">
                        <Entry Text="{Binding DurationMinutes}" Keyboard="Numeric" />
                    </core:SfTextInputLayout>

                    <Label Text="Additives" FontAttributes="Bold" Margin="0,10,0,5"/>

                    <core:SfTextInputLayout Hint="Additive Name" Style="{StaticResource PatientInput}"
                                            HelperText="Medication or supplement added">
                        <Entry Text="{Binding Additives}" Keyboard="Text" />
                    </core:SfTextInputLayout>

                    <Grid ColumnDefinitions="*,*" ColumnSpacing="10">
                        <core:SfTextInputLayout Grid.Column="0" Hint="Concentration" Style="{StaticResource PatientInput}">
                            <Entry Text="{Binding AdditiveConcentration}" Keyboard="Text" />
                        </core:SfTextInputLayout>
                        <core:SfTextInputLayout Grid.Column="1" Hint="Dose" Style="{StaticResource PatientInput}">
                            <Entry Text="{Binding AdditiveDose}" Keyboard="Text" />
                        </core:SfTextInputLayout>
                    </Grid>

                    <Label Text="IV Site Assessment" FontAttributes="Bold" Margin="0,10,0,5"/>

                    <core:SfTextInputLayout Hint="IV Site Location" Style="{StaticResource PatientInput}"
                                            HelperText="e.g., Left hand, right forearm">
                        <Entry Text="{Binding IvSite}" Keyboard="Text" />
                    </core:SfTextInputLayout>

                    <VerticalStackLayout>
                        <Label Text="Site Healthy"/>
                        <Switch IsToggled="{Binding SiteHealthy}" HorizontalOptions="Start"/>
                    </VerticalStackLayout>

                    <core:SfTextInputLayout Hint="Site Condition" Style="{StaticResource PatientInput}"
                                            HelperText="Redness, swelling, pain, etc.">
                        <Entry Text="{Binding SiteCondition}" Keyboard="Text" />
                    </core:SfTextInputLayout>

                    <core:SfTextInputLayout Hint="Phlebitis Score (VIP 0-5)" Style="{StaticResource PatientInput}"
                                            HelperText="Visual Infusion Phlebitis Score">
                        <Entry Text="{Binding PhlebitisScore}" Keyboard="Numeric" />
                    </core:SfTextInputLayout>

                    <Label Text="Site Care Tracking" FontAttributes="Bold" Margin="0,10,0,5"/>

                    <Grid ColumnDefinitions="*,*" ColumnSpacing="10">
                        <core:SfTextInputLayout Grid.Column="0" Hint="Last Site Assessment" Style="{StaticResource PatientInput}">
                            <DatePicker Date="{Binding LastSiteAssessment}" />
                        </core:SfTextInputLayout>
                        <core:SfTextInputLayout Grid.Column="1" Hint="Last Dressing Change" Style="{StaticResource PatientInput}">
                            <DatePicker Date="{Binding LastDressingChange}" />
                        </core:SfTextInputLayout>
                    </Grid>

                    <core:SfTextInputLayout Hint="Cannula Insertion Date" Style="{StaticResource PatientInput}">
                        <DatePicker Date="{Binding CannelaInsertionDate}" />
                    </core:SfTextInputLayout>

                    <Label Text="Clinical Information" FontAttributes="Bold" Margin="0,10,0,5"/>

                    <core:SfTextInputLayout Hint="Indication" Style="{StaticResource PatientInput}"
                                            HelperText="Reason for IV therapy">
                        <Entry Text="{Binding Indication}" Keyboard="Text" />
                    </core:SfTextInputLayout>

                    <core:SfTextInputLayout Hint="Batch Number" Style="{StaticResource PatientInput}"
                                            HelperText="Fluid batch/lot number">
                        <Entry Text="{Binding BatchNumber}" Keyboard="Text" />
                    </core:SfTextInputLayout>

                    <core:SfTextInputLayout Hint="Running Total Input (mL)" Style="{StaticResource PatientInput}"
                                            HelperText="Cumulative IV fluid intake">
                        <Entry Text="{Binding RunningTotalInput}" Keyboard="Numeric" />
                    </core:SfTextInputLayout>

                    <core:SfTextInputLayout Hint="Clinical Alert" Style="{StaticResource PatientInput}"
                                            HelperText="Any alerts or concerns" ContainerBackground="LightYellow">
                        <Entry Text="{Binding ClinicalAlert}" Keyboard="Text" />
                    </core:SfTextInputLayout>-->

                    <!-- Action Buttons -->
                    <Grid ColumnDefinitions="*,*" ColumnSpacing="10">
                        <Button Text="Cancel"
                    Command="{Binding CancelCommand}"
                    BackgroundColor="#9E9E9E"
                    TextColor="White"
                    Grid.Column="0"/>

                        <Button Text="Save"
                    Command="{Binding SaveCommand}"
                    BackgroundColor="#4CAF50"
                    TextColor="White"
                    Grid.Column="1"/>
                    </Grid>

                </VerticalStackLayout>
            </ScrollView>
        </DataTemplate>
    </sfPopup:SfPopup.ContentTemplate>

</sfPopup:SfPopup>

