<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:core="clr-namespace:Syncfusion.Maui.Core;assembly=Syncfusion.Maui.Core"
             xmlns:buttons="clr-namespace:Syncfusion.Maui.Buttons;assembly=Syncfusion.Maui.Buttons"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             xmlns:fonts="clr-namespace:Fonts"
             x:Class="MAAME.DROMO.PARTOGRAPH.APP.Droid.Pages.Modals.OralFluidModalView">

    <ContentView.Resources>
        <ResourceDictionary>

            <!-- Input Styles -->
            <Style x:Key="PatientInput" TargetType="core:SfTextInputLayout">
                <Setter Property="ContainerType" Value="Outlined" />
                <Setter Property="OutlineCornerRadius" Value="8" />
                <!--<Setter Property="Stroke" Value="{StaticResource BorderLight}" />-->
                <!--<Setter Property="FocusedStroke" Value="{StaticResource PrimaryBlue}" />-->
                <!--<Setter Property="ContainerBackground" Value="{StaticResource SurfaceWhite}" />-->
                <!--<Setter Property="Margin" Value="0,4" />-->
            </Style>
        </ResourceDictionary>
    </ContentView.Resources>

    <ScrollView>
        <VerticalStackLayout Padding="15" Spacing="10">

            <!-- Header -->
            <!--<Border BackgroundColor="#E91E63" Padding="15">
                                    <Border.StrokeShape>
                                        <RoundRectangle CornerRadius="10" />
                                    </Border.StrokeShape>
                                    <Label Text="Birth Companion Information" 
                       TextColor="White" 
                       FontSize="18" 
                       FontAttributes="Bold"
                       HorizontalTextAlignment="Center"/>
                                </Border>-->

            <!-- Recording Time -->

            <core:SfTextInputLayout Hint="Date"
                                            Style="{StaticResource PatientInput}"
                                            HelperText="Recording time">
                <DatePicker Date="{Binding RecordingDate, Converter={StaticResource DateOnlyToDateTimeConverter}}" />
            </core:SfTextInputLayout>

            <core:SfTextInputLayout Hint="Time"
                                            Style="{StaticResource PatientInput}"
                                            HelperText="Recording time">
                <TimePicker Time="{Binding RecordingTime}" />
            </core:SfTextInputLayout>

            <!--<Border Padding="10">
                                    <Border.StrokeShape>
                                        <RoundRectangle CornerRadius="5" />
                                    </Border.StrokeShape>
                                    <VerticalStackLayout>
                                        <Label Text="Recording Time" FontAttributes="Bold"/>
                                        <DatePicker Date="{Binding RecordingDate, Converter={StaticResource DateOnlyToDateTimeConverter}}" />
                                        <TimePicker Time="{Binding RecordingTime}" />
                                    </VerticalStackLayout>
                                </Border>-->

            <!-- Companion Name -->
            <!--<Border BackgroundColor="White" Padding="10">
                                    <Border.StrokeShape>
                                        <RoundRectangle CornerRadius="5" />
                                    </Border.StrokeShape>
                                    <VerticalStackLayout>
                                        <Label Text="Companion Name" FontAttributes="Bold"/>
                                        <Entry Text="{Binding CompanionName}" 
                           Placeholder="Enter companion's name"/>
                                    </VerticalStackLayout>
                                </Border>-->

            <!-- Relationship -->
            <!--<Border BackgroundColor="White" Padding="10">
                                    <Border.StrokeShape>
                                        <RoundRectangle CornerRadius="5" />
                                    </Border.StrokeShape>
                                    <VerticalStackLayout>
                                        <Label Text="Relationship to Patient" FontAttributes="Bold"/>
                                        <Picker ItemsSource="{Binding RelationshipOptions}"
                            SelectedItem="{Binding SelectedRelationship}"/>
                                        <Entry Text="{Binding OtherRelationship}" 
                           Placeholder="Specify if other..."
                           IsVisible="{Binding ShowOtherRelationship}"/>
                                    </VerticalStackLayout>
                                </Border>-->

            <!-- Support Type -->

            <VerticalStackLayout Padding="10,0,0,0">
                <Label Text="Is oral fluid administered?" FontAttributes="Bold"/>

                <buttons:SfSegmentedControl x:Name="segmentedControl" CornerRadius="8" Margin="-10,0,0,0" VisibleSegmentsCount="3" SelectedIndex="{Binding OralFluidIndex}">
                    <buttons:SfSegmentedControl.ItemsSource>
                        <x:Array Type="{x:Type x:String}">
                            <x:String>No</x:String>
                            <x:String>Yes</x:String>
                            <x:String>Declines</x:String>
                        </x:Array>
                    </buttons:SfSegmentedControl.ItemsSource>
                </buttons:SfSegmentedControl>

                <!--<buttons:SfRadioGroup x:Name="radioGroup" Margin="30,0,0,0">
                    <buttons:SfRadioButton x:Name="yes" Text="Yes"/>
                    <buttons:SfRadioButton x:Name="no" Text="No" />
                    <buttons:SfRadioButton x:Name="declines" Text="Woman declines" />
                </buttons:SfRadioGroup>-->

                <!--<Label Text="Is companion available?" FontAttributes="Bold"/>
                    <CheckBox IsChecked="{Binding EmotionalSupport}" />
                    <Label Text="Yes" Margin="30,0,0,0"/>
                    <CheckBox IsChecked="{Binding PhysicalSupport}"/>
                <Label Text="No" Margin="30,0,0,0"/>-->

            </VerticalStackLayout>

            <!-- Presence -->
            <!--<Border BackgroundColor="White" Padding="10">
                                    <Border.StrokeShape>
                                        <RoundRectangle CornerRadius="5" />
                                    </Border.StrokeShape>
                                    <VerticalStackLayout>
                                        <Label Text="Presence During" FontAttributes="Bold"/>
                                        <HorizontalStackLayout>
                                            <CheckBox IsChecked="{Binding PresentDuringLabor}" />
                                            <Label Text="Labor" VerticalOptions="Center"/>
                                        </HorizontalStackLayout>
                                        <HorizontalStackLayout>
                                            <CheckBox IsChecked="{Binding PresentDuringDelivery}" />
                                            <Label Text="Delivery" VerticalOptions="Center"/>
                                        </HorizontalStackLayout>
                                    </VerticalStackLayout>
                                </Border>-->

            <!-- Contact Number -->
            <!--<Border BackgroundColor="White" Padding="10">
                                    <Border.StrokeShape>
                                        <RoundRectangle CornerRadius="5" />
                                    </Border.StrokeShape>
                                    <VerticalStackLayout>
                                        <Label Text="Contact Number" FontAttributes="Bold"/>
                                        <Entry Text="{Binding ContactNumber}" 
                           Placeholder="Enter phone number"
                           Keyboard="Telephone"/>
                                    </VerticalStackLayout>
                                </Border>-->

            <!-- Role -->
            <!--<Border BackgroundColor="White" Padding="10">
                                    <Border.StrokeShape>
                                        <RoundRectangle CornerRadius="5" />
                                    </Border.StrokeShape>
                                    <VerticalStackLayout>
                                        <Label Text="Specific Role/Instructions" FontAttributes="Bold"/>
                                        <Editor Text="{Binding Role}" 
                            Placeholder="Describe companion's role..."
                            HeightRequest="80"/>
                                    </VerticalStackLayout>
                                </Border>-->

            <!-- Notes -->

            <core:SfTextInputLayout Hint="Additional Notes"
                                            Style="{StaticResource PatientInput}"
                                            HelperText="Any other observations...">
                <Entry Text="{Binding Notes}"
                               Keyboard="Text"
                               ReturnType="Next" />
            </core:SfTextInputLayout>

            <!--<Border BackgroundColor="White" Padding="10">
                                    <Border.StrokeShape>
                                        <RoundRectangle CornerRadius="5" />
                                    </Border.StrokeShape>
                                    <VerticalStackLayout>
                                        <Label Text="Additional Notes" FontAttributes="Bold"/>
                                        <Editor Text="{Binding Notes}" 
                            Placeholder="Any other observations..."
                            HeightRequest="80"/>
                                    </VerticalStackLayout>
                                </Border>-->

            <!-- Action Buttons -->
            <Grid ColumnDefinitions="*,*" ColumnSpacing="10">
                <Button Text="Cancel" 
                        Command="{Binding CancelCommand}"
                        BackgroundColor="#9E9E9E"
                        TextColor="White"
                        Grid.Column="0"/>
                <Button Text="Save" 
                        Command="{Binding SaveCommand}"
                        BackgroundColor="#4CAF50"
                        TextColor="White"
                        Grid.Column="1"/>
            </Grid>

        </VerticalStackLayout>
    </ScrollView>

</ContentView>
