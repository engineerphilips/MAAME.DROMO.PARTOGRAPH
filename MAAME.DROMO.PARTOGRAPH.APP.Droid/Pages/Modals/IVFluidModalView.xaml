<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:core="clr-namespace:Syncfusion.Maui.Core;assembly=Syncfusion.Maui.Core"
             xmlns:buttons="clr-namespace:Syncfusion.Maui.Buttons;assembly=Syncfusion.Maui.Buttons"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             xmlns:fonts="clr-namespace:Fonts"
             x:Class="MAAME.DROMO.PARTOGRAPH.APP.Droid.Pages.Modals.IVFluidModalView">

    <ContentView.Resources>
        <ResourceDictionary>

            <!-- Input Styles -->
            <Style x:Key="PatientInput" TargetType="core:SfTextInputLayout">
                <Setter Property="ContainerType" Value="Outlined" />
                <Setter Property="OutlineCornerRadius" Value="8" />
            </Style>
        </ResourceDictionary>
    </ContentView.Resources>

    <ScrollView>
        <VerticalStackLayout Padding="15" Spacing="10">

            <!-- Header -->
            <!--<Border BackgroundColor="#E91E63" Padding="15">
                                    <Border.StrokeShape>
                                        <RoundRectangle CornerRadius="10" />
                                    </Border.StrokeShape>
                                    <Label Text="Birth Companion Information" 
                       TextColor="White" 
                       FontSize="18" 
                       FontAttributes="Bold"
                       HorizontalTextAlignment="Center"/>
                                </Border>-->

            <!-- Recording Time -->

            <core:SfTextInputLayout Hint="Date"
                                    Style="{StaticResource PatientInput}"
                                    HelperText="Recording time">
                <DatePicker Date="{Binding RecordingDate, Converter={StaticResource DateOnlyToDateTimeConverter}}" />
            </core:SfTextInputLayout>

            <core:SfTextInputLayout Hint="Time"
                                    Style="{StaticResource PatientInput}"
                                    HelperText="Recording time">
                <TimePicker Time="{Binding RecordingTime}" />
            </core:SfTextInputLayout>

            <VerticalStackLayout Padding="10,0,0,0">
                <Label Text="Is the woman on IV fluids?" FontAttributes="Bold"/>
                <!--<buttons:SfRadioGroup x:Name="radioGroup" Margin="30,0,0,0">
                    <buttons:SfRadioButton x:Name="yes" Text="Yes"/>
                    <buttons:SfRadioButton x:Name="no" Text="No" />
                </buttons:SfRadioGroup>-->
            </VerticalStackLayout>

            <buttons:SfSegmentedControl x:Name="segmentedControl" CornerRadius="8" VisibleSegmentsCount="2" SelectedIndex="{Binding IVFluidIndex}">
                <buttons:SfSegmentedControl.ItemsSource>
                    <x:Array Type="{x:Type x:String}">
                        <x:String>No</x:String>
                        <x:String>Yes</x:String>
                    </x:Array>
                </buttons:SfSegmentedControl.ItemsSource>
            </buttons:SfSegmentedControl>

            <core:SfTextInputLayout Hint="Additional Notes"
                                    Style="{StaticResource PatientInput}"
                                    HelperText="Any other observations...">
                <Entry Text="{Binding Notes}"
                       Keyboard="Text"
                       ReturnType="Next" />
            </core:SfTextInputLayout>

            <!-- Action Buttons -->
            <Grid ColumnDefinitions="*,*" ColumnSpacing="10">
                <Button Text="Cancel" 
                        Command="{Binding CancelCommand}"
                        BackgroundColor="#9E9E9E"
                        TextColor="White"
                        Grid.Column="0"/>
                <Button Text="Save" 
                        Command="{Binding SaveCommand}"
                        BackgroundColor="#4CAF50"
                        TextColor="White"
                        Grid.Column="1"/>
            </Grid>

        </VerticalStackLayout>
    </ScrollView>

</ContentView>
