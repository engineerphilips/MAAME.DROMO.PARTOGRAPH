<?xml version="1.0" encoding="utf-8" ?>
<sfPopup:SfPopup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MAAME.DROMO.PARTOGRAPH.APP.Droid.Pages.Modals.FHRContractionPopup"
             xmlns:core="clr-namespace:Syncfusion.Maui.Core;assembly=Syncfusion.Maui.Core"
             xmlns:buttons="clr-namespace:Syncfusion.Maui.Buttons;assembly=Syncfusion.Maui.Buttons"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             xmlns:fonts="clr-namespace:Fonts"
             xmlns:editors="clr-namespace:Syncfusion.Maui.Inputs;assembly=Syncfusion.Maui.Inputs"
             xmlns:sfPopup="clr-namespace:Syncfusion.Maui.Popup;assembly=Syncfusion.Maui.Popup">

    <sfPopup:SfPopup.Resources>
        <ResourceDictionary>
            <!-- Input Styles -->
            <Style x:Key="PatientInput" TargetType="core:SfTextInputLayout">
                <Setter Property="ContainerType" Value="Outlined" />
                <Setter Property="OutlineCornerRadius" Value="8" />
            </Style>
        </ResourceDictionary>
    </sfPopup:SfPopup.Resources>

    <sfPopup:SfPopup.HeaderTemplate>
        <DataTemplate>
            <StackLayout>
                <Label Text="Fetal Position" VerticalOptions="Center" Margin="15,15,0,0" />
            </StackLayout>
        </DataTemplate>
    </sfPopup:SfPopup.HeaderTemplate>
    <sfPopup:SfPopup.ContentTemplate>
        <DataTemplate>
        <ScrollView>
            <VerticalStackLayout Padding="15,10" Spacing="10">

                <!-- Header -->
                <!-- Pain Level Assessment -->

                <core:SfTextInputLayout Hint="Date"
                                                Style="{StaticResource PatientInput}"
                                                HelperText="Recording time">
                    <DatePicker Date="{Binding RecordingDate}" />
                </core:SfTextInputLayout>

                <core:SfTextInputLayout Hint="Time"
                                                Style="{StaticResource PatientInput}"
                                                HelperText="Recording time">
                    <TimePicker Time="{Binding RecordingTime}" />
                </core:SfTextInputLayout>

                <core:SfTextInputLayout Hint="FHR"
                                                Style="{StaticResource PatientInput}"
                                                HelperText="Recording FHR">
                        <editors:SfNumericEntry Value="{Binding Rate, Mode=TwoWay}"
                                               CustomFormat="0"
                                               ValueChangeMode="OnKeyFocus"
                                                Minimum="0"/>
                </core:SfTextInputLayout>

                    <core:SfTextInputLayout Hint="Frequency /10 Min"
                                                Style="{StaticResource PatientInput}"
                                                HelperText="Recording Frequency /10 Min">
                        <editors:SfNumericEntry Value="{Binding FrequencyPer10Min, Mode=TwoWay}"
                                               CustomFormat="0"
                                               ValueChangeMode="OnKeyFocus"
                                                Minimum="0" />
                </core:SfTextInputLayout>

                    <core:SfTextInputLayout Hint="Duration Seconds"
                                                Style="{StaticResource PatientInput}"
                                                HelperText="Duration seconds">
                        <editors:SfNumericEntry Value="{Binding DurationSeconds, Mode=TwoWay}"
                                               CustomFormat="0"
                                               ValueChangeMode="OnKeyFocus"
                                                Minimum="0" />
                    </core:SfTextInputLayout>

                    <!-- Advanced Fields Toggle -->
                    <Frame BorderColor="{AppThemeBinding Light=#E0E0E0, Dark=#424242}"
                           BackgroundColor="{AppThemeBinding Light=#F5F5F5, Dark=#2C2C2C}"
                           CornerRadius="10"
                           Padding="15,10"
                           Margin="0,10,0,10">
                        <HorizontalStackLayout Spacing="10">
                            <Switch IsToggled="{Binding ShowAdvancedFields}"
                                    VerticalOptions="Center"
                                    OnColor="#4CAF50" />
                            <Label Text="Show Advanced WHO 2020 Fields"
                                   VerticalOptions="Center"
                                   FontAttributes="Bold"
                                   TextColor="{AppThemeBinding Light=#333, Dark=White}" />
                        </HorizontalStackLayout>
                    </Frame>

                    <!-- WHO 2020 Advanced Fields Section -->
                    <VerticalStackLayout IsVisible="{Binding ShowAdvancedFields}" Spacing="10">

                        <!-- WHO 2020 Critical FHR Assessment -->
                        <Label Text="FHR Variability &amp; Pattern" FontAttributes="Bold" Margin="0,10,0,5" />

                    <CheckBox IsChecked="{Binding Accelerations}" />
                    <Label Text="Accelerations Present (reassuring)" Margin="-30,0,0,0" VerticalOptions="Center" />

                    <CheckBox IsChecked="{Binding SinusoidalPattern}" />
                    <Label Text="⚠️ Sinusoidal Pattern - CRITICAL" Margin="-30,0,0,0" VerticalOptions="Center" TextColor="Red" FontAttributes="Bold" />

                    <CheckBox IsChecked="{Binding ProlongedBradycardia}" />
                    <Label Text="⚠️ Prolonged Bradycardia (&lt;110 bpm)" Margin="-30,0,0,0" VerticalOptions="Center" TextColor="Red" />

                    <CheckBox IsChecked="{Binding Tachycardia}" />
                    <Label Text="⚠️ Tachycardia (>160 bpm)" Margin="-30,0,0,0" VerticalOptions="Center" TextColor="OrangeRed" />

                    <!-- WHO 2020 Critical Contraction Assessment -->
                    <Label Text="Contraction Pattern &amp; Oxytocin" FontAttributes="Bold" Margin="0,10,0,5" />

                    <CheckBox IsChecked="{Binding Tachysystole}" />
                    <Label Text="⚠️ Tachysystole (>5 contractions/10 min)" Margin="-30,0,0,0" VerticalOptions="Center" TextColor="OrangeRed" />

                    <CheckBox IsChecked="{Binding Hyperstimulation}" />
                    <Label Text="⚠️ HYPERSTIMULATION - Tachysystole + Abnormal FHR" Margin="-30,0,0,0" VerticalOptions="Center" TextColor="Red" FontAttributes="Bold" />

                    <CheckBox IsChecked="{Binding OnOxytocin}" />
                    <Label Text="On Oxytocin Infusion" Margin="-30,0,0,0" VerticalOptions="Center" />

                    <CheckBox IsChecked="{Binding OxytocinStopped}" />
                    <Label Text="Oxytocin Stopped (due to concerns)" Margin="-30,0,0,0" VerticalOptions="Center" />

                    <!-- Emergency Response -->
                    <Label Text="Emergency Indicators" FontAttributes="Bold" Margin="0,10,0,5" />

                    <CheckBox IsChecked="{Binding EmergencyConsultRequired}" />
                    <Label Text="⚠️ EMERGENCY CONSULT REQUIRED" Margin="-30,0,0,0" VerticalOptions="Center" TextColor="Red" FontAttributes="Bold" />

                    <CheckBox IsChecked="{Binding PrepareForEmergencyDelivery}" />
                    <Label Text="⚠️ PREPARE FOR EMERGENCY DELIVERY" Margin="-30,0,0,0" VerticalOptions="Center" TextColor="Red" FontAttributes="Bold" />

                    <CheckBox IsChecked="{Binding ChangeInPosition}" />
                    <Label Text="Maternal Position Changed" Margin="-30,0,0,0" VerticalOptions="Center" />

                    <CheckBox IsChecked="{Binding OxygenAdministered}" />
                    <Label Text="Oxygen Administered" Margin="-30,0,0,0" VerticalOptions="Center" />

                    </VerticalStackLayout>
                    <!-- End Advanced Fields Section -->

                <core:SfTextInputLayout Hint="Additional Notes"
                                                Style="{StaticResource PatientInput}"
                                                HelperText="Any other observations...">
                    <Entry Text="{Binding Notes}"
                                   Keyboard="Text"
                                   ReturnType="Next" />
                </core:SfTextInputLayout>

                <!-- Action Buttons -->
                <Grid ColumnDefinitions="*,*" ColumnSpacing="15" Margin="0,20,0,40">
                    <Button Grid.Column="0"
                            Text="Cancel"
                            Command="{Binding CancelCommand}"
                            BackgroundColor="{AppThemeBinding Light=#E0E0E0, Dark=#424242}"
                            TextColor="{AppThemeBinding Light=#333, Dark=White}"
                            HeightRequest="50"
                            CornerRadius="10" />

                    <Button Grid.Column="1"
                            Text="Save Assessment"
                            Command="{Binding SaveCommand}"
                            BackgroundColor="#4CAF50"
                            TextColor="White"
                            HeightRequest="50"
                            CornerRadius="10" />
                </Grid>

            </VerticalStackLayout>
                </ScrollView>
        </DataTemplate>
    </sfPopup:SfPopup.ContentTemplate>
</sfPopup:SfPopup>
