                     IconImageSource="{x:Static fonts:FluentUI.arrow_export_ltr_16_regular}"
                     ToolTipProperties.Text="Create Referral" />
        <ToolbarItem Text="Charts"
                     Command="{Binding ViewChartsCommand}"
                     IconImageSource="{x:Static fonts:FluentUI.chart_multiple_16_regular}" />
        <ToolbarItem Text="Print"
                     Command="{Binding PrintCommand}"
                     IconImageSource="{x:Static fonts:FluentUI.print_16_regular}" />
    </ContentPage.ToolbarItems>

