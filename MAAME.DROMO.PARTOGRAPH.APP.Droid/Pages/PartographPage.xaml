                </Border.StrokeShape>
                <Border.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding OpenBishopScorePopupCommand}" />
                </Border.GestureRecognizers>
                <Grid ColumnDefinitions="Auto,*,Auto" ColumnSpacing="15">
                    <!-- Icon and Title -->
                    <VerticalStackLayout Grid.Column="0" VerticalOptions="Center" Spacing="5">
                        <Label Text="ðŸ“Š" FontSize="32" HorizontalOptions="Center" />
                        <Label Text="Bishop Score"
