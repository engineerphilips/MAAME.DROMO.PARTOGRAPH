<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MAAME.DROMO.PARTOGRAPH.APP.Droid.Pages.SecondStagePartographPage"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             xmlns:buttons="clr-namespace:Syncfusion.Maui.Buttons;assembly=Syncfusion.Maui.Buttons"
             xmlns:fonts="clr-namespace:Fonts"
             xmlns:converters="clr-namespace:MAAME.DROMO.PARTOGRAPH.APP.Droid.Converters"
             Title="Second Stage Partograph">

    <ContentPage.Resources>
        <ResourceDictionary>
            <!-- Converters -->
            <converters:GreaterThanZeroConverter x:Key="GreaterThanZeroConverter" />
            <converters:IsNotNullConverter x:Key="IsNotNullConverter" />
            <!-- Modern Card Style -->
            <Style x:Key="ModernCardStyle" TargetType="Border">
                <Setter Property="StrokeThickness" Value="0" />
                <Setter Property="BackgroundColor" Value="{AppThemeBinding Light=White, Dark=#1E293B}" />
                <Setter Property="Padding" Value="24" />
                <Setter Property="StrokeShape">
                    <RoundRectangle CornerRadius="20" />
                </Setter>
                <Setter Property="Shadow">
                    <Shadow Brush="{AppThemeBinding Light=#10000000, Dark=#30000000}"
                            Offset="0,8"
                            Radius="24"
                            Opacity="0.15" />
                </Setter>
            </Style>

            <!-- Header Text Style -->
            <Style x:Key="HeaderStyle" TargetType="Label">
                <Setter Property="FontSize" Value="32" />
                <Setter Property="FontAttributes" Value="Bold" />
                <Setter Property="TextColor" Value="{AppThemeBinding Light=#1E293B, Dark=#F8FAFC}" />
            </Style>

            <!-- Subheader Style -->
            <Style x:Key="SubheaderStyle" TargetType="Label">
                <Setter Property="FontSize" Value="16" />
                <Setter Property="TextColor" Value="{AppThemeBinding Light=#64748B, Dark=#94A3B8}" />
                <Setter Property="Margin" Value="0,0,0,24" />
            </Style>

            <!-- Section Title Style -->
            <Style x:Key="SectionTitleStyle" TargetType="Label">
                <Setter Property="FontSize" Value="18" />
                <Setter Property="FontAttributes" Value="Bold" />
                <Setter Property="TextColor" Value="{AppThemeBinding Light=#1E293B, Dark=#F8FAFC}" />
                <Setter Property="Margin" Value="0,0,0,12" />
            </Style>

            <Style TargetType="buttons:SfButton">
                <Setter Property="Background" Value="LightGray" />
                <Setter Property="Padding" Value="8,0" />
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>

    <ContentPage.ToolbarItems>
        <!--<ToolbarItem Text="Birth Outcome"
                     Command="{Binding NavigateToBirthOutcomeCommand}"
                     IconImageSource="{x:Static fonts:FluentUI.add_16_regular}"
                     ToolTipProperties.Text="Record Birth Outcome" />-->
        <ToolbarItem Text="Add Baby"
                     Command="{Binding NavigateToBabyDetailsCommand}"
                     IconImageSource="{x:Static fonts:FluentUI.person_add_16_regular}"
                     ToolTipProperties.Text="Add Baby Details" />
        <ToolbarItem Text="Print"
                     Command="{Binding PrintCommand}"
                     IconImageSource="{x:Static fonts:FluentUI.print_16_regular}" />
    </ContentPage.ToolbarItems>

    <ScrollView>
        <Grid RowDefinitions="Auto,Auto,Auto,Auto,Auto" Padding="10">
            <!-- Patient Header -->
            <Border Grid.Row="0"
                    StrokeThickness="0"
                    BackgroundColor="{AppThemeBinding Light=#E3F2FD, Dark=#1565C0}"
                    Padding="15"
                    Margin="0,0,0,20">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="10" />
                </Border.StrokeShape>
                <Grid ColumnDefinitions="*,Auto">
                    <VerticalStackLayout>
                        <Label Text="{Binding PatientName}" FontSize="20" FontAttributes="Bold" />
                        <Label Text="{Binding PatientInfo}" FontSize="14" Opacity="0.8" />
                        <HorizontalStackLayout Spacing="20">
                            <Label Text="{Binding SecondStageDuration, StringFormat='Second Stage Duration: {0}'}" FontSize="12" />
                            <Label Text="{Binding LastRecordedTime, StringFormat='Last Entry: {0:HH:mm}'}" FontSize="12" />
                        </HorizontalStackLayout>
                    </VerticalStackLayout>
                    <VerticalStackLayout Grid.Column="1" VerticalOptions="Center">
                        <Label Text="STAGE 2"
                               FontSize="18"
                               FontAttributes="Bold"
                               HorizontalOptions="Center"
                               TextColor="#10B981" />
                        <Label Text="Active Pushing"
                               FontSize="10"
                               HorizontalOptions="Center" />
                    </VerticalStackLayout>
                </Grid>
            </Border>

            <!-- WHO 2020 Second Stage Monitoring Info -->
            <Border Grid.Row="1"
                    StrokeThickness="1"
                    Stroke="{AppThemeBinding Light=#3B82F6, Dark=#60A5FA}"
                    BackgroundColor="{AppThemeBinding Light=#EFF6FF, Dark=#1E3A8A}"
                    Padding="15"
                    Margin="0,0,0,20">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="10" />
                </Border.StrokeShape>
                <VerticalStackLayout Spacing="8">
                    <Label Text="Second Stage Monitoring"
                           FontSize="16"
                           FontAttributes="Bold"
                           TextColor="{AppThemeBinding Light=#1E40AF, Dark=#DBEAFE}" />
                    <Label FontSize="12" TextColor="{AppThemeBinding Light=#1E40AF, Dark=#BFDBFE}">
                        <Label.FormattedText>
                            <FormattedString>
                                <Span Text="Continue monitoring: " FontAttributes="Bold" />
                                <Span Text="FHR, contractions, descent, maternal vitals, supportive care, and medications" />
                            </FormattedString>
                        </Label.FormattedText>
                    </Label>
                </VerticalStackLayout>
            </Border>

            <!-- Second Stage Monitoring Grid -->
            <Grid Grid.Row="2" MinimumWidthRequest="800" ColumnDefinitions="25,65,35,*">
                <Grid.RowDefinitions>
                    <!-- Header Row -->
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="5" />

                    <!-- Care Support Section -->
                    <RowDefinition Height="40" />
                    <RowDefinition Height="40" />
                    <RowDefinition Height="40" />
                    <RowDefinition Height="40" />
                    <RowDefinition Height="5" />

                    <!-- Baby Section -->
                    <RowDefinition Height="40" />
                    <RowDefinition Height="40" />
                    <RowDefinition Height="40" />
                    <RowDefinition Height="40" />
                    <RowDefinition Height="5" />

                    <!-- Woman Section -->
                    <RowDefinition Height="40" />
                    <RowDefinition Height="40" />
                    <RowDefinition Height="40" />
                    <RowDefinition Height="40" />
                    <RowDefinition Height="40" />
                    <RowDefinition Height="5" />

                    <!-- Labour Progress Section -->
                    <RowDefinition Height="40" />
                    <RowDefinition Height="40" />
                    <RowDefinition Height="40" />
                    <RowDefinition Height="5" />

                    <!-- Medication Section -->
                    <RowDefinition Height="40" />
                    <RowDefinition Height="40" />
                    <RowDefinition Height="40" />
                    <RowDefinition Height="5" />

                    <!-- Decision Section -->
                    <RowDefinition Height="40" />
                    <RowDefinition Height="40" />
                </Grid.RowDefinitions>

                <!-- CARE SUPPORT SECTION -->
                <Label Grid.Column="0" Grid.Row="2" Grid.RowSpan="4" Text="C
                       A
                       R
                       E

                       S
                       U
                       P
                       P
                       O
                       R
                       T" Style="{StaticResource SubheaderStyle}" FontSize="8" VerticalOptions="Center" />

                <Button Grid.Row="2" Grid.Column="1" Text="Companion" BackgroundColor="LightGray" Padding="2" FontSize="Micro" Margin="0,0,1,1" CornerRadius="0" TextColor="Black" Command="{Binding OpenCompanionPopupCommand}" />
                <Label Grid.Row="2" Grid.Column="2" Text="N" BackgroundColor="LightGray" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" Padding="5" FontSize="Micro" Margin="0,0,1,1" />
                <buttons:SfButton Grid.Row="2" Grid.Column="3" Background="LightGray" Padding="5" FontSize="Micro" Margin="0,0,0,1" CornerRadius="0" Command="{Binding OnCompanionCycleCommand}">
                    <buttons:SfButton.Content>
                        <DataTemplate>
                            <VerticalStackLayout Spacing="2" VerticalOptions="Center" Margin="5,0,0,0">
                                <Label Text="{Binding CompanionLatestValue, Mode=OneWay}" FontSize="10" FontAttributes="Bold" />
                                <Label Text="{Binding CompanionStatusText, Mode=OneWay}" FontSize="8" Opacity="0.7" />
                            </VerticalStackLayout>
                        </DataTemplate>
                    </buttons:SfButton.Content>
                </buttons:SfButton>

                <Button Grid.Row="3" Grid.Column="1" Text="Pain relief" BackgroundColor="LightGray" Padding="2" FontSize="Micro" Margin="0,0,1,1" CornerRadius="0" TextColor="Black" Command="{Binding OpenPainReliefPopupCommand}" />
                <Label Grid.Row="3" Grid.Column="2" Text="N" BackgroundColor="LightGray" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" Padding="5" FontSize="Micro" Margin="0,0,1,1" />
                <buttons:SfButton Grid.Row="3" Grid.Column="3" BackgroundColor="LightGray" Padding="5" FontSize="Micro" Margin="0,0,0,1" CornerRadius="0" Command="{Binding OpenPainReliefPopupCommand}">
                    <buttons:SfButton.Content>
                        <DataTemplate>
                            <VerticalStackLayout Spacing="2" VerticalOptions="Center" Margin="5,0,0,0">
                                <Label Text="{Binding PainReliefLatestValue, Mode=OneWay}" FontSize="10" FontAttributes="Bold" />
                                <Label Text="{Binding PainReliefStatusText, Mode=OneWay}" FontSize="8" Opacity="0.7" />
                            </VerticalStackLayout>
                        </DataTemplate>
                    </buttons:SfButton.Content>
                </buttons:SfButton>

                <Button Grid.Row="4" Grid.Column="1" Text="Oral fluid" BackgroundColor="LightGray" Padding="2" FontSize="Micro" Margin="0,0,1,1" CornerRadius="0" TextColor="Black" Command="{Binding OpenOralFluidPopupCommand}" />
                <Label Grid.Row="4" Grid.Column="2" Text="N" BackgroundColor="LightGray" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" Padding="5" FontSize="Micro" Margin="0,0,1,1" />
                <buttons:SfButton Grid.Row="4" Grid.Column="3" BackgroundColor="LightGray" Padding="5" FontSize="Micro" Margin="0,0,0,1" CornerRadius="0" Command="{Binding OpenOralFluidPopupCommand}">
                    <buttons:SfButton.Content>
                        <DataTemplate>
                            <VerticalStackLayout Spacing="2" VerticalOptions="Center" Margin="5,0,0,0">
                                <Label Text="{Binding OralFluidLatestValue, Mode=OneWay}" FontSize="10" FontAttributes="Bold" />
                                <Label Text="{Binding OralFluidStatusText, Mode=OneWay}" FontSize="8" Opacity="0.7" />
                            </VerticalStackLayout>
                        </DataTemplate>
                    </buttons:SfButton.Content>
                </buttons:SfButton>

                <Button Grid.Row="5" Grid.Column="1" Text="Posture" BackgroundColor="LightGray" Padding="2" FontSize="Micro" Margin="0,0,1,1" CornerRadius="0" TextColor="Black" Command="{Binding OpenPosturePopupCommand}" />
                <Label Grid.Row="5" Grid.Column="2" Text="N" BackgroundColor="LightGray" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" Padding="5" FontSize="Micro" Margin="0,0,1,1" />
                <buttons:SfButton Grid.Row="5" Grid.Column="3" BackgroundColor="LightGray" Padding="5" FontSize="Micro" Margin="0,0,0,1" CornerRadius="0" Command="{Binding OpenPosturePopupCommand}">
                    <buttons:SfButton.Content>
                        <DataTemplate>
                            <VerticalStackLayout Spacing="2" VerticalOptions="Center" Margin="5,0,0,0">
                                <Label Text="{Binding PostureLatestValue, Mode=OneWay}" FontSize="10" FontAttributes="Bold" />
                                <Label Text="{Binding PostureStatusText, Mode=OneWay}" FontSize="8" Opacity="0.7" />
                            </VerticalStackLayout>
                        </DataTemplate>
                    </buttons:SfButton.Content>
                </buttons:SfButton>

                <!-- BABY SECTION -->
                <Label Grid.Column="0" Grid.Row="7" Grid.RowSpan="4" Text="B
                       A
                       B
                       Y" Style="{StaticResource SubheaderStyle}" FontSize="8" VerticalOptions="Center" />

                <Button Grid.Row="7" Grid.Column="1" BackgroundColor="{Binding FhrButtonColor}" Text="Baseline FHR" Padding="2" FontSize="Micro" Margin="0,0,1,1" CornerRadius="0" TextColor="Black" Command="{Binding OpenFHRContractionPopupCommand}" />
                <Label Grid.Row="7" Grid.Column="2" Text="&gt;110, â‰¥160" BackgroundColor="LightGray" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" Padding="0,5" FontSize="7" Margin="0,0,1,1" />
                <buttons:SfButton Grid.Row="7" Grid.Column="3" BackgroundColor="{Binding FhrButtonColor}" Padding="5" FontSize="Micro" Margin="0,0,0,1" CornerRadius="0" Command="{Binding OpenFHRContractionPopupCommand}">
                    <buttons:SfButton.Content>
                        <DataTemplate>
                            <VerticalStackLayout Spacing="2" VerticalOptions="Center" Margin="5,0,0,0">
                                <Label Text="{Binding FhrLatestValue, Mode=OneWay}" FontSize="10" FontAttributes="Bold" />
                                <Label Text="{Binding FhrStatusText, Mode=OneWay}" FontSize="8" Opacity="0.7" />
                            </VerticalStackLayout>
                        </DataTemplate>
                    </buttons:SfButton.Content>
                </buttons:SfButton>

                <Button Grid.Row="8" Grid.Column="1" Text="Amniotic fluid" BackgroundColor="LightGray" Padding="2" FontSize="Micro" Margin="0,0,1,1" CornerRadius="0" TextColor="Black" Command="{Binding OpenAmnioticFluidPopupCommand}" />
                <Label Grid.Row="8" Grid.Column="2" Text="M+++, B" BackgroundColor="LightGray" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" Padding="0,5" FontSize="9" Margin="0,0,1,1" />
                <buttons:SfButton Grid.Row="8" Grid.Column="3" BackgroundColor="LightGray" Padding="5" FontSize="Micro" Margin="0,0,0,1" CornerRadius="0" Command="{Binding OpenAmnioticFluidPopupCommand}">
                    <buttons:SfButton.Content>
                        <DataTemplate>
                            <VerticalStackLayout Spacing="2" VerticalOptions="Center" Margin="5,0,0,0">
                                <Label Text="{Binding AmnioticFluidLatestValue, Mode=OneWay}" FontSize="10" FontAttributes="Bold" />
                                <Label Text="{Binding AmnioticFluidStatusText, Mode=OneWay}" FontSize="8" Opacity="0.7" />
                            </VerticalStackLayout>
                        </DataTemplate>
                    </buttons:SfButton.Content>
                </buttons:SfButton>

                <Button Grid.Row="9" Grid.Column="1" Text="Fetal position" BackgroundColor="LightGray" Padding="2" FontSize="Micro" Margin="0,0,1,1" CornerRadius="0" TextColor="Black" Command="{Binding OpenFetalPositionPopupCommand}" />
                <Label Grid.Row="9" Grid.Column="2" Text="P, T" BackgroundColor="LightGray" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" Padding="0,5" FontSize="Micro" Margin="0,0,1,1" />
                <buttons:SfButton Grid.Row="9" Grid.Column="3" BackgroundColor="LightGray" Padding="5" FontSize="Micro" Margin="0,0,0,1" CornerRadius="0" Command="{Binding OpenFetalPositionPopupCommand}">
                    <buttons:SfButton.Content>
                        <DataTemplate>
                            <VerticalStackLayout Spacing="2" VerticalOptions="Center" Margin="5,0,0,0">
                                <Label Text="{Binding FetalPositionLatestValue, Mode=OneWay}" FontSize="10" FontAttributes="Bold" />
                                <Label Text="{Binding FetalPositionStatusText, Mode=OneWay}" FontSize="8" Opacity="0.7" />
                            </VerticalStackLayout>
                        </DataTemplate>
                    </buttons:SfButton.Content>
                </buttons:SfButton>

                <Button Grid.Row="10" Grid.Column="1" Text="Caput" BackgroundColor="LightGray" Padding="5" FontSize="Micro" Margin="0,0,1,1" CornerRadius="0" TextColor="Black" Command="{Binding OpenCaputPopupCommand}" />
                <Label Grid.Row="10" Grid.Column="2" Text="+++" BackgroundColor="LightGray" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" Padding="0,5" FontSize="Micro" Margin="0,0,1,1" />
                <buttons:SfButton Grid.Row="10" Grid.Column="3" BackgroundColor="LightGray" Padding="5" FontSize="Micro" Margin="0,0,0,1" CornerRadius="0" Command="{Binding OpenCaputPopupCommand}">
                    <buttons:SfButton.Content>
                        <DataTemplate>
                            <VerticalStackLayout Spacing="2" VerticalOptions="Center" Margin="5,0,0,0">
                                <Label Text="{Binding CaputLatestValue, Mode=OneWay}" FontSize="10" FontAttributes="Bold" />
                                <Label Text="{Binding CaputStatusText, Mode=OneWay}" FontSize="8" Opacity="0.7" />
                            </VerticalStackLayout>
                        </DataTemplate>
                    </buttons:SfButton.Content>
                </buttons:SfButton>

                <!-- WOMAN SECTION -->
                <Label Grid.Column="0" Grid.Row="12" Grid.RowSpan="5" Text="W
                       O
                       M
                       A
                       N" Style="{StaticResource SubheaderStyle}" FontSize="8" VerticalOptions="Center" />

                <Button Grid.Row="12" Grid.Column="1" Text="Pulse" BackgroundColor="{Binding BpButtonColor}" Padding="2" FontSize="Micro" Margin="0,0,1,1" CornerRadius="0" TextColor="Black" Command="{Binding OpenBpPulsePopupCommand}" />
                <Label Grid.Row="12" Grid.Column="2" Text="&gt;60, â‰¥120" BackgroundColor="LightGray" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" Padding="0,5" FontSize="8" Margin="0,0,1,1" />
                <buttons:SfButton Grid.Row="12" Grid.Column="3" Grid.RowSpan="3" BackgroundColor="{Binding BpButtonColor}" Padding="5" FontSize="Micro" Margin="0,0,0,1" CornerRadius="0" Command="{Binding OpenBpPulsePopupCommand}">
                    <buttons:SfButton.Content>
                        <DataTemplate>
                            <VerticalStackLayout Spacing="2" VerticalOptions="Center">
                                <Label Text="{Binding BpLatestValue, Mode=OneWay}" FontSize="10" FontAttributes="Bold" />
                                <Label Text="{Binding BpStatusText, Mode=OneWay}" FontSize="8" Opacity="0.7" />
                            </VerticalStackLayout>
                        </DataTemplate>
                    </buttons:SfButton.Content>
                </buttons:SfButton>

                <Button Grid.Row="13" Grid.Column="1" Text="Systolic" BackgroundColor="{Binding BpButtonColor}" Padding="2" FontSize="Micro" Margin="0,0,1,1" CornerRadius="0" TextColor="Black" Command="{Binding OpenBpPulsePopupCommand}" />
                <Label Grid.Row="13" Grid.Column="2" Text="&gt;80, â‰¥140" BackgroundColor="LightGray" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" Padding="0,5" FontSize="8" Margin="0,0,1,1" />

                <Button Grid.Row="14" Grid.Column="1" Text="Diastolic" BackgroundColor="{Binding BpButtonColor}" Padding="2" FontSize="Micro" Margin="0,0,1,1" CornerRadius="0" TextColor="Black" Command="{Binding OpenBpPulsePopupCommand}" />
                <Label Grid.Row="14" Grid.Column="2" Text="â‰¥90" BackgroundColor="LightGray" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" Padding="0,5" FontSize="Micro" Margin="0,0,1,0" />

                <Button Grid.Row="15" Grid.Column="1" Text="Temperature" BackgroundColor="{Binding TemperatureButtonColor}" Padding="2" FontSize="Micro" Margin="0,0,1,1" CornerRadius="0" TextColor="Black" Command="{Binding OpenTemperaturePopupCommand}" />
                <Label Grid.Row="15" Grid.Column="2" Text="&gt;35.0, â‰¥ 37.5" BackgroundColor="LightGray" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" Padding="0,4" FontSize="8" Margin="0,0,1,1" />
                <buttons:SfButton Grid.Row="15" Grid.Column="3" BackgroundColor="{Binding TemperatureButtonColor}" Padding="5" FontSize="Micro" Margin="0,0,0,1" CornerRadius="0" Command="{Binding OpenTemperaturePopupCommand}">
                    <buttons:SfButton.Content>
                        <DataTemplate>
                            <VerticalStackLayout Spacing="2" VerticalOptions="Center" Margin="5,0,0,0">
                                <Label Text="{Binding TemperatureLatestValue, Mode=OneWay}" FontSize="10" FontAttributes="Bold" />
                                <Label Text="{Binding TemperatureStatusText, Mode=OneWay}" FontSize="8" Opacity="0.7" />
                            </VerticalStackLayout>
                        </DataTemplate>
                    </buttons:SfButton.Content>
                </buttons:SfButton>

                <Button Grid.Row="16" Grid.Column="1" Text="Urine" BackgroundColor="{Binding UrineButtonColor}" Padding="2" FontSize="Micro" Margin="0,0,1,1" CornerRadius="0" TextColor="Black" Command="{Binding OpenUrinePopupCommand}" />
                <Label Grid.Row="16" Grid.Column="2" Text="P++, A++" BackgroundColor="LightGray" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" Padding="0,4" FontSize="8" Margin="0,0,1,1" />
                <buttons:SfButton Grid.Row="16" Grid.Column="3" BackgroundColor="{Binding UrineButtonColor}" Padding="5" FontSize="Micro" Margin="0,0,0,1" CornerRadius="0" Command="{Binding OpenUrinePopupCommand}">
                    <buttons:SfButton.Content>
                        <DataTemplate>
                            <VerticalStackLayout Spacing="2" VerticalOptions="Center" Margin="5,0,0,0">
                                <Label Text="{Binding UrineLatestValue, Mode=OneWay}" FontSize="10" FontAttributes="Bold" />
                                <Label Text="{Binding UrineStatusText, Mode=OneWay}" FontSize="8" Opacity="0.7" />
                            </VerticalStackLayout>
                        </DataTemplate>
                    </buttons:SfButton.Content>
                </buttons:SfButton>

                <!-- LABOUR PROGRESS SECTION -->
                <Label Grid.Column="0" Grid.Row="18" Grid.RowSpan="3" Text="L
                       A
                       B
                       O
                       U
                       R" Style="{StaticResource SubheaderStyle}" FontSize="8" VerticalOptions="Center" />

                <Button Grid.Row="18" Grid.Column="1" Text="Contractions" BackgroundColor="{Binding ContractionButtonColor}" Padding="2" FontSize="Micro" Margin="0,0,1,1" CornerRadius="0" TextColor="Black" Command="{Binding OpenFHRContractionPopupCommand}" />
                <Label Grid.Row="18" Grid.Column="2" Text="â‰¤2, >5" BackgroundColor="LightGray" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" Padding="0,4" FontSize="8" Margin="0,0,1,1" />
                <buttons:SfButton Grid.Row="18" Grid.Column="3" Grid.RowSpan="2" BackgroundColor="{Binding ContractionButtonColor}" Padding="5" FontSize="Micro" Margin="0,0,0,1" CornerRadius="0" Command="{Binding OpenFHRContractionPopupCommand}">
                    <buttons:SfButton.Content>
                        <DataTemplate>
                            <VerticalStackLayout Spacing="2" VerticalOptions="Center">
                                <Label Text="{Binding ContractionLatestValue, Mode=OneWay}" FontSize="10" FontAttributes="Bold" />
                                <Label Text="{Binding ContractionStatusText, Mode=OneWay}" FontSize="8" Opacity="0.7" />
                            </VerticalStackLayout>
                        </DataTemplate>
                    </buttons:SfButton.Content>
                </buttons:SfButton>

                <Button Grid.Row="19" Grid.Column="1" Text="Duration" BackgroundColor="{Binding ContractionButtonColor}" Padding="2" FontSize="Micro" Margin="0,0,1,1" CornerRadius="0" TextColor="Black" Command="{Binding OpenFHRContractionPopupCommand}" />
                <Label Grid.Row="19" Grid.Column="2" Text="&lt;20, >60" BackgroundColor="LightGray" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" Padding="0,4" FontSize="8" Margin="0,0,1,1" />

                <Button Grid.Row="20" Grid.Column="1" Text="Descent [O]" BackgroundColor="{Binding HeadDescentButtonColor}" Padding="2" FontSize="Micro" Margin="0,0,1,1" CornerRadius="0" TextColor="Black" Command="{Binding OpenHeadDescentPopupCommand}" />
                <Label Grid.Row="20" Grid.Column="2" Text="" BackgroundColor="LightGray" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" Padding="0,4" FontSize="8" Margin="0,0,1,1" />
                <buttons:SfButton Grid.Row="20" Grid.Column="3" BackgroundColor="{Binding HeadDescentButtonColor}" Padding="5" FontSize="Micro" Margin="0,0,0,1" CornerRadius="0" Command="{Binding OpenHeadDescentPopupCommand}">
                    <buttons:SfButton.Content>
                        <DataTemplate>
                            <VerticalStackLayout Spacing="2" VerticalOptions="Center">
                                <Label Text="{Binding HeadDescentLatestValue, Mode=OneWay}" FontSize="10" FontAttributes="Bold" />
                                <Label Text="{Binding HeadDescentStatusText, Mode=OneWay}" FontSize="8" Opacity="0.7" />
                            </VerticalStackLayout>
                        </DataTemplate>
                    </buttons:SfButton.Content>
                </buttons:SfButton>

                <!-- MEDICATION SECTION -->
                <Label Grid.Column="0" Grid.Row="22" Grid.RowSpan="3" Text="M
                       E
                       D
                       I
                       C
                       A
                       T
                       I
                       O
                       N" Style="{StaticResource SubheaderStyle}" FontSize="8" VerticalOptions="Center" />

                <Button Grid.Row="22" Grid.Column="1" Grid.ColumnSpan="2" Text="Oxytocin (U/L, drop/min)" BackgroundColor="LightGray" Padding="0" FontSize="Micro" Margin="0,0,1,1" CornerRadius="0" TextColor="Black" Command="{Binding OpenOxytocinPopupCommand}" />
                <buttons:SfButton Grid.Row="22" Grid.Column="3" BackgroundColor="LightGray" Padding="5" FontSize="Micro" Margin="0,0,0,1" CornerRadius="0" Command="{Binding OpenOxytocinPopupCommand}">
                    <buttons:SfButton.Content>
                        <DataTemplate>
                            <VerticalStackLayout Spacing="2" VerticalOptions="Center" Margin="5,0,0,0">
                                <Label Text="{Binding OxytocinLatestValue, Mode=OneWay}" FontSize="10" FontAttributes="Bold" />
                                <Label Text="{Binding OxytocinStatusText, Mode=OneWay}" FontSize="8" Opacity="0.7" />
                            </VerticalStackLayout>
                        </DataTemplate>
                    </buttons:SfButton.Content>
                </buttons:SfButton>

                <Button Grid.Row="23" Grid.Column="1" Grid.ColumnSpan="2" Text="Medicine" BackgroundColor="LightGray" Padding="0" FontSize="Micro" Margin="0,0,1,1" CornerRadius="0" TextColor="Black" Command="{Binding OpenMedicinePopupCommand}" />
                <buttons:SfButton Grid.Row="23" Grid.Column="3" BackgroundColor="LightGray" Padding="5" FontSize="Micro" Margin="0,0,0,1" CornerRadius="0" Command="{Binding OpenMedicinePopupCommand}">
                    <buttons:SfButton.Content>
                        <DataTemplate>
                            <VerticalStackLayout Spacing="2" VerticalOptions="Center" Margin="5,0,0,0">
                                <Label Text="{Binding MedicationLatestValue, Mode=OneWay}" FontSize="10" FontAttributes="Bold" />
                                <Label Text="{Binding MedicationStatusText, Mode=OneWay}" FontSize="8" Opacity="0.7" />
                            </VerticalStackLayout>
                        </DataTemplate>
                    </buttons:SfButton.Content>
                </buttons:SfButton>

                <Button Grid.Row="24" Grid.Column="1" Grid.ColumnSpan="2" Text="IV Fluids" BackgroundColor="LightGray" Padding="0" FontSize="Micro" Margin="0,0,1,1" CornerRadius="0" TextColor="Black" Command="{Binding OpenIVFluidsPopupCommand}" />
                <buttons:SfButton Grid.Row="24" Grid.Column="3" BackgroundColor="LightGray" Padding="5" FontSize="Micro" Margin="0,0,0,1" CornerRadius="0" Command="{Binding OpenIVFluidsPopupCommand}">
                    <buttons:SfButton.Content>
                        <DataTemplate>
                            <VerticalStackLayout Spacing="2" VerticalOptions="Center" Margin="5,0,0,0">
                                <Label Text="{Binding IvFluidLatestValue, Mode=OneWay}" FontSize="10" FontAttributes="Bold" />
                                <Label Text="{Binding IvFluidStatusText, Mode=OneWay}" FontSize="8" Opacity="0.7" />
                            </VerticalStackLayout>
                        </DataTemplate>
                    </buttons:SfButton.Content>
                </buttons:SfButton>

                <!-- DECISION SECTION -->
                <Label Grid.Column="0" Grid.Row="26" Grid.RowSpan="2" Text="D
                       E
                       C
                       I
                       S
                       I
                       O
                       N" Style="{StaticResource SubheaderStyle}" FontSize="8" VerticalOptions="Center" />

                <Button Grid.Row="26" Grid.Column="1" Grid.ColumnSpan="2" BackgroundColor="LightGray" Text="Assessment" Padding="2" FontSize="Micro" Margin="0,0,1,1" CornerRadius="0" TextColor="Black" Command="{Binding OpenAssessmentPopupCommand}" />
                <buttons:SfButton Grid.Row="26" Grid.Column="3" BackgroundColor="{Binding AssessmentButtonColor}" Padding="5" FontSize="Micro" Margin="0,0,0,1" CornerRadius="0" Command="{Binding OpenAssessmentPopupCommand}">
                    <buttons:SfButton.Content>
                        <DataTemplate>
                            <VerticalStackLayout Spacing="2" VerticalOptions="Center">
                                <Label Text="{Binding AssessmentLatestValue, Mode=OneWay}" FontSize="10" FontAttributes="Bold" />
                                <Label Text="{Binding AssessmentStatusText, Mode=OneWay}" FontSize="8" Opacity="0.7" />
                            </VerticalStackLayout>
                        </DataTemplate>
                    </buttons:SfButton.Content>
                </buttons:SfButton>

                <Button Grid.Row="27" Grid.Column="1" Grid.ColumnSpan="2" Text="Plan" BackgroundColor="LightGray" Padding="2" FontSize="Micro" Margin="0,0,1,1" CornerRadius="0" TextColor="Black" Command="{Binding OpenPlanPopupCommand}" />
                <buttons:SfButton Grid.Row="27" Grid.Column="3" BackgroundColor="LightGray" Padding="5" FontSize="Micro" Margin="0,0,0,1" CornerRadius="0" Command="{Binding OpenPlanPopupCommand}">
                    <buttons:SfButton.Content>
                        <DataTemplate>
                            <VerticalStackLayout Spacing="2" VerticalOptions="Center">
                                <Label Text="{Binding PlanLatestValue, Mode=OneWay}" FontSize="10" FontAttributes="Bold" />
                                <Label Text="{Binding PlanStatusText, Mode=OneWay}" FontSize="8" Opacity="0.7" />
                            </VerticalStackLayout>
                        </DataTemplate>
                    </buttons:SfButton.Content>
                </buttons:SfButton>
            </Grid>

            <!-- Dynamic Clinical Notes -->
            <Border Grid.Row="3"
                    StrokeThickness="1"
                    Stroke="{AppThemeBinding Light=#E0E0E0, Dark=#424242}"
                    BackgroundColor="{AppThemeBinding Light=White, Dark=#1E1E1E}"
                    Padding="15"
                    Margin="0,20,0,10"
                    IsVisible="{Binding ClinicalNotes, Converter={toolkit:IsStringNotNullOrEmptyConverter}}">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="10" />
                </Border.StrokeShape>
                <VerticalStackLayout Spacing="10">
                    <HorizontalStackLayout Spacing="10">
                        <Label Text="ðŸ“‹" FontSize="20" />
                        <Label Text="Clinical Notes"
                               FontSize="18"
                               FontAttributes="Bold"
                               VerticalOptions="Center" />
                        <Label Text="{Binding NotesGeneratedTime, StringFormat='Generated: {0:HH:mm}'}"
                               FontSize="11"
                               Opacity="0.7"
                               VerticalOptions="Center"
                               Margin="10,0,0,0" />
                    </HorizontalStackLayout>

                    <BoxView HeightRequest="1"
                             Color="{AppThemeBinding Light=#E0E0E0, Dark=#424242}" />

                    <ScrollView MaximumHeightRequest="400">
                        <Label Text="{Binding ClinicalNotes}"
                               FontSize="13"
                               LineHeight="1.6"
                               TextColor="{AppThemeBinding Light=#333, Dark=#DDD}"
                               FontFamily="Monospace" />
                    </ScrollView>

                    <HorizontalStackLayout Spacing="10" HorizontalOptions="End">
                        <Button Text="Refresh Notes"
                                Command="{Binding RefreshNotesCommand}"
                                BackgroundColor="{AppThemeBinding Light=#2196F3, Dark=#1976D2}"
                                TextColor="White"
                                FontSize="12"
                                Padding="15,8"
                                CornerRadius="5" />
                        <Button Text="Export Notes"
                                Command="{Binding ExportNotesCommand}"
                                BackgroundColor="{AppThemeBinding Light=#4CAF50, Dark=#388E3C}"
                                TextColor="White"
                                FontSize="12"
                                Padding="15,8"
                                CornerRadius="5" />
                    </HorizontalStackLayout>
                </VerticalStackLayout>
            </Border>

            <!-- Baby Details Section -->
            <Border Grid.Row="4"
                    StrokeThickness="1"
                    Stroke="{AppThemeBinding Light=#10B981, Dark=#34D399}"
                    BackgroundColor="{AppThemeBinding Light=#F0FDF4, Dark=#064E3B}"
                    Padding="15"
                    Margin="0,20,0,0"
                    IsVisible="{Binding Babies.Count, Converter={StaticResource GreaterThanZeroConverter}}">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="10" />
                </Border.StrokeShape>
                <VerticalStackLayout Spacing="10">
                    <Label Text="Baby Details"
                           FontSize="18"
                           FontAttributes="Bold"
                           TextColor="{AppThemeBinding Light=#065F46, Dark=#D1FAE5}" />

                    <CollectionView ItemsSource="{Binding Babies}">
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Border StrokeThickness="1"
                                        Stroke="{AppThemeBinding Light=#D1D5DB, Dark=#4B5563}"
                                        BackgroundColor="{AppThemeBinding Light=White, Dark=#1F2937}"
                                        Padding="12"
                                        Margin="0,5">
                                    <Border.StrokeShape>
                                        <RoundRectangle CornerRadius="8" />
                                    </Border.StrokeShape>
                                    <Grid ColumnDefinitions="*,Auto,Auto" ColumnSpacing="10">
                                        <VerticalStackLayout Grid.Column="0" Spacing="4">
                                            <Label Text="{Binding BabyTag}"
                                                   FontSize="16"
                                                   FontAttributes="Bold"
                                                   TextColor="{AppThemeBinding Light=#1F2937, Dark=#F9FAFB}" />
                                            <HorizontalStackLayout Spacing="8">
                                                <Label Text="{Binding Sex, StringFormat='Sex: {0}'}"
                                                       FontSize="12"
                                                       TextColor="{AppThemeBinding Light=#6B7280, Dark=#9CA3AF}" />
                                                <Label Text="{Binding VitalStatus, StringFormat='Status: {0}'}"
                                                       FontSize="12"
                                                       TextColor="{AppThemeBinding Light=#6B7280, Dark=#9CA3AF}" />
                                            </HorizontalStackLayout>
                                            <HorizontalStackLayout Spacing="8">
                                                <Label Text="{Binding BirthWeight, StringFormat='Weight: {0}g'}"
                                                       FontSize="12"
                                                       TextColor="{AppThemeBinding Light=#6B7280, Dark=#9CA3AF}" />
                                                <Label Text="{Binding Apgar1Min, StringFormat='APGAR 1min: {0}'}"
                                                       FontSize="12"
                                                       TextColor="{AppThemeBinding Light=#6B7280, Dark=#9CA3AF}"
                                                       IsVisible="{Binding Apgar1Min, Converter={StaticResource IsNotNullConverter}}" />
                                                <Label Text="{Binding Apgar5Min, StringFormat='5min: {0}'}"
                                                       FontSize="12"
                                                       TextColor="{AppThemeBinding Light=#6B7280, Dark=#9CA3AF}"
                                                       IsVisible="{Binding Apgar5Min, Converter={StaticResource IsNotNullConverter}}" />
                                            </HorizontalStackLayout>
                                        </VerticalStackLayout>

                                        <Button Grid.Column="1"
                                                Text="Update Vitals"
                                                FontSize="12"
                                                Padding="8,4"
                                                BackgroundColor="#10B981"
                                                TextColor="White"
                                                CornerRadius="6"
                                                Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.UpdateBabyVitalsCommand}"
                                                CommandParameter="{Binding .}" />

                                        <Button Grid.Column="2"
                                                Text="View Details"
                                                FontSize="12"
                                                Padding="8,4"
                                                BackgroundColor="#3B82F6"
                                                TextColor="White"
                                                CornerRadius="6"
                                                Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.ViewBabyDetailsCommand}"
                                                CommandParameter="{Binding .}" />
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </VerticalStackLayout>
            </Border>
        </Grid>
    </ScrollView>
</ContentPage>
