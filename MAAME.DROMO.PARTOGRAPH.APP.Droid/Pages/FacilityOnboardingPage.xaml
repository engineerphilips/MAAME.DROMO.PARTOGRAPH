<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MAAME.DROMO.PARTOGRAPH.APP.Droid.Pages.FacilityOnboardingPage"
             xmlns:fonts="clr-namespace:Fonts"
             Title="Add New Facility"
             BackgroundColor="{AppThemeBinding Light=#F5F7FA, Dark=#1A1A1A}">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">

            <!-- Header -->
            <Border BackgroundColor="{AppThemeBinding Light=#2196F3, Dark=#1565C0}"
                    Padding="24">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="16" />
                </Border.StrokeShape>

                <VerticalStackLayout Spacing="8">
                    <Label Text="&#xE710;"
                           FontFamily="{x:Static fonts:FluentUI.FontFamily}"
                           FontSize="48" 
                           HorizontalOptions="Center" />
                    <Label Text="Onboard New Facility"
                           FontSize="24"
                           FontAttributes="Bold" 
                           HorizontalOptions="Center" />
                    <Label Text="Fill in the details below to add a new facility"
                           FontSize="14" 
                           Opacity="0.9"
                           HorizontalOptions="Center" />
                </VerticalStackLayout>
            </Border>

            <!-- Basic Information Section -->
            <Border BackgroundColor="{AppThemeBinding Light=White, Dark=#2A2A2A}"
                    Padding="20"
                    StrokeThickness="0">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="16" />
                </Border.StrokeShape>
                <Border.Shadow>
                    <Shadow Brush="{AppThemeBinding Light=#20000000, Dark=#40000000}"
                            Offset="0,2"
                            Radius="8"
                            Opacity="0.15" />
                </Border.Shadow>

                <VerticalStackLayout Spacing="16">
                    <Label Text="Basic Information"
                           FontSize="18"
                           FontAttributes="Bold"
                           TextColor="{AppThemeBinding Light=#1A1A1A, Dark=#F5F5F5}" />

                    <!-- Facility Name -->
                    <VerticalStackLayout Spacing="6">
                        <Label Text="Facility Name *"
                               FontSize="14"
                               FontAttributes="Bold"
                               TextColor="{AppThemeBinding Light=#444, Dark=#CCC}" />
                        <Border StrokeThickness="1"
                                Stroke="{AppThemeBinding Light=#E0E0E0, Dark=#424242}"
                                BackgroundColor="{AppThemeBinding Light=#FAFAFA, Dark=#1E1E1E}">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="8" />
                            </Border.StrokeShape>
                            <Entry Text="{Binding Name}"
                                   Placeholder="e.g., Korle Bu Teaching Hospital"
                                   TextColor="{AppThemeBinding Light=#1A1A1A, Dark=#F5F5F5}"
                                   PlaceholderColor="{AppThemeBinding Light=#999, Dark=#666}" />
                        </Border>
                    </VerticalStackLayout>

                    <!-- Facility Code -->
                    <VerticalStackLayout Spacing="6">
                        <Label Text="Facility Code *"
                               FontSize="14"
                               FontAttributes="Bold"
                               TextColor="{AppThemeBinding Light=#444, Dark=#CCC}" />
                        <Border StrokeThickness="1"
                                Stroke="{AppThemeBinding Light=#E0E0E0, Dark=#424242}"
                                BackgroundColor="{AppThemeBinding Light=#FAFAFA, Dark=#1E1E1E}">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="8" />
                            </Border.StrokeShape>
                            <Entry Text="{Binding Code}"
                                   Placeholder="e.g., KBTH"
                                   TextColor="{AppThemeBinding Light=#1A1A1A, Dark=#F5F5F5}"
                                   PlaceholderColor="{AppThemeBinding Light=#999, Dark=#666}" />
                        </Border>
                    </VerticalStackLayout>

                    <!-- Facility Type -->
                    <VerticalStackLayout Spacing="6">
                        <Label Text="Facility Type *"
                               FontSize="14"
                               FontAttributes="Bold"
                               TextColor="{AppThemeBinding Light=#444, Dark=#CCC}" />
                        <Border StrokeThickness="1"
                                Stroke="{AppThemeBinding Light=#E0E0E0, Dark=#424242}"
                                BackgroundColor="{AppThemeBinding Light=#FAFAFA, Dark=#1E1E1E}">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="8" />
                            </Border.StrokeShape>
                            <Picker SelectedItem="{Binding Type}"
                                    Title="Select facility type"
                                    TextColor="{AppThemeBinding Light=#1A1A1A, Dark=#F5F5F5}">
                                <Picker.Items>
                                    <x:String>Teaching Hospital</x:String>
                                    <x:String>Regional Hospital</x:String>
                                    <x:String>District Hospital</x:String>
                                    <x:String>Hospital</x:String>
                                    <x:String>Polyclinic</x:String>
                                    <x:String>Health Center</x:String>
                                    <x:String>Clinic</x:String>
                                    <x:String>CHPS Compound</x:String>
                                    <x:String>Military Hospital</x:String>
                                    <x:String>Private Hospital</x:String>
                                </Picker.Items>
                            </Picker>
                        </Border>
                    </VerticalStackLayout>
                </VerticalStackLayout>
            </Border>

            <!-- Location Information Section -->
            <Border BackgroundColor="{AppThemeBinding Light=White, Dark=#2A2A2A}"
                    Padding="20"
                    StrokeThickness="0">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="16" />
                </Border.StrokeShape>
                <Border.Shadow>
                    <Shadow Brush="{AppThemeBinding Light=#20000000, Dark=#40000000}"
                            Offset="0,2"
                            Radius="8"
                            Opacity="0.15" />
                </Border.Shadow>

                <VerticalStackLayout Spacing="16">
                    <Label Text="Location Information"
                           FontSize="18"
                           FontAttributes="Bold"
                           TextColor="{AppThemeBinding Light=#1A1A1A, Dark=#F5F5F5}" />

                    <!-- Address -->
                    <VerticalStackLayout Spacing="6">
                        <Label Text="Address"
                               FontSize="14"
                               FontAttributes="Bold"
                               TextColor="{AppThemeBinding Light=#444, Dark=#CCC}" />
                        <Border StrokeThickness="1"
                                Stroke="{AppThemeBinding Light=#E0E0E0, Dark=#424242}"
                                BackgroundColor="{AppThemeBinding Light=#FAFAFA, Dark=#1E1E1E}">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="8" />
                            </Border.StrokeShape>
                            <Entry Text="{Binding Address}"
                                   Placeholder="e.g., Korle Bu Road"
                                   TextColor="{AppThemeBinding Light=#1A1A1A, Dark=#F5F5F5}"
                                   PlaceholderColor="{AppThemeBinding Light=#999, Dark=#666}" />
                        </Border>
                    </VerticalStackLayout>

                    <!-- City -->
                    <VerticalStackLayout Spacing="6">
                        <Label Text="City *"
                               FontSize="14"
                               FontAttributes="Bold"
                               TextColor="{AppThemeBinding Light=#444, Dark=#CCC}" />
                        <Border StrokeThickness="1"
                                Stroke="{AppThemeBinding Light=#E0E0E0, Dark=#424242}"
                                BackgroundColor="{AppThemeBinding Light=#FAFAFA, Dark=#1E1E1E}">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="8" />
                            </Border.StrokeShape>
                            <Entry Text="{Binding City}"
                                   Placeholder="e.g., Accra"
                                   TextColor="{AppThemeBinding Light=#1A1A1A, Dark=#F5F5F5}"
                                   PlaceholderColor="{AppThemeBinding Light=#999, Dark=#666}" />
                        </Border>
                    </VerticalStackLayout>

                    <!-- Region -->
                    <VerticalStackLayout Spacing="6">
                        <Label Text="Region *"
                               FontSize="14"
                               FontAttributes="Bold"
                               TextColor="{AppThemeBinding Light=#444, Dark=#CCC}" />
                        <Border StrokeThickness="1"
                                Stroke="{AppThemeBinding Light=#E0E0E0, Dark=#424242}"
                                BackgroundColor="{AppThemeBinding Light=#FAFAFA, Dark=#1E1E1E}">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="8" />
                            </Border.StrokeShape>
                            <Picker SelectedItem="{Binding Region}"
                                    Title="Select region"
                                    TextColor="{AppThemeBinding Light=#1A1A1A, Dark=#F5F5F5}">
                                <Picker.Items>
                                    <x:String>Greater Accra</x:String>
                                    <x:String>Ashanti</x:String>
                                    <x:String>Central</x:String>
                                    <x:String>Eastern</x:String>
                                    <x:String>Western</x:String>
                                    <x:String>Western North</x:String>
                                    <x:String>Volta</x:String>
                                    <x:String>Northern</x:String>
                                    <x:String>Upper East</x:String>
                                    <x:String>Upper West</x:String>
                                    <x:String>Brong Ahafo</x:String>
                                    <x:String>Bono East</x:String>
                                    <x:String>Ahafo</x:String>
                                    <x:String>Oti</x:String>
                                    <x:String>Savannah</x:String>
                                    <x:String>North East</x:String>
                                </Picker.Items>
                            </Picker>
                        </Border>
                    </VerticalStackLayout>

                    <!-- Country -->
                    <VerticalStackLayout Spacing="6">
                        <Label Text="Country *"
                               FontSize="14"
                               FontAttributes="Bold"
                               TextColor="{AppThemeBinding Light=#444, Dark=#CCC}" />
                        <Border StrokeThickness="1"
                                Stroke="{AppThemeBinding Light=#E0E0E0, Dark=#424242}"
                                BackgroundColor="{AppThemeBinding Light=#FAFAFA, Dark=#1E1E1E}">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="8" />
                            </Border.StrokeShape>
                            <Entry Text="{Binding Country}"
                                   Placeholder="e.g., Ghana"
                                   TextColor="{AppThemeBinding Light=#1A1A1A, Dark=#F5F5F5}"
                                   PlaceholderColor="{AppThemeBinding Light=#999, Dark=#666}" />
                        </Border>
                    </VerticalStackLayout>
                </VerticalStackLayout>
            </Border>

            <!-- GPS Information Section -->
            <Border BackgroundColor="{AppThemeBinding Light=White, Dark=#2A2A2A}"
                    Padding="20"
                    StrokeThickness="0">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="16" />
                </Border.StrokeShape>
                <Border.Shadow>
                    <Shadow Brush="{AppThemeBinding Light=#20000000, Dark=#40000000}"
                            Offset="0,2"
                            Radius="8"
                            Opacity="0.15" />
                </Border.Shadow>

                <VerticalStackLayout Spacing="16">
                    <HorizontalStackLayout Spacing="8">
                        <Label Text="&#xE909;"
                               FontFamily="{x:Static fonts:FluentUI.FontFamily}"
                               FontSize="20"
                               TextColor="{AppThemeBinding Light=#2196F3, Dark=#64B5F6}"
                               VerticalOptions="Center" />
                        <Label Text="GPS Information"
                               FontSize="18"
                               FontAttributes="Bold"
                               TextColor="{AppThemeBinding Light=#1A1A1A, Dark=#F5F5F5}"
                               VerticalOptions="Center" />
                    </HorizontalStackLayout>

                    <!-- Latitude -->
                    <VerticalStackLayout Spacing="6">
                        <Label Text="Latitude"
                               FontSize="14"
                               FontAttributes="Bold"
                               TextColor="{AppThemeBinding Light=#444, Dark=#CCC}" />
                        <Border StrokeThickness="1"
                                Stroke="{AppThemeBinding Light=#E0E0E0, Dark=#424242}"
                                BackgroundColor="{AppThemeBinding Light=#FAFAFA, Dark=#1E1E1E}">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="8" />
                            </Border.StrokeShape>
                            <Entry Text="{Binding LatitudeText}"
                                   Placeholder="e.g., 5.5536"
                                   Keyboard="Numeric"
                                   TextColor="{AppThemeBinding Light=#1A1A1A, Dark=#F5F5F5}"
                                   PlaceholderColor="{AppThemeBinding Light=#999, Dark=#666}" />
                        </Border>
                    </VerticalStackLayout>

                    <!-- Longitude -->
                    <VerticalStackLayout Spacing="6">
                        <Label Text="Longitude"
                               FontSize="14"
                               FontAttributes="Bold"
                               TextColor="{AppThemeBinding Light=#444, Dark=#CCC}" />
                        <Border StrokeThickness="1"
                                Stroke="{AppThemeBinding Light=#E0E0E0, Dark=#424242}"
                                BackgroundColor="{AppThemeBinding Light=#FAFAFA, Dark=#1E1E1E}">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="8" />
                            </Border.StrokeShape>
                            <Entry Text="{Binding LongitudeText}"
                                   Placeholder="e.g., -0.2192"
                                   Keyboard="Numeric"
                                   TextColor="{AppThemeBinding Light=#1A1A1A, Dark=#F5F5F5}"
                                   PlaceholderColor="{AppThemeBinding Light=#999, Dark=#666}" />
                        </Border>
                    </VerticalStackLayout>

                    <!-- GHPost GPS Address -->
                    <VerticalStackLayout Spacing="6">
                        <Label Text="Ghana Post GPS Address"
                               FontSize="14"
                               FontAttributes="Bold"
                               TextColor="{AppThemeBinding Light=#444, Dark=#CCC}" />
                        <Border StrokeThickness="1"
                                Stroke="{AppThemeBinding Light=#E0E0E0, Dark=#424242}"
                                BackgroundColor="{AppThemeBinding Light=#FAFAFA, Dark=#1E1E1E}">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="8" />
                            </Border.StrokeShape>
                            <Entry Text="{Binding GHPostGPS}"
                                   Placeholder="e.g., GA-054-1234"
                                   TextColor="{AppThemeBinding Light=#1A1A1A, Dark=#F5F5F5}"
                                   PlaceholderColor="{AppThemeBinding Light=#999, Dark=#666}" />
                        </Border>
                    </VerticalStackLayout>

                    <Label Text="Tip: You can find GPS coordinates and Ghana Post GPS address using Google Maps or the Ghana Post GPS app"
                           FontSize="12"
                           TextColor="{AppThemeBinding Light=#888, Dark=#777}"
                           FontAttributes="Italic" />
                </VerticalStackLayout>
            </Border>

            <!-- Contact Information Section -->
            <Border BackgroundColor="{AppThemeBinding Light=White, Dark=#2A2A2A}"
                    Padding="20"
                    StrokeThickness="0">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="16" />
                </Border.StrokeShape>
                <Border.Shadow>
                    <Shadow Brush="{AppThemeBinding Light=#20000000, Dark=#40000000}"
                            Offset="0,2"
                            Radius="8"
                            Opacity="0.15" />
                </Border.Shadow>

                <VerticalStackLayout Spacing="16">
                    <Label Text="Contact Information"
                           FontSize="18"
                           FontAttributes="Bold"
                           TextColor="{AppThemeBinding Light=#1A1A1A, Dark=#F5F5F5}" />

                    <!-- Phone -->
                    <VerticalStackLayout Spacing="6">
                        <Label Text="Phone"
                               FontSize="14"
                               FontAttributes="Bold"
                               TextColor="{AppThemeBinding Light=#444, Dark=#CCC}" />
                        <Border StrokeThickness="1"
                                Stroke="{AppThemeBinding Light=#E0E0E0, Dark=#424242}"
                                BackgroundColor="{AppThemeBinding Light=#FAFAFA, Dark=#1E1E1E}">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="8" />
                            </Border.StrokeShape>
                            <Entry Text="{Binding Phone}"
                                   Placeholder="e.g., +233-302-674-191"
                                   Keyboard="Telephone"
                                   TextColor="{AppThemeBinding Light=#1A1A1A, Dark=#F5F5F5}"
                                   PlaceholderColor="{AppThemeBinding Light=#999, Dark=#666}" />
                        </Border>
                    </VerticalStackLayout>

                    <!-- Email -->
                    <VerticalStackLayout Spacing="6">
                        <Label Text="Email"
                               FontSize="14"
                               FontAttributes="Bold"
                               TextColor="{AppThemeBinding Light=#444, Dark=#CCC}" />
                        <Border StrokeThickness="1"
                                Stroke="{AppThemeBinding Light=#E0E0E0, Dark=#424242}"
                                BackgroundColor="{AppThemeBinding Light=#FAFAFA, Dark=#1E1E1E}">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="8" />
                            </Border.StrokeShape>
                            <Entry Text="{Binding Email}"
                                   Placeholder="e.g., info@facility.gov.gh"
                                   Keyboard="Email"
                                   TextColor="{AppThemeBinding Light=#1A1A1A, Dark=#F5F5F5}"
                                   PlaceholderColor="{AppThemeBinding Light=#999, Dark=#666}" />
                        </Border>
                    </VerticalStackLayout>
                </VerticalStackLayout>
            </Border>

            <!-- Action Buttons -->
            <Grid ColumnDefinitions="*,*" ColumnSpacing="12" Margin="0,10,0,30">
                <!-- Cancel Button -->
                <Button Grid.Column="0"
                        Text="Cancel"
                        Command="{Binding CancelCommand}"
                        BackgroundColor="{AppThemeBinding Light=#E0E0E0, Dark=#424242}"
                        TextColor="{AppThemeBinding Light=#1A1A1A, Dark=#F5F5F5}"
                        HeightRequest="56"
                        CornerRadius="12"
                        FontSize="16"
                        FontAttributes="Bold" />

                <!-- Save Button -->
                <Button Grid.Column="1"
                        Text="Save Facility"
                        Command="{Binding SaveCommand}"
                        BackgroundColor="{AppThemeBinding Light=#2196F3, Dark=#1565C0}"
                        TextColor="White"
                        HeightRequest="56"
                        CornerRadius="12"
                        FontSize="16"
                        FontAttributes="Bold">
                    <Button.Shadow>
                        <Shadow Brush="#402196F3"
                                Offset="0,4"
                                Radius="12"
                                Opacity="0.3" />
                    </Button.Shadow>
                </Button>
            </Grid>

            <!-- Loading Indicator -->
            <ActivityIndicator IsRunning="{Binding IsBusy}"
                             IsVisible="{Binding IsBusy}"
                             Color="{AppThemeBinding Light=#2196F3, Dark=#64B5F6}"
                             HeightRequest="50" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
