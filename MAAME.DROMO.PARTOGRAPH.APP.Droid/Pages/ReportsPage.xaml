<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:views="clr-namespace:MAAME.DROMO.PARTOGRAPH.APP.Droid.Pages.Views"
             xmlns:fonts="clr-namespace:Fonts"
             xmlns:core="clr-namespace:Syncfusion.Maui.Core;assembly=Syncfusion.Maui.Core"
             xmlns:tabView="http://schemas.syncfusion.com/maui"
             xmlns:converters="clr-namespace:MAAME.DROMO.PARTOGRAPH.APP.Droid.Converters"
             x:Class="MAAME.DROMO.PARTOGRAPH.APP.Droid.Pages.ReportsPage"
             Title="Reports &amp; Analytics">

    <ContentPage.Resources>
        <ResourceDictionary>
            <converters:TabBackgroundConverter x:Key="TabBackgroundConverter" />
            <converters:EqualConverter x:Key="EqualConverter" />
            <converters:IsNotNullConverter x:Key="IsNotNullConverter" />

            <!-- Input Styles -->
            <Style x:Key="PatientInput" TargetType="core:SfTextInputLayout">
                <Setter Property="ContainerType" Value="Outlined" />
                <Setter Property="OutlineCornerRadius" Value="8" />
            </Style>

            <!-- Typography Styles -->
            <!--<Style x:Key="SectionTitle" TargetType="Label">
                <Setter Property="FontSize" Value="18" />
                <Setter Property="FontAttributes" Value="Bold" />
                <Setter Property="TextColor" Value="{StaticResource TextPrimary}" />
                <Setter Property="Margin" Value="0,0,0,8" />
            </Style>-->
        </ResourceDictionary>
    </ContentPage.Resources>

    <Grid RowDefinitions="Auto,Auto,*" Padding="16">

        <!-- Header Section -->
        <Border Grid.Row="0"
                BackgroundColor="{AppThemeBinding Light=#2196F3, Dark=#1976D2}"
                Padding="20"
                Margin="0,0,0,16">
            <Border.StrokeShape>
                <RoundRectangle CornerRadius="12" />
            </Border.StrokeShape>
            <Grid RowDefinitions="Auto,Auto" ColumnDefinitions="*,Auto">
                <Label Text="Reports &amp; Analytics"
                       FontSize="24"
                       FontAttributes="Bold" 
                       Grid.Row="0" Grid.Column="0"/>
                <!--Text="{Binding StartDate, StringFormat='Period: {0:MMM dd} - '}"-->

                <Label FontSize="14" 
                       Opacity="0.9"
                       Grid.Row="1" Grid.Column="0">
                    <Label.FormattedText>
                        <FormattedString>
                            <Span Text="{Binding StartDate, StringFormat='From {0:MMM dd} - '}" />
                            <Span Text="{Binding EndDate, StringFormat='{0:MMM dd, yyyy}'}" />
                        </FormattedString>
                    </Label.FormattedText>
                </Label>
                <Button FontFamily="{x:Static fonts:FluentUI.FontFamily}"
                        Text="{x:Static fonts:FluentUI.search_24_regular}"
                        FontSize="20" 
                        Grid.Row="0" Grid.Column="1"
                        Grid.RowSpan="2"
                        Command="{Binding RefreshCurrentReportCommand}"
                        BackgroundColor="#2196F3"
                        VerticalOptions="Center"/>
            </Grid>
        </Border>

        <!-- Date Range Filter -->
        <Border Grid.Row="1"
                BackgroundColor="{AppThemeBinding Light=White, Dark=#1E1E1E}"
                Padding="16,8,16,0"
                Margin="0,0,0,8">
            <Border.StrokeShape>
                <RoundRectangle CornerRadius="10" />
            </Border.StrokeShape>
            <Border.Shadow>
                <Shadow Brush="{AppThemeBinding Light=#40000000, Dark=#80000000}"
                        Offset="0,2"
                        Radius="6"
                        Opacity="0.1" />
            </Border.Shadow>
            <Grid ColumnDefinitions="*,*,Auto">
                <!--<Label Text="Start Date"
                       FontSize="12"
                       TextColor="{AppThemeBinding Light=#666, Dark=#AAA}"
                       Grid.Row="0" Grid.Column="0"/>
                <DatePicker Date="{Binding StartDate}"
                            Grid.Row="2" Grid.Column="0"
                            FontSize="14"/>

                <Label Text="End Date"
                       FontSize="12"
                       TextColor="{AppThemeBinding Light=#666, Dark=#AAA}"
                       Grid.Row="0" Grid.Column="2"/>
                <DatePicker Date="{Binding EndDate}"
                            Grid.Row="2" Grid.Column="2"
                            FontSize="14"/>-->

                <core:SfTextInputLayout Grid.Column="0"
            Hint="Start Date"
            Style="{StaticResource PatientInput}">
                    <DatePicker Date="{Binding StartDate, Mode=TwoWay}"
   Format="dd-MM-yyyy" MinimumDate="01/01/1950" Margin="-10" HeightRequest="20" />
                </core:SfTextInputLayout>

                <core:SfTextInputLayout Grid.Column="1"
        Hint="End date"
        Style="{StaticResource PatientInput}">
                    <DatePicker Date="{Binding EndDate, Mode=TwoWay}"
Format="dd-MM-yyyy" MinimumDate="01/01/1950" />
                </core:SfTextInputLayout>
                
                <!--<Button Text="Apply"
                        BackgroundColor="#2196F3"
                        TextColor="White"
                        FontSize="14"
                        FontAttributes="Bold"
                        CornerRadius="8" 
                        Command="{Binding RefreshCurrentReportCommand}"
                        Grid.Row="0" Grid.Column="2" VerticalOptions="Center" HeightRequest="44" HorizontalOptions="EndAndExpand"/>-->
            </Grid>
        </Border>

        <!-- Reports Tabs -->
        <Grid Grid.Row="2">
            <!-- Loading Overlay -->
            <Grid IsVisible="{Binding IsLoading}"
                  BackgroundColor="{AppThemeBinding Light=#80FFFFFF, Dark=#80000000}"
                  ZIndex="100">
                <VerticalStackLayout VerticalOptions="Center" HorizontalOptions="Center" Spacing="16">
                    <ActivityIndicator IsRunning="{Binding IsLoading}"
                                       Color="#2196F3"
                                       WidthRequest="50"
                                       HeightRequest="50"/>
                    <Label Text="{Binding LoadingMessage}"
                           FontSize="16"
                           TextColor="{AppThemeBinding Light=#333, Dark=#CCC}"
                           HorizontalOptions="Center"/>
                </VerticalStackLayout>
            </Grid>

            <tabView:SfTabView x:Name="TabView" TabBarHeight="72" TabWidthMode="SizeToContent" EnableSwiping="True" TabBarPlacement="Top" SelectedIndex="{Binding SelectedTabIndex, Mode=TwoWay}">
                <tabView:SfTabItem Header="Monthly Dashboard" ImagePosition="Top" ImageSource="todo_done_svgrepo.png">
                    <!-- Monthly Dashboard View -->
                    <views:MonthlyDashboardView BindingContext="{Binding MonthlyDashboard}"/>
                </tabView:SfTabItem>

                <tabView:SfTabItem Header="Maternal Complications" ImageSource="todo_done_svgrepo.png">
                    <!-- Maternal Complications View -->
                    <views:MaternalComplicationsView BindingContext="{Binding MaternalComplicationsReport}"/>
                </tabView:SfTabItem>

                <tabView:SfTabItem Header="Neonatal Outcomes" ImageSource="todo_done_svgrepo.png">
                    <!-- Neonatal Outcomes View -->
                    <views:NeonatalOutcomesView BindingContext="{Binding NeonatalOutcomesReport}"/>
                </tabView:SfTabItem>

                <tabView:SfTabItem Header="Alert Response" ImageSource="todo_done_svgrepo.png">
                    <!-- Alert Response View -->
                    <views:AlertResponseView BindingContext="{Binding AlertResponseReport}"/>
                </tabView:SfTabItem>

                <tabView:SfTabItem Header="Monthly Midwives Returns" ImageSource="todo_done_svgrepo.png">
                    <!-- Monthly Midwives Returns View -->
                    <views:MonthlyMidwivesReturnsView BindingContext="{Binding MonthlyMidwivesReturnsReport}"/>
                </tabView:SfTabItem>

                <tabView:SfTabItem Header="WHO Compliance" ImageSource="todo_done_svgrepo.png">
                    <!-- WHO Compliance View -->
                    <views:WHOComplianceView BindingContext="{Binding WhoComplianceReport}"/>
                </tabView:SfTabItem>

                <tabView:SfTabItem Header="Birth Weight &amp; APGAR" ImageSource="todo_done_svgrepo.png">
                    <!-- Birth Weight & APGAR Analysis View -->
                    <views:BirthWeightApgarView BindingContext="{Binding BirthWeightApgarReport}"/>
                </tabView:SfTabItem>

                <tabView:SfTabItem Header="Sync Status" ImageSource="todo_done_svgrepo.png">
                    <!-- Sync Status View -->
                    <views:SyncStatusView BindingContext="{Binding SyncStatusReport}"/>
                </tabView:SfTabItem>

                <tabView:SfTabItem Header="Staff Performance" ImageSource="todo_done_svgrepo.png">
                    <!-- Staff Performance View -->
                    <views:StaffPerformanceView BindingContext="{Binding StaffPerformanceReport}"/>
                </tabView:SfTabItem>

                <tabView:SfTabItem Header="Trend Analytics" ImageSource="todo_done_svgrepo.png">
                    <!-- Trend Analytics View -->
                    <views:TrendAnalyticsView BindingContext="{Binding TrendAnalyticsReport}"/>
                </tabView:SfTabItem>
            </tabView:SfTabView>
            
            <!-- Tab View --><!--
            <ScrollView>
                <VerticalStackLayout Spacing="0">
                    --><!-- Tab Headers --><!--
                    <ScrollView Orientation="Horizontal" Margin="0,0,0,16">
                        <HorizontalStackLayout Spacing="8">
                            <Button Text="Monthly Dashboard"
                                    Command="{Binding LoadMonthlyDashboardCommand}"
                                    BackgroundColor="{Binding SelectedTabIndex, Converter={StaticResource TabBackgroundConverter}, ConverterParameter=0}"
                                    TextColor="White"
                                    FontSize="13"
                                    Padding="16,8"
                                    CornerRadius="8"/>
                            <Button Text="Maternal Complications"
                                    Command="{Binding LoadMaternalComplicationsCommand}"
                                    BackgroundColor="{Binding SelectedTabIndex, Converter={StaticResource TabBackgroundConverter}, ConverterParameter=1}"
                                    TextColor="White"
                                    FontSize="13"
                                    Padding="16,8"
                                    CornerRadius="8"/>
                            <Button Text="Neonatal Outcomes"
                                    Command="{Binding LoadNeonatalOutcomesCommand}"
                                    BackgroundColor="{Binding SelectedTabIndex, Converter={StaticResource TabBackgroundConverter}, ConverterParameter=2}"
                                    TextColor="White"
                                    FontSize="13"
                                    Padding="16,8"
                                    CornerRadius="8"/>
                            <Button Text="Alert Response"
                                    Command="{Binding LoadAlertResponseCommand}"
                                    BackgroundColor="{Binding SelectedTabIndex, Converter={StaticResource TabBackgroundConverter}, ConverterParameter=3}"
                                    TextColor="White"
                                    FontSize="13"
                                    Padding="16,8"
                                    CornerRadius="8"/>
                        </HorizontalStackLayout>
                    </ScrollView>

                    --><!-- Tab Content --><!--
                    <Grid>
                        --><!-- Monthly Dashboard View --><!--
                        <views:MonthlyDashboardView IsVisible="{Binding SelectedTabIndex, Converter={StaticResource EqualConverter}, ConverterParameter=0}"
                                                     BindingContext="{Binding MonthlyDashboard}"/>

                        --><!-- Maternal Complications View --><!--
                        <views:MaternalComplicationsView IsVisible="{Binding SelectedTabIndex, Converter={StaticResource EqualConverter}, ConverterParameter=1}"
                                                          BindingContext="{Binding MaternalComplicationsReport}"/>

                        --><!-- Neonatal Outcomes View --><!--
                        <views:NeonatalOutcomesView IsVisible="{Binding SelectedTabIndex, Converter={StaticResource EqualConverter}, ConverterParameter=2}"
                                                     BindingContext="{Binding NeonatalOutcomesReport}"/>

                        --><!-- Alert Response View (Placeholder) --><!--
                        <Label IsVisible="{Binding SelectedTabIndex, Converter={StaticResource EqualConverter}, ConverterParameter=3}"
                               Text="Alert Response Time Report - Coming Soon"
                               FontSize="18"
                               TextColor="{AppThemeBinding Light=#666, Dark=#AAA}"
                               HorizontalOptions="Center"
                               VerticalOptions="Center"
                               Margin="0,40,0,0"/>
                    </Grid>
                </VerticalStackLayout>
            </ScrollView>-->
        </Grid>
    </Grid>
</ContentPage>