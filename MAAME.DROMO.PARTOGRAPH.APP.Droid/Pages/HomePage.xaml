<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MAAME.DROMO.PARTOGRAPH.APP.Droid.Pages.HomePage"             
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             xmlns:sf="clr-namespace:Syncfusion.Maui.Toolkit.Charts;assembly=Syncfusion.Maui.Toolkit"
             xmlns:controls="clr-namespace:MAAME.DROMO.PARTOGRAPH.APP.Droid.Pages.Controls"
             xmlns:models="clr-namespace:MAAME.DROMO.PARTOGRAPH.APP.Droid.Models"
             xmlns:fonts="clr-namespace:Fonts"
             Title="Labor Ward Dashboard">

    <ContentPage.Behaviors>
        <toolkit:EventToCommandBehavior EventName="NavigatedTo" 
                                       Command="{Binding NavigatedToCommand}" />
        <toolkit:EventToCommandBehavior EventName="NavigatedFrom" 
                                       Command="{Binding NavigatedFromCommand}" />
        <toolkit:EventToCommandBehavior EventName="Appearing" 
                                       Command="{Binding AppearingCommand}" />
    </ContentPage.Behaviors>

    <Grid RowDefinitions="Auto,*" Padding="20">
        <!-- Header Section -->
        <Grid Grid.Row="0" ColumnDefinitions="*,Auto" Margin="0,0,0,20">
            <VerticalStackLayout>
                <Label Text="{Binding Today}" FontSize="14" TextColor="{AppThemeBinding Light=#666, Dark=#AAA}" />
                <Label Text="Labor Ward Monitor" FontSize="28" FontAttributes="Bold" />
                <Label Text="{Binding CurrentShift}" FontSize="16" TextColor="{AppThemeBinding Light=#2196F3, Dark=#64B5F6}" />
            </VerticalStackLayout>

            <Button Grid.Column="1" 
                    Text="&#xE710;" 
                    FontFamily="{x:Static fonts:FluentUI.FontFamily}"
                    Command="{Binding AddNewPatientCommand}"
                    BackgroundColor="{AppThemeBinding Light=#2196F3, Dark=#1976D2}"
                    TextColor="White"
                    CornerRadius="25"
                    WidthRequest="50"
                    HeightRequest="50"
                    FontSize="24"
                    ToolTipProperties.Text="Admit New Patient" />
        </Grid>

        <ScrollView Grid.Row="1">
            <VerticalStackLayout Spacing="20">

                <!-- Statistics Cards -->
                <Grid ColumnDefinitions="*,*,*,*" ColumnSpacing="15">
                    <Border Grid.Column="0" 
                            StrokeThickness="0"
                            BackgroundColor="{AppThemeBinding Light=#FFF3E0, Dark=#E65100}"
                            Padding="15">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="10" />
                        </Border.StrokeShape>
                        <VerticalStackLayout>
                            <Label Text="{Binding DashboardStats.PendingLabor}" 
                                   FontSize="32" 
                                   FontAttributes="Bold"
                                   TextColor="{AppThemeBinding Light=#E65100, Dark=White}" />
                            <Label Text="Pre-Labor" 
                                   FontSize="14"
                                   TextColor="{AppThemeBinding Light=#E65100, Dark=White}" />
                            <Label Text="&#xE73E;" 
                                   FontFamily="{x:Static fonts:FluentUI.FontFamily}"
                                   FontSize="20"
                                   TextColor="{AppThemeBinding Light=#E65100, Dark=White}" />
                        </VerticalStackLayout>
                        <Border.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding NavigateToPendingPatientsCommand}" />
                        </Border.GestureRecognizers>
                    </Border>

                    <Border Grid.Column="1" 
                            StrokeThickness="0"
                            BackgroundColor="{AppThemeBinding Light=#E8F5E9, Dark=#388E3C}"
                            Padding="15">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="10" />
                        </Border.StrokeShape>
                        <VerticalStackLayout>
                            <Label Text="{Binding DashboardStats.ActiveLabor}" 
                                   FontSize="32" 
                                   FontAttributes="Bold"
                                   TextColor="{AppThemeBinding Light=#388E3C, Dark=White}" />
                            <Label Text="Active Labor" 
                                   FontSize="14"
                                   TextColor="{AppThemeBinding Light=#388E3C, Dark=White}" />
                            <Label Text="&#xE8E7;" 
                                   FontFamily="{x:Static fonts:FluentUI.FontFamily}"
                                   FontSize="20"
                                   TextColor="{AppThemeBinding Light=#388E3C, Dark=White}" />
                        </VerticalStackLayout>
                        <Border.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding NavigateToActivePatientsCommand}" />
                        </Border.GestureRecognizers>
                    </Border>

                    <Border Grid.Column="2" 
                            StrokeThickness="0"
                            BackgroundColor="{AppThemeBinding Light=#E3F2FD, Dark=#1976D2}"
                            Padding="15">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="10" />
                        </Border.StrokeShape>
                        <VerticalStackLayout>
                            <Label Text="{Binding DashboardStats.CompletedToday}" 
                                   FontSize="32" 
                                   FontAttributes="Bold"
                                   TextColor="{AppThemeBinding Light=#1976D2, Dark=White}" />
                            <Label Text="Delivered" 
                                   FontSize="14"
                                   TextColor="{AppThemeBinding Light=#1976D2, Dark=White}" />
                            <Label Text="&#xE73A;" 
                                   FontFamily="{x:Static fonts:FluentUI.FontFamily}"
                                   FontSize="20"
                                   TextColor="{AppThemeBinding Light=#1976D2, Dark=White}" />
                        </VerticalStackLayout>
                        <Border.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding NavigateToCompletedPatientsCommand}" />
                        </Border.GestureRecognizers>
                    </Border>

                    <Border Grid.Column="3" 
                            StrokeThickness="0"
                            BackgroundColor="{AppThemeBinding Light=#FFEBEE, Dark=#D32F2F}"
                            Padding="15">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="10" />
                        </Border.StrokeShape>
                        <VerticalStackLayout>
                            <Label Text="{Binding DashboardStats.EmergencyCases}" 
                                   FontSize="32" 
                                   FontAttributes="Bold"
                                   TextColor="{AppThemeBinding Light=#D32F2F, Dark=White}" />
                            <Label Text="Emergency" 
                                   FontSize="14"
                                   TextColor="{AppThemeBinding Light=#D32F2F, Dark=White}" />
                            <Label Text="&#xE8BB;" 
                                   FontFamily="{x:Static fonts:FluentUI.FontFamily}"
                                   FontSize="20"
                                   TextColor="{AppThemeBinding Light=#D32F2F, Dark=White}" />
                        </VerticalStackLayout>
                    </Border>
                </Grid>

                <!-- Labor Stage Distribution Chart -->
                <Border StrokeThickness="1" 
                        Stroke="{AppThemeBinding Light=#E0E0E0, Dark=#424242}"
                        BackgroundColor="{AppThemeBinding Light=White, Dark=#1E1E1E}"
                        Padding="15">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="10" />
                    </Border.StrokeShape>
                    <Grid RowDefinitions="Auto,200">
                        <Label Text="Labor Stage Distribution" 
                               FontSize="18" 
                               FontAttributes="Bold" 
                               Margin="0,0,0,10" />

                        <sf:SfCircularChart Grid.Row="1">
                            <sf:PieSeries ItemsSource="{Binding LaborStageData}"
                                        XBindingPath="Title"
                                        YBindingPath="Count"
                                        PaletteBrushes="{Binding LaborStageColors}"
                                        ShowDataLabels="True"
                                        EnableAnimation="True">
                                <sf:PieSeries.DataLabelSettings>
                                    <sf:CircularDataLabelSettings>
                                        <sf:CircularDataLabelSettings.LabelStyle>
                                            <sf:ChartDataLabelStyle TextColor="White" />
                                        </sf:CircularDataLabelSettings.LabelStyle>
                                    </sf:CircularDataLabelSettings>
                                </sf:PieSeries.DataLabelSettings>
                            </sf:PieSeries>
                            <sf:SfCircularChart.Legend>
                                <controls:LegendExt />
                            </sf:SfCircularChart.Legend>
                        </sf:SfCircularChart>
                    </Grid>
                </Border>

                <!-- Emergency Patients -->
                <Border StrokeThickness="1" 
                        Stroke="{AppThemeBinding Light=#FFCDD2, Dark=#D32F2F}"
                        BackgroundColor="{AppThemeBinding Light=#FFEBEE, Dark=#3E2723}"
                        Padding="15"
                        IsVisible="{Binding EmergencyPatients.Count, Converter={toolkit:IntToBoolConverter}}">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="10" />
                    </Border.StrokeShape>
                    <VerticalStackLayout Spacing="10">
                        <HorizontalStackLayout Spacing="10">
                            <Label Text="&#xE8BB;" 
                                   FontFamily="{x:Static fonts:FluentUI.FontFamily}"
                                   FontSize="20"
                                   TextColor="#D32F2F" />
                            <Label Text="Emergency Cases" 
                                   FontSize="18" 
                                   FontAttributes="Bold"
                                   TextColor="#D32F2F" />
                        </HorizontalStackLayout>

                        <CollectionView ItemsSource="{Binding EmergencyPatients}">
                            <CollectionView.ItemTemplate>
                                <DataTemplate x:DataType="models:Patient">
                                    <Border StrokeThickness="0"
                                            BackgroundColor="{AppThemeBinding Light=White, Dark=#424242}"
                                            Padding="10"
                                            Margin="0,5">
                                        <Border.StrokeShape>
                                            <RoundRectangle CornerRadius="5" />
                                        </Border.StrokeShape>
                                        <Grid ColumnDefinitions="*,Auto">
                                            <VerticalStackLayout>
                                                <Label Text="{Binding Name}" FontAttributes="Bold" />
                                                <Label Text="{Binding DisplayInfo}" FontSize="12" />
                                            </VerticalStackLayout>
                                            <Button Grid.Column="1"
                                                    Text="View"
                                                    Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.NavigateToPatientCommand}"
                                                    CommandParameter="{Binding .}"
                                                    BackgroundColor="#D32F2F"
                                                    TextColor="White"
                                                    Padding="10,5" />
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>
                    </VerticalStackLayout>
                </Border>

                <!-- Active Labor Patients -->
                <Border StrokeThickness="1" 
                        Stroke="{AppThemeBinding Light=#E0E0E0, Dark=#424242}"
                        BackgroundColor="{AppThemeBinding Light=White, Dark=#1E1E1E}"
                        Padding="15">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="10" />
                    </Border.StrokeShape>
                    <VerticalStackLayout Spacing="10">
                        <HorizontalStackLayout Spacing="10">
                            <Label Text="&#xE8E7;" 
                                   FontFamily="{x:Static fonts:FluentUI.FontFamily}"
                                   FontSize="20"
                                   TextColor="#388E3C" />
                            <Label Text="Active Labor Monitoring" 
                                   FontSize="18" 
                                   FontAttributes="Bold" />
                        </HorizontalStackLayout>

                        <CollectionView ItemsSource="{Binding RecentActivePatients}">
                            <CollectionView.ItemTemplate>
                                <DataTemplate x:DataType="models:Patient">
                                    <Border StrokeThickness="1"
                                            Stroke="{AppThemeBinding Light=#E0E0E0, Dark=#424242}"
                                            BackgroundColor="{AppThemeBinding Light=#F5F5F5, Dark=#2A2A2A}"
                                            Padding="15"
                                            Margin="0,5">
                                        <Border.StrokeShape>
                                            <RoundRectangle CornerRadius="8" />
                                        </Border.StrokeShape>
                                        <Grid ColumnDefinitions="Auto,*,Auto" ColumnSpacing="15">
                                            <Border Grid.Column="0"
                                                    WidthRequest="50"
                                                    HeightRequest="50"
                                                    BackgroundColor="#E8F5E9">
                                                <Border.StrokeShape>
                                                    <RoundRectangle CornerRadius="25" />
                                                </Border.StrokeShape>
                                                <Label Text="{Binding Name, Converter={StaticResource InitialsConverter}}"
                                                       HorizontalOptions="Center"
                                                       VerticalOptions="Center"
                                                       FontSize="18"
                                                       FontAttributes="Bold"
                                                       TextColor="#388E3C" />
                                            </Border>

                                            <VerticalStackLayout Grid.Column="1" VerticalOptions="Center">
                                                <Label Text="{Binding Name}" 
                                                       FontAttributes="Bold" 
                                                       FontSize="16" />
                                                <Label Text="{Binding DisplayInfo}" 
                                                       FontSize="12"
                                                       TextColor="{AppThemeBinding Light=#666, Dark=#AAA}" />
                                                <HorizontalStackLayout Spacing="5">
                                                    <Label Text="Cervical:" FontSize="12" />
                                                    <Label Text="{Binding PartographEntries[0].CervicalDilation, StringFormat='{0}cm'}" 
                                                           FontSize="12"
                                                           FontAttributes="Bold"
                                                           TextColor="#388E3C" />
                                                </HorizontalStackLayout>
                                            </VerticalStackLayout>

                                            <VerticalStackLayout Grid.Column="2" Spacing="5">
                                                <Button Text="&#xE8A5;"
                                                        FontFamily="{x:Static fonts:FluentUI.FontFamily}"
                                                        Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.NavigateToPartographCommand}"
                                                        CommandParameter="{Binding .}"
                                                        BackgroundColor="#2196F3"
                                                        TextColor="White"
                                                        WidthRequest="40"
                                                        HeightRequest="40"
                                                        CornerRadius="20"
                                                        ToolTipProperties.Text="View Partograph" />
                                            </VerticalStackLayout>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>
                    </VerticalStackLayout>
                </Border>

            </VerticalStackLayout>
        </ScrollView>
    </Grid>
</ContentPage>