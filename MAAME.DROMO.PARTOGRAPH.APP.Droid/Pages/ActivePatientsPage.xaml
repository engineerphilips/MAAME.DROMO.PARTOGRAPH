<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MAAME.DROMO.PARTOGRAPH.APP.Droid.Pages.ActivePatientsPage"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             xmlns:models="clr-namespace:MAAME.DROMO.PARTOGRAPH.MODEL;assembly=MAAME.DROMO.PARTOGRAPH.MODEL"
             xmlns:fonts="clr-namespace:Fonts"
             xmlns:converters="clr-namespace:MAAME.DROMO.PARTOGRAPH.APP.Droid.Converters"
             Title="Active Labour Patients">

    <ContentPage.Resources>
        <ResourceDictionary>
            <converters:FHRColorConverter x:Key="FHRColorConverter" />
        </ResourceDictionary>
    </ContentPage.Resources>

    <ContentPage.Behaviors>
        <toolkit:EventToCommandBehavior EventName="Appearing" 
                                       Command="{Binding AppearingCommand}" />
    </ContentPage.Behaviors>

    <Grid RowDefinitions="Auto,Auto,*" Padding="20">

        <!-- Header -->
        <Label Grid.Row="0" 
               Text="Active Labour Monitoring" 
               FontSize="24" 
               FontAttributes="Bold"
               Margin="0,0,0,20" />

        <!-- Search Bar -->
        <SearchBar Grid.Row="1"
                   Placeholder="Search by name or hospital number..."
                   Text="{Binding SearchText}"
                   Margin="0,0,0,20" />

        <!-- Patients List -->
        <RefreshView Grid.Row="2"
                     IsRefreshing="{Binding IsRefreshing}"
                     Command="{Binding RefreshCommand}">
            <CollectionView ItemsSource="{Binding Patients}"
                            ItemsLayout="VerticalList"
                            SelectionMode="None">
                <CollectionView.EmptyView>
                    <VerticalStackLayout VerticalOptions="Center" HorizontalOptions="Center" Spacing="20">
                        <Label Text="&#xE8B6;" 
                               FontFamily="{x:Static fonts:FluentUI.FontFamily}"
                               FontSize="64"
                               TextColor="{AppThemeBinding Light=#CCC, Dark=#666}"
                               HorizontalOptions="Center" />
                        <Label Text="No Active Labour Patients"
                               FontSize="18"
                               TextColor="{AppThemeBinding Light=#666, Dark=#AAA}"
                               HorizontalOptions="Center" />
                    </VerticalStackLayout>
                </CollectionView.EmptyView>

                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="models:Partograph">
                        <Border StrokeThickness="1"
                                Stroke="{AppThemeBinding Light=#E0E0E0, Dark=#424242}"
                                BackgroundColor="{AppThemeBinding Light=White, Dark=#1E1E1E}"
                                Margin="0,5"
                                Padding="15">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="10" />
                            </Border.StrokeShape>

                            <Grid ColumnDefinitions="Auto,*,Auto" ColumnSpacing="15">
                                <!-- Patient Avatar -->
                                <Border Grid.Column="0"
                                        WidthRequest="60"
                                        HeightRequest="60"
                                        BackgroundColor="{Binding StatusColor}">
                                    <Border.StrokeShape>
                                        <RoundRectangle CornerRadius="30" />
                                    </Border.StrokeShape>
                                    <VerticalStackLayout VerticalOptions="Center" HorizontalOptions="Center">
                                        <Label Text="{Binding CervicalDilationOnAdmission, StringFormat='{0}'}"
                                               FontSize="20"
                                               FontAttributes="Bold"
                                               TextColor="White" />
                                        <Label Text="cm"
                                               FontSize="12"
                                               TextColor="White" />
                                    </VerticalStackLayout>
                                </Border>

                                <!-- Patient Details -->
                                <VerticalStackLayout Grid.Column="1" Spacing="5" VerticalOptions="Center">
                                    <Label Text="{Binding Name}" 
                                           FontAttributes="Bold" 
                                           FontSize="18" />
                                    <Label Text="{Binding DisplayInfo}" 
                                           FontSize="14"
                                           TextColor="{AppThemeBinding Light=#666, Dark=#AAA}" />
                                    <HorizontalStackLayout Spacing="10">
                                        <HorizontalStackLayout Spacing="5">
                                            <Label Text="&#xE916;" 
                                                   FontFamily="{x:Static fonts:FluentUI.FontFamily}"
                                                   FontSize="14"
                                                   TextColor="#2196F3" />
                                            <Label Text="{Binding LaborStartTime, StringFormat='{0:HH:mm}'}" 
                                                   FontSize="12" />
                                        </HorizontalStackLayout>
                                        <!--<HorizontalStackLayout Spacing="5">
                                            <Label Text="FHR:" FontSize="12" />
                                            <Label Text="{Binding PartographEntries[0].FetalHeartRate, StringFormat='{0}bpm'}" 
                                                   FontSize="12"
                                                   FontAttributes="Bold"
                                                   TextColor="{Binding PartographEntries[0].FetalHeartRate, Converter={StaticResource FHRColorConverter}}" />
                                        </HorizontalStackLayout>-->
                                    </HorizontalStackLayout>
                                </VerticalStackLayout>

                                <!-- Action Buttons -->
                                <Grid Grid.Column="2" RowDefinitions="*,*" RowSpacing="5">
                                    <Button Grid.Row="0"
                                            Text="&#xE8A5;"
                                            FontFamily="{x:Static fonts:FluentUI.FontFamily}"
                                            Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.NavigateToPartographCommand}"
                                            CommandParameter="{Binding .}"
                                            BackgroundColor="#2196F3"
                                            TextColor="White"
                                            WidthRequest="45"
                                            HeightRequest="45"
                                            CornerRadius="22"
                                            ToolTipProperties.Text="View Partograph" />

                                    <Button Grid.Row="1"
                                            Text="&#xE710;"
                                            FontFamily="{x:Static fonts:FluentUI.FontFamily}"
                                            Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.AddPartographEntryCommand}"
                                            CommandParameter="{Binding .}"
                                            BackgroundColor="#4CAF50"
                                            TextColor="White"
                                            WidthRequest="45"
                                            HeightRequest="45"
                                            CornerRadius="22"
                                            ToolTipProperties.Text="Add Entry" />
                                </Grid>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </RefreshView>
    </Grid>
</ContentPage>