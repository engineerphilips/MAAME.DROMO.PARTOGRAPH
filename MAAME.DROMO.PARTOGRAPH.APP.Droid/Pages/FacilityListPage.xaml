<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MAAME.DROMO.PARTOGRAPH.APP.Droid.Pages.FacilityListPage"
             xmlns:model="clr-namespace:MAAME.DROMO.PARTOGRAPH.MODEL;assembly=MAAME.DROMO.PARTOGRAPH.MODEL"
             xmlns:fonts="clr-namespace:Fonts"
             Title="Facilities Management"
             BackgroundColor="{AppThemeBinding Light=#F5F7FA, Dark=#1A1A1A}">

    <Grid RowDefinitions="Auto,*" Padding="0">

        <!-- Header with Add Button -->
        <Border Grid.Row="0"
                BackgroundColor="{AppThemeBinding Light=#2196F3, Dark=#1565C0}"
                Padding="24,40,24,24">
            <Border.StrokeShape>
                <RoundRectangle CornerRadius="0,0,24,24" />
            </Border.StrokeShape>

            <Grid ColumnDefinitions="*,Auto">
                <VerticalStackLayout Grid.Column="0" Spacing="8">
                    <Label Text="Facilities Management"
                           FontSize="28"
                           FontAttributes="Bold" />
                    <Label Text="Manage and onboard new facilities"
                           FontSize="14"
                           Opacity="0.9" />
                </VerticalStackLayout>

                <!-- Add Facility Button -->
                <Button Grid.Column="1"
                        Text="&#xE710;"
                        FontFamily="{x:Static fonts:FluentUI.FontFamily}"
                        FontSize="20"
                        Command="{Binding AddFacilityCommand}"
                        BackgroundColor="#2196F3"
                        TextColor="White"
                        WidthRequest="56"
                        HeightRequest="56"
                        CornerRadius="28"
                        VerticalOptions="Center"
                        ToolTipProperties.Text="Add New Facility">
                    <Button.Shadow>
                        <Shadow Brush="#40000000"
                                Offset="0,4"
                                Radius="12"
                                Opacity="0.25" />
                    </Button.Shadow>
                </Button>
            </Grid>
        </Border>

        <!-- Facilities List -->
        <ScrollView Grid.Row="1" Padding="20,20,20,0">
            <VerticalStackLayout Spacing="12">
                <Label Text="{Binding FacilityCountText}"
                       FontSize="16"
                       FontAttributes="Bold"
                       TextColor="{AppThemeBinding Light=#666, Dark=#AAA}"
                       Margin="0,0,0,8" />

                <!-- Loading Indicator -->
                <ActivityIndicator IsRunning="{Binding IsBusy}"
                                 IsVisible="{Binding IsBusy}"
                                 Color="{AppThemeBinding Light=#2196F3, Dark=#64B5F6}"
                                 HeightRequest="50" />

                <!-- Empty State -->
                <VerticalStackLayout IsVisible="{Binding IsEmpty}"
                                   Spacing="16"
                                   Padding="20"
                                   VerticalOptions="Center"
                                   HorizontalOptions="Center"
                                   Margin="0,60,0,0">
                    <Label Text="&#xE8DD;"
                           FontFamily="{x:Static fonts:FluentUI.FontFamily}"
                           FontSize="64"
                           TextColor="{AppThemeBinding Light=#CCC, Dark=#444}"
                           HorizontalOptions="Center" />
                    <Label Text="No Facilities Found"
                           FontSize="20"
                           FontAttributes="Bold"
                           TextColor="{AppThemeBinding Light=#666, Dark=#AAA}"
                           HorizontalOptions="Center" />
                    <Label Text="Click the + button to add your first facility"
                           FontSize="14"
                           TextColor="{AppThemeBinding Light=#888, Dark=#777}"
                           HorizontalOptions="Center" />
                </VerticalStackLayout>

                <!-- Facilities CollectionView -->
                <CollectionView ItemsSource="{Binding Facilities}"
                              SelectionMode="None"
                              IsVisible="{Binding IsNotEmpty}">
                    <CollectionView.ItemTemplate>
                        <DataTemplate x:DataType="model:Facility">
                            <Border Margin="0,0,0,12"
                                  BackgroundColor="{AppThemeBinding Light=White, Dark=#2A2A2A}"
                                  StrokeThickness="0">
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="16" />
                                </Border.StrokeShape>
                                <Border.Shadow>
                                    <Shadow Brush="{AppThemeBinding Light=#20000000, Dark=#40000000}"
                                          Offset="0,2"
                                          Radius="8"
                                          Opacity="0.15" />
                                </Border.Shadow>

                                <Grid Padding="20" RowDefinitions="Auto,Auto,Auto,Auto" RowSpacing="12">
                                    <!-- Header Row -->
                                    <Grid Grid.Row="0" ColumnDefinitions="Auto,*" ColumnSpacing="16">
                                        <!-- Icon -->
                                        <Border Grid.Column="0"
                                              WidthRequest="56"
                                              HeightRequest="56"
                                              BackgroundColor="{AppThemeBinding Light=#E3F2FD, Dark=#1E3A5F}">
                                            <Border.StrokeShape>
                                                <RoundRectangle CornerRadius="16" />
                                            </Border.StrokeShape>
                                            <Label Text="&#xE8DD;"
                                                 FontFamily="{x:Static fonts:FluentUI.FontFamily}"
                                                 FontSize="28"
                                                 TextColor="{AppThemeBinding Light=#2196F3, Dark=#64B5F6}"
                                                 HorizontalOptions="Center"
                                                 VerticalOptions="Center" />
                                        </Border>

                                        <!-- Facility Details -->
                                        <VerticalStackLayout Grid.Column="1"
                                                           VerticalOptions="Center"
                                                           Spacing="4">
                                            <Label Text="{Binding Name}"
                                                 FontSize="18"
                                                 FontAttributes="Bold"
                                                 TextColor="{AppThemeBinding Light=#1A1A1A, Dark=#F5F5F5}" />
                                            <Label Text="{Binding Type}"
                                                 FontSize="14"
                                                 TextColor="{AppThemeBinding Light=#666, Dark=#AAA}" />
                                            <Label Text="{Binding Code, StringFormat='Code: {0}'}"
                                                 FontSize="12"
                                                 TextColor="{AppThemeBinding Light=#888, Dark=#999}" />
                                        </VerticalStackLayout>
                                    </Grid>

                                    <!-- Divider -->
                                    <BoxView Grid.Row="1"
                                           HeightRequest="1"
                                           Color="{AppThemeBinding Light=#E0E0E0, Dark=#424242}"
                                           Margin="0,4" />

                                    <!-- Location Information -->
                                    <Grid Grid.Row="2" RowDefinitions="Auto,Auto,Auto,Auto" RowSpacing="8">
                                        <!-- Address -->
                                        <HorizontalStackLayout Grid.Row="0" Spacing="8">
                                            <Label Text="&#xE81D;"
                                                 FontFamily="{x:Static fonts:FluentUI.FontFamily}"
                                                 FontSize="16"
                                                 TextColor="{AppThemeBinding Light=#666, Dark=#AAA}"
                                                 VerticalOptions="Center" />
                                            <Label Text="{Binding Address}"
                                                 FontSize="14"
                                                 TextColor="{AppThemeBinding Light=#444, Dark=#CCC}"
                                                 VerticalOptions="Center" />
                                        </HorizontalStackLayout>

                                        <!-- City, Region -->
                                        <HorizontalStackLayout Grid.Row="1" Spacing="8">
                                            <Label Text="&#xE707;"
                                                 FontFamily="{x:Static fonts:FluentUI.FontFamily}"
                                                 FontSize="16"
                                                 TextColor="{AppThemeBinding Light=#666, Dark=#AAA}"
                                                 VerticalOptions="Center" />
                                            <Label Text="{Binding City}"
                                                 FontSize="14"
                                                 TextColor="{AppThemeBinding Light=#444, Dark=#CCC}"
                                                 VerticalOptions="Center" />
                                            <Label Text=", "
                                                 FontSize="14"
                                                 TextColor="{AppThemeBinding Light=#444, Dark=#CCC}"
                                                 VerticalOptions="Center" />
                                            <Label Text="{Binding Region}"
                                                 FontSize="14"
                                                 TextColor="{AppThemeBinding Light=#444, Dark=#CCC}"
                                                 VerticalOptions="Center" />
                                        </HorizontalStackLayout>

                                        <!-- GPS Coordinates -->
                                        <HorizontalStackLayout Grid.Row="2" Spacing="8">
                                            <Label Text="&#xE909;"
                                                 FontFamily="{x:Static fonts:FluentUI.FontFamily}"
                                                 FontSize="16"
                                                 TextColor="{AppThemeBinding Light=#666, Dark=#AAA}"
                                                 VerticalOptions="Center" />
                                            <Label FontSize="14"
                                                 TextColor="{AppThemeBinding Light=#444, Dark=#CCC}"
                                                 VerticalOptions="Center">
                                                <Label.FormattedText>
                                                    <FormattedString>
                                                        <Span Text="{Binding Latitude, StringFormat='GPS: {0:F6}° N, '}" />
                                                        <Span Text="{Binding Longitude, StringFormat='{0:F6}° E'}" />
                                                    </FormattedString>
                                                </Label.FormattedText>
                                            </Label>
                                        </HorizontalStackLayout>

                                        <!-- GHPost GPS -->
                                        <HorizontalStackLayout Grid.Row="3" Spacing="8">
                                            <Label Text="&#xE707;"
                                                 FontFamily="{x:Static fonts:FluentUI.FontFamily}"
                                                 FontSize="16"
                                                 TextColor="{AppThemeBinding Light=#666, Dark=#AAA}"
                                                 VerticalOptions="Center" />
                                            <Label Text="{Binding GHPostGPS, StringFormat='GHPost GPS: {0}'}"
                                                 FontSize="14"
                                                 FontAttributes="Bold"
                                                 TextColor="{AppThemeBinding Light=#2196F3, Dark=#64B5F6}"
                                                 VerticalOptions="Center" />
                                        </HorizontalStackLayout>
                                    </Grid>

                                    <!-- Contact Information -->
                                    <Grid Grid.Row="3" ColumnDefinitions="*,*" ColumnSpacing="12">
                                        <HorizontalStackLayout Grid.Column="0" Spacing="6">
                                            <Label Text="&#xE717;"
                                                 FontFamily="{x:Static fonts:FluentUI.FontFamily}"
                                                 FontSize="14"
                                                 TextColor="{AppThemeBinding Light=#666, Dark=#AAA}"
                                                 VerticalOptions="Center" />
                                            <Label Text="{Binding Phone}"
                                                 FontSize="12"
                                                 TextColor="{AppThemeBinding Light=#444, Dark=#CCC}"
                                                 VerticalOptions="Center" />
                                        </HorizontalStackLayout>

                                        <HorizontalStackLayout Grid.Column="1" Spacing="6">
                                            <Label Text="&#xE715;"
                                                 FontFamily="{x:Static fonts:FluentUI.FontFamily}"
                                                 FontSize="14"
                                                 TextColor="{AppThemeBinding Light=#666, Dark=#AAA}"
                                                 VerticalOptions="Center" />
                                            <Label Text="{Binding Email}"
                                                 FontSize="12"
                                                 TextColor="{AppThemeBinding Light=#444, Dark=#CCC}"
                                                 VerticalOptions="Center"
                                                 LineBreakMode="TailTruncation" />
                                        </HorizontalStackLayout>
                                    </Grid>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </VerticalStackLayout>
        </ScrollView>
    </Grid>

</ContentPage>
